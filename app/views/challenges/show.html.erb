<div class="space-y-8 pb-32">
  <!-- Back Button & Host Badge -->
  <div class="flex items-center justify-between">
    <%= link_to "javascript:history.back()", class: "p-4 bg-white border border-slate-200 rounded-3xl text-slate-500 hover:text-indigo-600 shadow-sm transition-all" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
    <% end %>
    <% if @is_host %>
      <div class="flex items-center gap-3">
        <span class="px-4 py-2 bg-indigo-100 text-indigo-700 rounded-full text-sm font-bold">호스트</span>
        <%= link_to hosted_challenge_path(@challenge), class: "px-4 py-2 bg-indigo-600 text-white rounded-full text-sm font-bold hover:bg-indigo-700 transition-all" do %>
          관리 대시보드
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Hero Card -->
  <div class="bg-white rounded-[48px] overflow-hidden border border-slate-200 shadow-sm">
    <!-- Hero Image -->
    <div class="relative aspect-[21/9]">
      <img src="<%= @challenge.thumbnail %>" class="w-full h-full object-cover" alt="">
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      <div class="absolute bottom-8 left-8 right-8">
        <div class="flex gap-2 mb-4">
          <span class="px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-widest shadow-xl <%= @challenge.offline? ? 'bg-orange-600 text-white' : 'bg-indigo-600 text-white' %>">
            <%= @challenge.offline? ? 'OFFLINE' : 'ONLINE' %>
          </span>
          <% if @challenge.is_official %>
            <span class="px-4 py-1.5 rounded-full text-[10px] font-black uppercase tracking-widest shadow-xl bg-amber-500 text-white">
              OFFICIAL
            </span>
          <% end %>
        </div>
        <h1 class="text-3xl lg:text-4xl font-black text-white"><%= @challenge.title %></h1>
        <p class="text-white/70 font-medium mt-2">호스트: <%= @challenge.host_name %></p>
      </div>
    </div>

    <!-- Tab Navigation -->
    <div class="border-b border-slate-200">
      <nav class="flex gap-0 px-8">
        <%= link_to challenge_path(@challenge, tab: "info"), class: "px-6 py-4 font-bold text-sm border-b-2 transition-all #{@tab == 'info' ? 'border-indigo-600 text-indigo-600' : 'border-transparent text-slate-400 hover:text-slate-600'}" do %>
          정보
        <% end %>
        <% if @is_joined || @is_host %>
          <%= link_to challenge_path(@challenge, tab: "verifications"), class: "px-6 py-4 font-bold text-sm border-b-2 transition-all #{@tab == 'verifications' ? 'border-indigo-600 text-indigo-600' : 'border-transparent text-slate-400 hover:text-slate-600'}" do %>
            인증 피드
            <% if @is_host && @pending_verifications&.any? %>
              <span class="ml-2 px-2 py-0.5 bg-red-500 text-white text-xs rounded-full"><%= @pending_verifications.count %></span>
            <% end %>
          <% end %>
          <% if @is_host %>
            <%= link_to challenge_path(@challenge, tab: "participants"), class: "px-6 py-4 font-bold text-sm border-b-2 transition-all #{@tab == 'participants' ? 'border-indigo-600 text-indigo-600' : 'border-transparent text-slate-400 hover:text-slate-600'}" do %>
              참가자 (<%= @challenge.current_participants %>)
            <% end %>
          <% end %>
        <% end %>
      </nav>
    </div>

    <!-- Tab Content -->
    <div class="p-8 lg:p-10">
      <% case @tab %>
      <% when "info" %>
        <%= render "challenges/tabs/info", challenge: @challenge, is_joined: @is_joined, participant: @participant, is_host: @is_host %>
      <% when "verifications" %>
        <%= render "challenges/tabs/verifications", challenge: @challenge, verification_logs: @verification_logs, participant: @participant, today_verified: @today_verified, is_host: @is_host, pending_verifications: @pending_verifications %>
      <% when "participants" %>
        <%= render "challenges/tabs/participants", challenge: @challenge, participants: @participants %>
      <% end %>
    </div>
  </div>
</div>
