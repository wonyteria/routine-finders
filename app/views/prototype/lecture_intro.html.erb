<% content_for :hide_nav, true %>

<div class="fixed inset-0 bg-[#07060A] z-0">
  <div class="absolute top-0 left-0 w-full h-96 bg-gradient-to-b from-indigo-600/20 to-transparent"></div>
</div>

<div class="relative z-10 pt-10 pb-32 flex flex-col min-h-screen">
  <!-- Header -->
  <header class="flex items-center justify-between px-6 mb-8">
    <%= link_to prototype_live_path(source: 'prototype'), class: "w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-white border border-white/10" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7"/></svg>
    <% end %>
    <h1 class="text-sm font-black text-white uppercase tracking-widest">Special Lecture</h1>
    <div class="w-10"></div>
  </header>

  <main class="flex-1 px-6 space-y-10">
    <!-- Lecture Hero -->
    <section class="space-y-6">
      <div class="inline-flex items-center gap-2 bg-indigo-500/20 px-3 py-1 rounded-full border border-indigo-500/30">
        <span class="text-[10px] font-black text-indigo-400 uppercase tracking-widest">Ongoing Session</span>
      </div>
      <div class="space-y-3">
        <h2 class="text-3xl font-black text-white leading-tight tracking-tight">
          <%= @lecture[:title] %>
        </h2>
        <div class="flex items-center gap-3 text-slate-400">
          <div class="w-8 h-8 rounded-full bg-slate-800 flex items-center justify-center text-xs">ğŸ‘¤</div>
          <p class="text-sm font-bold"><%= @lecture[:instructor] %></p>
        </div>
      </div>
    </section>

    <!-- Description -->
    <section class="bg-white/5 rounded-[32px] p-8 border border-white/10 space-y-4">
      <h3 class="text-xs font-black text-indigo-400 uppercase tracking-[0.2em]">About This Session</h3>
      <p class="text-sm text-slate-300 leading-relaxed font-bold">
        <%= @lecture[:description] %>
      </p>
      <div class="pt-4 flex items-center gap-2 text-indigo-400">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        <span class="text-xs font-black"><%= @lecture[:time] %></span>
      </div>
    </section>

    <!-- Curriculum -->
    <section class="space-y-6">
      <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em] px-2">Lecture Curriculum</h3>
      <div class="space-y-3">
        <% @lecture[:curriculum].each_with_index do |item, idx| %>
          <div class="flex items-start gap-4 p-5 bg-white/5 rounded-2xl border border-white/5">
            <span class="text-indigo-500 font-black text-sm"><%= idx + 1 %></span>
            <p class="text-sm text-white font-bold"><%= item %></p>
          </div>
        <% end %>
      </div>
    </section>

    <!-- Exclusive Benefits -->
    <section class="space-y-6">
      <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em] px-2">Exclusive Benefits</h3>
      <div class="grid grid-cols-1 gap-3">
        <% @lecture[:benefits].each do |benefit| %>
          <div class="flex items-center gap-3 px-5 py-4 bg-emerald-500/10 rounded-2xl border border-emerald-500/20">
            <span class="text-emerald-500">âœ¨</span>
            <p class="text-[11px] font-black text-emerald-400"><%= benefit %></p>
          </div>
        <% end %>
      </div>
    </section>
  </main>

  <!-- Fixed Bottom CTA -->
  <footer class="fixed bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-[#07060A] via-[#07060A] to-transparent z-50">
