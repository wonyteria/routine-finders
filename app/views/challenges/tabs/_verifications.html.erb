<div class="space-y-8">
  <!-- 오늘의 인증 (참가자인 경우) -->
  <% if participant && !is_host && !local_assigns[:hide_form] %>
    <div class="bg-gradient-to-r from-indigo-50 to-violet-50 rounded-[32px] p-8 border border-indigo-100">
      <% if today_verified %>
        <div class="flex items-center gap-4">
          <div class="w-16 h-16 bg-emerald-500 rounded-3xl flex items-center justify-center shadow-lg shadow-emerald-200">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M5 13l4 4L19 7"/></svg>
          </div>
          <div>
            <h3 class="text-xl font-black text-slate-900"><%= challenge.offline? ? "오늘의 기록 공유 완료!" : "오늘 인증 완료!" %></h3>
            <p class="text-slate-500 font-medium">
              <% if challenge.offline? %>
                성공적으로 기록을 남겼습니다.
              <% else %>
                연속 <%= participant.current_streak %>일째 달성 중
              <% end %>
            </p>
          </div>
        </div>
      <% else %>
        <h3 class="text-xl font-black text-slate-900 mb-6"><%= challenge.offline? ? "오늘의 추억 공유하기" : "오늘의 인증하기" %></h3>
        <%= form_with url: challenge_verification_logs_path(challenge), method: :post, class: "space-y-4" do |f| %>
          <% case challenge.verification_type %>
          <% when "simple" %>
            <p class="text-slate-500 text-sm"><%= challenge.offline? ? "참여를 기록하고 소중한 추억을 공유하세요." : "버튼을 눌러 오늘의 인증을 완료하세요." %></p>
            <%= f.hidden_field "verification_log[value]", value: "completed" %>
          <% when "metric" %>
            <div class="space-y-2">
              <label class="text-sm font-bold text-slate-700"><%= challenge.offline? ? "추가 정보 입력" : "수치 입력" %></label>
              <%= f.text_field "verification_log[value]", placeholder: challenge.offline? ? "남기고 싶은 수치나 기록을 입력하세요" : "예: 5km, 30분 등", class: "w-full bg-white border border-slate-200 rounded-2xl p-4 font-medium focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
          <% when "photo" %>
            <div class="space-y-2">
              <label class="text-sm font-bold text-slate-700">추억 사진 공유</label>
              <%= f.text_field "verification_log[image_url]", placeholder: "사진 URL을 입력하세요", class: "w-full bg-white border border-slate-200 rounded-2xl p-4 font-medium focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
              <p class="text-xs text-slate-400">* 모임에서 찍은 즐거운 사진을 공유해주세요</p>
            </div>
          <% when "url" %>
            <div class="space-y-2">
              <label class="text-sm font-bold text-slate-700">링크 공유 (블로그/SNS 등)</label>
              <%= f.text_field "verification_log[value]", placeholder: "https://...", class: "w-full bg-white border border-slate-200 rounded-2xl p-4 font-medium focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
          <% else %>
            <div class="space-y-2">
              <label class="text-sm font-bold text-slate-700"><%= challenge.offline? ? "오늘의 한 줄 소감" : "인증 내용" %></label>
              <%= f.text_area "verification_log[value]", placeholder: challenge.offline? ? "오늘 모임은 어떠셨나요? 즐거웠던 소감을 남겨주세요." : "인증 내용을 입력하세요", rows: 3, class: "w-full bg-white border border-slate-200 rounded-2xl p-4 font-medium focus:ring-2 focus:ring-indigo-500 focus:border-transparent" %>
            </div>
          <% end %>
          <%= f.submit (challenge.offline? ? "기록 남기기" : "인증하기"), class: "w-full py-4 bg-indigo-600 text-white rounded-2xl font-bold text-lg shadow-xl hover:bg-indigo-700 transition-all cursor-pointer" %>
        <% end %>
      <% end %>
    </div>
  <% end %>

  <!-- 호스트: 대기 중인 인증 -->
  <% if is_host && local_assigns[:pending_verifications]&.any? %>
    <div class="bg-amber-50 rounded-[32px] p-8 border border-amber-200">
      <h3 class="text-xl font-black text-amber-900 mb-6 flex items-center gap-2">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        승인 대기 중 (<%= local_assigns[:pending_verifications].count %>건)
      </h3>
      <div class="space-y-4">
        <% local_assigns[:pending_verifications].each do |log| %>
          <div class="bg-white rounded-2xl p-5 border border-amber-100 flex items-center justify-between gap-4">
            <div class="flex items-center gap-4">
              <img src="<%= log.participant.user.profile_image %>" alt="" class="w-12 h-12 rounded-full object-cover">
              <div>
                <p class="font-bold text-slate-900"><%= log.participant.user.nickname %></p>
                <p class="text-sm text-slate-500"><%= log.created_at.in_time_zone('Asia/Seoul').strftime('%m/%d %H:%M') %></p>
                <% if log.value.present? %>
                  <p class="text-sm text-slate-600 mt-1"><%= log.value %></p>
                <% end %>
                <% if log.image_url.present? %>
                  <a href="<%= log.image_url %>" target="_blank" class="text-sm text-indigo-600 hover:underline">사진 보기</a>
                <% end %>
              </div>
            </div>
            <div class="flex items-center gap-2">
              <%= button_to approve_challenge_verification_log_path(challenge, log), method: :post, class: "px-4 py-2 bg-green-500 text-white rounded-xl font-bold text-sm hover:bg-green-600 transition-all" do %>
                승인
              <% end %>
              <%= button_to reject_challenge_verification_log_path(challenge, log), method: :post, class: "px-4 py-2 bg-red-500 text-white rounded-xl font-bold text-sm hover:bg-red-600 transition-all", data: { turbo_confirm: "정말 거절하시겠습니까?" } do %>
                거절
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- 인증 피드 -->
  <div>
    <h3 class="text-xl font-black text-slate-900 mb-6"><%= challenge.offline? ? "모임 기록 피드" : "인증 피드" %></h3>
    <% if verification_logs&.any? %>
      <div class="space-y-4">
        <% verification_logs.each do |log| %>
          <div class="bg-white rounded-2xl p-5 border border-slate-200 shadow-sm">
            <div class="flex items-start gap-4">
              <img src="<%= log.participant.user.profile_image %>" alt="" class="w-12 h-12 rounded-full object-cover">
              <div class="flex-1">
                <div class="flex items-center justify-between">
                  <div>
                    <span class="font-bold text-slate-900"><%= log.participant.user.nickname %></span>
                    <span class="text-sm text-slate-400 ml-2"><%= log.created_at.in_time_zone('Asia/Seoul').strftime('%m/%d %H:%M') %></span>
                  </div>
                  <% unless challenge.offline? %>
                    <span class="px-3 py-1 rounded-full text-xs font-bold <%= { pending: 'bg-amber-100 text-amber-700', approved: 'bg-green-100 text-green-700', rejected: 'bg-red-100 text-red-700' }[log.status.to_sym] %>">
                      <%= { pending: '대기중', approved: '승인됨', rejected: '거절됨' }[log.status.to_sym] %>
                    </span>
                  <% end %>
                </div>
                <% if log.value.present? %>
                  <p class="text-slate-600 mt-2"><%= log.value %></p>
                <% end %>
                <% if log.image_url.present? %>
                  <img src="<%= log.image_url %>" alt="" class="mt-3 rounded-xl max-h-64 object-cover">
                <% end %>
                <% if !challenge.offline? && log.rejected? && log.reject_reason.present? %>
                  <p class="text-red-500 text-sm mt-2">거절 사유: <%= log.reject_reason %></p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12 text-slate-400">
        <svg class="w-16 h-16 mx-auto mb-4 text-slate-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        <p class="font-bold"><%= challenge.offline? ? "아직 공유된 기록이 없습니다" : "아직 인증 기록이 없습니다" %></p>
      </div>
    <% end %>
  </div>
</div>
