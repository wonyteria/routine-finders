<% if params[:source] == "prototype" %>
  <!-- PROTOTYPE UI: Premium Dark Mode -->
  <div class="space-y-6 md:space-y-8">
    <!-- Pending Applications -->
    <% if pending_applications.any? %>
      <div class="app-glass-card p-4 md:p-6 border-amber-500/10 bg-amber-500/[0.02]">
        <div class="flex items-center justify-between mb-5 md:mb-6">
          <div>
            <h2 class="text-lg md:text-xl font-black text-white italic">참가 신청 대기명단</h2>
            <p class="text-slate-500 text-[8px] md:text-[9px] font-black uppercase tracking-widest mt-0.5"><%= pending_applications.count %>건의 새로운 참가 요청</p>
          </div>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-5">
          <% pending_applications.each do |application| %>
            <div class="bg-white/[0.03] rounded-2xl md:rounded-[28px] p-4 md:p-6 border border-white/10 group/card hover:bg-white/[0.05] transition-all">
              <div class="flex items-start justify-between gap-3 md:gap-4 mb-4 md:mb-5">
                <div class="flex items-center gap-3">
                  <img src="<%= application.user.profile_image %>" class="w-10 h-10 md:w-12 md:h-12 rounded-xl md:rounded-2xl object-cover shadow-xl grayscale group-hover/card:grayscale-0 transition-all duration-700">
                  <div>
                    <h3 class="text-sm md:text-base font-black text-white italic"><%= application.user.nickname %></h3>
                    <p class="text-[8px] md:text-[9px] font-black text-slate-500 uppercase tracking-tighter mt-0.5"><%= time_ago_in_words(application.applied_at) %> 전</p>
                  </div>
                </div>
              </div>
              
              <% if application.message.present? %>
                <div class="p-3 md:p-4 bg-black/20 rounded-xl md:rounded-2xl border border-white/5 mb-4 md:mb-5">
                  <p class="text-xs md:text-sm font-medium text-slate-300 leading-relaxed italic">"<%= application.message %>"</p>
                </div>
              <% end %>

              <div class="grid grid-cols-2 gap-2 md:gap-3">
                <button type="button" 
                        onclick="document.getElementById('action-form-<%= application.id %>').classList.remove('hidden'); this.parentElement.classList.add('hidden'); document.getElementById('action-type-<%= application.id %>').value = 'approve'; document.getElementById('form-submit-<%= application.id %>').innerText = '승인 확정'; document.getElementById('form-submit-<%= application.id %>').className = 'w-full py-3 md:py-3.5 bg-indigo-600 text-white rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs hover:bg-indigo-500';"
                        class="px-4 md:px-5 py-3 md:py-3.5 bg-indigo-600 hover:bg-indigo-500 text-white rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs uppercase tracking-widest transition-all shadow-xl shadow-indigo-600/20">
                  승인하기
                </button>
                <button type="button" 
                        onclick="document.getElementById('action-form-<%= application.id %>').classList.remove('hidden'); this.parentElement.classList.add('hidden'); document.getElementById('action-type-<%= application.id %>').value = 'reject'; document.getElementById('form-submit-<%= application.id %>').innerText = '거절 확정'; document.getElementById('form-submit-<%= application.id %>').className = 'w-full py-3 md:py-3.5 bg-rose-600 text-white rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs hover:bg-rose-700';"
                        class="px-4 md:px-5 py-3 md:py-3.5 bg-white/5 hover:bg-white/10 text-slate-400 rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs uppercase tracking-widest transition-all">
                  거절하기
                </button>
              </div>

              <!-- Personal Message Form -->
              <div id="action-form-<%= application.id %>" class="hidden mt-3 md:mt-4 animate-slide-up">
                <%= form_with url: "#", method: :post, local: true, id: "form-#{application.id}" do |f| %>
                  <%= hidden_field_tag :source, "prototype" %>
                  <input type="hidden" name="_method" id="action-type-<%= application.id %>" value="post">
                  <div class="space-y-3">
                    <%= text_area_tag :message, nil, placeholder: "참가자에게 보낼 개인 메시지 (선택)", class: "w-full p-3 md:p-4 bg-black/40 border border-white/10 rounded-xl md:rounded-2xl text-xs md:text-sm text-white placeholder:text-slate-600 focus:border-indigo-500 outline-none transition-all", rows: 3 %>
                    <div class="flex gap-2">
                      <button type="submit" id="form-submit-<%= application.id %>" 
                              onclick="this.form.action = (document.getElementById('action-type-<%= application.id %>').value === 'approve') ? '<%= approve_challenge_application_path(challenge, application) %>' : '<%= reject_challenge_application_path(challenge, application) %>';"
                              class="flex-1 py-3 md:py-3.5 bg-indigo-600 text-white rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs hover:bg-indigo-500 transition-all shadow-xl shadow-indigo-600/20">
                        확정하기
                      </button>
                      <button type="button" onclick="this.closest('.animate-slide-up').classList.add('hidden'); this.closest('.group\\/card').querySelector('.grid').classList.remove('hidden');" 
                              class="px-4 md:px-5 py-3 md:py-3.5 bg-white/5 text-slate-500 rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs hover:bg-white/10">
                        취소
                      </button>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Processed Applications -->
    <div class="app-glass-card p-4 md:p-6">
      <h2 class="text-base md:text-lg font-black text-white mb-4 md:mb-5 italic">신청 처리 내역</h2>
      <% if processed_applications.any? %>
        <div class="space-y-3">
          <% processed_applications.each do |application| %>
            <div class="flex items-center justify-between p-4 md:p-5 rounded-xl md:rounded-2xl bg-white/[0.02] border border-white/5 hover:bg-white/[0.04] transition-all group">
              <div class="flex items-center gap-3 md:gap-4">
                <img src="<%= application.user.profile_image %>" class="w-9 h-9 md:w-10 md:h-10 rounded-xl md:rounded-2xl object-cover grayscale opacity-50 group-hover:grayscale-0 group-hover:opacity-100 transition-all">
                <div>
                  <p class="font-black text-slate-300 group-hover:text-white transition-colors text-xs md:text-sm italic"><%= application.user.nickname %></p>
                  <p class="text-[8px] md:text-[9px] font-black text-slate-600 uppercase tracking-widest mt-0.5"><%= application.applied_at.strftime('%Y.%m.%d') %></p>
                </div>
              </div>
              <% if application.approved? %>
                <span class="px-3 md:px-4 py-1.5 md:py-2 bg-emerald-500/10 text-emerald-500 rounded-lg md:rounded-xl text-[8px] md:text-[9px] font-black uppercase tracking-widest border border-emerald-500/20">승인됨</span>
              <% else %>
                <span class="px-3 md:px-4 py-1.5 md:py-2 bg-white/5 text-slate-500 rounded-lg md:rounded-xl text-[8px] md:text-[9px] font-black uppercase tracking-widest border border-white/5">거절됨</span>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="py-12 md:py-16 text-center">
          <p class="text-[9px] md:text-[10px] font-bold text-slate-700 uppercase tracking-widest">처리된 신청 내역이 없습니다</p>
        </div>
      <% end %>
    </div>
  </div>

<% else %>
  <!-- EXISTING WEB UI: Preserved & Safe -->
  <div class="space-y-8">
    <% if pending_applications.any? %>
      <div class="bg-amber-50 rounded-[32px] border border-amber-200 p-8">
        <h2 class="text-xl font-black text-amber-900 mb-6 flex items-center gap-2">대기 중인 신청 (<%= pending_applications.count %>건)</h2>
        <div class="space-y-4">
          <% pending_applications.each do |application| %>
            <div class="bg-white rounded-2xl p-6 border border-amber-100">
              <div class="flex items-start justify-between gap-4">
                <div class="flex items-center gap-4">
                  <img src="<%= application.user.profile_image %>" class="w-14 h-14 rounded-2xl object-cover">
                  <div>
                    <p class="text-lg font-black text-slate-900"><%= application.user.nickname %></p>
                    <p class="text-xs font-medium text-slate-400"><%= time_ago_in_words(application.applied_at) %> 전 신청</p>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <%= button_to approve_challenge_application_path(challenge, application), method: :post, class: "px-6 py-3 bg-indigo-600 text-white rounded-2xl font-black text-sm hover:bg-indigo-700 transition-all" do %>승인<% end %>
                  <%= button_to reject_challenge_application_path(challenge, application), method: :post, form: { data: { turbo_confirm: "정말 거절하시겠습니까?" } }, class: "px-6 py-3 bg-slate-100 text-slate-600 rounded-2xl font-black text-sm hover:bg-slate-200 transition-all" do %>거절<% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <!-- ... Rest of original web UI ... -->
  </div>
<% end %>
