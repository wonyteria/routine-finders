<div class="space-y-10 pt-8">
  <!-- 1. Hall of Fame (Podium) -->
  <section class="space-y-6">
    <div class="text-center space-y-1">
      <h3 class="text-xs font-black text-indigo-400 uppercase tracking-[0.3em]">이달의 통합 성취 랭킹</h3>
      <p class="text-[10px] font-bold text-slate-500">모두가 함께 경쟁하고 성장하는 명예의 전당</p>
    </div>

    <!-- Podium Visual -->
    <div class="relative h-60 flex items-end justify-center gap-2 px-4">
      <!-- Top 2 -->
      <div class="flex flex-col items-center gap-3 w-24">
        <div class="relative">
          <div class="w-16 h-16 rounded-full border-4 border-slate-400 overflow-hidden shadow-2xl">
            <img src="<%= @top_users[1]&.profile_image %>" class="w-full h-full object-cover">
          </div>
          <div class="absolute -top-2 -right-2 w-7 h-7 bg-slate-400 rounded-full flex items-center justify-center text-white font-black border-2 border-[#0C0B12] text-xs shadow-lg">2</div>
        </div>
        <div class="w-full h-24 bg-slate-800/40 rounded-t-[20px] border border-white/5 flex flex-col items-center justify-center">
           <p class="text-[11px] font-black text-white line-clamp-1"><%= @top_users[1]&.nickname %></p>
           <div class="flex items-center gap-1 mt-0.5">
             <% if @monthly_rankings[1]&.dig(:is_club) %>
               <span class="text-[8px]">🔱</span>
             <% end %>
             <p class="text-[9px] font-bold text-slate-500"><%= @monthly_rankings[1]&.dig(:score)&.round(1) || 0 %>P</p>
           </div>
        </div>
      </div>

      <!-- Top 1 (Center) -->
      <div class="flex flex-col items-center gap-3 w-28 -translate-y-4">
        <div class="relative">
          <div class="absolute inset-0 bg-indigo-500 blur-2xl opacity-40 animate-pulse"></div>
          <div class="relative w-20 h-20 rounded-full border-4 border-amber-400 overflow-hidden shadow-2xl">
            <img src="<%= @top_users[0]&.profile_image %>" class="w-full h-full object-cover">
          </div>
          <div class="absolute -top-3 -right-3 w-9 h-9 bg-amber-400 rounded-full flex items-center justify-center text-white font-black border-4 border-[#0C0B12] text-sm shadow-xl">👑</div>
        </div>
        <div class="w-full h-32 bg-indigo-500/10 rounded-t-[20px] border border-indigo-500/30 flex flex-col items-center justify-center shadow-[0_0_20px_rgba(124,77,255,0.2)]">
           <p class="text-sm font-black text-white line-clamp-1"><%= @top_users[0]&.nickname %></p>
           <div class="flex items-center gap-1 mt-1">
              <% if @monthly_rankings[0]&.dig(:is_club) %>
                <span class="px-2 py-0.5 rounded-full bg-indigo-500 text-[8px] font-black text-white flex items-center gap-1">
                  🔱 루파
                </span>
              <% end %>
             <p class="text-[10px] font-bold text-indigo-400"><%= @monthly_rankings[0]&.dig(:score)&.round(1) || 0 %>P</p>
           </div>
        </div>
      </div>

      <!-- Top 3 -->
      <div class="flex flex-col items-center gap-3 w-24">
        <div class="relative">
          <div class="w-16 h-16 rounded-full border-4 border-amber-700/50 overflow-hidden shadow-2xl">
            <img src="<%= @top_users[2]&.profile_image %>" class="w-full h-full object-cover">
          </div>
          <div class="absolute -top-2 -right-2 w-7 h-7 bg-amber-700/80 rounded-full flex items-center justify-center text-white font-black border-2 border-[#0C0B12] text-xs shadow-lg">3</div>
        </div>
        <div class="w-full h-20 bg-slate-800/20 rounded-t-[20px] border border-white/5 flex flex-col items-center justify-center">
           <p class="text-[11px] font-black text-white line-clamp-1"><%= @top_users[2]&.nickname %></p>
           <div class="flex items-center gap-1 mt-0.5">
             <% if @monthly_rankings[2]&.dig(:is_club) %>
               <span class="text-[8px]">🔱</span>
             <% end %>
             <p class="text-[9px] font-bold text-slate-500"><%= @monthly_rankings[2]&.dig(:score)&.round(1) || 0 %>P</p>
           </div>
        </div>
      </div>
    </div>
  </section>

  <!-- 1.5 Integrated Leaderboard Table -->
  <section class="space-y-4">
    <div class="flex justify-between items-center px-2">
      <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">이달의 리더보드</h3>
      <div class="flex items-center gap-2">
        <span class="px-2 py-0.5 bg-indigo-500/10 rounded-full text-[8px] font-black text-indigo-400">실시간 종합 집계</span>
        <p class="text-[10px] font-bold text-indigo-400"><%= Date.current.strftime('%Y년 %m월') %></p>
      </div>
    </div>

    <!-- Filter Tabs -->
    <div class="flex gap-2 px-2">
      <%= link_to "전체 통합", prototype_synergy_path(rank_type: 'all'), 
                  class: "px-4 py-2 rounded-xl text-[10px] font-black transition-all #{params[:rank_type] != 'club' ? 'bg-indigo-500 text-white shadow-lg shadow-indigo-500/20' : 'bg-white/5 text-slate-500 hover:bg-white/10'}" %>
      <%= link_to "루파 전용", prototype_synergy_path(rank_type: 'club'), 
                  class: "px-4 py-2 rounded-xl text-[10px] font-black transition-all #{params[:rank_type] == 'club' ? 'bg-indigo-500 text-white shadow-lg shadow-indigo-500/20' : 'bg-white/5 text-slate-500 hover:bg-white/10'}" %>
    </div>

    <div class="app-glass-card divide-y divide-white/5 overflow-hidden">
      <% @monthly_rankings.take(10).each_with_index do |ranking, index| %>
        <% user = ranking[:user] %>
        <% score = ranking[:score] %>
        <div class="flex items-center justify-between p-4 hover:bg-white/[0.02] transition-colors <%= index < 3 ? 'bg-indigo-500/5' : '' %>">
          <div class="flex items-center gap-3">
            <div class="w-8 text-center">
              <% if index == 0 %>
                <span class="text-xl">🥇</span>
              <% elsif index == 1 %>
                <span class="text-xl">🥈</span>
              <% elsif index == 2 %>
                <span class="text-xl">🥉</span>
              <% else %>
                <span class="text-sm font-black text-slate-600"><%= index + 1 %></span>
              <% end %>
            </div>
            <div class="w-10 h-10 rounded-xl overflow-hidden border border-white/10 shrink-0">
              <img src="<%= user.profile_image %>" class="w-full h-full object-cover">
            </div>
            <div>
              <div class="flex items-center gap-1.5">
                <p class="text-sm font-black text-white"><%= user.nickname %></p>
                <% if ranking[:is_club] %>
                  <span class="px-2 py-0.5 rounded-full bg-indigo-500 text-[8px] font-black text-white flex items-center gap-1">
                    🔱 루파
                  </span>
                <% end %>
              </div>
              <p class="text-[9px] font-bold text-slate-500">Lv.<%= user.level %></p>
            </div>
          </div>
          <div class="text-right">
            <p class="text-base font-black <%= index < 3 ? 'text-indigo-400' : 'text-white' %> tabular-nums"><%= score.round(1) %>P</p>
            <p class="text-[9px] font-bold text-slate-600">이번 달</p>
          </div>
        </div>
      <% end %>
      
      <!-- My Rank & View All Actions -->
      <div class="p-3 bg-white/[0.02] space-y-3">
        <% if @my_ranking %>
          <div class="flex items-center justify-between p-4 bg-indigo-600 rounded-2xl shadow-lg shadow-indigo-600/20">
            <div class="flex items-center gap-3">
              <div class="w-8 text-center text-xs font-black text-white/50"><%= @my_ranking[:rank] %></div>
              <div class="w-9 h-9 rounded-lg overflow-hidden border border-white/20">
                <img src="<%= current_user.profile_image %>" class="w-full h-full object-cover">
              </div>
              <div>
                <p class="text-xs font-black text-white">나의 순위</p>
                <p class="text-[9px] font-bold text-indigo-100"><%= current_user.nickname %></p>
              </div>
            </div>
            <p class="text-sm font-black text-white"><%= @my_ranking[:score] %>P</p>
          </div>
        <% end %>

        <button type="button" 
                onclick="document.getElementById('full-ranking-modal').classList.remove('hidden')"
                class="w-full py-4 rounded-2xl border-2 border-dashed border-white/10 text-[10px] font-black text-slate-500 hover:text-white hover:border-white/20 transition-all">
          전체 통합 리더보드 확인하기 (TOP 500) 🔱
        </button>
      </div>

      <% if @monthly_rankings.empty? %>
        <div class="p-12 text-center">
          <p class="text-sm font-bold text-slate-500">아직 랭킹 데이터가 없습니다</p>
          <p class="text-xs font-bold text-slate-600 mt-2">루파클럽에 가입하고 루틴을 실천해보세요!</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- Full Ranking Modal -->
  <div id="full-ranking-modal" class="hidden fixed inset-0 z-[100] flex items-end sm:items-center justify-center p-0 sm:p-4">
    <div class="absolute inset-0 bg-black/80 backdrop-blur-sm" onclick="this.parentElement.classList.add('hidden')"></div>
    <div class="relative w-full max-w-lg h-[90vh] sm:h-[80vh] bg-[#0C0B12] rounded-t-[40px] sm:rounded-[40px] border-t sm:border border-white/10 flex flex-col overflow-hidden animate-slide-up">
      <!-- Modal Header -->
      <div class="sticky top-0 z-20 bg-[#0C0B12] p-6 border-b border-white/5">
        <div class="flex justify-between items-center mb-4">
          <h4 class="text-lg font-black text-white">전체 통합 리더보드</h4>
          <button onclick="this.closest('#full-ranking-modal').classList.add('hidden')" class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center text-slate-400">✕</button>
        </div>
        <div class="flex items-center gap-2">
          <% if @my_ranking %>
            <div class="flex-1 p-4 bg-indigo-600/20 border border-indigo-500/30 rounded-2xl flex items-center justify-between">
              <div class="flex items-center gap-3">
                <span class="text-xs font-black text-indigo-400">#<%= @my_ranking[:rank] %></span>
                <span class="text-[11px] font-bold text-white"><%= current_user.nickname %>님 (나)</span>
              </div>
              <span class="text-xs font-black text-indigo-400"><%= @my_ranking[:score] %>P</span>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Modal Body -->
      <div class="flex-1 overflow-y-auto p-4 space-y-2 pb-10">
        <% @monthly_rankings.each_with_index do |ranking, index| %>
          <% user = ranking[:user] %>
          <div class="flex items-center justify-between p-4 <%= user == current_user ? 'bg-indigo-600/10 border border-indigo-500/20' : 'bg-white/[0.03]' %> rounded-2xl">
            <div class="flex items-center gap-4">
              <div class="w-6 text-center text-[10px] font-black <%= index < 3 ? 'text-amber-400' : 'text-slate-500' %>"><%= index + 1 %></div>
              <div class="w-8 h-8 rounded-lg overflow-hidden shrink-0">
                <img src="<%= user.profile_image %>" class="w-full h-full object-cover">
              </div>
              <div>
                <div class="flex items-center gap-1.5">
                  <span class="text-xs font-black text-white line-clamp-1"><%= user.nickname %></span>
                  <% if ranking[:is_club] %>
                    <span class="text-[8px]">🔱</span>
                  <% end %>
                </div>
                <p class="text-[8px] font-bold text-slate-500">Lv.<%= user.level %></p>
              </div>
            </div>
            <p class="text-xs font-bold text-white"><%= ranking[:score] %>P</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <style>
    @keyframes slide-up {
      from { transform: translateY(100%); }
      to { transform: translateY(0); }
    }
    .animate-slide-up {
      animation: slide-up 0.3s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    }
  </style>

  <!-- 2. Activity Feed -->
  <section class="space-y-6">
    <div class="flex justify-between items-end px-2">
      <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">실시간 피드</h3>
      <div class="flex gap-4">
        <button class="text-[10px] font-black text-indigo-400 underline underline-offset-4">자유 피드</button>
        <button class="text-[10px] font-black text-slate-600">클럽 인증</button>
      </div>
    </div>

    <div class="grid grid-cols-1 gap-4" data-controller="proto-synergy">
      <% @recent_activities.each do |activity| %>
        <div class="app-glass-card p-5 bg-white/[0.02] border-white/5 group relative transition-all active:scale-[0.99]">
          <!-- Header: User & Meta -->
          <div class="flex items-center justify-between mb-4">
            <%= link_to user_profile_path(activity.user), class: "flex items-center gap-2.5" do %>
              <div class="w-7 h-7 rounded-lg overflow-hidden border border-white/10 shrink-0">
                <img src="<%= activity.user.profile_image %>" class="w-full h-full object-cover">
              </div>
              <div class="flex items-center gap-2">
                <p class="text-[13px] font-black text-white"><%= activity.user.nickname %></p>
                <span class="w-0.5 h-0.5 rounded-full bg-slate-700"></span>
                <p class="text-[10px] font-bold text-slate-500"><%= time_ago_in_words(activity.created_at) %>전</p>
              </div>
            <% end %>

            <!-- More Options -->
            <div class="relative" data-controller="dropdown" data-action="click@window->dropdown#hide">
              <button type="button" 
                      data-action="click->dropdown#toggle" 
                      class="p-1.5 text-slate-500 hover:text-white transition-colors focus:outline-none">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/>
                </svg>
              </button>
              
              <div data-dropdown-target="menu" class="hidden absolute right-0 top-full mt-1 w-32 py-2 bg-[#1B1A24] border border-white/10 rounded-xl shadow-2xl z-50">
                <% if activity.user == current_user %>
                  <button class="w-full px-4 py-2 text-left text-[11px] font-bold text-red-400 hover:bg-white/5">삭제하기</button>
                <% else %>
                  <button class="w-full px-4 py-2 text-left text-[11px] font-bold text-red-400 hover:bg-white/5">신고하기</button>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Content Area -->
          <div class="flex gap-4 items-start">
            <div class="shrink-0 w-10 h-10 rounded-2xl bg-white/[0.03] flex items-center justify-center text-xl">
              <%= activity.activity_type == 'routine' ? '⚡' : '🔥' %>
            </div>
            <div class="space-y-2 flex-1">
              <div class="flex items-center gap-2">
                <span class="text-[9px] font-black uppercase tracking-widest text-indigo-400 px-1.5 py-0.5 bg-indigo-500/10 rounded-md">
                   <%= activity.activity_type.to_s.gsub('_', ' ') %>
                </span>
              </div>
              <p class="text-[13px] font-medium text-slate-300 leading-relaxed break-keep">
                <%= activity.body %> 
              </p>
            </div>
          </div>

          <!-- Actions Footer -->
          <div class="flex items-center justify-between mt-5 pt-4 border-t border-white/[0.03]">
             <div class="flex -space-x-1.5">
                <% (1..3).each do |i| %>
                  <div class="w-5 h-5 rounded-full border border-[#0C0B12] bg-slate-800 flex items-center justify-center text-[8px] font-bold text-white uppercase tracking-tighter">U</div>
                <% end %>
                <p class="text-[10px] font-bold text-slate-600 ml-3">박수 12개</p>
             </div>

             <%= button_to rufa_activity_claps_path(activity), 
                          method: :post,
                          data: { action: "click->proto-ui#checkLogin", turbo: false },
                          class: "flex items-center gap-2 px-3 py-1.5 rounded-full bg-white/[0.03] hover:bg-white/[0.08] active:scale-90 transition-all group" do %>
                <span class="text-sm group-hover:scale-125 transition-transform">👏</span>
                <span class="text-[11px] font-black text-slate-400">박수 남기기</span>
             <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </section>
</div>
