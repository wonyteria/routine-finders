<div class="max-w-[1240px] mx-auto pb-40 pt-12 px-4">
  <!-- Back Button & Breadcrumb -->
  <div class="flex items-center gap-4 mb-12">
    <%= link_to :back, class: "w-12 h-12 bg-white border border-slate-100 rounded-full flex items-center justify-center shadow-sm hover:shadow-md transition-all text-slate-400 hover:text-indigo-600" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7"/></svg>
    <% end %>
    <h2 class="text-2xl font-black text-slate-900">루틴러 프로필</h2>
  </div>

  <div class="flex flex-col lg:flex-row gap-10">
    <!-- Left Sidebar: Profile Summary -->
    <aside class="w-full lg:w-[320px] shrink-0 space-y-8">
      <!-- Profile Card -->
      <div class="bg-white rounded-[48px] border border-slate-100 shadow-xl p-10 flex flex-col items-center text-center space-y-8 relative overflow-hidden">
        <div class="absolute top-0 left-0 w-full h-1.5 bg-indigo-500/10"></div>
        
        <div class="relative">
          <div class="w-36 h-36 rounded-[52px] bg-slate-100 p-1.5 border border-slate-200 shadow-inner overflow-hidden">
            <img src="<%= @user.profile_image || "https://api.dicebear.com/7.x/avataaars/svg?seed=#{@user.nickname}" %>" class="w-full h-full object-cover rounded-[48px]" alt="">
          </div>
          <div class="absolute -bottom-1 -right-1 bg-indigo-600 text-white font-black text-xs px-2.5 py-1.5 rounded-xl shadow-lg ring-4 ring-white">
            LV.<%= @user.level %>
          </div>
        </div>

        <div class="space-y-4">
          <div class="space-y-1">
            <h3 class="text-2xl font-[900] text-slate-900 flex items-center justify-center gap-2">
              <%= @user.nickname %>
              <span class="text-lg">😊</span>
            </h3>
            <p class="text-[10px] font-black text-indigo-500 uppercase tracking-widest">ROUTINE GIANT</p>
          </div>
          <p class="text-sm font-bold text-slate-400 leading-relaxed italic">
            "<%= @user.bio.presence || "매일의 작은 습관이 모여 위대한 내일을 만듭니다. 함께 성장해요!" %>"
          </p>
        </div>

        <!-- SNS Links -->
        <div class="flex items-center gap-4">
          <% ["at", "instagram", "globe"].each do |icon| %>
            <a href="#" class="w-10 h-10 bg-slate-900/5 text-slate-900 rounded-xl flex items-center justify-center hover:bg-slate-900 hover:text-white transition-all">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <% if icon == "at" %><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/><% end %>
                <% if icon == "instagram" %><rect x="2" y="2" width="20" height="20" rx="5" ry="5" stroke-width="2"/><path d="M16 11.37A4 4 0 1112.63 8 4 4 0 0116 11.37z" stroke-width="2"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5" stroke-width="2"/><% end %>
                <% if icon == "globe" %><circle cx="12" cy="12" r="10" stroke-width="2"/><line x1="2" y1="12" x2="22" y2="12" stroke-width="2"/><path d="M12 2a15.3 15.3 0 014 10 15.3 15.3 0 01-4 10 15.3 15.3 0 01-4-10 15.3 15.3 0 014-10z" stroke-width="2"/><% end %>
              </svg>
            </a>
          <% end %>
        </div>

        <button class="w-full py-5 bg-indigo-600 text-white rounded-[24px] font-black text-sm shadow-xl shadow-indigo-100 hover:scale-105 transition-all flex items-center justify-center gap-3">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
          응원하기 (Follow)
        </button>
      </div>

      <!-- Growth Summary -->
      <div class="bg-slate-900 rounded-[48px] p-10 text-white space-y-8 shadow-2xl overflow-hidden relative">
        <div class="absolute top-0 right-0 w-32 h-32 bg-indigo-500/10 rounded-full -mr-16 -mt-16 blur-3xl"></div>
        <p class="text-[10px] font-black text-indigo-400 uppercase tracking-widest leading-none">Growth Summary</p>
        <div class="grid grid-cols-2 gap-8">
          <div class="space-y-1">
            <p class="text-3xl font-[900] italic"><%= @max_streak %>일</p>
            <p class="text-[10px] font-bold text-white/40 uppercase tracking-widest">Current Streak</p>
          </div>
          <div class="space-y-1">
            <p class="text-3xl font-[900] italic"><%= @total_completed %>개</p>
            <p class="text-[10px] font-bold text-white/40 uppercase tracking-widest">Completed</p>
          </div>
        </div>
      </div>
    </aside>

    <!-- Main Content: Tabs & Details -->
    <main class="flex-1 space-y-10" data-controller="tabs" data-tabs-active-class="bg-slate-900 text-white shadow-xl" data-tabs-inactive-class="text-slate-400 hover:bg-slate-50">
      <!-- Tabs Navigation -->
      <div class="flex items-center gap-2">
        <button data-tabs-target="tab" data-action="click->tabs#change" data-id="insights" class="px-8 py-4 rounded-[20px] font-black text-sm transition-all flex items-center gap-3">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg>
          업적 인사이트
        </button>
        <button data-tabs-target="tab" data-action="click->tabs#change" data-id="feed" class="px-8 py-4 rounded-[20px] font-black text-sm transition-all flex items-center gap-3">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
          활동 피드
        </button>
      </div>

      <!-- Tab Contents -->
      <div class="space-y-10">
        <!-- Insights Tab -->
        <div data-tabs-target="panel" data-id="insights" class="space-y-10">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Ongoing Routines Card -->
            <div class="bg-white rounded-[48px] border border-slate-100 shadow-sm p-10 space-y-8">
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 bg-indigo-50 text-indigo-600 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                </div>
                <h4 class="text-xl font-black text-slate-900">참여 중인 루틴</h4>
              </div>
              <div class="space-y-4">
                <% if @participations.any? %>
                  <% @participations.limit(3).each do |p| %>
                    <div class="flex items-center justify-between p-5 bg-slate-50 rounded-[24px] group hover:bg-white hover:shadow-lg transition-all border border-transparent hover:border-slate-100">
                      <div class="flex items-center gap-4">
                        <span class="text-xl">✨</span>
                        <p class="font-bold text-slate-600"><%= p.challenge.title %></p>
                      </div>
                      <span class="text-[10px] font-black text-indigo-500 uppercase tracking-widest bg-white px-3 py-1.5 rounded-full shadow-sm">진행 중</span>
                    </div>
                  <% end %>
                <% else %>
                  <p class="text-slate-400 font-bold p-10 text-center">아직 참여 중인 루틴이 없습니다.</p>
                <% end %>
              </div>
            </div>

            <!-- Badges Card -->
            <div class="bg-white rounded-[48px] border border-slate-100 shadow-sm p-10 space-y-8">
              <div class="flex items-center gap-4">
                <div class="w-10 h-10 bg-yellow-50 text-yellow-600 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15l-3 3m3-3l3 3m-3-3v-8m4.5-2.5a11.955 11.955 0 01-4.5 3.04a11.955 11.955 0 01-4.5-3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
                </div>
                <h4 class="text-xl font-black text-slate-900">획득한 배지</h4>
              </div>
              <div class="flex flex-wrap gap-4">
                <% if @badges.any? %>
                  <% @badges.limit(8).each do |badge| %>
                    <div class="w-14 h-14 bg-white border border-slate-100 rounded-2xl flex items-center justify-center text-2xl shadow-sm hover:scale-110 transition-all cursor-help" title="<%= badge.name %>">
                      <%= badge.icon_path %>
                    </div>
                  <% end %>
                <% else %>
                  <p class="text-slate-400 font-bold p-10 text-center">아직 획득한 배지가 없습니다.</p>
                <% end %>
              </div>
            </div>
          </div>

          <!-- Highlight Card -->
          <div class="bg-gradient-to-br from-indigo-50 to-violet-50 rounded-[48px] border border-white p-10 flex flex-col md:flex-row items-center gap-10">
            <div class="w-20 h-20 bg-indigo-600 text-white rounded-[32px] flex items-center justify-center shadow-2xl shrink-0">
              <svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
            </div>
            <div class="space-y-2">
              <h3 class="text-2xl font-[900] text-slate-900 tracking-tight">당신의 강력한 동기부여 페이스메이커!</h3>
              <p class="text-slate-500 font-bold leading-relaxed">
                이 루틴러는 현재 <span class="text-indigo-600">상위 0.2%</span>의 꾸준함을 기록하고 있습니다.<br/>
                함께 루틴을 진행하면 달성률이 평균 <span class="text-indigo-600">15% 상승</span>합니다.
              </p>
            </div>
          </div>
        </div>

        <!-- Feed Tab -->
        <div data-tabs-target="panel" data-id="feed" class="hidden">
          <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
            <% if @verification_logs.any? %>
              <% @verification_logs.each do |log| %>
                <div class="bg-white rounded-[40px] border border-slate-100 shadow-sm overflow-hidden group hover:shadow-xl transition-all">
                  <div class="p-6 flex items-center justify-between border-b border-slate-50">
                    <div class="flex items-center gap-3">
                      <span class="text-[10px] font-black bg-indigo-50 text-indigo-600 px-2.5 py-1 rounded-lg uppercase tracking-widest">LOG</span>
                      <div>
                        <p class="text-xs font-black text-slate-900">미션 완료!</p>
                        <p class="text-[10px] font-bold text-slate-400"><%= log.created_at.strftime("%Y.%m.%d %H:%M") %></p>
                      </div>
                    </div>
                    <svg class="w-4 h-4 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.826a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
                  </div>
                  <div class="aspect-[4/3] overflow-hidden">
                    <img src="<%= log.image_url || "https://images.unsplash.com/photo-1544005313-94ddf0286df2?auto=format&fit=crop&q=80&w=400" %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="">
                  </div>
                  <div class="p-6 flex items-center gap-6">
                    <div class="flex items-center gap-1.5 text-slate-400">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 10h4.704a2 2 0 001.94-1.515l1.204-4.816A2 2 0 0019.908 1H4.092a2 2 0 00-1.94 2.669l1.204 4.816A2 2 0 005.296 10H10m4 0v10a2 2 0 01-2 2H10a2 2 0 01-2-2V10m4 0V4"/></svg>
                      <span class="text-xs font-black"><%= rand(5..20) %></span>
                    </div>
                    <div class="flex items-center gap-1.5 text-slate-400">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
                      <span class="text-xs font-black"><%= rand(1..5) %></span>
                    </div>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="col-span-full py-32 text-center space-y-4">
                <p class="text-4xl">📸</p>
                <p class="text-slate-400 font-bold">아직 업로드된 활동 기록이 없습니다.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
