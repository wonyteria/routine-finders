<% if challenge.offline? %>
  <div class="space-y-12">
    <!-- 1. Meeting Schedule & Place -->
    <div class="space-y-6">
      <h2 class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] px-1 flex items-center gap-2">
        <span class="w-1 h-3 bg-emerald-400 rounded-full"></span>
        참여 및 일정 안내
      </h2>

      <div class="space-y-4">
        <!-- Date & Time -->
        <div class="p-6 bg-white/[0.03] rounded-2xl border border-white/5 flex items-center justify-between">
          <div>
            <p class="text-[9px] font-bold text-slate-500 uppercase tracking-widest mb-1.5">모임 일시</p>
            <p class="text-base font-bold text-white tracking-tight">
              <%= challenge.start_date.strftime('%Y년 %m월 %d일') %> 
              <span class="text-emerald-400 ml-1"><%= challenge.meeting_info&.meeting_time.presence || "시간 미정" %></span>
            </p>
          </div>
          <div class="w-10 h-10 bg-emerald-500/10 rounded-xl flex items-center justify-center text-xl">📅</div>
        </div>

        <!-- Online Link (if virtual) -->
        <% if challenge.virtual_gathering? %>
          <div class="p-6 bg-indigo-500/10 rounded-2xl border border-indigo-500/20 flex items-center justify-between">
            <div class="flex-1 min-w-0 pr-4">
              <p class="text-[9px] font-black text-indigo-400 uppercase tracking-widest mb-1.5">온라인 접속 정보</p>
              <p class="text-base font-bold text-white tracking-tight truncate">
                온라인(Zoom/Google Meet 등) 예정
              </p>
              <p class="text-[10px] text-slate-400 mt-1 truncate">참여 확정 후 링크가 공개됩니다.</p>
            </div>
            <div class="w-10 h-10 bg-indigo-500/20 rounded-xl flex items-center justify-center text-xl text-indigo-400">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"/></svg>
            </div>
          </div>
        <% end %>

        <!-- Physical Place (if offline) -->
        <% if challenge.physical_gathering? %>
          <% if challenge.meeting_info&.place_url.present? %>
            <%= link_to challenge.meeting_info.place_url, target: "_blank", class: "p-6 bg-indigo-500/10 rounded-2xl border border-indigo-500/30 flex items-center justify-between active:scale-[0.98] transition-all group" do %>
              <div class="flex-1 min-w-0 pr-4">
                <p class="text-[9px] font-bold text-indigo-400 uppercase tracking-widest mb-1.5 flex items-center gap-1.5">
                  상세 장소 (지도 보기)
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
                </p>
                <p class="text-base font-bold text-white tracking-tight truncate group-hover:text-indigo-300 transition-colors">
                  <%= challenge.meeting_info&.place_name || "장소 정보 없음" %>
                </p>
                <p class="text-[10px] text-slate-400 mt-1 truncate"><%= challenge.meeting_info&.address %></p>
              </div>
              <div class="w-10 h-10 bg-indigo-500/20 rounded-xl flex items-center justify-center text-xl">📍</div>
            <% end %>
          <% else %>
            <div class="p-6 bg-white/[0.03] rounded-2xl border border-white/5 flex items-center justify-between">
              <div class="flex-1 min-w-0 pr-4">
                <p class="text-[9px] font-bold text-slate-500 uppercase tracking-widest mb-1.5">상세 장소</p>
                <p class="text-base font-bold text-white tracking-tight truncate">
                  <%= challenge.meeting_info&.place_name || "장소 정보 없음" %>
                </p>
                <p class="text-[10px] text-slate-400 mt-1 truncate"><%= challenge.meeting_info&.address %></p>
              </div>
              <div class="w-10 h-10 bg-indigo-500/10 rounded-xl flex items-center justify-center text-xl">📍</div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>

    <!-- 2. Capacity & Fee -->
    <div class="space-y-6">
      <h2 class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] px-1 flex items-center gap-2">
        <span class="w-1 h-3 bg-indigo-400 rounded-full"></span>
        예약 및 비용 정보
      </h2>
      
      <div class="grid grid-cols-1 gap-4" data-controller="modal">
        <!-- Capacity Card (Clickable) -->
        <div class="p-6 bg-gradient-to-br from-white/[0.05] to-transparent rounded-[32px] border border-white/5 flex items-center gap-5 group cursor-pointer active:scale-[0.98] transition-all"
             data-action="click->modal#open">
          <div class="w-12 h-12 rounded-[20px] bg-indigo-500/10 flex items-center justify-center shrink-0 text-indigo-400 group-hover:scale-110 transition-transform shadow-lg shadow-indigo-500/5">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
          </div>
          <div class="flex-1 min-w-0">
            <div class="flex items-center justify-between">
              <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest">모집 정원</p>
              <span class="text-[9px] font-bold text-indigo-400 border border-indigo-500/30 px-1.5 py-0.5 rounded-lg bg-indigo-500/5">LIST VIEW</span>
            </div>
            <div class="flex items-baseline gap-2 mt-1">
              <p class="text-xl font-black text-white leading-none"><%= challenge.meeting_info&.max_attendees || '∞' %>명</p>
              <span class="text-xs font-bold text-slate-500">현재 <%= challenge.current_participants %>명 예약됨</span>
            </div>
          </div>
          <div class="text-white/20">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/></svg>
          </div>
        </div>

        <!-- Participants List Modal (Hoisted) -->
        <% content_for :modal_container do %>
          <div data-modal-target="container" 
               data-action="click->modal#closeOnBackground"
               class="fixed inset-0 z-[100000] hidden bg-black/80 backdrop-blur-xl flex items-end justify-center px-4">
            <div class="w-full max-w-md bg-[#0C0B12] rounded-t-[40px] border-t border-white/10 shadow-[0_-20px_50px_rgba(0,0,0,0.5)] flex flex-col max-h-[85vh] max-h-[85dvh] animate-slide-up">
              <!-- Handle -->
              <div class="w-12 h-1.5 bg-white/10 rounded-full mx-auto mt-4 mb-2 shrink-0"></div>
              
              <!-- Header -->
              <div class="px-8 py-6 border-b border-white/5 flex items-center justify-between shrink-0">
                <div>
                  <h3 class="text-xl font-black text-white italic">Who's Joining?</h3>
                  <p class="text-xs font-bold text-slate-500 mt-1 uppercase tracking-widest">Confirmed 루파들 (<%= @participants&.count || 0 %>)</p>
                </div>
                <button data-action="click->modal#close" class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center text-slate-400 hover:text-white transition-colors">
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"/></svg>
                </button>
              </div>

              <!-- List Body -->
              <div class="flex-1 overflow-y-auto px-6 py-6 no-scrollbar modal-content-safe min-h-[300px]">
                <% if @participants&.any? %>
                  <div class="space-y-3">
                    <% @participants.each do |p| %>
                      <% next unless p.user %>
                      <%= link_to user_profile_path(p.user), class: "flex items-center gap-4 p-4 rounded-2xl bg-white/[0.03] border border-white/5 hover:bg-white/5 active:scale-[0.98] transition-all group" do %>
                        <div class="relative shrink-0">
                          <img src="<%= p.user.profile_image %>" class="w-12 h-12 rounded-xl object-cover bg-white/5 border border-white/10 group-hover:border-indigo-500/50 transition-colors">
                          <% if p.user.is_rufa_club_member? %>
                            <div class="absolute -top-1 -right-1 w-4 h-4 bg-indigo-500 rounded-md border border-[#0C0B12] flex items-center justify-center text-[7px] font-black text-white shadow-lg">R</div>
                          <% end %>
                        </div>
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-2">
                            <p class="text-sm font-black text-white"><%= p.nickname %></p>
                            <span class="px-1.5 py-0.5 rounded-md bg-white/5 border border-white/10 text-[8px] font-black text-slate-400 italic">Lv.<%= p.user.level %></span>
                          </div>
                          <p class="text-[10px] text-slate-500 font-medium truncate mt-0.5"><%= p.user.bio.presence || "루틴으로 성장하는 중" %></p>
                        </div>
                        <div class="text-white/10 group-hover:text-indigo-500 transition-colors">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/></svg>
                        </div>
                      <% end %>
                    <% end %>
                  </div>
                <% else %>
                  <div class="py-20 text-center">
                    <span class="text-4xl block mb-4 grayscale opacity-30">🤝</span>
                    <p class="text-xs font-bold text-slate-500 italic leading-relaxed">아직 참여자가 없습니다.<br/>첫 번째 주인공이 되어보세요!</p>
                  </div>
                <% end %>
              </div>

              <!-- Footer Action -->
              <div class="p-8 border-t border-white/5 shrink-0">
                <button data-action="click->modal#close" class="w-full py-4.5 bg-white/5 border border-white/10 rounded-2xl text-xs font-black text-slate-400 hover:text-white hover:bg-white/10 transition-all">
                  닫기
                </button>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Entry Fee -->
        <div class="p-6 bg-gradient-to-br from-white/[0.05] to-transparent rounded-[32px] border border-white/5 flex items-center gap-5 group">
          <div class="w-12 h-12 rounded-[20px] bg-amber-500/10 flex items-center justify-center shrink-0 text-amber-400 group-hover:scale-110 transition-transform shadow-lg shadow-amber-500/5">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div class="min-w-0">
            <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1.5 whitespace-nowrap">참가 비용</p>
            <p class="text-xl font-black text-white leading-tight whitespace-nowrap"><%= challenge.cost_type_free? ? "무료 참여" : "#{number_with_delimiter(challenge.amount)}원" %></p>
            <p class="text-[11px] text-slate-500 mt-1 font-bold break-keep"><%= challenge.cost_type_deposit? ? "참여 완료 시 환불" : "모임 운영비" %></p>
          </div>
        </div>
      </div>

      <!-- Account Info if paid -->
      <% unless challenge.cost_type_free? %>
        <% if challenge.host_bank.present? && challenge.host_account.present? %>
          <div class="p-5 bg-indigo-500/10 rounded-2xl border border-indigo-500/20 flex items-center justify-between">
            <div class="min-w-0 pr-4">
              <p class="text-[9px] font-black text-indigo-400 uppercase tracking-widest mb-1.5">입금 계좌</p>
              <p class="text-sm font-bold text-white truncate"><%= challenge.host_bank %> <span class="text-indigo-400 ml-1"><%= challenge.host_account %></span></p>
              <p class="text-[10px] text-slate-400 mt-0.5">예금주: <%= challenge.host_account_holder %></p>
            </div>
            <button class="w-10 h-10 bg-indigo-500 rounded-xl flex items-center justify-center text-white" onclick="navigator.clipboard.writeText('<%= challenge.host_account %>')">📋</button>
          </div>
        <% end %>
      <% end %>
    </div>

    <!-- 3. Gathering Policy -->
    <div class="space-y-6">
      <h2 class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] px-1 flex items-center gap-2">
        <span class="w-1 h-3 bg-rose-400 rounded-full"></span>
        모임 유의사항
      </h2>

      <div class="space-y-4">
        <% if challenge.refund_policy.present? %>
          <div class="p-6 bg-white/[0.03] rounded-2xl border border-white/5 space-y-2">
            <p class="text-[9px] font-bold text-rose-400 uppercase tracking-widest leading-none">환불/취소 정책</p>
            <p class="text-xs font-medium text-slate-300 leading-relaxed whitespace-pre-wrap"><%= challenge.refund_policy %></p>
          </div>
        <% end %>

        <div class="p-5 bg-white/[0.03] rounded-2xl border border-white/5 flex items-start gap-4">
          <div class="w-10 h-10 rounded-xl bg-slate-500/10 flex items-center justify-center text-slate-400 shrink-0">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div class="flex-1 min-w-0 pt-0.5">
            <p class="text-[10px] font-bold leading-relaxed text-slate-300">
              호스트의 승인 후 최종 참여가 확정됩니다. 모임 성격에 맞지 않는 참여자는 승인이 거절될 수 있습니다.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="space-y-12">
    <!-- Existing Challenge Content (Condensed for readability in replace call) -->
    <!-- 1. Daily Mission & Schedule -->
    <div class="space-y-6">
      <h2 class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] px-1 flex items-center gap-2">
        <span class="w-1 h-3 bg-indigo-400 rounded-full"></span>
        데일리 미션 및 일정
      </h2>
      <div class="space-y-4">
        <div class="p-5 bg-white/[0.03] rounded-2xl border border-white/5">
          <p class="text-[9px] font-bold text-slate-400 uppercase tracking-widest mb-2">활동 요일</p>
          <div class="flex gap-1.5">
            <% (challenge.days || []).each do|day| %><span class="px-2.5 py-1 bg-indigo-500 text-white text-[10px] font-bold rounded-lg"><%= day %></span><% end %>
          </div>
        </div>
        <div class="p-5 bg-white/[0.03] rounded-2xl border border-white/5 space-y-3">
          <p class="text-[9px] font-bold text-slate-400 uppercase tracking-widest">미션 목표</p>
          <% if challenge.daily_goals.present? %>
            <div class="space-y-4">
              <% if challenge.daily_goals.is_a?(Hash) %>
                <% challenge.daily_goals.each do |day, goals| %>
                  <div class="space-y-2">
                    <p class="text-xs font-black text-indigo-400 underline underline-offset-4 decoration-2"><%= day %>요일</p>
                    <div class="pl-2 space-y-1">
                      <% Array(goals).each do |goal| %>
                        <p class="text-sm font-medium text-slate-300 flex items-start gap-2">
                          <span class="text-indigo-500 mt-1">•</span>
                          <%= goal %>
                        </p>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% else %>
                <div class="space-y-2">
                  <% Array(challenge.daily_goals).each do |goal| %>
                    <p class="text-sm font-medium text-slate-300 flex items-start gap-2">
                      <span class="text-indigo-500 mt-1">•</span>
                      <%= goal %>
                    </p>
                  <% end %>
                </div>
              <% end %>
            </div>
          <% elsif challenge.certification_goal.present? %>
            <div class="space-y-2">
              <% Array(challenge.certification_goal).each do |goal| %>
                <p class="text-sm font-medium text-slate-300 flex items-start gap-2">
                  <span class="text-indigo-500 mt-1">•</span>
                  <%= goal %>
                </p>
              <% end %>
            </div>
          <% else %>
            <p class="text-sm font-medium text-slate-500 italic">상세 미션 내용이 설정되지 않았습니다.</p>
          <% end %>
        </div>
      </div>
    </div>

    <!-- 2. Verification Details -->
    <div class="space-y-6">
      <h2 class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] px-1 flex items-center gap-2">
        <span class="w-1 h-3 bg-emerald-400 rounded-full"></span>
        인증 및 달성 기준
      </h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div class="p-5 bg-white/[0.03] rounded-2xl border border-white/5 flex items-start gap-4">
          <div class="w-10 h-10 rounded-2xl bg-indigo-500/10 flex items-center justify-center shrink-0 text-indigo-400"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/></svg></div>
          <div>
            <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">인증 방식</p>
            <p class="font-bold text-white"><%= { simple: '간단 완료 체크', metric: '수치 데이터 입력', photo: '사진 업로드 인증', url: '공유 URL 링크 인증' }[challenge.verification_type&.to_sym] || '기본 인증' %></p>
            <p class="text-[11px] text-slate-400 mt-1">
              <%= challenge.verification_start_time&.respond_to?(:strftime) ? challenge.verification_start_time.strftime('%H:%M') : "00:00" %> 
              ~ 
              <%= challenge.verification_end_time&.respond_to?(:strftime) ? challenge.verification_end_time.strftime('%H:%M') : "23:59" %>
            </p>
          </div>
        </div>
        <div class="p-5 bg-white/[0.03] rounded-2xl border border-white/5 flex items-start gap-4">
          <div class="w-10 h-10 rounded-2xl bg-rose-500/10 flex items-center justify-center shrink-0 text-rose-400"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/></svg></div>
          <div>
            <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mb-1">성공 및 환급 기준</p>
            <p class="font-bold text-white">달성률 <%= challenge.full_refund_threshold %>% 이상</p>
            <p class="text-[11px] text-slate-400 mt-1">최대 <%= challenge.failure_tolerance %>회 실패까지 전액 환급</p>
          </div>
        </div>
      </div>
    </div>

    <!-- 3. Payment -->
    <% unless challenge.cost_type_free? %>
      <div class="space-y-6">
        <h2 class="text-xs font-bold text-slate-500 uppercase tracking-[0.2em] px-1 flex items-center gap-2">
          <span class="w-1 h-3 bg-amber-400 rounded-full"></span>
          비용 및 정산 안내
        </h2>
        <div class="space-y-4">
          <% if challenge.host_bank.present? && challenge.host_account.present? %>
            <div class="p-6 bg-white/[0.03] rounded-2xl border border-white/5 flex items-center justify-between">
              <div>
                <p class="text-[9px] font-bold text-slate-500 uppercase tracking-widest mb-2">정산 계좌 정보</p>
                <p class="text-base font-bold text-white tracking-tight"><%= challenge.host_bank %> <span class="text-indigo-400"><%= challenge.host_account %></span></p>
                <p class="text-[10px] font-medium text-slate-400 mt-1">예금주: <%= challenge.host_account_holder %></p>
              </div>
              <div class="w-10 h-10 bg-white/5 rounded-xl flex items-center justify-center text-xl border border-white/5">🏦</div>
            </div>
          <% end %>
          <% if challenge.refund_policy.present? %>
            <div class="p-6 bg-white/[0.03] rounded-2xl border border-white/5 space-y-2">
              <p class="text-[9px] font-bold text-indigo-400 uppercase tracking-widest leading-none">환불 정책</p>
              <p class="text-xs font-medium text-slate-300 leading-relaxed whitespace-pre-wrap"><%= challenge.refund_policy %></p>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

