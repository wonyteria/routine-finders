<div class="space-y-16 pb-40">
    <%
      activity_data = Hash.new(0)
      (@verification_logs || []).each { |log| activity_data[log.created_at.to_date] += 1 }
      (@personal_routine_completions || []).each { |c| activity_data[c.completed_on] += 1 }
      (@club_attendances || []).each { |a| activity_data[a.attendance_date] += 1 }

      total_activities = activity_data.values.sum
      max_streak = 0
      current_streak = 0
      sorted_dates = activity_data.keys.sort.reverse
      if sorted_dates.any?
        # Simple streak calculation based on activity dates
        check_date = Date.current
        if activity_data[check_date] > 0 || activity_data[check_date - 1.day] > 0
          curr = activity_data[check_date] > 0 ? check_date : check_date - 1.day
          while activity_data[curr] > 0
            current_streak += 1
            curr -= 1.day
          end
        end
      end

      end_date = Date.current
      start_date = end_date - 1.year + 1.day
      grid_start_date = start_date - start_date.wday
      weeks = []
      iter_date = grid_start_date
      while iter_date <= end_date || weeks.size < 53
        week = []
        7.times { week << iter_date; iter_date += 1.day }
        weeks << week
        break if iter_date > end_date && weeks.size >= 53
      end
