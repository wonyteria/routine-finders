<div class="space-y-4">
  <div class="app-glass-card p-4">
    <div class="flex items-center justify-between mb-5">
      <div>
        <h2 class="text-sm font-black text-white italic">공지사항 관리</h2>
        <p class="text-[7px] font-black text-slate-600 uppercase tracking-widest mt-0.5">참가자들에게 전보를 보냅니다</p>
      </div>
      <%= link_to new_challenge_announcement_path(challenge, source: "prototype"), 
                  data: { turbo_frame: "_top" },
                  class: "px-3 py-1.5 rounded-lg bg-indigo-500/10 text-[8px] font-black text-indigo-400 uppercase tracking-widest flex items-center gap-1.5 border border-indigo-500/10" do %>
        <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/></svg>
        신규 공지
      <% end %>
    </div>
    
    <% if announcements.any? %>
      <div class="space-y-3">
        <% announcements.each do |announcement| %>
          <div class="p-4 rounded-xl bg-white/[0.02] border border-white/5 hover:bg-white/[0.04] transition-all group">
            <div class="flex items-start justify-between gap-3">
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <span class="w-1 h-1 rounded-full bg-indigo-500 shadow-[0_0_8px_rgba(99,102,241,0.8)]"></span>
                  <h3 class="font-black text-white text-[13px] truncate italic"><%= announcement.title %></h3>
                </div>
                <p class="text-[7px] font-black text-slate-600 uppercase tracking-widest ml-3"><%= announcement.created_at.in_time_zone('Asia/Seoul').strftime('%Y.%m.%d %H:%M') %></p>
                <% if announcement.content.present? %>
                  <div class="mt-3 ml-3 p-3 bg-black/20 rounded-lg border border-white/5">
                    <p class="text-[10px] font-medium text-slate-400 leading-relaxed whitespace-pre-wrap"><%= announcement.content %></p>
                  </div>
                <% end %>
              </div>
              <div class="flex items-center gap-2 opacity-50 group-hover:opacity-100 transition-opacity">
                <%= link_to edit_challenge_announcement_path(challenge, announcement, source: "prototype"), 
                            data: { turbo_frame: "_top" },
                            class: "p-2 text-slate-600 hover:text-white transition-colors" do %>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-32 bg-white/[0.01] rounded-[40px] border border-dashed border-white/5">
        <p class="text-[11px] font-black text-slate-700 uppercase tracking-[0.3em]">아직 방송된 공지가 없습니다</p>
      </div>
    <% end %>
  </div>
</div>
