<div class="space-y-12 py-10 pb-32" data-controller="admin-tools">
  <!-- 1. Header -->
  <header class="px-6 space-y-4">
    <div class="flex items-center justify-between">
      <%= link_to prototype_home_path, class: "w-10 h-10 rounded-2xl bg-white/5 border border-white/10 flex items-center justify-center text-slate-400 active:scale-95 transition-all" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7"/></svg>
      <% end %>
      <div class="px-3 py-1 rounded-full bg-rose-500/10 border border-rose-500/20">
        <span class="text-[9px] font-black text-rose-400 uppercase tracking-widest leading-none">System Terminal</span>
      </div>
      <div class="w-10"></div>
    </div>

    <div class="space-y-1">
      <h1 class="text-3xl font-black text-white tracking-tight">서비스 관리 센터</h1>
      <p class="text-xs font-bold text-slate-500">루틴 파인더스의 성장을 통합 관리합니다.</p>
    </div>
  </header>

  <!-- 2. System Pulse: Key Metrics -->
  <section class="px-6">
    <div class="grid grid-cols-2 gap-4">
      <div class="app-glass-card p-6 border-white/5 space-y-3">
        <div class="w-8 h-8 rounded-lg bg-indigo-500/10 flex items-center justify-center text-indigo-400">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
        </div>
        <div>
          <p class="text-[9px] font-black text-slate-500 uppercase tracking-widest">Total Users</p>
          <div class="flex items-baseline gap-1">
            <span class="text-2xl font-black text-white"><%= number_with_delimiter(@total_users) %></span>
            <span class="text-[9px] font-bold text-emerald-500">+<%= @daily_active_users %> Live</span>
          </div>
        </div>
      </div>
      
      <div class="app-glass-card p-6 border-white/5 space-y-3">
        <div class="w-8 h-8 rounded-lg bg-amber-500/10 flex items-center justify-center text-amber-400">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
        </div>
        <div>
          <p class="text-[9px] font-black text-slate-500 uppercase tracking-widest">Premium Power</p>
          <div class="flex items-baseline gap-1">
            <span class="text-2xl font-black text-white"><%= @premium_users %></span>
            <span class="text-[9px] font-bold text-indigo-400">Club members</span>
          </div>
        </div>
      </div>

      <div class="col-span-2 app-glass-card p-6 border-white/5 flex items-center justify-between">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-2xl bg-emerald-500/10 flex items-center justify-center text-emerald-400 text-2xl font-black">
            ⚡
          </div>
          <div>
            <p class="text-[9px] font-black text-slate-500 uppercase tracking-widest leading-none mb-1">Activity Pulse</p>
            <h4 class="text-lg font-black text-white"><%= @system_pulse %>% Active Rate</h4>
          </div>
        </div>
        <div class="w-24 h-2 bg-white/5 rounded-full overflow-hidden">
          <div class="h-full bg-emerald-500" style="width: <%= @system_pulse %>%"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- 3. Organized Event Stream -->
  <section class="px-6 space-y-6" 
           data-controller="tabs"
           data-tabs-active-class="bg-indigo-500 text-white"
           data-tabs-inactive-class="text-slate-500">
    <div class="flex items-center justify-between px-1">
      <h2 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">시스템 이벤트 스트림</h2>
      <div class="flex bg-white/5 p-1 rounded-xl">
        <button data-action="tabs#change" data-tabs-target="tab" data-id="membership" class="px-2 py-1 rounded-lg text-[8px] font-black transition-all">MEMBERS</button>
        <button data-action="tabs#change" data-tabs-target="tab" data-id="action" class="px-2 py-1 rounded-lg text-[8px] font-black transition-all">ACTIONS</button>
        <button data-action="tabs#change" data-tabs-target="tab" data-id="routine" class="px-2 py-1 rounded-lg text-[8px] font-black transition-all">ROUTINE</button>
      </div>
    </div>

    <!-- Membership Stream -->
    <div data-tabs-target="panel" data-id="membership" class="space-y-3">
      <% if @stream_memberships.any? %>
        <% @stream_memberships.each do |membership| %>
          <div class="app-glass-card p-4 flex items-center gap-4 animate-badge-pop bg-indigo-500/5">
            <div class="w-10 h-10 rounded-xl bg-indigo-500/20 flex items-center justify-center text-indigo-400 text-xs font-black">
              <%= membership.user.nickname[0].upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-black text-white truncate"><%= membership.user.nickname %></p>
              <p class="text-[9px] font-bold text-slate-500 uppercase tracking-widest mt-0.5"><%= membership.routine_club&.title %></p>
            </div>
            <div class="text-right">
              <span class="px-2 py-1 rounded bg-amber-500/20 text-amber-500 text-[8px] font-black uppercase">Pending</span>
              <p class="text-[8px] font-bold text-slate-600 mt-1"><%= time_ago_in_words(membership.created_at) %> 전</p>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="py-12 text-center bg-white/2 rounded-3xl border border-dashed border-white/5">
          <p class="text-xs font-bold text-slate-600">최근 멤버십 신청이 없습니다.</p>
        </div>
      <% end %>
    </div>

    <!-- Action Stream (Challenge Joins) -->
    <div data-tabs-target="panel" data-id="action" class="hidden space-y-3">
      <% if @stream_joins.any? %>
        <% @stream_joins.each do |participation| %>
          <div class="app-glass-card p-4 flex items-center gap-4 animate-badge-pop bg-emerald-500/5">
            <div class="w-10 h-10 rounded-xl bg-emerald-500/20 flex items-center justify-center text-emerald-400 text-xs font-black">
              <%= participation.user.nickname[0].upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-black text-white truncate"><%= participation.user.nickname %></p>
              <p class="text-[9px] font-bold text-slate-500 mt-0.5"><%= participation.challenge.title %></p>
            </div>
            <div class="text-right">
               <span class="text-sm">🏃</span>
               <p class="text-[8px] font-bold text-slate-600 mt-1"><%= time_ago_in_words(participation.created_at) %> 전</p>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="py-12 text-center bg-white/2 rounded-3xl border border-dashed border-white/5">
          <p class="text-xs font-bold text-slate-600">최근 활동 참여가 없습니다.</p>
        </div>
      <% end %>
    </div>

    <!-- Routine Stream -->
    <div data-tabs-target="panel" data-id="routine" class="hidden space-y-3">
      <% if @stream_completions.any? %>
        <% @stream_completions.each do |completion| %>
          <div class="app-glass-card p-4 flex items-center gap-4 animate-badge-pop bg-white/2">
            <div class="w-10 h-10 rounded-xl bg-white/10 flex items-center justify-center text-white/40 text-xs font-black">
              <%= completion.personal_routine.user.nickname[0].upcase %>
            </div>
            <div class="flex-1 min-w-0">
              <p class="text-sm font-black text-white truncate"><%= completion.personal_routine.user.nickname %></p>
              <p class="text-[9px] font-bold text-indigo-400 mt-0.5"><%= completion.personal_routine.title %></p>
            </div>
            <div class="text-right">
               <span class="text-emerald-500 text-xs font-black">DONE</span>
               <p class="text-[8px] font-bold text-slate-600 mt-1"><%= time_ago_in_words(completion.created_at) %> 전</p>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="py-12 text-center bg-white/2 rounded-3xl border border-dashed border-white/5">
          <p class="text-xs font-bold text-slate-600">오늘 완료된 루틴이 없습니다.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- 4. Content Management -->
  <section class="px-6 space-y-6">
    <div class="flex items-center justify-between px-1">
      <h2 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">액티브 콘텐츠 관리</h2>
      <button class="text-[10px] font-black text-indigo-400" data-action="admin-tools#comingSoon">모두 보기</button>
    </div>

    <div class="space-y-4">
      <!-- Active Challenges -->
      <div class="space-y-3">
        <p class="text-[10px] font-black text-slate-600 uppercase tracking-widest pl-2">Daily Challenges</p>
        <% if @active_challenges.any? %>
          <% @active_challenges.each do |challenge| %>
            <div class="app-glass-card p-4 flex items-center justify-between border-white/5 hover:bg-white/[0.03] transition-colors">
              <div class="flex items-center gap-4">
                <div class="relative">
                  <img src="<%= challenge.thumbnail %>" class="w-12 h-12 rounded-xl object-cover border border-white/10">
                  <span class="absolute -top-1 -right-1 w-4 h-4 bg-indigo-600 rounded-full flex items-center justify-center text-[8px] font-black text-white border-2 border-[#1B1A24]">
                    <%= challenge.online? ? "ON" : "OFF" %>
                  </span>
                </div>
                <div>
                  <h4 class="text-sm font-black text-white leading-tight"><%= challenge.title %></h4>
                  <p class="text-[10px] font-bold text-slate-500 mt-1">Host: <%= challenge.host_name %> · <%= challenge.participants.count %>명 참여</p>
                </div>
              </div>
              <button class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center text-slate-500 hover:text-white transition-colors" data-action="admin-tools#comingSoon">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/></svg>
              </button>
            </div>
          <% end %>
        <% else %>
          <div class="p-8 text-center bg-white/2 rounded-3xl border border-dashed border-white/5">
            <p class="text-[11px] font-bold text-slate-600">현재 활성화된 챌린지가 없습니다.</p>
          </div>
        <% end %>
      </div>

      <!-- Active Gatherings -->
      <div class="space-y-3 pt-2">
        <p class="text-[10px] font-black text-slate-600 uppercase tracking-widest pl-2">Social Gatherings (Online/Offline)</p>
        <% if @active_gatherings.any? %>
          <% @active_gatherings.each do |gathering| %>
            <div class="app-glass-card p-4 flex items-center justify-between border-white/5 bg-amber-500/5">
              <div class="flex items-center gap-4">
                <div class="w-12 h-12 rounded-xl bg-amber-500/20 flex items-center justify-center text-xl relative">
                  <%= gathering.online? ? "💻" : "📍" %>
                  <span class="absolute -top-1 -right-1 w-4 h-4 <%= gathering.online? ? 'bg-indigo-600' : 'bg-emerald-600' %> rounded-full flex items-center justify-center text-[7px] font-black text-white border-2 border-[#1B1A24]">
                    <%= gathering.online? ? "ON" : "OFF" %>
                  </span>
                </div>
                <div>
                  <h4 class="text-sm font-black text-white leading-tight"><%= gathering.title %></h4>
                  <p class="text-[10px] font-bold text-amber-500/60 mt-1">
                    <%= gathering.online? ? "온라인" : gathering.meeting_info&.place_name %> · <%= gathering.start_date&.strftime("%m.%d") %>
                  </p>
                </div>
              </div>
              <button class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center text-slate-500 hover:text-white transition-colors" data-action="admin-tools#comingSoon">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/></svg>
              </button>
            </div>
          <% end %>
        <% else %>
          <div class="p-8 text-center bg-white/2 rounded-3xl border border-dashed border-white/5">
            <p class="text-[11px] font-bold text-slate-600">현재 활성화된 모임이 없습니다.</p>
          </div>
        <% end %>
      </div>
    </div>
  </section>

  <!-- 5. System Controls -->
  <section class="px-6 space-y-6">
    <div class="flex items-center justify-between px-1">
      <h2 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">고급 시스템 제어</h2>
    </div>

    <div class="grid grid-cols-2 gap-3">
      <button data-action="admin-tools#broadcast" class="app-glass-card p-6 flex flex-col items-center gap-3 active:scale-95 transition-all text-center border-white/10 group">
        <div class="w-12 h-12 rounded-2xl bg-rose-500/10 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform">🚨</div>
        <div>
          <p class="text-[11px] font-black text-white">서버 긴급 공지</p>
          <p class="text-[8px] font-bold text-rose-500/60 mt-1 uppercase">Broadcast</p>
        </div>
      </button>
      <%= link_to "/prototype/admin/clubs", class: "app-glass-card p-6 flex flex-col items-center gap-3 active:scale-95 transition-all text-center border-white/10 group" do %>
        <div class="w-12 h-12 rounded-2xl bg-indigo-500/10 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform">🔱</div>
        <div>
          <p class="text-[11px] font-black text-white">루파 클럽 관리</p>
          <p class="text-[8px] font-bold text-indigo-500/60 mt-1 uppercase">Clubs & Admins</p>
        </div>
      <% end %>
      <button data-action="admin-tools#comingSoon" class="app-glass-card p-6 flex flex-col items-center gap-3 active:scale-95 transition-all text-center border-white/10 group">
        <div class="w-12 h-12 rounded-2xl bg-white/5 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform">🛡️</div>
        <div>
          <p class="text-[11px] font-black text-white">콘텐츠 모더레이션</p>
          <p class="text-[8px] font-bold text-slate-600 mt-1 uppercase">Moderation</p>
        </div>
      </button>
       <button data-action="admin-tools#comingSoon" class="app-glass-card p-6 flex flex-col items-center gap-3 active:scale-95 transition-all text-center border-white/10 group">
        <div class="w-12 h-12 rounded-2xl bg-white/5 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform">⚙️</div>
        <div>
          <p class="text-[11px] font-black text-white">시스템 환경 설정</p>
          <p class="text-[8px] font-bold text-slate-600 mt-1 uppercase">Settings</p>
        </div>
      </button>
    </div>
  </section>
</div>
