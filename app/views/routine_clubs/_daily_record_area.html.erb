<div class="bg-white rounded-2xl p-4 lg:p-5 border border-slate-200 shadow-sm flex flex-col h-full relative overflow-hidden">
  
  <div class="relative z-10 flex items-center justify-between mb-4">
    <div class="space-y-0.5">
      <h2 class="text-base lg:text-lg font-black text-slate-900 tracking-tight">오늘의 기록</h2>
      <p class="text-[9px] text-slate-400 font-bold tracking-wider leading-none"><%= Date.current.strftime("%Y년 %m월 %d일") %></p>
    </div>
    
    <% 
      today_attendance = @my_membership.attendances.find_by(attendance_date: Date.current) 
      all_routines_done = current_user.all_routines_completed?(Date.current)
      today_achievement = current_user.daily_achievement_rate(Date.current)
    %>

    <% if today_attendance&.status_present? %>
      <div class="flex items-center gap-1 bg-emerald-500 text-white px-2.5 py-1 rounded-lg shadow-md font-black text-[9px] uppercase tracking-wider">
        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
        완료
      </div>
    <% end %>
  </div>
  
  <div class="relative z-10 flex-1 flex flex-col">
    <% if today_attendance&.status_present? %>
      <div class="bg-slate-50/80 backdrop-blur-sm rounded-xl p-4 flex-1 border border-slate-100 flex flex-col justify-center text-center shadow-inner">
        
        <div class="inline-flex items-center gap-2 mb-4 mx-auto flex-wrap justify-center">
          <div class="px-3 py-1.5 bg-indigo-600 text-white text-[10px] font-black rounded-lg shadow-lg">달성률 <%= today_attendance.achievement_rate.to_i %>%</div>
          <% if today_attendance.achievement_rate >= 100 %>
            <div class="px-3 py-1.5 bg-amber-400 text-slate-900 text-[10px] font-black rounded-lg shadow-lg">완수 ✨</div>
          <% end %>
        </div>
        
        <% if today_attendance.proof_text.present? %>
          <div class="relative px-2 mb-4">
            <p class="text-sm text-slate-800 font-bold leading-snug line-clamp-3">
              <%= today_attendance.proof_text %>
            </p>
          </div>
        <% end %>
        
        <div class="flex items-center justify-center gap-2 mt-2">
          <button class="flex items-center gap-2 px-4 py-2.5 bg-white border border-slate-200 rounded-xl hover:border-orange-400 hover:shadow-md transition-all font-black text-slate-700 shadow-sm active:scale-95 group/btn">
            <div class="w-7 h-7 bg-orange-50 rounded-lg flex items-center justify-center group-hover/btn:bg-orange-100 transition-colors">
              <span class="text-base group-hover/btn:scale-125 transition-transform">👏</span>
            </div>
            <div class="text-left">
              <p class="text-[8px] text-slate-400 leading-none mb-0.5 uppercase tracking-wider">응원</p>
              <p class="text-sm leading-none font-black text-orange-600"><%= today_attendance.cheers_count %></p>
            </div>
          </button>
        </div>
      </div>
    <% else %>
      <%= form_with url: record_routine_club_path(@routine_club), method: :post, class: "flex-1 flex flex-col" do |f| %>
        <div class="flex-1 mb-3 relative">
          <%= f.text_area :proof_text, 
                          placeholder: "오늘의 루틴 한 마디를 남겨보세요.", 
                          class: "w-full h-full min-h-[120px] p-4 bg-slate-50 border-2 border-slate-100 rounded-xl font-medium text-slate-700 placeholder:text-slate-300 focus:ring-4 focus:ring-indigo-50 focus:border-indigo-200 focus:bg-white transition-all shadow-inner resize-none text-sm",
                          required: true %>
        </div>

        <div class="bg-indigo-900 border border-indigo-800 rounded-xl p-4 flex flex-col gap-3 shadow-lg relative overflow-hidden">
          <div class="absolute inset-0 bg-gradient-to-br from-indigo-800 to-slate-900 opacity-50"></div>
          
          <div class="relative z-10 flex items-center gap-3">
            <div class="w-10 h-10 rounded-lg bg-white/10 backdrop-blur-md border border-white/20 flex items-center justify-center text-2xl shadow-inner">
              <%= all_routines_done ? "💎" : "⏳" %>
            </div>
            <div class="flex-1">
              <p class="text-[8px] font-bold text-indigo-300 uppercase tracking-wider leading-none mb-0.5">달성률</p>
              <div class="flex items-baseline gap-0.5">
                <p class="text-xl font-black text-white tabular-nums tracking-tight"><%= today_achievement.to_i %></p>
                <p class="text-[10px] font-bold text-indigo-400">%</p>
              </div>
            </div>
          </div>

          <% if all_routines_done %>
            <%= f.submit "기록 저장", class: "relative z-10 w-full px-6 py-3 bg-indigo-500 text-white rounded-xl font-black text-sm hover:bg-indigo-400 shadow-lg hover:scale-105 active:scale-95 transition-all cursor-pointer" %>
          <% else %>
            <div class="relative z-10 w-full text-center">
              <button type="button" disabled class="w-full px-6 py-3 bg-white/5 border border-white/10 text-white/30 rounded-xl font-black text-xs cursor-not-allowed uppercase tracking-wider">
                대기 중
              </button>
              <p class="mt-1.5 text-[9px] font-medium text-indigo-300 opacity-60 leading-none">모든 루틴 완수 후 기록 가능</p>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
