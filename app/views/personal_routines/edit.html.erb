<div class="max-w-2xl mx-auto py-12 px-4">
  <div class="bg-white rounded-[48px] p-8 lg:p-12 shadow-2xl space-y-8 animate-in fade-in slide-in-from-bottom-4 duration-500">
    <div class="flex items-center justify-between">
      <div class="space-y-2">
        <h1 class="text-3xl font-black text-slate-900 flex items-center gap-3">
          루틴 수정하기
          <span class="text-indigo-600">✍️</span>
        </h1>
        <p class="text-slate-500 font-bold">당신의 습관을 더 나은 방향으로 조정해보세요.</p>
      </div>
      <%= link_to personal_routines_path, class: "w-12 h-12 bg-slate-50 text-slate-400 rounded-2xl flex items-center justify-center hover:bg-slate-100 transition-all shadow-sm" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M6 18L18 6M6 6l12 12"/></svg>
      <% end %>
    </div>

    <%= form_with model: @routine, data: { turbo: false }, class: "space-y-8" do |f| %>
      <div class="space-y-2">
        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pl-1">Routine Title</label>
        <%= f.text_field :title, placeholder: "예: 아침 명상 10분", required: true, class: "w-full px-6 py-5 bg-slate-50 border-none rounded-[28px] text-slate-900 placeholder-slate-300 font-bold focus:ring-2 ring-indigo-500 transition-all text-lg" %>
      </div>
      
      <div class="grid grid-cols-2 gap-6">
        <div class="space-y-2">
          <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pl-1">Icon</label>
          <div class="relative">
            <%= f.select :icon, ["🔥", "⭐", "💪", "📖", "🥦", "🏃", "🎸", "🧘", "💊", "💧", "👀", "📝", "💰"], {}, class: "w-full px-6 py-5 bg-slate-50 border-none rounded-[28px] text-slate-900 font-bold focus:ring-2 ring-indigo-500 appearance-none cursor-pointer" %>
            <div class="absolute right-6 top-1/2 -translate-y-1/2 pointer-events-none text-slate-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7"/></svg>
            </div>
          </div>
        </div>
        <div class="space-y-2">
          <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pl-1">Category</label>
          <div class="relative">
            <%= f.select :category, ["HEALTH", "LIFE", "MIND", "HOBBY", "STUDY", "MONEY"], {}, class: "w-full px-6 py-5 bg-slate-50 border-none rounded-[28px] text-slate-900 font-bold focus:ring-2 ring-indigo-500 appearance-none cursor-pointer" %>
            <div class="absolute right-6 top-1/2 -translate-y-1/2 pointer-events-none text-slate-400">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M19 9l-7 7-7-7"/></svg>
            </div>
          </div>
        </div>
      </div>

      <div class="space-y-4">
        <label class="text-[10px] font-black text-slate-400 uppercase tracking-widest pl-1">Repeat Days (선택하세요)</label>
        <div class="flex justify-between gap-2">
          <% [["월", 1], ["화", 2], ["수", 3], ["목", 4], ["금", 5], ["토", 6], ["일", 0]].each do |label, value| %>
            <label class="flex-1">
              <%= check_box_tag "personal_routine[days][]", value, (@routine.days || []).include?(value.to_s), class: "peer hidden" %>
              <div class="w-full py-4 text-center rounded-2xl bg-slate-50 text-slate-400 font-black text-sm cursor-pointer border-2 border-transparent peer-checked:bg-indigo-600 peer-checked:text-white peer-checked:border-indigo-600 peer-checked:shadow-lg transition-all hover:bg-slate-100">
                <%= label %>
              </div>
            </label>
          <% end %>
        </div>
      </div>

      <div class="pt-4">
        <%= f.submit "루틴 수정 완료", class: "w-full py-6 bg-slate-900 text-white rounded-[32px] font-black text-lg hover:bg-indigo-600 transition-all shadow-xl shadow-indigo-100 cursor-pointer transform hover:-translate-y-1 active:scale-[0.98]" %>
      </div>
    <% end %>
  </div>
</div>
