<div class="max-w-6xl mx-auto space-y-6 pb-20 px-4" data-controller="modal">
  <!-- 1. 상단 바 (대담한 스타일) -->
  <div class="flex flex-col md:flex-row md:items-center justify-between gap-4 bg-white p-6 rounded-3xl border border-slate-200 shadow-sm">
    <div class="flex items-center gap-4">
      <div class="px-4 py-2 bg-indigo-600 text-white text-xs font-black tracking-widest rounded-2xl shadow-lg shadow-indigo-600/20">
        <%= @d_day %>
      </div>
      <div>
        <h1 class="text-xl font-black text-slate-900 flex items-center gap-2">
          <%= @challenge.title %>
          <% if @challenge.is_official %>
            <svg class="w-5 h-5 text-amber-500" fill="currentColor" viewBox="0 0 20 20"><path d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"/></svg>
          <% end %>
        </h1>
        <p class="text-xs text-slate-400 font-bold uppercase tracking-tight mt-0.5">
          <%= @challenge.start_date.strftime('%Y.%m.%d') %> - <%= @challenge.end_date.strftime('%Y.%m.%d') %> ∙ <%= @challenge.host_name %>
        </p>
      </div>
    </div>
    <div class="flex items-center gap-2">
      <%= link_to "javascript:history.back()", class: "p-3 bg-slate-50 text-slate-400 hover:text-indigo-600 rounded-2xl transition-all" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
      <% end %>
      <div class="h-8 w-px bg-slate-100 mx-2"></div>
      <%= button_to leave_challenge_path(@challenge), method: :delete, class: "px-4 py-2 text-xs font-bold text-slate-400 hover:text-rose-500 transition-all", data: { turbo_confirm: "정말 탈퇴하시겠습니까?" } do %>
        탈퇴하기
      <% end %>
    </div>
  </div>

  <!-- 2. 메인 그리드 -->
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-6">
    <!-- 왼쪽: 미션 및 탭 영역 (8/12) -->
    <div class="lg:col-span-8 space-y-6">
      
      <!-- 오늘의 미션 카드 / 최종 결과 카드 -->
      <% if @challenge.status_ended? %>
        <!-- 챌린지 종료 - 최종 결과 표시 -->
        <div class="bg-gradient-to-br from-indigo-600 to-purple-700 rounded-[32px] p-8 text-white shadow-2xl">
          <div class="text-center space-y-6">
            <div class="inline-flex items-center justify-center w-20 h-20 bg-white/20 backdrop-blur-md rounded-full">
              <span class="text-5xl">🎉</span>
            </div>
            
            <div>
              <h2 class="text-3xl font-black mb-2">챌린지 완료!</h2>
              <p class="text-indigo-100 text-sm font-medium">수고하셨습니다. 최종 결과를 확인하세요.</p>
            </div>

            <div class="grid grid-cols-2 gap-4">
              <div class="p-6 bg-white/10 backdrop-blur-md rounded-2xl border border-white/20">
                <p class="text-xs font-bold text-white/60 mb-2">최종 달성률</p>
                <p class="text-4xl font-black"><%= @participant.final_achievement_rate&.round(1) || @participant.completion_rate.to_i %>%</p>
              </div>
              <% if @challenge.cost_type_deposit? && (@participant.refund_amount || 0) > 0 %>
                <div class="p-6 bg-white/10 backdrop-blur-md rounded-2xl border border-white/20">
                  <p class="text-xs font-bold text-white/60 mb-2">환급 예상 금액</p>
                  <p class="text-3xl font-black"><%= number_with_delimiter(@participant.refund_amount) %><span class="text-lg ml-1">원</span></p>
                  
                  <div class="mt-4 pt-4 border-t border-white/10">
                    <% case @participant.refund_status %>
                    <% when "refund_applied" %>
                      <div class="flex items-center gap-2 text-emerald-300 bg-emerald-500/10 px-3 py-2 rounded-xl border border-emerald-500/20">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                        <span class="text-sm font-bold">환급 신청 완료 (호스트 확인 대기중)</span>
                      </div>
                    <% when "refund_completed" %>
                      <div class="flex items-center gap-2 text-white bg-emerald-500 px-3 py-2 rounded-xl shadow-lg shadow-emerald-500/20">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
                        <span class="text-sm font-bold">환급 지급 완료!</span>
                      </div>
                    <% else %>
                      <!-- 환급 신청 폼 (토글) -->
                      <div data-controller="toggle" data-toggle-class="hidden">
                        <button type="button" data-action="click->toggle#toggle" class="w-full py-3 bg-white text-indigo-600 rounded-xl font-black text-sm hover:bg-indigo-50 transition-all shadow-md mb-2 flex items-center justify-center gap-2">
                          <span>💰 환급 계좌 입력하고 신청하기</span>
                          <svg class="w-4 h-4 transition-transform duration-200" data-toggle-target="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/></svg>
                        </button>
                        
                        <div data-toggle-target="content" class="hidden mt-3 bg-white text-slate-900 p-4 rounded-2xl text-left shadow-xl">
                          <%= form_with url: apply_refund_challenge_path(@challenge), method: :post, local: true, class: "space-y-3" do |f| %>
                            <div>
                              <%= f.label :refund_bank_name, "은행명", class: "block text-xs font-bold text-slate-500 mb-1" %>
                              <%= f.text_field :refund_bank_name, class: "w-full px-3 py-2 bg-slate-50 border border-slate-200 rounded-lg text-sm font-bold focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "예: 카카오뱅크", required: true, value: current_user.saved_bank_name %>
                            </div>
                            <div>
                              <%= f.label :refund_account_number, "계좌번호", class: "block text-xs font-bold text-slate-500 mb-1" %>
                              <%= f.text_field :refund_account_number, class: "w-full px-3 py-2 bg-slate-50 border border-slate-200 rounded-lg text-sm font-bold focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "'-' 없이 입력", required: true, value: current_user.saved_account_number %>
                            </div>
                            <div>
                              <%= f.label :refund_account_name, "예금주", class: "block text-xs font-bold text-slate-500 mb-1" %>
                              <%= f.text_field :refund_account_name, class: "w-full px-3 py-2 bg-slate-50 border border-slate-200 rounded-lg text-sm font-bold focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "실명 입력", required: true, value: current_user.saved_account_holder %>
                            </div>
                            <%= f.submit "환급 신청 완료", class: "w-full py-3 bg-indigo-600 text-white rounded-xl font-black text-sm hover:bg-indigo-700 transition-colors mt-2" %>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>

            <% if !@user_review %>
              <%= link_to new_challenge_review_path(@challenge), class: "block w-full py-4 bg-white text-indigo-600 rounded-2xl font-black text-sm hover:bg-indigo-50 transition-all shadow-lg" do %>
                리뷰 작성하고 경험 공유하기 ✨
              <% end %>
            <% end %>
          </div>
        </div>
      <% else %>
        <!-- 진행 중 - 오늘의 미션 카드 -->
        <div class="bg-slate-900 rounded-[32px] p-6 text-white shadow-xl">
          <div class="flex items-center justify-between mb-6">
            <div class="flex items-center gap-2">
              <div class="w-8 h-8 bg-indigo-600 rounded-xl flex items-center justify-center">
                <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 10V3L4 14h7v7l9-11h-7z"/></svg>
              </div>
              <h2 class="text-lg font-black italic">오늘의 미션</h2>
            </div>
            <% unless @today_verified %>
              <% 
                remaining_seconds = (Time.current.end_of_day - Time.current).to_i
                hours = remaining_seconds / 3600
                minutes = (remaining_seconds % 3600) / 60
              %>
              <div class="px-3 py-1 bg-rose-500/20 text-rose-300 rounded-xl text-[10px] font-black uppercase tracking-widest border border-rose-500/20 flex items-center gap-1.5">
                <span class="w-1.5 h-1.5 bg-rose-500 rounded-full animate-pulse"></span>
                마감까지 <%= hours %>시간 <%= minutes %>분
              </div>
            <% end %>
          </div>

          <% if @today_verified %>
            <div class="flex items-center gap-6 py-2">
              <div class="w-14 h-14 bg-emerald-500/20 rounded-2xl flex items-center justify-center border border-emerald-500/30">
                <svg class="w-8 h-8 text-emerald-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
              </div>
              <div>
                <h3 class="text-xl font-black mb-1">오늘의 루틴 달성! 🎉</h3>
                <p class="text-slate-400 text-xs font-medium">성공적으로 오늘의 성장을 기록했습니다.</p>
              </div>
            </div>
          <% else %>
            <div class="space-y-4">
              <div class="p-4 bg-white/5 rounded-2xl border border-white/5">
                <p class="text-sm font-bold text-slate-200">"<%= @challenge.summary %>"</p>
              </div>
              <%= form_with url: challenge_verification_logs_path(@challenge), method: :post, class: "flex flex-col sm:flex-row gap-2" do |f| %>
                <div class="flex-1">
                  <% case @challenge.verification_type %>
                  <% when "metric" %>
                    <%= f.text_field "verification_log[value]", placeholder: "수치 입력", class: "w-full bg-white/10 text-white px-5 py-3.5 rounded-2xl font-bold text-sm border-0 focus:ring-2 focus:ring-indigo-500 outline-none" %>
                  <% when "photo" %>
                    <%= f.text_field "verification_log[image_url]", placeholder: "사진 URL", class: "w-full bg-white/10 text-white px-5 py-3.5 rounded-2xl font-bold text-sm border-0 focus:ring-2 focus:ring-indigo-500 outline-none" %>
                  <% when "url" %>
                    <%= f.text_field "verification_log[value]", placeholder: "링크 입력", class: "w-full bg-white/10 text-white px-5 py-3.5 rounded-2xl font-bold text-sm border-0 focus:ring-2 focus:ring-indigo-500 outline-none" %>
                  <% else %>
                    <%= f.hidden_field "verification_log[value]", value: "completed" %>
                    <div class="h-full flex items-center px-4 text-slate-500 text-xs italic">인증하기 버튼을 눌러주세요</div>
                  <% end %>
                </div>
                <%= f.submit "인증하기", class: "px-8 py-3.5 bg-indigo-600 text-white rounded-2xl font-black text-sm shadow-lg hover:bg-indigo-500 transition-all cursor-pointer whitespace-nowrap" %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>

      <!-- 메인 탭 영역 -->
      <div class="bg-white rounded-[32px] border border-slate-200 overflow-hidden shadow-sm min-h-[500px]">
        <!-- 탭 네비게이션 -->
        <div class="flex items-center px-4 border-b border-slate-100 bg-slate-50/30 overflow-x-auto no-scrollbar">
          <% [["records", "내 기록"], ["dashboard", "커뮤니티"], ["ranking", "랭킹"], ["announcements", "공지"], ["info", "소개"], ["reviews", "리뷰"]].each do |id, label| %>
            <%= link_to challenge_path(@challenge, tab: id), 
                        class: "px-5 py-4 text-xs font-black transition-all border-b-2 shrink-0 #{ @tab == id ? 'border-indigo-600 text-indigo-600' : 'border-transparent text-slate-400 hover:text-slate-600' }" do %>
              <%= label %>
              <% if id == "reviews" && @reviews.count > 0 %>
                <span class="ml-1 text-[10px] opacity-40"><%= @reviews.count %></span>
              <% end %>
              <% if id == "announcements" && @announcements_all.to_a.count > 0 %>
                <span class="ml-1 w-1.5 h-1.5 bg-rose-500 rounded-full"></span>
              <% end %>
            <% end %>
          <% end %>
        </div>

        <!-- 탭 콘텐츠 -->
        <div class="p-6">
          <% case @tab %>
          <% when "dashboard" %>
            <% if @challenge.chat_link.present? %>
              <div class="mb-6 p-6 bg-gradient-to-br from-indigo-600 to-purple-600 rounded-3xl shadow-xl relative overflow-hidden group">
                <div class="absolute -right-8 -top-8 w-32 h-32 bg-white/10 rounded-full blur-2xl"></div>
                <div class="absolute -left-4 -bottom-4 w-24 h-24 bg-white/5 rounded-full blur-xl"></div>
                
                <div class="relative z-10 flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4">
                  <div class="flex items-start gap-4">
                    <div class="w-12 h-12 bg-white/20 backdrop-blur-md rounded-2xl flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
                      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
                    </div>
                    <div class="text-white">
                      <h3 class="text-lg font-black mb-1 flex items-center gap-2">
                        커뮤니티 채팅방
                        <span class="px-2 py-0.5 bg-white/20 backdrop-blur-md rounded-full text-[9px] font-black uppercase tracking-wider">Live</span>
                      </h3>
                      <p class="text-sm text-white/80 font-medium">참여자들과 실시간으로 소통하고 응원하세요!</p>
                    </div>
                  </div>
                  
                  <%= link_to @challenge.chat_link, target: "_blank", rel: "noopener noreferrer", class: "px-6 py-3 bg-white text-indigo-600 rounded-2xl font-black text-sm hover:bg-indigo-50 transition-all shadow-lg hover:shadow-xl hover:-translate-y-0.5 flex items-center gap-2 group/btn" do %>
                    <span>채팅방 입장</span>
                    <svg class="w-4 h-4 group-hover/btn:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M13 7l5 5m0 0l-5 5m5-5H6"/></svg>
                  <% end %>
                </div>
              </div>
            <% end %>

            <div class="mb-8 p-6 bg-slate-50 rounded-2xl border border-slate-100 flex items-center justify-between">
              <div>
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">참여자 현황</p>
                <p class="text-sm font-bold text-slate-900">오늘 벌써 <span class="text-indigo-600"><%= @today_verified_count.to_i %>명</span>이 미션을 완료했어요! 🚀</p>
              </div>
              <div class="flex -space-x-2">
                <% @participants_with_status.select{|p| p[:verified_today]}.first(5).each do |p| %>
                  <img src="<%= p[:profile_image] %>" class="w-8 h-8 rounded-full border-2 border-white object-cover">
                <% end %>
                 <% if @today_verified_count.to_i > 5 %>
                  <div class="w-8 h-8 bg-slate-200 rounded-full border-2 border-white flex items-center justify-center text-[10px] font-bold text-slate-500">+<%= @today_verified_count.to_i - 5 %></div>
                <% end %>
              </div>
            </div>
            <%= render "challenges/tabs/verifications", challenge: @challenge, verification_logs: @challenge.verification_logs.includes(participant: :user).recent, participant: @participant, today_verified: @today_verified, is_host: @is_host, pending_verifications: @pending_verifications, hide_form: true %>

          <% when "records" %>
            <div class="space-y-8">
              <!-- 루틴 잔디 위젯 (캘린더 스타일) -->
              <div class="p-5 bg-white rounded-2xl border border-slate-100">
                <div class="flex items-center justify-between mb-6">
                  <h3 class="text-sm font-black text-slate-900 flex items-center gap-2">
                    <span>🗺️</span> 나의 성취 지도
                  </h3>
                  <div class="flex items-center gap-3">
                    <div class="flex items-center gap-1.5">
                      <div class="w-2.5 h-2.5 bg-indigo-600 rounded-sm"></div>
                      <span class="text-[10px] font-bold text-slate-500">성공</span>
                    </div>
                    <div class="flex items-center gap-1.5">
                      <div class="w-2.5 h-2.5 bg-slate-100 rounded-sm"></div>
                      <span class="text-[10px] font-bold text-slate-400">빈칸</span>
                    </div>
                  </div>
                </div>

                <% 
                   start_date = @challenge.start_date
                   end_date = @challenge.end_date
                   calendar_start = start_date.beginning_of_week
                   calendar_end = end_date.end_of_week
                   all_weeks = (calendar_start..calendar_end).to_a.in_groups_of(7)
                %>

                <div class="w-full max-w-[320px] mx-auto">
                  <!-- 요일 헤더 -->
                  <div class="grid grid-cols-7 mb-2">
                    <% %w[월 화 수 목 금 토 일].each do |day| %>
                       <div class="text-center text-[9px] font-black text-slate-300"><%= day %></div>
                    <% end %>
                  </div>
                  
                  <!-- 날짜 그리드 -->
                  <div class="flex flex-col gap-1">
                    <% all_weeks.each do |week| %>
                      <div class="grid grid-cols-7 gap-1">
                        <% week.each do |date| %>
                          <% 
                             if date < start_date || date > end_date
                               bg_class = "bg-transparent" # 챌린지 기간 외
                               text_class = "text-slate-200 opacity-0"
                             else
                               is_success = @daily_status_map[date]
                               is_future = date > Date.current
                               
                               if is_success
                                 bg_class = "bg-indigo-600 shadow-sm"
                                 text_class = "text-white"
                               elsif is_future
                                 bg_class = "bg-slate-50 border border-slate-100"
                                 text_class = "text-slate-300"
                               else
                                 bg_class = "bg-slate-100"
                                 text_class = "text-slate-400"
                               end
                             end
                          %>
                          <div class="aspect-square rounded-md flex items-center justify-center relative group <%= bg_class %>">
                            <span class="text-[9px] font-bold <%= text_class %>"><%= date.day %></span>
                            <% if date >= start_date && date <= end_date %>
                               <div class="absolute bottom-full mb-2 left-1/2 -translate-x-1/2 px-2 py-1 bg-slate-900 text-white text-[9px] rounded pointer-events-none opacity-0 group-hover:opacity-100 transition-opacity whitespace-nowrap z-10 shadow-lg">
                                 <%= date.strftime('%m/%d') %>: <%= is_success ? '달성 성공! 🎉' : (is_future ? '예정' : '달성 실패 😢') %>
                               </div>
                            <% end %>
                          </div>
                        <% end %>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>

              <!-- 통계 분석 섹션 -->
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <!-- 요일별 분석 -->
                <div class="p-5 bg-white rounded-2xl border border-slate-100">
                   <h4 class="text-xs font-black text-slate-900 mb-4 flex items-center gap-1">
                     <span class="text-amber-500">📊</span> 요일별 달성률
                   </h4>
                   <div class="flex items-end justify-between h-24 gap-1">
                     <% 
                        day_stats = Hash.new { |h, k| h[k] = { total: 0, success: 0 } }
                        (@challenge.start_date..[Date.current, @challenge.end_date].min).each do |date|
                          wday = date.wday
                          wday = 7 if wday == 0 # 일요일을 마지막으로
                          day_stats[wday][:total] += 1
                          day_stats[wday][:success] += 1 if @daily_status_map[date]
                        end
                     %>
                     <% (1..7).each do |wday| %>
                       <% 
                          stat = day_stats[wday]
                          rate = stat[:total] > 0 ? (stat[:success].to_f / stat[:total] * 100).to_i : 0
                          height_class = rate == 0 ? "h-1 bg-slate-100" : "bg-indigo-500"
                          opacity = rate > 0 ? (rate / 100.0).round(1) : 1
                          bar_style = rate > 0 ? "height: #{rate}%; opacity: #{[opacity + 0.3, 1].min}" : ""
                       %>
                       <div class="flex-1 flex flex-col items-center gap-1 group relative">
                         <div class="w-full rounded-t-sm <%= height_class %> transition-all duration-500 relative" style="<%= bar_style %>">
                            <div class="absolute bottom-full mb-1 left-1/2 -translate-x-1/2 text-[9px] font-bold text-indigo-600 opacity-0 group-hover:opacity-100 transition-opacity"><%= rate %>%</div>
                         </div>
