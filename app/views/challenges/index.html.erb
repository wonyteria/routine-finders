<div class="space-y-12 pb-32">
  <div class="flex flex-col md:flex-row md:items-end justify-between gap-6">
    <div class="space-y-2">
      <h1 class="text-5xl font-black text-slate-900"><%= @title %></h1>
      <p class="text-xl text-slate-500 font-bold"><%= @description %></p>
    </div>
    <%= link_to new_challenge_path, class: "px-8 py-5 bg-indigo-600 text-white rounded-[32px] font-black shadow-2xl shadow-indigo-600/30 hover:bg-indigo-700 transition-all active:scale-95 flex items-center justify-center gap-2" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 4v16m8-8H4"/></svg>
      챌린지 개최하기
    <% end %>
  </div>

  <!-- Search & Filters -->
  <div class="bg-white p-6 rounded-[32px] border border-slate-200 shadow-sm">
    <%= form_with url: challenges_path, method: :get, local: true, class: "space-y-4" do |f| %>
      <div class="flex flex-col md:flex-row gap-2">
        <div class="relative flex-1">
          <svg class="absolute left-6 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
          <%= f.text_field :keyword, value: params[:keyword], placeholder: "어떤 습관을 만들고 싶으신가요?", class: "w-full pl-14 pr-6 py-4 bg-slate-50 border-none rounded-2xl font-bold text-slate-900 placeholder:text-slate-400 focus:ring-4 focus:ring-indigo-500/10 focus:bg-white transition-all outline-none" %>
        </div>
        <%= f.submit "검색", class: "px-8 py-4 bg-slate-900 text-white rounded-2xl font-black shrink-0 hover:bg-slate-800 transition-colors shadow-lg shadow-slate-900/10 cursor-pointer" %>
      </div>
      
      <div class="flex flex-wrap items-center gap-2">
        <!-- Status Filters -->
        <% 
           current_status = params[:status].to_s 
           status_options = [['전체', ''], ['모집중', 'recruiting'], ['진행중', 'active'], ['종료됨', 'ended']]
        %>
        <% status_options.each do |label, value| %>
          <%= link_to label, challenges_path(status: value, keyword: params[:keyword], category: params[:category]), class: "px-4 py-2 rounded-xl text-xs font-black transition-all border #{current_status == value ? 'bg-slate-900 text-white border-slate-900 shadow-md' : 'bg-white text-slate-500 border-slate-200 hover:border-slate-300 hover:bg-slate-50'}" %>
        <% end %>

        <div class="w-px h-4 bg-slate-200 mx-2"></div>

        <!-- Category Filters -->
        <% current_category = params[:category] %>
        <% %w[건강·운동 학습·자기계발 SNS·브랜딩 재테크·부업 취미·라이프 멘탈·성찰].each do |cat| %>
          <%= link_to cat, challenges_path(category: cat, status: params[:status], keyword: params[:keyword]), class: "px-4 py-2 rounded-xl text-xs font-black transition-all border #{current_category == cat ? 'bg-indigo-600 text-white border-indigo-600 shadow-md shadow-indigo-600/20' : 'bg-white text-slate-500 border-slate-200 hover:border-indigo-200 hover:text-indigo-600'}" %>
        <% end %>
        
        <% if params[:category].present? || params[:status].present? || params[:keyword].present? %>
           <%= link_to challenges_path, class: "group px-4 py-2 rounded-xl text-xs font-black text-rose-500 hover:bg-rose-50 transition-all ml-auto flex items-center gap-1" do %>
             <svg class="w-3 h-3 group-hover:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
             초기화
           <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
    <% @challenges.each do |challenge| %>
      <%= link_to challenge_path(challenge), class: "bg-white rounded-[48px] overflow-hidden border border-slate-200 shadow-sm hover:shadow-2xl transition-all cursor-pointer group" do %>
        <div class="relative aspect-[4/3] overflow-hidden">
          <img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="">
          <div class="absolute top-5 left-5 flex gap-2">
            <span class="bg-white/90 backdrop-blur-md px-4 py-1.5 rounded-full text-[9px] font-black uppercase text-slate-900"><%= challenge.category %></span>
            <% if challenge.is_official %>
              <span class="bg-indigo-600 px-4 py-1.5 rounded-full text-[9px] font-black uppercase text-white">Official</span>
            <% end %>
          </div>
          <% if challenge.offline? %>
            <div class="absolute bottom-5 left-5">
              <span class="bg-orange-600 px-4 py-1.5 rounded-full text-[9px] font-black uppercase text-white">OFFLINE</span>
            </div>
          <% end %>
        </div>
        <div class="p-8 space-y-4">
          <h4 class="font-black text-slate-900 text-xl group-hover:text-indigo-600 transition-colors line-clamp-1"><%= challenge.title %></h4>
          <p class="text-sm text-slate-500 line-clamp-2"><%= challenge.summary %></p>
          <div class="flex items-center justify-between text-xs font-bold text-slate-400 border-t border-slate-50 pt-4">
            <span class="flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
              <%= challenge.current_participants %>명 참여
            </span>
            <span class="<%= challenge.offline? ? 'text-orange-600' : 'text-indigo-600' %>">
              <%= number_with_delimiter(challenge.amount) %>원
            </span>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
