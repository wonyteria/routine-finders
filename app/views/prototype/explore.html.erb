<div class="space-y-12 pt-6 pb-20">
  <!-- 1. Atmospheric Header -->
  <div class="px-2 flex justify-between items-start relative">
    <div class="relative z-10">
      <div class="flex items-center gap-2 mb-2">
        <span class="w-1.5 h-1.5 rounded-full bg-indigo-500 shadow-[0_0_10px_rgba(124,77,255,0.8)]"></span>
        <p class="text-[11px] font-black text-white/40 uppercase tracking-[0.3em] leading-none">Discovery Center</p>
      </div>
      <h2 class="text-3xl font-black text-white leading-[1.1] tracking-tight">당신의 성장을 위한<br/><span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-400 via-purple-400 to-indigo-400 bg-[length:200%_auto] animate-shimmer">새로운 문</span>이 열립니다</h2>
    </div>
    <div class="w-12 h-12 rounded-2xl bg-[#1B1A24] flex items-center justify-center border border-white/5 shadow-inner">
      <span class="text-2xl animate-pulse">🔭</span>
    </div>
    <!-- Subtle Background Glow -->
    <div class="absolute -top-20 -left-10 w-40 h-40 bg-indigo-600/10 blur-[80px] rounded-full pointer-events-none"></div>
  </div>

  <!-- 2. Featured: 루파클럽 Generation (Premium Hero) -->
  <% if @featured_club %>
    <section class="px-2">
      <%= link_to prototype_club_join_path, 
                  data: { action: "click->proto-ui#checkLogin" },
                  class: "block group relative h-64 rounded-[42px] overflow-hidden shadow-[0_30px_60px_rgba(0,0,0,0.5)] active:scale-[0.98] transition-all border border-white/10" do %>
        <!-- Background Layer -->
        <div class="absolute inset-0 bg-[#0C0B12] z-0"></div>
        <img src="https://images.unsplash.com/photo-1499750310107-5fef28a66643?q=80&w=870&auto=format&fit=crop" class="absolute inset-0 w-full h-full object-cover opacity-60 grayscale-[0.3] transition-transform duration-1000 group-hover:scale-110">
        
        <!-- Premium Overlays -->
        <div class="absolute inset-0 bg-gradient-to-t from-[#0C0B12] via-[#0C0B12]/40 to-transparent z-10"></div>
        <div class="aura-glow-discovery z-10"></div>
        
        <!-- Content Layer -->
        <div class="absolute inset-0 z-20 p-10 flex flex-col justify-end">
          <div class="flex items-center gap-2 mb-4">
            <span class="px-3 py-1 bg-indigo-500/20 border border-indigo-500/30 rounded-lg text-[9px] font-black text-indigo-400 uppercase tracking-widest backdrop-blur-md">추천 프로그램</span>
            <div class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></div>
          </div>
          <h3 class="text-3xl font-black text-white leading-tight mb-2">루파클럽 <%= @featured_club.generation_number %>기<br/><span class="glow-text-primary text-indigo-400">성장 메이트 모집 중</span></h3>
          <p class="text-xs font-bold text-white/50 mb-6 flex items-center gap-3">
            <span>#미라클모닝</span>
            <span class="w-1 h-1 rounded-full bg-white/20"></span>
            <span>#하이퍼성장</span>
          </p>
          <div class="flex items-center gap-2">
            <span class="text-[10px] font-black text-white uppercase tracking-widest border-b border-indigo-500 pb-0.5">자세히 보기 →</span>
          </div>
        </div>
      <% end %>
    </section>
  <% end %>

  <!-- 3. Category Chips (Premium Glass) -->
  <section class="flex gap-3 overflow-x-auto hide-scrollbar -mx-4 px-6 pb-2">
    <% [
      { label: '전체', type: 'all', icon: '✨' },
      { label: '챌린지', type: 'challenge', icon: '🚩' },
      { label: '모임', type: 'gathering', icon: '💬' }
    ].each do |item| %>
      <%= link_to prototype_explore_path(type: item[:type], sort: @sort_type), 
          class: "shrink-0 px-6 py-4 rounded-[22px] font-black text-[13px] flex items-center gap-2.5 transition-all active:scale-95 #{ @tab_type == item[:type] ? 'bg-white text-black shadow-[0_10px_25px_rgba(255,255,255,0.2)]' : 'app-glass-card-premium text-white/40 border-white/5 hover:bg-white/5' }" do %>
        <span class="text-base"><%= item[:icon] %></span>
        <%= item[:label] %>
      <% end %>
    <% end %>
  </section>

  <!-- 4. Feature #1: Closing Soon (Urgent Aura) -->
  <% if @tab_type == 'all' && @closing_soon.any? %>
  <section class="space-y-6">
    <div class="px-2 flex items-center justify-between">
      <div class="flex items-center gap-2">
        <span class="w-1.5 h-1.5 rounded-full bg-rose-500 animate-pulse shadow-[0_0_8px_rgba(244,63,94,0.8)]"></span>
        <h3 class="text-[11px] font-black text-white/40 uppercase tracking-[0.2em] leading-none">신규 마감 임박</h3>
      </div>
      <p class="text-[10px] font-bold text-rose-400">참여 서두르세요</p>
    </div>
    
    <div class="flex gap-5 overflow-x-auto hide-scrollbar -mx-4 px-6 pb-4">
      <% @closing_soon.each do |c| %>
        <%= link_to challenge_path(c, source: 'prototype'), class: "shrink-0 w-72 p-7 rounded-[38px] app-glass-card-premium border-rose-500/20 bg-rose-500/5 active:scale-[0.97] transition-all block relative overflow-hidden shimmer-active" do %>
          <div class="absolute -right-8 -top-8 w-24 h-24 bg-rose-500/10 blur-3xl pointer-events-none"></div>
          <div class="flex justify-between items-start mb-6 relative z-10">
            <div class="flex flex-col gap-1">
              <span class="text-[10px] font-black text-rose-500 uppercase tracking-widest leading-none mb-1">마감까지</span>
              <span class="text-2xl font-black text-white leading-none">D-<%= (c.recruitment_end_date - Date.current).to_i %></span>
            </div>
            <div class="flex -space-x-2">
               <% [1,2,3].each do |i| %>
                 <div class="w-7 h-7 rounded-full border-2 border-[#16151D] bg-slate-800 overflow-hidden shadow-lg">
                   <img src="https://i.pravatar.cc/100?u=<%= c.id + i %>" class="w-full h-full object-cover">
                 </div>
               <% end %>
               <div class="w-7 h-7 rounded-full border-2 border-[#16151D] bg-rose-500 flex items-center justify-center text-[9px] font-black text-white shadow-lg">
                 +
               </div>
            </div>
          </div>
          <div class="space-y-3 relative z-10">
            <h4 class="text-base font-black text-white line-clamp-1"><%= c.title %></h4>
            <div class="flex items-center gap-2">
              <div class="h-1 flex-1 bg-white/5 rounded-full overflow-hidden">
                <% progress = (c.current_participants.to_f / c.max_participants * 100).to_i %>
                <div class="h-full bg-rose-500" style="width: <%= progress %>%"></div>
              </div>
              <span class="text-[9px] font-black text-rose-400 whitespace-nowrap uppercase tracking-tighter">잔여 <%= c.max_participants - c.current_participants %>석</span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
  <% end %>

  <!-- 5. Challenges Section (Premium Masonry-lite Grid) -->
  <% if @tab_type == 'all' || @tab_type == 'challenge' %>
  <section class="space-y-6">
    <div class="flex justify-between items-end px-2">
      <div class="space-y-2">
        <h3 class="text-[11px] font-black text-white/40 uppercase tracking-[0.2em] leading-none">성장 고정 챌린지</h3>
        <h4 class="text-2xl font-black text-white leading-none tracking-tight">성장을 돕는 도구들</h4>
      </div>
      <% if @tab_type == 'challenge' %>
        <div class="flex gap-1.5 p-1 bg-white/5 rounded-2xl border border-white/5">
          <% [['최신순', 'recent'], ['인기순', 'popular']].each do |label, key| %>
            <%= link_to label, prototype_explore_path(type: 'challenge', sort: key), 
                class: "px-3 py-2 rounded-xl text-[10px] font-black transition-all #{ @sort_type == key ? 'bg-indigo-500 text-white shadow-lg shadow-indigo-500/20' : 'text-slate-500 hover:text-white' }" %>
          <% end %>
        </div>
      <% end %>
    </div>
    
    <div class="grid grid-cols-2 gap-4 px-1">
      <% @active_challenges.each_with_index do |challenge, idx| %>
        <%= link_to challenge_path(challenge, source: 'prototype'), class: "group relative app-glass-card-premium border-white/5 overflow-hidden active:scale-[0.98] transition-all block #{ idx.odd? ? 'mt-4' : '' }" do %>
          <div class="aspect-[4/5] relative overflow-hidden">
            <img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110">
            <div class="absolute inset-0 bg-gradient-to-t from-[#0C0B12] via-[#0C0B12]/20 to-transparent"></div>
            
            <!-- Badges -->
            <div class="absolute top-3 left-3 flex flex-col gap-1.5 items-start">
              <span class="px-2.5 py-1 bg-indigo-500/80 backdrop-blur-md rounded-lg text-[8px] font-black text-white uppercase tracking-widest leading-none transform -rotate-1 shadow-lg shadow-indigo-500/20"><%= challenge.mode == 'online' ? '온라인' : '오프라인' %></span>
              <% if challenge.priority_access_for_members? %>
                <span class="px-2.5 py-1 bg-amber-500/90 backdrop-blur-md rounded-lg text-[8px] font-black text-white uppercase tracking-widest leading-none transform rotate-1 shadow-lg shadow-amber-500/20">멤버우선</span>
              <% end %>
            </div>
            
            <div class="absolute bottom-3 left-4 right-4 flex justify-between items-center z-10">
               <div class="flex items-center gap-2">
                 <div class="w-1.5 h-1.5 rounded-full bg-emerald-500 shadow-[0_0_8px_rgba(16,185,129,0.8)]"></div>
                 <span class="text-[10px] font-black text-white/90 tracking-tighter"><%= challenge.current_participants %>명</span>
               </div>
               <span class="text-[11px] font-black text-indigo-400"><%= number_with_delimiter(challenge.amount) %>원</span>
            </div>
          </div>
          <div class="p-5 pb-6">
            <h4 class="text-[15px] font-black text-white line-clamp-2 group-hover:text-indigo-400 transition-colors leading-snug mb-2"><%= challenge.title %></h4>
            <p class="text-[11px] font-bold text-white/30 line-clamp-1"><%= challenge.summary %></p>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
  <% end %>

  <!-- 6. Gatherings Section (Premium Discoverability) -->
  <% if @tab_type == 'all' || @tab_type == 'gathering' %>
  <section class="space-y-6 pb-20">
    <div class="flex justify-between items-end px-2">
      <div class="space-y-2">
        <h3 class="text-[11px] font-black text-white/40 uppercase tracking-[0.2em] leading-none">실시간 커뮤니티</h3>
        <h4 class="text-2xl font-black text-white leading-none tracking-tight">함께 나누는 시너지</h4>
      </div>
      <% if @tab_type == 'gathering' %>
        <div class="flex gap-1.5 p-1 bg-white/5 rounded-2xl border border-white/5">
          <% [['최신순', 'recent'], ['인기순', 'popular']].each do |label, key| %>
            <%= link_to label, prototype_explore_path(type: 'gathering', sort: key), 
                class: "px-3 py-2 rounded-xl text-[10px] font-black transition-all #{ @sort_type == key ? 'bg-amber-500 text-white shadow-lg shadow-amber-500/20' : 'text-slate-500 hover:text-white' }" %>
          <% end %>
        </div>
      <% end %>
    </div>

    <div class="grid grid-cols-2 gap-4 px-1">
      <% @gatherings.each_with_index do |gathering, idx| %>
        <%= link_to challenge_path(gathering, source: 'prototype'), class: "group relative app-glass-card-premium border-white/5 overflow-hidden active:scale-[0.98] transition-all block #{ idx.even? ? 'mt-4' : '' }" do %>
          <!-- Thumbnail Area -->
          <div class="aspect-[4/5] relative overflow-hidden">
            <% if gathering.thumbnail.present? %>
              <img src="<%= gathering.thumbnail %>" class="w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110">
            <% else %>
              <div class="w-full h-full bg-gradient-to-br from-slate-800 to-slate-900 flex items-center justify-center text-4xl text-white/20">
                <%= gathering.mode_offline? ? '📍' : '🎬' %>
              </div>
            <% end %>
            <div class="absolute inset-0 bg-gradient-to-t from-[#0C0B12] via-[#0C0B12]/20 to-transparent"></div>
            
            <div class="absolute top-3 left-3">
              <span class="px-2.5 py-1 <%= gathering.mode_offline? ? 'bg-emerald-500/80 shadow-emerald-500/20' : 'bg-indigo-500/80 shadow-indigo-500/20' %> backdrop-blur-md rounded-lg text-[8px] font-black text-white uppercase tracking-widest leading-none shadow-lg">
                <%= gathering.mode_offline? ? '오프라인' : '온라인 라이브' %>
              </span>
            </div>

            <!-- Date Label -->
            <div class="absolute bottom-3 left-4 right-4 flex justify-between items-center z-10">
               <div class="flex items-center gap-1.5">
                 <span class="text-[10px] font-black text-white/90"><%= gathering.start_date.strftime("%m.%d") %> 시작</span>
                 <span class="w-1 h-1 rounded-full bg-white/20"></span>
                 <span class="text-[9px] font-bold text-white/40 uppercase">모집중</span>
               </div>
            </div>
          </div>

          <!-- Content Area -->
          <div class="p-5 pb-6">
            <h4 class="text-[15px] font-black text-white line-clamp-2 group-hover:text-amber-400 transition-colors leading-snug mb-3"><%= gathering.title %></h4>
            <div class="space-y-3">
              <p class="text-[11px] font-bold text-white/30 line-clamp-1 flex items-center gap-1.5">
                <span class="text-white/20 tracking-tighter"><%= gathering.mode_offline? ? '📍' : '🎬' %></span> 
                <%= gathering.meeting_info&.place_name || gathering.online_meeting_link || "온라인 미팅" %>
              </p>
              <div class="flex items-center justify-between pt-3 border-t border-white/5">
                <span class="text-[11px] font-black text-amber-500"><%= gathering.amount > 0 ? "#{number_with_delimiter(gathering.amount)}원" : "무료 참여" %></span>
                <span class="px-2 py-0.5 bg-white/5 rounded text-[8px] font-black text-slate-500 uppercase tracking-tighter">진행중</span>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>
  <% end %>
</div>
