<div class="space-y-8 pt-8">
  
  <!-- 1. Header (Aligned with Prototype Home) -->
  <header class="flex items-center justify-between">
    <div class="flex items-center gap-4">
      <button onclick="history.back()" class="w-11 h-11 app-glass-card flex items-center justify-center text-slate-400 app-tap-active">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M15 19l-7-7 7-7"/></svg>
      </button>
      <div>
        <div class="flex items-center gap-2 mb-0.5">
          <span class="w-1.5 h-1.5 rounded-full bg-indigo-500 animate-pulse"></span>
          <p class="text-[10px] font-black text-indigo-400 uppercase tracking-widest leading-none italic">Operator Console</p>
        </div>
        <h1 class="text-2xl font-black text-white italic tracking-tighter">운영 센터</h1>
      </div>
    </div>
    
    <button type="button" onclick="document.getElementById('creation-selection-sheet').classList.remove('hidden')" class="w-12 h-12 app-glass-card flex items-center justify-center text-white app-tap-active group">
      <span class="text-xl group-hover:rotate-90 transition-transform font-black">+</span>
    </button>
  </header>

  <!-- 2. Challenge List -->
  <section class="space-y-4">
    <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em] leading-none px-2 italic">Managed Pulsations</h3>
    
    <div class="space-y-3">
      <% if @hosted_challenges.any? %>
        <% @hosted_challenges.each do |challenge| %>
          <%= link_to hosted_challenge_path(challenge, source: 'prototype'), class: "app-glass-card block overflow-hidden group app-tap-active transition-all" do %>
            <div class="flex items-center p-4 gap-4">
              <div class="w-20 h-20 rounded-2xl overflow-hidden flex-shrink-0 relative border border-white/5">
                <img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover">
                <div class="absolute inset-0 bg-gradient-to-t from-black/40 to-transparent"></div>
              </div>
              
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-2 mb-1">
                  <span class="px-1.5 py-0.5 rounded-lg text-[7px] font-black uppercase tracking-wider <%= challenge.offline? ? 'bg-amber-500/20 text-amber-500 border border-amber-500/30' : 'bg-indigo-500/20 text-indigo-400 border border-indigo-500/30' %>">
                    <%= challenge.offline? ? 'Gathering' : 'Challenge' %>
                  </span>
                </div>
                <h3 class="text-base font-black text-white group-hover:text-indigo-400 transition-colors truncate mb-1 italic leading-none"><%= challenge.title %></h3>
                
                <div class="flex items-center gap-3">
                  <div class="flex items-center gap-1.5">
                    <div class="w-1.5 h-1.5 rounded-full bg-emerald-500"></div>
                    <span class="text-[10px] font-bold text-slate-500"><%= challenge.current_participants %>명 활동</span>
                  </div>
                  <% pending = @pending_counts[challenge.id] || 0 %>
                  <% if pending > 0 %>
                    <div class="flex items-center gap-1.5">
                      <div class="w-1.5 h-1.5 rounded-full bg-amber-500 animate-pulse"></div>
                      <span class="text-[10px] font-black text-amber-500">인증 <%= pending %>건</span>
                    </div>
                  <% end %>
                </div>
                <p class="text-[10px] font-bold text-slate-600 mt-2"><%= challenge.start_date.strftime('%m.%d') %> — <%= challenge.end_date.strftime('%m.%d') %></p>
              </div>
              
              <div class="text-slate-700">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="app-glass-card py-16 text-center border-dashed border-white/10">
          <p class="text-sm font-bold text-slate-500">운영 중인 챌린지가 없습니다.</p>
        </div>
      <% end %>
    </div>
  </section>

  <!-- 3. Creation Selection Bottom Sheet (Prototype Only) -->
  <div id="creation-selection-sheet" class="hidden fixed inset-0 z-[20000]">
    <div onclick="document.getElementById('creation-selection-sheet').classList.add('hidden')" class="absolute inset-0 bg-black/80 backdrop-blur-md cursor-pointer transition-opacity"></div>
    <div class="absolute bottom-32 left-4 right-4 max-w-md mx-auto bg-[#1B1A24] rounded-[40px] p-8 pb-10 animate-slide-up border border-white/10 shadow-[0_20px_60px_rgba(0,0,0,0.5)]">
      <div class="w-12 h-1.5 bg-white/10 rounded-full mx-auto mb-8"></div>
      <h3 class="text-xl font-black text-white mb-2 text-center">새로운 시점 만들기</h3>
      <p class="text-xs font-bold text-indigo-400 mb-8 text-center uppercase tracking-widest leading-none">New Creation</p>
      
      <div class="space-y-4">
        <!-- 1. Create Challenge -->
        <%= link_to prototype_challenge_builder_path, class: "block w-full p-5 rounded-3xl bg-white/5 border border-white/5 hover:bg-white/10 text-left group active:scale-[0.98] transition-all" do %>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-2xl bg-[#0C0B12] flex items-center justify-center border border-white/10">
              <span class="text-2xl">🚩</span>
            </div>
            <div class="flex-1">
              <p class="text-white font-bold text-base">챌린지 개설하기</p>
              <p class="text-slate-500 text-xs font-bold mt-0.5">함께 성장하는 온라인 목표 달성</p>
            </div>
          </div>
        <% end %>

        <!-- 2. Create Gathering -->
        <%= link_to prototype_gathering_builder_path, class: "block w-full p-5 rounded-3xl bg-white/5 border border-white/5 hover:bg-white/10 text-left group active:scale-[0.98] transition-all" do %>
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-2xl bg-[#0C0B12] flex items-center justify-center border border-white/10">
              <span class="text-2xl">💬</span>
            </div>
            <div class="flex-1">
              <p class="text-white font-bold text-base">모임 개설하기</p>
              <p class="text-slate-500 text-xs font-bold mt-0.5">오프라인에서 취향과 경험 공유</p>
            </div>
          </div>
        <% end %>
      </div>

      <div class="mt-8 text-center">
          <button type="button" onclick="document.getElementById('creation-selection-sheet').classList.add('hidden')" class="px-8 py-3 rounded-full bg-white/5 text-slate-500 font-bold text-sm hover:bg-white/10 transition-colors">닫기</button>
      </div>
    </div>
  </div>
</div>
