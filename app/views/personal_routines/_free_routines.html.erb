<script>
  function filterRoutines(day) {
    document.querySelectorAll('.routine-card').forEach(card => {
      if (day === 'all' || (card.dataset.days && card.dataset.days.split(',').includes(day))) {
        card.style.display = 'flex';
      } else {
        card.style.display = 'none';
      }
    });

    document.querySelectorAll('.routine-filter-btn').forEach(btn => {
      btn.classList.remove('bg-white', 'text-indigo-600', 'shadow-sm', 'ring-1', 'ring-slate-100');
      btn.classList.add('text-slate-400');
    });
    const activeBtn = document.getElementById('btn-' + day);
    if (activeBtn) {
      activeBtn.classList.remove('text-slate-400');
      activeBtn.classList.add('bg-white', 'text-indigo-600', 'shadow-sm', 'ring-1', 'ring-slate-100');
    }
  }
  
  function toggleDropdown(id) {
    // Close all other dropdowns
    document.querySelectorAll('[id^="dropdown-"]').forEach(dropdown => {
      if (dropdown.id !== `dropdown-${id}`) {
        dropdown.classList.add('hidden');
      }
    });
    
    // Toggle the clicked dropdown
    const dropdown = document.getElementById(`dropdown-${id}`);
    dropdown.classList.toggle('hidden');
  }
  
  // Close dropdowns when clicking outside
  document.addEventListener('click', (e) => {
    if (!e.target.closest('[onclick^="toggleDropdown"]') && !e.target.closest('[id^="dropdown-"]')) {
      document.querySelectorAll('[id^="dropdown-"]').forEach(dropdown => {
        dropdown.classList.add('hidden');
      });
    }
  });
  
  document.addEventListener('DOMContentLoaded', () => {
    filterRoutines('<%= Date.current.wday %>');
  });
</script>

