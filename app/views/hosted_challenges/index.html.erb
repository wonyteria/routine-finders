                    <% end %>
                  </div>
                  <h3 class="text-xl font-black text-white group-hover:text-indigo-400 transition-colors line-clamp-1"><%= challenge.title %></h3>
                  <p class="text-[10px] font-bold text-slate-500 uppercase mt-1 tracking-wider">
                    <%= challenge.start_date.strftime('%b %d') %> - <%= challenge.end_date.strftime('%b %d') %>
                  </p>
                </div>

                <div class="flex items-center justify-between mt-6 pt-4 border-t border-white/5">
                  <div class="flex items-center gap-6">
                    <div>
                      <p class="text-[8px] font-black text-slate-500 uppercase tracking-widest mb-1">Members</p>
                      <p class="text-sm font-black text-white"><%= challenge.current_participants %></p>
                    </div>
                    <% pending_count = @pending_counts[challenge.id] || 0 %>
