<% content_for :page_title, (@banner.new_record? ? "새 배너 추가" : "배너 수정") %>

<div class="max-w-2xl mx-auto">
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-8">
    <%= form_with model: [:admin, @banner], local: true, class: "space-y-6" do |f| %>
      <% if @banner.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 text-sm font-medium">
          <ul>
            <% @banner.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="space-y-2">
        <%= f.label :banner_type, "배너 타입", class: "block text-sm font-black text-slate-700 uppercase tracking-widest" %>
        <%= f.select :banner_type, Banner.banner_types.keys.map { |k| [k.upcase, k] }, {}, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-indigo-500 focus:border-indigo-500" %>
      </div>

      <div class="space-y-2">
        <%= f.label :title, "제목", class: "block text-sm font-black text-slate-700 uppercase tracking-widest" %>
        <%= f.text_field :title, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-indigo-500 focus:border-indigo-500", placeholder: "배너 주요 문구" %>
      </div>

      <div class="space-y-2">
        <%= f.label :subtitle, "부제목", class: "block text-sm font-black text-slate-700 uppercase tracking-widest" %>
        <%= f.text_field :subtitle, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-indigo-500 focus:border-indigo-500", placeholder: "설명 문구" %>
      </div>

      <div class="space-y-2">
        <%= f.label :badge_text, "배지 텍스트", class: "block text-sm font-black text-slate-700 uppercase tracking-widest" %>
        <%= f.text_field :badge_text, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-indigo-500 focus:border-indigo-500", placeholder: "예: START YOUR GROWTH" %>
      </div>

      <div class="space-y-2">
        <%= f.label :link_url, "이동 URL", class: "block text-sm font-black text-slate-700 uppercase tracking-widest" %>
        <%= f.text_field :link_url, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-indigo-500 focus:border-indigo-500", placeholder: "클릭 시 이동할 경로" %>
      </div>

      <div class="grid grid-cols-2 gap-6">
        <div class="space-y-2">
          <%= f.label :priority, "우선순위", class: "block text-sm font-black text-slate-700 uppercase tracking-widest" %>
          <%= f.number_field :priority, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-indigo-500 focus:border-indigo-500" %>
          <p class="text-[10px] text-slate-400 font-medium">값이 클수록 먼저 표시됩니다.</p>
        </div>
        <div class="flex items-center gap-3 pt-8">
          <%= f.check_box :active, class: "w-5 h-5 rounded-lg border-slate-300 text-indigo-600 focus:ring-indigo-500" %>
          <%= f.label :active, "활성화", class: "text-sm font-black text-slate-700 uppercase tracking-widest" %>
        </div>
      </div>

      <div class="space-y-4">
        <%= f.label :image, "배너 이미지", class: "block text-sm font-black text-slate-700 uppercase tracking-widest" %>
        <div class="relative group">
          <% if @banner.image.attached? %>
            <div class="w-full h-48 rounded-2xl overflow-hidden border-2 border-slate-100 mb-4">
              <%= image_tag @banner.image, class: "w-full h-full object-cover" %>
            </div>
          <% end %>
          <div class="flex items-center justify-center w-full">
            <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-slate-200 border-dashed rounded-2xl cursor-pointer bg-slate-50 hover:bg-slate-100 transition-all">
              <div class="flex flex-col items-center justify-center pt-5 pb-6">
                <svg class="w-8 h-8 mb-4 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/></svg>
                <p class="text-sm text-slate-500 font-bold">이미지 업로드</p>
              </div>
              <%= f.file_field :image, class: "hidden" %>
            </label>
          </div>
        </div>
      </div>

      <div class="pt-6 flex items-center justify-end gap-3 border-t border-slate-100">
        <%= link_to "취소", admin_banners_path, class: "px-6 py-3 bg-slate-100 text-slate-600 rounded-xl font-bold text-sm hover:bg-slate-200 transition-all" %>
        <%= f.submit (@banner.new_record? ? "배너 생성" : "배너 수정"), class: "px-8 py-3 bg-indigo-600 text-white rounded-xl font-bold text-sm hover:bg-indigo-700 shadow-lg shadow-indigo-100 transition-all" %>
      </div>
    <% end %>
  </div>
</div>
