<% if params[:source] == 'prototype' %>
  <style>
    .host-prototype-env { background: #0C0B12; color: #f8fafc; min-height: 100vh; position: relative; z-index: 10; }
    /* Body background override for prototype */
    body:has(.host-prototype-env) { background: #0C0B12 !important; }
    .host-prototype-wrapper { background: #0C0B12; padding: env(safe-area-inset-top, 2rem) 1.25rem 8rem 1.25rem; }
    @media (min-width: 640px) { .host-prototype-wrapper { padding: 3rem 1.5rem 8rem 1.5rem; } }
    @media (min-width: 1024px) { .host-prototype-wrapper { padding: 4rem 2rem 8rem 2rem; } }
    .host-prototype-env .app-glass-card { background: rgba(255, 255, 255, 0.03); border: 1px solid rgba(255, 255, 255, 0.08); backdrop-filter: blur(20px); border-radius: 2.5rem; }
    .host-prototype-env .glass-btn { background: rgba(255, 255, 255, 0.05); border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 1.25rem; transition: all 0.3s; }
  </style>

  <div class="host-prototype-env host-prototype-wrapper">
    <div class="space-y-10 pb-32">
      <header class="flex items-end justify-between">
        <div>
          <h1 class="text-4xl font-black text-white italic">호스트 센터</h1>
          <p class="text-slate-500 font-black text-[10px] uppercase tracking-[0.2em] mt-2">총 <%= @hosted_challenges.count %>개의 챌린지를 운영 중입니다</p>
        </div>
        <div class="flex gap-3">
          <%= link_to new_challenge_path(source: 'prototype'), class: "glass-btn px-6 py-3 text-white font-black text-[11px] uppercase tracking-widest hover:bg-white/10" do %>
            새 챌린지 개설
          <% end %>
        </div>
      </header>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @hosted_challenges.each do |challenge| %>
          <%= link_to hosted_challenge_path(challenge, source: 'prototype'), class: "app-glass-card overflow-hidden group hover:bg-white/[0.05] transition-all" do %>
            <div class="flex">
              <div class="w-32 h-32 flex-shrink-0">
                <img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover grayscale group-hover:grayscale-0 transition-all duration-700">
              </div>
              <div class="flex-1 p-6 flex flex-col justify-between">
                <div>
                  <h3 class="text-base font-black text-white line-clamp-1 group-hover:text-indigo-400 transition-colors uppercase italic"><%= challenge.title %></h3>
                  <p class="text-[9px] font-black text-slate-500 mt-1 uppercase tracking-widest"><%= challenge.start_date.strftime('%m/%d') %> — <%= challenge.end_date.strftime('%m/%d') %></p>
                </div>
                <div class="flex items-center gap-4">
                  <span class="text-[10px] font-black text-indigo-400">참가자 <%= challenge.current_participants %>명</span>
                  <% if (c = @pending_counts[challenge.id] || 0) > 0 %><span class="text-[10px] font-black text-amber-500">인증 <%= c %>건</span><% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

<% else %>
  <!-- ORIGINAL WEB UI: Safe & Untouched -->
  <div class="space-y-10 pb-32">
    <div class="flex items-end justify-between">
      <div>
        <h1 class="text-4xl font-black text-slate-900">내가 개최한 챌린지</h1>
        <p class="text-slate-500 font-medium mt-2">총 <%= @hosted_challenges.count %>개의 챌린지를 운영 중입니다</p>
      </div>
      <div class="flex gap-3">
        <%= link_to new_challenge_path, class: "px-6 py-3 bg-indigo-600 text-white rounded-2xl font-bold text-sm flex items-center gap-2 shadow-lg hover:bg-indigo-700 transition-all" do %>
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
          새 챌린지
        <% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      <% @hosted_challenges.each do |challenge| %>
        <%= link_to hosted_challenge_path(challenge), class: "bg-white rounded-[32px] border border-slate-200 shadow-sm hover:shadow-xl transition-all overflow-hidden group" do %>
          <div class="flex">
            <div class="w-40 h-40 flex-shrink-0"><img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover" alt=""></div>
            <div class="flex-1 p-6 flex flex-col justify-between">
              <div>
                <h3 class="text-lg font-black text-slate-900 group-hover:text-indigo-600 transition-colors"><%= challenge.title %></h3>
                <p class="text-sm text-slate-500 mt-1"><%= challenge.start_date.strftime('%m/%d') %> ~ <%= challenge.end_date.strftime('%m/%d') %></p>
              </div>
              <div class="flex items-center justify-between pt-4 border-t border-slate-100">
                <span class="font-bold text-slate-600"><%= challenge.current_participants %>명 참여 중</span>
                <svg class="w-5 h-5 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
<% end %>
