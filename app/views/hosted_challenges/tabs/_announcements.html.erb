<% if params[:source] == 'prototype' %>
  <div class="space-y-10">
    <div class="app-glass-card p-10">
      <div class="flex items-center justify-between mb-10">
        <div>
          <h2 class="text-2xl font-black text-white italic whitespace-nowrap">공지사항 발송</h2>
          <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mt-1 whitespace-nowrap">참가자들에게 새로운 소식을 전합니다</p>
        </div>
        <%= link_to new_challenge_announcement_path(challenge, source: "prototype"), 
                    data: { turbo_frame: "_top" },
                    class: "glass-btn px-6 py-3 text-[11px] font-black text-indigo-400 hover:text-white hover:bg-white/10 uppercase tracking-widest flex items-center gap-2 whitespace-nowrap" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/></svg>
          신규 공지 작성
        <% end %>
      </div>
      
      <% if announcements.any? %>
        <div class="space-y-6">
          <% announcements.each do |announcement| %>
            <div class="p-8 rounded-[32px] bg-white/[0.02] border border-white/5 hover:bg-white/[0.04] transition-all group">
              <div class="flex items-start justify-between gap-6">
                <div class="flex-1">
                  <div class="flex items-center gap-3 mb-2">
                    <span class="w-2 h-2 rounded-full bg-indigo-500 shadow-[0_0_8px_rgba(99,102,241,0.8)]"></span>
                    <h3 class="font-black text-white text-xl italic"><%= announcement.title %></h3>
                  </div>
                  <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest ml-5"><%= announcement.created_at.in_time_zone('Asia/Seoul').strftime('%Y.%m.%d %H:%M') %></p>
                  <% if announcement.content.present? %>
                    <div class="mt-6 ml-5 p-6 bg-black/20 rounded-[24px] border border-white/5">
                      <p class="text-sm font-medium text-slate-300 leading-relaxed whitespace-pre-wrap"><%= announcement.content %></p>
                    </div>
                  <% end %>
                </div>
                <div class="flex items-center gap-2 opacity-30 group-hover:opacity-100 transition-opacity">
                  <%= link_to edit_challenge_announcement_path(challenge, announcement, source: "prototype"), 
                              data: { turbo_frame: "_top" },
                              class: "glass-btn p-3 text-slate-400 hover:text-white border-none" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-32 bg-white/[0.01] rounded-[40px] border border-dashed border-white/5">
          <p class="text-[11px] font-black text-slate-700 uppercase tracking-[0.3em]">아직 방송된 공지가 없습니다</p>
        </div>
      <% end %>
    </div>
  </div>

<% else %>
  <!-- ORIGINAL WEB UI -->
  <div class="bg-white rounded-[32px] border border-slate-200 shadow-sm p-8">
    <div class="flex items-center justify-between mb-8">
      <h2 class="text-xl font-black text-slate-900">공지사항 목록</h2>
      <%= link_to new_challenge_announcement_path(challenge), class: "px-5 py-2.5 bg-indigo-600 text-white rounded-xl font-bold text-sm hover:bg-indigo-700 transition-all inline-flex items-center gap-2 shadow-lg shadow-indigo-600/20" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/></svg>
        공지 작성
      <% end %>
    </div>
    
    <% if announcements.any? %>
      <div class="space-y-4">
        <% announcements.each do |announcement| %>
          <div class="p-6 rounded-2xl border border-slate-100 hover:border-slate-200 transition-colors">
            <h3 class="font-black text-slate-900 text-lg"><%= announcement.title %></h3>
            <p class="text-xs text-slate-400 mt-1"><%= announcement.created_at.in_time_zone('Asia/Seoul').strftime('%Y.%m.%d %H:%M') %></p>
            <% if announcement.content.present? %>
              <p class="text-slate-600 mt-3 whitespace-pre-wrap text-sm"><%= announcement.content %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-center py-16 text-slate-400">아직 공지사항이 없습니다</p>
    <% end %>
  </div>
<% end %>
