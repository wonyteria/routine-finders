#!/usr/bin/env bash

# Kamal Secrets Configuration Example
# Copy this file to .kamal/secrets and fill in your actual values
# NEVER commit .kamal/secrets to Git!

# GitHub Container Registry Password (Personal Access Token)
# Create at: https://github.com/settings/tokens
# Required scopes: write:packages, read:packages, delete:packages
export KAMAL_REGISTRY_PASSWORD="your_github_personal_access_token"

# Rails Master Key (from config/master.key)
export RAILS_MASTER_KEY="your_rails_master_key"

# Kakao OAuth Secret
# Get from: https://developers.kakao.com → Your App → App Keys
export KAKAO_CLIENT_SECRET="your_kakao_client_secret"

# Threads/Meta OAuth Secret  
# Get from: https://developers.facebook.com → Your App → Settings → Basic
export THREADS_CLIENT_SECRET="your_threads_client_secret"
