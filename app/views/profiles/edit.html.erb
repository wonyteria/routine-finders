<div class="max-w-3xl mx-auto space-y-8 pb-32">
  <!-- Header -->
  <div class="flex items-center gap-4">
    <%= link_to profile_path, class: "w-12 h-12 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-500 hover:bg-slate-200 transition-all" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-black text-slate-900">프로필 편집</h1>
      <p class="text-sm text-slate-400 mt-1">Edit Your Profile</p>
    </div>
  </div>

  <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-8" do |f| %>
    <% if @user.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-[24px] p-6">
        <div class="flex items-start gap-4">
          <div class="w-10 h-10 rounded-xl bg-red-100 flex items-center justify-center text-red-500 shrink-0">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
          </div>
          <div>
            <h3 class="font-bold text-red-800">오류가 발생했습니다</h3>
            <ul class="mt-2 text-sm text-red-600 space-y-1">
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    <% end %>

    <!-- 기본 정보 섹션 -->
    <section class="bg-white rounded-[40px] border border-slate-200 shadow-sm overflow-hidden">
      <div class="p-8 border-b border-slate-100">
        <h2 class="text-lg font-black text-slate-900">기본 정보</h2>
        <p class="text-xs text-slate-400 mt-1 uppercase tracking-widest">Base Information</p>
      </div>
      <div class="p-8 space-y-4">
        <div>
          <%= f.label :nickname, "닉네임", class: "block text-sm font-bold text-slate-700 mb-2" %>
          <%= f.text_field :nickname,
            placeholder: "변경할 닉네임을 입력하세요",
            required: true,
            class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" %>
        </div>
      </div>
    </section>

    <!-- 자기소개 섹션 -->
    <section class="bg-white rounded-[40px] border border-slate-200 shadow-sm overflow-hidden">
      <div class="p-8 border-b border-slate-100">
        <h2 class="text-lg font-black text-slate-900">자기소개</h2>
        <p class="text-xs text-slate-400 mt-1 uppercase tracking-widest">About Me</p>
      </div>
      <div class="p-8">
        <%= f.text_area :bio,
          rows: 4,
          placeholder: "자신을 소개해주세요. (최대 500자)",
          maxlength: 500,
          class: "w-full px-6 py-4 bg-slate-50 border border-slate-200 rounded-[20px] text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all resize-none" %>
        <p class="text-xs text-slate-400 mt-2 text-right"><span id="bio-count"><%= @user.bio&.length || 0 %></span>/500</p>
      </div>
    </section>

    <!-- SNS 링크 섹션 -->
    <section class="bg-white rounded-[40px] border border-slate-200 shadow-sm overflow-hidden">
      <div class="p-8 border-b border-slate-100">
        <h2 class="text-lg font-black text-slate-900">SNS 링크</h2>
        <p class="text-xs text-slate-400 mt-1 uppercase tracking-widest">Social Media Links</p>
      </div>
      <div class="p-8 space-y-4">
        <!-- Instagram -->
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-purple-500 via-pink-500 to-orange-400 flex items-center justify-center text-white shrink-0">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
          </div>
          <div class="flex-1">
            <%= text_field_tag "user[sns_links][instagram]", @user.instagram,
              placeholder: "Instagram 사용자명 (@ 제외)",
              class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-sm" %>
          </div>
        </div>

        <!-- Threads -->
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-2xl bg-slate-900 flex items-center justify-center text-white shrink-0">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.186 24h-.007c-3.581-.024-6.334-1.205-8.184-3.509C2.35 18.44 1.5 15.586 1.472 12.01v-.017c.03-3.579.879-6.43 2.525-8.482C5.845 1.205 8.6.024 12.18 0h.014c2.746.02 5.043.725 6.826 2.098 1.677 1.29 2.858 3.13 3.509 5.467l-2.04.569c-1.104-3.96-3.898-5.984-8.304-6.015-2.91.022-5.11.936-6.54 2.717C4.307 6.504 3.616 8.914 3.589 12c.027 3.086.718 5.496 2.057 7.164 1.43 1.783 3.631 2.698 6.54 2.717 2.623-.02 4.358-.631 5.8-2.045 1.647-1.613 1.618-3.593 1.09-4.798-.31-.71-.873-1.3-1.634-1.75-.192 1.352-.622 2.446-1.284 3.272-.886 1.102-2.14 1.704-3.73 1.79-1.202.065-2.361-.218-3.259-.801-1.063-.689-1.685-1.74-1.752-2.96-.065-1.17.408-2.253 1.332-3.05.857-.738 2.017-1.168 3.456-1.282.989-.078 1.998-.03 3.002.112v-.49c0-1.072-.249-1.896-.74-2.45-.51-.574-1.26-.867-2.232-.871h-.053c-.86.004-1.593.263-2.177.77a3.07 3.07 0 00-.942 1.323l-1.972-.532c.396-1.02 1.028-1.878 1.877-2.55 1.003-.793 2.227-1.196 3.64-1.196h.072c1.712.012 3.076.585 4.053 1.702.898 1.027 1.354 2.413 1.354 4.12v1.96c0 .104.002.21.005.318.012.432.025.876.025 1.322 0 .61-.027 1.178-.083 1.706a3.939 3.939 0 01-.234 1.004c.59.394 1.1.868 1.512 1.412.866 1.146 1.178 2.602.878 4.1-.401 2.004-1.61 3.666-3.404 4.678-1.446.816-3.21 1.229-5.25 1.229zm-.065-8.103c-.073 0-.145.002-.218.005-.94.05-1.666.326-2.158.82-.472.475-.69 1.073-.65 1.778.036.641.318 1.178.838 1.598.567.456 1.353.688 2.34.637 1.107-.06 1.965-.473 2.55-1.228.437-.564.728-1.305.866-2.205-.02-.01-.04-.018-.06-.027a7.966 7.966 0 00-3.508-.378z"/></svg>
          </div>
          <div class="flex-1">
            <%= text_field_tag "user[sns_links][threads]", @user.threads,
              placeholder: "Threads 사용자명 (@ 제외)",
              class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-sm" %>
          </div>
        </div>

        <!-- Blog -->
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-2xl bg-green-500 flex items-center justify-center text-white shrink-0">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z"/></svg>
          </div>
          <div class="flex-1">
            <%= text_field_tag "user[sns_links][blog]", @user.blog,
              placeholder: "블로그 URL (예: https://blog.example.com)",
              class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-sm" %>
          </div>
        </div>

        <!-- YouTube -->
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-2xl bg-red-500 flex items-center justify-center text-white shrink-0">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
          </div>
          <div class="flex-1">
            <%= text_field_tag "user[sns_links][youtube]", @user.youtube,
              placeholder: "YouTube 채널 URL",
              class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-sm" %>
          </div>
        </div>

        <!-- Twitter/X -->
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 rounded-2xl bg-slate-900 flex items-center justify-center text-white shrink-0">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </div>
          <div class="flex-1">
            <%= text_field_tag "user[sns_links][twitter]", @user.twitter,
              placeholder: "X(Twitter) 사용자명 (@ 제외)",
              class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all text-sm" %>
          </div>
        </div>
      </div>
    </section>

    <!-- 저장된 계좌 정보 섹션 -->
    <section class="bg-white rounded-[40px] border border-slate-200 shadow-sm overflow-hidden">
      <div class="p-8 border-b border-slate-100">
        <h2 class="text-lg font-black text-slate-900">저장된 계좌 정보</h2>
        <p class="text-xs text-slate-400 mt-1 uppercase tracking-widest">Saved Bank Account</p>
      </div>
      <div class="p-8 space-y-4">
        <p class="text-sm text-slate-500 mb-6">챌린지 신청 시 입금자명을 자동으로 채워줍니다.</p>

        <div>
          <%= f.label :saved_bank_name, "은행명", class: "block text-sm font-bold text-slate-700 mb-2" %>
          <%= f.text_field :saved_bank_name,
            placeholder: "예: 카카오뱅크, 신한은행",
            class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" %>
        </div>

        <div>
          <%= f.label :saved_account_number, "계좌번호", class: "block text-sm font-bold text-slate-700 mb-2" %>
          <%= f.text_field :saved_account_number,
            placeholder: "'-' 없이 입력",
            class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" %>
        </div>

        <div>
          <%= f.label :saved_account_holder, "예금주", class: "block text-sm font-bold text-slate-700 mb-2" %>
          <%= f.text_field :saved_account_holder,
            placeholder: "예금주명",
            class: "w-full px-5 py-3 bg-slate-50 border border-slate-200 rounded-xl text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all" %>
        </div>
      </div>
    </section>

    <!-- Submit -->
    <div class="flex gap-4">
      <%= link_to profile_path, class: "flex-1 py-4 bg-slate-100 text-slate-700 rounded-3xl font-black text-center hover:bg-slate-200 transition-all" do %>
        취소
      <% end %>
      <%= f.submit "저장하기", class: "flex-1 py-4 bg-indigo-600 text-white rounded-3xl font-black cursor-pointer hover:bg-indigo-700 transition-all" %>
    </div>
  <% end %>
</div>
