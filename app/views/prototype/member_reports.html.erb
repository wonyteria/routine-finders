<div class="space-y-8 py-10 pb-32">
  <!-- 1. Header -->
  <header class="px-6 flex items-center gap-4">
    <%= link_to prototype_admin_clubs_path, class: "w-10 h-10 -ml-2 rounded-full flex items-center justify-center text-slate-400 active:scale-95 transition-all hover:bg-white/5" do %>
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
    <% end %>
    <div>
      <h1 class="text-2xl font-black text-white italic tracking-tight"><%= @target_user.nickname %></h1>
      <p class="text-[11px] font-medium text-slate-500 tracking-wide mt-0.5">Growth History Vault</p>
    </div>
  </header>

  <!-- 2. User Info & Stats Summary (Minimal) -->
  <% 
    total_reports = @reports.count
    avg_rate = total_reports > 0 ? (@reports.map(&:achievement_rate).sum / total_reports.to_f).round(1) : 0
    best_report = @reports.max_by(&:achievement_rate)
  %>
  <section class="px-6 pb-6 border-b border-white/5">
    <div class="flex items-center gap-5">
      <!-- Avatar -->
      <div class="w-16 h-16 rounded-full bg-[#1A1A24] border border-white/10 flex items-center justify-center text-2xl shadow-lg shrink-0 overflow-hidden">
        <% if @target_user.avatar.attached? %>
          <%= image_tag @target_user.avatar, class: "w-full h-full object-cover" %>
        <% else %>
          <span class="font-black text-slate-300"><%= @target_user.nickname[0].upcase %></span>
        <% end %>
      </div>
      
      <!-- Summaries -->
      <div class="flex items-center justify-between flex-1 gap-4">
         <div>
            <span class="block text-[10px] text-slate-500 uppercase font-bold mb-1">Total Reports</span>
            <span class="text-xl font-black text-white"><%= total_reports %></span>
         </div>
         <div class="w-px h-8 bg-white/10"></div>
         <div>
            <span class="block text-[10px] text-slate-500 uppercase font-bold mb-1">Avg. Rate</span>
            <span class="text-xl font-black text-emerald-400"><%= avg_rate %><small class="text-xs font-bold text-emerald-500/50 ml-0.5">%</small></span>
         </div>
         <div class="w-px h-8 bg-white/10"></div>
         <div>
            <span class="block text-[10px] text-slate-500 uppercase font-bold mb-1">Best</span>
            <span class="text-xl font-black text-indigo-400"><%= best_report&.achievement_rate || 0 %><small class="text-xs font-bold text-indigo-500/50 ml-0.5">%</small></span>
         </div>
      </div>
    </div>
  </section>

  <!-- 3. Report List (Timeline Style) -->
  <section class="px-6">
    <div class="flex items-center justify-between mb-6">
      <h3 class="text-[11px] font-bold text-slate-400">Timeline</h3>
    </div>

    <div class="space-y-6 relative ml-2">
      <!-- Timeline Line -->
      <div class="absolute left-[19px] top-2 bottom-4 w-[2px] bg-white/5"></div>

      <% if @reports.any? %>
        <% @reports.each do |report| %>
          <%= link_to routine_club_report_path(report, source: 'admin'), class: "block group relative pl-12" do %>
            <!-- Timeline Dot -->
            <div class="absolute left-0 top-1.5 w-[10px] h-[10px] rounded-full border-2 border-[#0C0B12] z-10 <%= report.report_type_monthly? ? 'bg-purple-500 shadow-[0_0_10px_rgba(168,85,247,0.5)]' : 'bg-indigo-500' %> group-hover:scale-125 transition-transform"></div>
            
            <div class="flex items-start justify-between pb-6 border-b border-white/5 group-last:border-none">
              <div class="space-y-1">
                <div class="flex items-center gap-2">
                  <span class="text-xs font-black text-slate-500"><%= report.start_date.strftime('%Y.%m.%d') %></span>
                  <% if report.report_type_monthly? %>
                    <span class="px-1.5 py-0.5 rounded text-[9px] bg-purple-500/20 text-purple-400 font-bold border border-purple-500/20">Monthly</span>
                  <% end %>
                </div>
                <h4 class="text-base font-bold text-slate-200 group-hover:text-white transition-colors">
                  <%= report.identity_title %>
                </h4>
                <p class="text-[11px] text-slate-500 line-clamp-1">
                  <%= report.summary %>
                </p>
              </div>
              
              <div class="text-right pl-4">
                <div class="text-lg font-black italic <%= report.achievement_rate >= 80 ? 'text-emerald-400' : (report.achievement_rate >= 50 ? 'text-amber-400' : 'text-slate-400') %>">
                  <%= report.achievement_rate %>%
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      <% else %>
        <div class="text-center py-10 pl-8">
          <p class="text-sm font-bold text-slate-500">아직 리포트가 없습니다.</p>
        </div>
      <% end %>
    </div>
  </section>
</div>

