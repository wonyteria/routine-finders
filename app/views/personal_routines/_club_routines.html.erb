<div class="space-y-12">
  
  <% if !(current_user.is_rufa_club_member? || current_user.admin?) %>
    <!-- Premium Promotion View for Non-members -->
    <% 
      is_recruiting = @official_club&.recruitment_open?
      next_quarter_start = Date.current.beginning_of_quarter + 3.months
      recruitment_start = next_quarter_start - 14.days
    %>

    <% unless is_recruiting %>
      <!-- Recruitment Notice Banner -->
      <div class="mb-12 bg-white rounded-[40px] p-8 lg:p-12 border border-slate-200 shadow-xl shadow-slate-200/50 flex flex-col lg:flex-row items-center justify-between gap-6 relative overflow-hidden group">
        <div class="absolute right-0 top-0 w-64 h-64 bg-indigo-50 rounded-full -mr-32 -mt-32 blur-3xl group-hover:bg-indigo-100 transition-colors"></div>
        
        <div class="relative z-10 flex flex-col lg:flex-row items-center gap-8 text-center lg:text-left">
          <div class="w-20 h-20 bg-slate-900 rounded-[28px] flex items-center justify-center text-4xl shadow-2xl">📢</div>
          <div class="space-y-2">
            <div class="inline-flex items-center gap-2 px-3 py-1 bg-indigo-50 text-indigo-600 rounded-full text-[10px] font-black uppercase tracking-widest mb-2">Notice</div>
            <h3 class="text-2xl lg:text-3xl font-black text-slate-900 tracking-tight">지금은 정기 모집 기간이 아닙니다.</h3>
            <p class="text-xs lg:text-base text-slate-500 font-bold leading-relaxed break-keep">
              루파 클럽은 최상의 시너지를 위해 분기별 기수제로 운영됩니다.
              <span class="block lg:inline">다음 모집은 <span class="text-indigo-600 font-black"><%= recruitment_start.strftime("%m월 %d일") %></span>에 시작될 예정입니다.</span>
            </p>
          </div>
        </div>

        <% if @official_club %>
          <%= link_to routine_club_path(@official_club, anchor: "join-form"), class: "relative z-10 shrink-0 px-6 lg:px-8 py-3 lg:py-4 bg-gradient-to-r from-orange-500 to-pink-500 hover:from-orange-600 hover:to-pink-600 text-white rounded-2xl font-black text-sm lg:text-base transition-all shadow-xl hover:shadow-2xl active:scale-95 whitespace-nowrap flex items-center gap-2" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
            기존 멤버 참여
          <% end %>
        <% end %>

      </div>
    <% end %>

    <section class="relative overflow-hidden bg-slate-900 rounded-[48px] lg:rounded-[64px] px-6 py-16 lg:p-24 text-white shadow-2xl" style="background-color: #0f172a !important; color: white !important;">

      <!-- Decorative backgrounds commented out for safety -->
      <!-- <div class="absolute inset-0 bg-gradient-to-br from-indigo-600/30 via-slate-900 to-purple-900/30 z-0"></div> -->
      <!-- <div class="absolute -right-40 -top-40 w-[600px] h-[600px] bg-indigo-500/10 rounded-full blur-[120px]"></div> -->
      
      <div class="relative z-10 max-w-4xl mx-auto text-center space-y-12">
        <div class="inline-flex items-center gap-3 bg-white/5 backdrop-blur-xl px-6 py-3 rounded-full border border-white/10">
          <span class="w-2.5 h-2.5 bg-amber-400 rounded-full animate-pulse shadow-[0_0_15px_rgba(251,191,36,0.8)]"></span>
          <span class="text-xs font-black uppercase tracking-[0.3em] text-indigo-100 italic" style="color: #e0e7ff;">Routine Finders Premium</span>
        </div>

          <h2 class="text-[32px] lg:text-7xl font-black leading-[1.15] lg:leading-[1.1] tracking-tighter break-keep" style="color: white;">
            단순한 기록을 넘어,<br/>
            <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-yellow-400 to-orange-400" style="color: #fbbf24;">당신의 정체성을 설계하다</span>
          </h2>
          <p class="text-lg lg:text-2xl text-slate-400 font-medium max-w-2xl mx-auto leading-relaxed break-keep px-4 lg:px-0" style="color: #94a3b8;">
            루파 클럽은 성실함의 가치를 아는 상위 1%를 위한 프리미엄 루틴 성장 시스템입니다.
          </p>

        <!-- Benefits Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 lg:gap-6 text-center lg:text-left pt-8 lg:pt-12">
          <% [
            ["📊", "성장 리포트", "매월 객관적인 지표로 분석하는 루파 인텔리전스"],
            ["🤝", "오프라인 모임", "서울·경기 지역 정기 오프라인 성장 네트워킹"],
            ["🔱", "VIP 인증", "디지털 VIP 카드와 상위 0.1%를 위한 특별 혜택"],
            ["🔥", "시너지 피드", "검증된 멤버들과 나누는 압도적인 성취 에너지"]
          ].each do |icon, title, desc| %>
            <div class="bg-white/5 backdrop-blur-md p-8 rounded-[40px] border border-white/5 hover:border-white/20 transition-all group">
              <div class="text-4xl mb-6 group-hover:scale-125 transition-transform duration-500"><%= icon %></div>
              <h4 class="text-lg font-black text-white mb-2"><%= title %></h4>
              <p class="text-sm text-slate-500 font-medium leading-relaxed"><%= desc %></p>
            </div>
          <% end %>
        </div>

        <div class="pt-12 flex flex-col items-center gap-8">
          <% if @official_club&.persisted? %>
            <% if @official_club.recruitment_open? %>
              <%= link_to routine_club_path(@official_club), class: "group relative w-full sm:w-auto px-8 lg:px-16 py-6 lg:py-8 bg-white text-slate-900 rounded-[28px] lg:rounded-[32px] font-black text-lg lg:text-xl hover:bg-amber-400 transition-all shadow-xl overflow-hidden" do %>
                <span class="relative z-10">지금 루파 클럽 <%= @official_club.generation_number %>기 합류하기</span>
                <div class="absolute inset-0 bg-gradient-to-r from-amber-300 to-orange-400 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <% end %>
            <% else %>
              <%= form_with url: join_routine_club_path(@official_club), method: :post, class: "w-full sm:w-auto" do |f| %>
                <%= hidden_field_tag :depositor_name, "베타테스터" %>
                <%= hidden_field_tag :contact_info, "베타테스트" %>
                <%= hidden_field_tag :beta_test, true %>
                <button type="submit" class="group relative w-full sm:w-auto px-8 lg:px-16 py-6 lg:py-8 bg-gradient-to-r from-orange-500 to-pink-500 hover:from-orange-600 hover:to-pink-600 text-white rounded-[28px] lg:rounded-[32px] font-black text-lg lg:text-xl transition-all shadow-xl hover:shadow-2xl active:scale-95 overflow-hidden flex items-center justify-center gap-3">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  </svg>
                  <span class="relative z-10">기존 멤버 참여</span>
                  <div class="absolute inset-0 bg-gradient-to-r from-pink-600 to-orange-600 opacity-0 group-hover:opacity-100 transition-opacity"></div>
                </button>
              <% end %>
            <% end %>
          <% end %>
          <div class="flex flex-col sm:flex-row items-center gap-2 lg:gap-3 text-slate-500">
            <% if @official_club %>
              <% 
                fee = @official_club.calculate_quarterly_fee
              %>
              <span class="text-xs lg:text-sm font-bold">분기 정액 멤버십 <span class="text-amber-400"><%= number_to_currency(fee, unit: "₩", precision: 0) %></span> (하루 100원 수준)</span>
            <% else %>
              <span class="text-xs lg:text-sm font-bold">하루 100원 수준의 투자로 누리는 모든 권한</span>
            <% end %>
            <div class="hidden sm:block w-1 h-1 bg-slate-700 rounded-full"></div>
            <span class="text-xs lg:text-sm font-bold">기수 완주(출석 70%) 시 명예 배지 부여</span>
          </div>
        </div>
      </div>
    </section>
  <% elsif current_user.pending_rufa_membership %>
    <!-- Approved but waiting for quarter start -->
    <section class="relative overflow-hidden bg-slate-900 rounded-[48px] lg:rounded-[64px] px-6 py-20 lg:p-32 text-white shadow-2xl text-center">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_0%,rgba(99,102,241,0.15),transparent_50%)]"></div>
      
      <div class="relative z-10 max-w-2xl mx-auto space-y-10">
        <div class="inline-flex items-center gap-3 bg-indigo-500/20 backdrop-blur-xl px-6 py-3 rounded-full border border-indigo-500/30">
          <span class="w-2.5 h-2.5 bg-indigo-400 rounded-full animate-pulse"></span>
          <% d_day = (current_user.pending_rufa_membership.membership_start_date - Date.current).to_i %>
          <span class="text-sm font-black uppercase tracking-widest text-indigo-100 italic">D-<%= d_day %> Until Activation</span>
        </div>

        <h2 class="text-4xl lg:text-6xl font-black leading-tight break-keep">
          승인이 완료되었습니다!<br/>
          <span class="text-indigo-400">명예로운 <%= current_user.pending_rufa_membership.routine_club.generation_number(current_user.pending_rufa_membership.membership_start_date) %>기</span> 활동을 기다려주세요.
        </h2>
        
        <p class="text-lg lg:text-xl text-slate-400 font-medium leading-relaxed break-keep">
          루파 클럽의 모든 프리미엄 기능은 기수가 시작되는 <br class="hidden lg:block"/>
          <span class="text-white font-bold"><%= current_user.pending_rufa_membership.membership_start_date.strftime("%Y년 %m월 %d일") %></span>부터 자동으로 활성화됩니다.
        </p>

        <div class="bg-white/5 border border-white/10 rounded-3xl p-8 space-y-4">
          <p class="text-sm font-bold text-slate-500 uppercase tracking-widest">How to prepare</p>
          <ul class="text-left space-y-3 max-w-md mx-auto">
            <li class="flex items-center gap-3 text-slate-300 font-bold">
              <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
              <span>나만의 성취 루틴 미리 설계하기</span>
            </li>
            <li class="flex items-center gap-3 text-slate-300 font-bold">
              <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
              <span>루파 클럽 공지사항 및 가이드 숙지하기</span>
            </li>
          </ul>
        </div>
      </div>
    </section>

  <% elsif current_user.has_active_rufa_membership? || current_user.admin? %>
    <!-- START: Premium Member Dashboard Framework (opened at line 153) -->
    <div class="flex flex-col lg:flex-row gap-6 lg:gap-8 bg-slate-50/80 backdrop-blur-sm rounded-[42px] p-3 lg:p-6 border border-slate-200/60 min-h-[750px]" id="rufa-premium-board">
      <% if current_user.admin? && !current_user.is_rufa_club_member? %>
        <div class="fixed bottom-4 right-4 bg-red-600 text-white px-4 py-2 rounded-full z-50 text-xs font-bold shadow-lg">
          ADMIN MODE
        </div>
      <% end %>
      
      <!-- Sub-navigation Sidebar Card -->
      <aside class="w-full lg:w-72 shrink-0 bg-white rounded-[32px] p-6 lg:p-7 shadow-sm border border-slate-100 h-fit sticky top-24">
        <div class="flex flex-col gap-8">
          <!-- VIP & Identity Card (Desktop only - hidden on mobile) -->
          <div class="hidden lg:flex px-5 py-4 lg:px-6 lg:py-4 bg-slate-900 rounded-3xl lg:rounded-[32px] text-white shadow-xl items-center justify-between group cursor-pointer" onclick="toggleVipCard()">
             <div class="flex items-center gap-3 lg:gap-4 lg:min-w-0">
               <div class="w-10 h-10 bg-white/10 rounded-xl flex items-center justify-center text-xl shrink-0">🔱</div>
               <div class="min-w-0">
                 <p class="text-[8px] lg:text-[9px] font-black text-indigo-200 uppercase tracking-widest leading-none mb-1">Growth Identity</p>
                 <p class="text-[13px] lg:text-sm font-black truncate"><%= @my_official_membership&.identity_title || "루파 파인더" %></p>
               </div>
             </div>
             <svg class="w-4 h-4 text-indigo-300/50 shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
          </div>

          <!-- Tab Navigation -->
          <nav class="flex flex-nowrap overflow-x-auto lg:flex-col gap-2 p-1 lg:p-0 no-scrollbar pb-3 lg:pb-0 snap-x snap-mandatory" style="-ms-overflow-style: none; scrollbar-width: none;">
            <style>
              .no-scrollbar::-webkit-scrollbar {
                display: none;
              }
            </style>
            <% [
              ["club_dashboard", "🏠", "클럽", "클럽 대시보드"],
              ["dashboard", "⚡", "현황", "나의 루틴"],
              ["synergy", "✨", "시너지", "시너지 피드"],
              ["members", "👥", "멤버", "멤버 루틴"],
              ["ranking", "🏆", "랭킹", "멤버 랭킹"],
              ["architecture", "📐", "설계", "목표 설계"]
            ].each do |id, icon, short_label, full_label| %>
              <button type="button" onclick="switchRufaTab('<%= id %>')" id="nav-<%= id %>" 
                      class="rufa-nav-btn w-full flex items-center gap-3 px-5 py-3 rounded-xl font-bold text-[13px] transition-all group <%= id == 'club_dashboard' ? 'bg-indigo-600 text-white shadow-lg' : 'bg-slate-50 text-slate-500 border border-transparent hover:bg-slate-100' %>">
                <span class="text-base"><%= icon %></span>
                <span>
                  <span class="lg:hidden"><%= short_label %></span>
                  <span class="hidden lg:inline"><%= full_label %></span>
                </span>
              </button>
            <% end %>

            <% if @is_official_host %>
               <%= link_to manage_routine_club_path(@official_club), class: "flex-shrink-0 flex flex-row items-center justify-center lg:justify-start gap-2 lg:gap-4 px-5 lg:px-8 py-2.5 lg:py-5 rounded-full lg:rounded-[28px] font-black transition-all border border-indigo-100 bg-indigo-50 text-indigo-600 hover:bg-indigo-600 hover:text-white group snap-start" do %>
                 <span class="text-base lg:text-xl">⚙️</span>
                 <span class="text-xs lg:text-sm whitespace-nowrap">클럽 관리</span>
               <% end %>
            <% end %>
          </nav>

          <!-- Quick Links (Desktop only - hidden on mobile) -->
          <div class="hidden lg:grid grid-cols-2 lg:grid-cols-1 gap-2 pt-2 lg:pt-4 border-t border-slate-100/50">
            <%= link_to routine_club_reports_path, class: "flex items-center justify-between p-3 lg:p-4 bg-indigo-50 text-indigo-600 rounded-2xl hover:bg-indigo-600 hover:text-white transition-all group shadow-sm" do %>
                <span class="text-[10px] lg:text-xs font-black">성실함 리포트</span>
                <svg class="w-3 h-3 lg:w-4 lg:h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M14 5l7 7-7 7"/></svg>
            <% end %>

            <%= link_to "https://open.kakao.com/o/gt1WHswh", target: "_blank", class: "flex items-center justify-between p-3 lg:p-4 bg-slate-900 text-white rounded-2xl hover:bg-indigo-600 transition-all group shadow-md" do %>
                <div class="flex items-center gap-2">
                  <div class="w-8 h-8 bg-amber-400 rounded-lg flex items-center justify-center shadow-lg shadow-amber-400/20">
                    <svg class="w-4 h-4 text-slate-900" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.477 2 2 5.582 2 10c0 2.802 1.77 5.275 4.417 6.81l-.817 3.01c-.046.168.146.302.285.21l3.525-2.285c.82.16 1.68.255 2.59.255 5.523 0 10-3.582 10-8s-4.477-8-10-8z"/></svg>
                  </div>
                  <span class="text-[10px] lg:text-xs font-black">클럽 단톡방 합류</span>
                </div>
                <svg class="w-3 h-3 lg:w-4 lg:h-4 opacity-30 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
                <svg class="w-3 h-3 opacity-30 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
            <% end %>
          </div>
        </div>
      </aside>

      <!-- START: Sub-tab Content Area (main tag opened at line 229) -->
      <main class="flex-1 min-w-0 lg:pl-4">
        
        <!-- 0. Club Dashboard Tab (NEW) -->
        <div id="tab-club_dashboard" class="rufa-content-tab space-y-3 lg:space-y-4">
           <%= render 'routine_clubs/dashboard' %>
        </div>

        <!-- 1. Dashboard Tab (나의 루틴) -->
        <div id="tab-dashboard" class="rufa-content-tab hidden">
          <div class="flex flex-col lg:flex-row gap-4 lg:gap-6 items-start">
            <!-- Left: Today's Check-in (Main Column) -->
            <div class="flex-1 w-full space-y-4">
              <!-- Integrated Stats Grid Moved from Sidebar -->
              <div class="grid grid-cols-3 gap-2 md:gap-4">
                 <!-- Achievement Rate -->
                 <div class="bg-slate-900 rounded-[20px] md:rounded-3xl p-3 md:p-6 text-white shadow-lg relative overflow-hidden group">
                   <div class="absolute -right-4 -top-4 w-12 h-12 bg-indigo-600/20 rounded-full blur-xl group-hover:scale-150 transition-transform duration-700"></div>
                   <p class="text-[8px] md:text-sm font-black text-indigo-300 uppercase tracking-[0.15em] mb-1 md:mb-4">달성률</p>
                   <div class="flex items-baseline gap-1">
                     <p class="text-xl md:text-5xl font-black tracking-tighter tabular-nums"><%= @current_achievement_rate.to_i %></p>
                     <p class="text-[10px] md:text-base font-bold text-indigo-400 font-mono">%</p>
                   </div>
                   <div class="mt-2 md:mt-5 h-1 md:h-1.5 w-full bg-white/10 rounded-full overflow-hidden">
                      <div class="h-full bg-indigo-400 transition-all duration-1000" style="width: <%= @current_achievement_rate.to_i %>%"></div>
                   </div>
                 </div>
    
                 <!-- Reward Points -->
                 <div class="bg-white rounded-[20px] md:rounded-3xl p-3 md:p-6 border border-slate-100 shadow-sm group hover:border-amber-200 transition-colors">
                   <p class="text-[8px] md:text-sm font-black text-amber-500 uppercase tracking-[0.15em] mb-1 md:mb-4 truncate">에너지</p>
                   <div class="flex items-baseline gap-1">
                     <p class="text-xl md:text-4xl font-black text-slate-900 tracking-tighter tabular-nums"><%= @my_official_membership&.growth_points || 0 %></p>
                     <p class="text-[10px] md:text-sm font-bold text-slate-300 font-mono">P</p>
                   </div>
                 </div>
    
                 <!-- Member Days -->
                 <div class="bg-white rounded-[20px] md:rounded-3xl p-3 md:p-6 border border-slate-100 shadow-sm group hover:border-purple-200 transition-colors">
                   <p class="text-[8px] md:text-sm font-black text-purple-400 uppercase tracking-[0.15em] mb-1 md:mb-4 truncate">활동일</p>
                   <div class="flex items-baseline gap-1">
                     <p class="text-xl md:text-4xl font-black text-slate-900 tracking-tighter tabular-nums"><%= @member_days %></p>
                     <p class="text-[10px] md:text-sm font-bold text-slate-300 font-mono">D</p>
                   </div>
                 </div>
              </div>

              <div class="bg-white rounded-[24px] md:rounded-[32px] p-4 md:p-8 border border-slate-100 shadow-sm space-y-4 md:space-y-6">
                 <div class="flex items-center justify-between">
                   <div class="space-y-0.5 md:space-y-1">
                     <h3 class="text-[9px] md:text-xs font-black text-slate-400 uppercase tracking-[0.2em] leading-none">오늘의 체크인</h3>
                     <p class="text-lg md:text-xl font-black text-slate-900 tracking-tight">Today's Check-in</p>
                   </div>
                   <div class="flex flex-col items-end">
                     <span class="px-2 md:px-3 py-1 md:py-1.5 bg-indigo-50 text-indigo-600 rounded-lg md:rounded-xl text-[10px] md:text-[11px] font-black tabular-nums shadow-sm border border-indigo-100/50"><%= Date.current.strftime("%m.%d") %> <span class="uppercase italic ml-1"><%= Date.current.strftime("%a") %></span></span>
                   </div>
                 </div>
                 
                 <div class="space-y-2 md:space-y-2.5">
                   <% todays_routines = @personal_routines.select { |r| (r.days || []).include?(Date.current.wday.to_s) } %>
                   <% if todays_routines.any? %>
                     <% todays_routines.each do |routine| %>
                       <div id="routine_<%= routine.id %>_club">
                         <%= button_to toggle_personal_routine_path(routine), 
                                       method: :post, 
                                       class: "flex items-center justify-between p-3 md:p-4 rounded-xl md:rounded-2xl border border-slate-100 transition-all w-full #{routine.completed_today? ? 'bg-indigo-50 border-indigo-100' : 'bg-white hover:border-indigo-100 group'}",
