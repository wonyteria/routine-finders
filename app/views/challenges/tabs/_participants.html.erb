<div class="space-y-6">
  <div class="flex items-center justify-between">
    <h3 class="text-xl font-black text-slate-900">참가자 관리</h3>
    <span class="text-sm text-slate-500"><%= participants.count %>명 참여 중</span>
  </div>

  <% if participants.any? %>
    <div class="bg-white rounded-2xl border border-slate-200 overflow-hidden">
      <table class="min-w-full divide-y divide-slate-200">
        <thead class="bg-slate-50">
          <tr>
            <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">참가자</th>
            <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">달성률</th>
            <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">연속 성공</th>
            <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">실패 횟수</th>
            <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">상태</th>
            <th class="px-6 py-4 text-left text-xs font-bold text-slate-500 uppercase tracking-wider">관리</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-slate-100">
          <% participants.each do |participant| %>
            <tr class="hover:bg-slate-50 transition-colors">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-3">
                  <img src="<%= participant.user.profile_image %>" alt="" class="w-10 h-10 rounded-full object-cover">
                  <div>
                    <p class="font-bold text-slate-900"><%= participant.user.nickname %></p>
                    <p class="text-xs text-slate-400"><%= participant.joined_at.in_time_zone('Asia/Seoul').strftime('%Y-%m-%d') %> 참여</p>
                  </div>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="flex items-center gap-2">
                  <div class="w-20 h-2 bg-slate-200 rounded-full overflow-hidden">
                    <div class="h-full bg-indigo-600 rounded-full" style="width: <%= participant.completion_rate %>%"></div>
                  </div>
                  <span class="text-sm font-bold text-slate-600"><%= participant.completion_rate.to_i %>%</span>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="text-sm font-bold text-orange-600"><%= participant.current_streak %>일</span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="text-sm font-bold <%= participant.total_failures > 0 ? 'text-red-600' : 'text-slate-400' %>"><%= participant.total_failures %>회</span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% status_colors = { achieving: 'bg-green-100 text-green-700', lagging: 'bg-amber-100 text-amber-700', inactive: 'bg-slate-100 text-slate-600', failed: 'bg-red-100 text-red-700' } %>
                <% status_labels = { achieving: '달성중', lagging: '부진', inactive: '비활성', failed: '실패' } %>
                <span class="px-3 py-1 rounded-full text-xs font-bold <%= status_colors[participant.status.to_sym] || 'bg-slate-100 text-slate-600' %>">
                  <%= status_labels[participant.status.to_sym] || participant.status %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <%= button_to challenge_participant_path(challenge, participant), method: :delete, class: "px-3 py-1.5 bg-red-50 text-red-600 rounded-lg text-xs font-bold hover:bg-red-100 transition-all", data: { turbo_confirm: "#{participant.user.nickname}님을 강제 퇴장시키겠습니까?" } do %>
                  강제퇴장
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="text-center py-12 text-slate-400 bg-slate-50 rounded-2xl">
      <svg class="w-16 h-16 mx-auto mb-4 text-slate-200" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
      <p class="font-bold">아직 참가자가 없습니다</p>
    </div>
  <% end %>
</div>
