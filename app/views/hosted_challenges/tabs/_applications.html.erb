<% if params[:source] == "prototype" %>
  <!-- PROTOTYPE UI: Premium Dark Mode -->
  <div class="space-y-12">
    <!-- Pending Applications -->
    <% if pending_applications.any? %>
      <div class="app-glass-card p-10 border-amber-500/10 bg-amber-500/[0.02]">
        <div class="flex items-center justify-between mb-10">
          <div>
            <h2 class="text-2xl font-black text-white italic">WAITING LIST</h2>
            <p class="text-slate-500 text-[10px] font-black uppercase tracking-widest mt-1"><%= pending_applications.count %> new loop entry requests</p>
          </div>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <% pending_applications.each do |application| %>
            <div class="bg-white/[0.03] rounded-[32px] p-8 border border-white/10 group/card hover:bg-white/[0.05] transition-all">
              <div class="flex items-start justify-between gap-6 mb-8">
                <div class="flex items-center gap-5">
                  <img src="<%= application.user.profile_image %>" class="w-16 h-16 rounded-[24px] object-cover shadow-2xl grayscale group-hover/card:grayscale-0 transition-all duration-700">
                  <div>
                    <h3 class="text-xl font-black text-white italic"><%= application.user.nickname %></h3>
                    <p class="text-[10px] font-black text-slate-500 uppercase tracking-tighter mt-1"><%= time_ago_in_words(application.applied_at) %> ago</p>
                  </div>
                </div>
              </div>
              
              <% if application.message.present? %>
                <div class="p-6 bg-black/20 rounded-[28px] border border-white/5 mb-8">
                  <p class="text-sm font-medium text-slate-300 leading-relaxed italic">"<%= application.message %>"</p>
                </div>
              <% end %>

              <div class="grid grid-cols-2 gap-3">
                <button type="button" 
                        onclick="document.getElementById('action-form-<%= application.id %>').classList.remove('hidden'); this.parentElement.classList.add('hidden'); document.getElementById('action-type-<%= application.id %>').value = 'approve'; document.getElementById('form-submit-<%= application.id %>').innerText = 'CONFIRM APPROVAL'; document.getElementById('form-submit-<%= application.id %>').className = 'w-full py-4 bg-indigo-600 text-white rounded-2xl font-black text-xs hover:bg-indigo-50';"
                        class="px-6 py-4 bg-indigo-600 hover:bg-indigo-500 text-white rounded-2xl font-black text-[11px] uppercase tracking-widest transition-all shadow-xl shadow-indigo-600/20">
                  Approve
                </button>
                <button type="button" 
                        onclick="document.getElementById('action-form-<%= application.id %>').classList.remove('hidden'); this.parentElement.classList.add('hidden'); document.getElementById('action-type-<%= application.id %>').value = 'reject'; document.getElementById('form-submit-<%= application.id %>').innerText = 'CONFIRM REJECTION'; document.getElementById('form-submit-<%= application.id %>').className = 'w-full py-4 bg-rose-600 text-white rounded-2xl font-black text-xs hover:bg-rose-700';"
                        class="px-6 py-4 bg-white/5 hover:bg-white/10 text-slate-400 rounded-2xl font-black text-[11px] uppercase tracking-widest transition-all">
                  Reject
                </button>
              </div>

              <!-- Personal Message Form -->
              <div id="action-form-<%= application.id %>" class="hidden mt-4 animate-slide-up">
                <%= form_with url: "#", method: :post, local: true, id: "form-#{application.id}" do |f| %>
                  <%= hidden_field_tag :source, "prototype" %>
                  <input type="hidden" name="_method" id="action-type-<%= application.id %>" value="post">
                  <div class="space-y-4">
                    <%= text_area_tag :message, nil, placeholder: "참가자에게 보낼 개인 메시지 (선택 사항)", class: "w-full p-5 bg-black/40 border border-white/10 rounded-[24px] text-sm text-white placeholder:text-slate-600 focus:border-indigo-500 outline-none transition-all min-h-[100px]" %>
                    <div class="flex gap-2">
                      <button type="submit" id="form-submit-<%= application.id %>" 
                              onclick="this.form.action = (document.getElementById('action-type-<%= application.id %>').value === 'approve') ? '<%= approve_challenge_application_path(challenge, application) %>' : '<%= reject_challenge_application_path(challenge, application) %>';"
                              class="flex-1 py-4 bg-indigo-600 text-white rounded-2xl font-black text-xs hover:bg-indigo-500 transition-all shadow-xl shadow-indigo-600/20">
                        CONFIRM
                      </button>
                      <button type="button" onclick="this.closest('.animate-slide-up').classList.add('hidden'); this.closest('.group\\/card').querySelector('.grid').classList.remove('hidden');" 
                              class="px-6 py-4 bg-white/5 text-slate-500 rounded-2xl font-black text-xs hover:bg-white/10">
                        CANCEL
                      </button>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Processed Applications -->
    <div class="app-glass-card p-10">
      <h2 class="text-xl font-black text-white mb-8">ENTRY HISTORY</h2>
      <% if processed_applications.any? %>
        <div class="space-y-4">
          <% processed_applications.each do |application| %>
            <div class="flex items-center justify-between p-6 rounded-[28px] bg-white/[0.02] border border-white/5 hover:bg-white/[0.04] transition-all group">
              <div class="flex items-center gap-5">
                <img src="<%= application.user.profile_image %>" class="w-12 h-12 rounded-2xl object-cover grayscale opacity-50 group-hover:grayscale-0 group-hover:opacity-100 transition-all">
                <div>
                  <p class="font-black text-slate-300 group-hover:text-white transition-colors text-base italic"><%= application.user.nickname %></p>
                  <p class="text-[10px] font-black text-slate-600 uppercase tracking-widest mt-1"><%= application.applied_at.strftime('%Y.%m.%d') %></p>
                </div>
              </div>
              <% if application.approved? %>
                <span class="px-5 py-2 bg-emerald-500/10 text-emerald-500 rounded-xl text-[10px] font-black uppercase tracking-widest border border-emerald-500/20">Approved</span>
              <% else %>
                <span class="px-5 py-2 bg-white/5 text-slate-500 rounded-xl text-[10px] font-black uppercase tracking-widest border border-white/5">Rejected</span>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="py-20 text-center">
          <p class="text-[11px] font-bold text-slate-700 uppercase tracking-[0.3em]">No processing history yet</p>
        </div>
      <% end %>
    </div>
  </div>

<% else %>
  <!-- EXISTING WEB UI: Preserved & Safe -->
  <div class="space-y-8">
    <% if pending_applications.any? %>
      <div class="bg-amber-50 rounded-[32px] border border-amber-200 p-8">
        <h2 class="text-xl font-black text-amber-900 mb-6 flex items-center gap-2">대기 중인 신청 (<%= pending_applications.count %>건)</h2>
        <div class="space-y-4">
          <% pending_applications.each do |application| %>
            <div class="bg-white rounded-2xl p-6 border border-amber-100">
              <div class="flex items-start justify-between gap-4">
                <div class="flex items-center gap-4">
                  <img src="<%= application.user.profile_image %>" class="w-14 h-14 rounded-2xl object-cover">
                  <div>
                    <p class="text-lg font-black text-slate-900"><%= application.user.nickname %></p>
                    <p class="text-xs font-medium text-slate-400"><%= time_ago_in_words(application.applied_at) %> 전 신청</p>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <%= button_to approve_challenge_application_path(challenge, application), method: :post, class: "px-6 py-3 bg-indigo-600 text-white rounded-2xl font-black text-sm hover:bg-indigo-700 transition-all" do %>승인<% end %>
                  <%= button_to reject_challenge_application_path(challenge, application), method: :post, form: { data: { turbo_confirm: "정말 거절하시겠습니까?" } }, class: "px-6 py-3 bg-slate-100 text-slate-600 rounded-2xl font-black text-sm hover:bg-slate-200 transition-all" do %>거절<% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <!-- ... Rest of original web UI ... -->
  </div>
<% end %>
