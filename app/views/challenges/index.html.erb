<div class="pb-32">
  <!-- Top Banner (Landing Mode Only) -->
  <% unless @is_search_mode %>
    <div class="mb-12 relative overflow-hidden rounded-[40px] bg-gradient-to-br from-indigo-600 via-indigo-700 to-violet-800 text-white shadow-2xl shadow-indigo-200">
      <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
      <!-- Animated Background Blobs -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
      <div class="absolute bottom-0 left-0 w-64 h-64 bg-indigo-500/30 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

      <div class="relative z-10 p-10 md:p-16 flex flex-col md:flex-row items-center justify-between gap-8">
        <div class="space-y-8 max-w-2xl text-center md:text-left">
          <div class="space-y-4">
            <span class="inline-block px-4 py-1.5 rounded-full bg-white/10 backdrop-blur-md text-[11px] font-black uppercase tracking-widest border border-white/20 shadow-inner">New Year 2024</span>
            <h1 class="text-4xl md:text-6xl font-black leading-tight tracking-tight">작심삼일은 옛말,<br><span class="text-transparent bg-clip-text bg-gradient-to-r from-indigo-200 to-white">함께라면 해낼 수 있어요.</span></h1>
            <p class="text-lg md:text-xl font-medium text-indigo-100/80 leading-relaxed">혼자서는 힘들었던 목표, 루틴 파인더스에서 동료를 만나보세요.<br>서로 응원하고 인증하며 성장하는 즐거움을 경험하세요.</p>
          </div>
          <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
             <%= link_to new_challenge_path, class: "group inline-flex px-8 py-4 bg-white text-indigo-700 rounded-[24px] font-black text-lg hover:bg-indigo-50 transition-all shadow-xl active:scale-95 items-center justify-center gap-2" do %>
               <span>챌린지 시작하기</span>
               <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
             <% end %>
             <button class="inline-flex px-8 py-4 bg-indigo-800/50 text-white rounded-[24px] font-black text-lg hover:bg-indigo-800/70 transition-all border border-indigo-500/30 backdrop-blur-sm items-center justify-center">
               가이드 보기
             </button>
          </div>
        </div>
        <div class="hidden lg:block relative shrink-0">
           <!-- Illustration placeholder -->
           <div class="w-80 h-80 relative">
             <div class="absolute inset-0 bg-gradient-to-tr from-indigo-400 to-pink-400 rounded-full opacity-20 blur-2xl animate-pulse"></div>
             <div class="relative z-10 w-full h-full bg-white/10 backdrop-blur-md rounded-[48px] border border-white/20 shadow-2xl flex items-center justify-center transform rotate-6 hover:rotate-0 transition-all duration-700">
               <div class="text-center space-y-4 p-8">
                 <div class="w-20 h-20 bg-white/20 rounded-2xl mx-auto flex items-center justify-center text-4xl">🔥</div>
                 <div>
                   <p class="font-black text-2xl">Streak 24</p>
                   <p class="text-sm font-bold text-indigo-100">놀라운 연속 기록!</p>
                 </div>
               </div>
             </div>
           </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Search & Filters (Sticky) -->
  <div class="sticky top-4 z-40 bg-white/80 backdrop-blur-xl p-4 md:p-6 rounded-[32px] border border-white/50 shadow-lg shadow-slate-200/50 mb-16 transition-all">
    <%= form_with url: challenges_path, method: :get, local: true, class: "space-y-4" do |f| %>
      <div class="flex flex-col md:flex-row gap-3">
        <div class="relative flex-1 group">
          <svg class="absolute left-6 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-400 group-focus-within:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
          <%= f.text_field :keyword, value: params[:keyword], placeholder: "관심있는 챌린지를 검색해보세요 (예: '미라클모닝', '독서')", class: "w-full pl-14 pr-6 py-4 bg-slate-50 border-2 border-transparent rounded-2xl font-bold text-slate-900 placeholder:text-slate-400 focus:ring-4 focus:ring-indigo-500/10 focus:border-indigo-500/20 focus:bg-white transition-all outline-none" %>
        </div>
        <%= f.submit "검색하기", class: "px-8 py-4 bg-slate-900 text-white rounded-2xl font-black shrink-0 hover:bg-slate-800 transition-colors shadow-lg shadow-slate-900/10 cursor-pointer active:scale-95" %>
      </div>
      
      <div class="flex flex-wrap items-center gap-2 pt-1">
        <!-- Status Filters -->
        <% 
           current_status = params[:status].to_s 
           status_options = [['전체', ''], ['모집중', 'recruiting'], ['진행중', 'active'], ['종료됨', 'ended']]
        %>
        <% status_options.each do |label, value| %>
          <%= link_to label, challenges_path(status: value, keyword: params[:keyword], category: params[:category]), class: "px-4 py-2.5 rounded-xl text-xs font-black transition-all border #{current_status == value ? 'bg-slate-900 text-white border-slate-900 shadow-md' : 'bg-white text-slate-500 border-slate-200 hover:border-slate-300 hover:bg-slate-50'}" %>
        <% end %>

        <div class="w-px h-4 bg-slate-200 mx-2"></div>

        <!-- Category Filters -->
        <% current_category = params[:category] %>
        <% %w[건강·운동 학습·자기계발 SNS·브랜딩 재테크·부업 취미·라이프 멘탈·성찰].each do |cat| %>
          <%= link_to cat, challenges_path(category: cat, status: params[:status], keyword: params[:keyword]), class: "px-4 py-2.5 rounded-xl text-xs font-black transition-all border #{current_category == cat ? 'bg-indigo-600 text-white border-indigo-600 shadow-md shadow-indigo-600/20' : 'bg-white text-slate-500 border-slate-200 hover:border-indigo-200 hover:text-indigo-600'}" %>
        <% end %>
        
        <% if @is_search_mode %>
           <%= link_to challenges_path, class: "group px-4 py-2 rounded-xl text-xs font-black text-rose-500 hover:bg-rose-50 transition-all ml-auto flex items-center gap-1" do %>
             <svg class="w-3 h-3 group-hover:rotate-180 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/></svg>
             필터 초기화
           <% end %>
        <% end %>
      </div>
    <% end %>
  </div>

  <% unless @is_search_mode %>
    <!-- Section: MD's Pick -->
    <div class="mb-24 space-y-8">
      <div class="flex items-end justify-between px-2">
         <div class="space-y-2">
           <h2 class="text-3xl font-black text-slate-900 flex items-center gap-3">
             <span class="w-10 h-10 rounded-2xl bg-indigo-100 flex items-center justify-center text-xl">👑</span>
             MD's Pick
           </h2>
           <p class="text-sm font-bold text-slate-400 ml-14">루틴 파인더스가 엄선한 고퀄리티 챌린지를 만나보세요.</p>
         </div>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% @featured_challenges.each do |challenge| %>
           <%= link_to challenge_path(challenge), class: "group relative aspect-[16/9] md:aspect-[2/1] rounded-[40px] overflow-hidden shadow-xl shadow-slate-200/50 hover:shadow-2xl hover:shadow-indigo-200/50 transition-all duration-500" do %>
             <img src="<%= challenge.thumbnail %>" class="absolute inset-0 w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="">
             <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent"></div>
             
             <!-- Badges -->
             <div class="absolute top-6 left-6 flex gap-2">
               <span class="bg-white/20 backdrop-blur-md border border-white/20 px-3 py-1.5 rounded-full text-[10px] font-black uppercase text-white"><%= challenge.category %></span>
               <span class="bg-indigo-500 px-3 py-1.5 rounded-full text-[10px] font-black uppercase text-white shadow-lg shadow-indigo-500/30">Official Pick</span>
             </div>

             <!-- Content -->
             <div class="absolute bottom-0 left-0 p-8 md:p-10 space-y-3 w-full">
               <h3 class="text-2xl md:text-3xl font-black text-white leading-tight group-hover:text-indigo-300 transition-colors"><%= challenge.title %></h3>
               <p class="text-white/80 font-medium text-sm md:text-base line-clamp-1"><%= challenge.summary %></p>
               <div class="flex items-center gap-6 pt-2">
                 <div class="flex items-center gap-2 text-white/90 text-xs font-bold">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                    <%= challenge.start_date.strftime("%m.%d") %> 시작
                 </div>
                 <div class="flex items-center gap-2 text-white/90 text-xs font-bold">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
                    <%= challenge.current_participants %>명 대기중
                 </div>
               </div>
             </div>
           <% end %>
        <% end %>
      </div>
    </div>

    <!-- Ad Banner -->
    <div class="mb-24 rounded-[40px] overflow-hidden bg-slate-900 text-white relative group cursor-pointer shadow-2xl shadow-slate-200">
       <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1534438327276-14e5300c3a48?auto=format&fit=crop&q=80&w=2000')] bg-cover bg-center opacity-40 group-hover:scale-105 transition-transform duration-700"></div>
       <div class="relative z-10 p-12 flex flex-col items-center justify-center text-center space-y-4">
          <span class="bg-indigo-500 px-3 py-1 rounded-lg text-[10px] font-black uppercase">Ad</span>
          <h3 class="text-3xl md:text-4xl font-black">올해는 기필코 다이어트 성공?</h3>
          <p class="text-slate-300 font-medium">루틴 파인더스 프리미엄 멤버십으로 2배 더 확실하게 관리받으세요.</p>
          <div class="pt-4">
            <span class="text-sm font-bold border-b border-white/50 pb-0.5 group-hover:border-indigo-400 group-hover:text-indigo-300 transition-colors">자세히 알아보기 &rarr;</span>
          </div>
       </div>
    </div>

    <!-- Section: Hot Trending (Horizontal Scroll) -->
    <div class="mb-24 space-y-8">
      <div class="flex items-end justify-between px-2">
         <div class="space-y-2">
           <h2 class="text-3xl font-black text-slate-900 flex items-center gap-3">
             <span class="w-10 h-10 rounded-2xl bg-orange-100 flex items-center justify-center text-xl">🔥</span>
             Hot Trending
           </h2>
           <p class="text-sm font-bold text-slate-400 ml-14">지금 참여자가 급증하고 있는 인기 챌린지</p>
         </div>
         <div class="hidden md:flex gap-2">
           <button class="w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-slate-400 hover:bg-slate-50 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 19l-7-7 7-7"/></svg>
           </button>
           <button class="w-10 h-10 rounded-full border border-slate-200 flex items-center justify-center text-slate-400 hover:bg-slate-50 transition-colors">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/></svg>
           </button>
         </div>
      </div>
      
      <!-- Scroll Container -->
      <div class="flex overflow-x-auto gap-6 pb-8 -mx-4 px-4 scroll-smooth snap-x" style="scrollbar-width: none; -ms-overflow-style: none;">
         <% @hot_challenges.each_with_index do |challenge, i| %>
            <%= link_to challenge_path(challenge), class: "snap-start shrink-0 w-[280px] md:w-[320px] bg-white rounded-[32px] overflow-hidden border border-slate-200 shadow-lg shadow-slate-200/40 group hover:-translate-y-2 transition-all duration-300" do %>
              <div class="relative aspect-[4/3] overflow-hidden">
                <img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="">
                <div class="absolute top-4 left-4">
                  <span class="flex items-center justify-center w-8 h-8 rounded-full bg-orange-500 text-white text-sm font-black shadow-lg border-2 border-white"><%= i + 1 %></span>
                </div>
                <div class="absolute bottom-4 left-4 bg-white/90 backdrop-blur-md px-3 py-1.5 rounded-full text-[10px] font-black text-slate-900 border border-white/50">
                   <%= challenge.current_participants %>명 도전 중
                </div>
              </div>
              <div class="p-6 space-y-3">
                 <div class="space-y-1">
                   <span class="text-[10px] font-black text-orange-500 uppercase tracking-widest"><%= challenge.category %></span>
                   <h4 class="font-black text-slate-900 text-lg leading-tight line-clamp-2 group-hover:text-indigo-600 transition-colors"><%= challenge.title %></h4>
                 </div>
                 <div class="pt-3 border-t border-slate-100 flex items-center justify-between">
                    <span class="text-xs font-bold text-slate-400"><%= challenge.cost_display_text %></span>
                    <span class="text-[10px] font-black text-indigo-500 bg-indigo-50 px-2 py-1 rounded-lg">D-<%= (challenge.start_date - Date.current).to_i %></span>
                 </div>
              </div>
            <% end %>
         <% end %>
         <!-- More Card -->
         <div class="snap-start shrink-0 w-[200px] flex items-center justify-center">
            <button class="w-16 h-16 rounded-full bg-slate-100 text-slate-400 hover:bg-slate-200 hover:text-slate-600 transition-all flex items-center justify-center">
               <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M14 5l7 7m0 0l-7 7m7-7H3"/></svg>
            </button>
         </div>
      </div>
    </div>
  <% end %>

  <!-- Section: All Challenges Grid -->
  <div class="space-y-8" id="all-challenges">
    <div class="flex items-end justify-between px-2">
       <div class="space-y-2">
         <h2 class="text-3xl font-black text-slate-900 flex items-center gap-3">
           <span class="w-10 h-10 rounded-2xl bg-indigo-50 flex items-center justify-center text-xl">🔍</span>
           <%= @is_search_mode ? "Search Result" : "All Challenges" %>
         </h2>
         <p class="text-sm font-bold text-slate-400 ml-14"><%= @is_search_mode ? "'#{params[:keyword]}' 검색 결과입니다." : "나에게 딱 맞는 챌린지를 찾아보세요." %></p>
       </div>
    </div>

    <% if @challenges.empty? %>
      <div class="py-20 text-center space-y-4 bg-slate-50 rounded-[40px] border border-dashed border-slate-200">
        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto text-3xl">🤔</div>
        <div class="space-y-1">
          <p class="text-xl font-black text-slate-900">찾으시는 챌린지가 없네요.</p>
          <p class="text-sm font-bold text-slate-400">다른 키워드로 검색하거나, 직접 챌린지를 만들어보세요!</p>
        </div>
        <div class="pt-4">
           <%= link_to new_challenge_path, class: "inline-block px-6 py-3 bg-indigo-600 text-white rounded-xl font-black text-sm hover:bg-indigo-700 transition-all" do %>
             직접 만들기
           <% end %>
        </div>
      </div>
    <% else %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @challenges.each do |challenge| %>
          <%= link_to challenge_path(challenge), class: "bg-white rounded-[48px] overflow-hidden border border-slate-200 shadow-sm hover:shadow-2xl transition-all cursor-pointer group flex flex-col h-full" do %>
            <div class="relative aspect-[4/3] overflow-hidden shrink-0">
              <img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="">
              <div class="absolute top-5 left-5 flex gap-2">
                <span class="bg-white/90 backdrop-blur-md px-3 py-1.5 rounded-full text-[9px] font-black uppercase text-slate-900 border border-white/50"><%= challenge.category %></span>
                <% if challenge.is_official %>
                  <span class="bg-indigo-600 px-3 py-1.5 rounded-full text-[9px] font-black uppercase text-white shadow-md">Official</span>
                <% end %>
              </div>
              <% if challenge.offline? %>
                <div class="absolute bottom-5 left-5">
                  <span class="bg-orange-600 px-3 py-1.5 rounded-full text-[9px] font-black uppercase text-white shadow-md">OFFLINE</span>
                </div>
              <% end %>
            </div>
            <div class="p-8 space-y-4 flex flex-col flex-1">
              <div class="space-y-1 flex-1">
                <h4 class="font-black text-slate-900 text-xl group-hover:text-indigo-600 transition-colors line-clamp-1"><%= challenge.title %></h4>
                <p class="text-sm text-slate-500 line-clamp-2 leading-relaxed"><%= challenge.summary %></p>
              </div>
              <div class="flex items-center justify-between text-xs font-bold text-slate-400 border-t border-slate-50 pt-4 mt-auto">
                <span class="flex items-center gap-1.5">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
                  <%= challenge.current_participants %>명
                </span>
                <span class="<%= challenge.cost_type_free? ? 'text-indigo-600' : 'text-slate-600' %>">
                  <%= challenge.cost_display_text %>
                </span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
