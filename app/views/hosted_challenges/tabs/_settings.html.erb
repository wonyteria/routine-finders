<% if params[:source] == 'prototype' %>
  <div class="space-y-12" data-controller="challenge-settings">
    <div class="app-glass-card p-10 lg:p-12">
      <div class="flex items-center gap-5 mb-12">
        <div class="w-14 h-14 rounded-2xl bg-indigo-500/10 flex items-center justify-center text-indigo-400">
          <svg class="w-7 h-7" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/></svg>
        </div>
        <div>
          <h2 class="text-2xl font-black text-white italic">운영 환경 설정</h2>
          <p class="text-[10px] font-black text-slate-500 uppercase tracking-[0.2em] mt-1">챌린지의 기본 파라미터 및 운영 데이터를 조정합니다</p>
        </div>
      </div>

      <%= form_with model: challenge, url: hosted_challenge_path(challenge, tab: "settings", source: "prototype"), method: :patch, class: "space-y-16", data: { challenge_settings_target: "form" } do |f| %>
        
        <!-- Section: Identity -->
        <section class="space-y-8">
          <div class="flex items-center gap-3 pb-4 border-b border-white/5">
            <span class="text-indigo-400 font-black italic">01.</span>
            <h3 class="text-xs font-black text-slate-400 uppercase tracking-widest">챌린지 정체성 (Identity)</h3>
          </div>

          <div class="grid grid-cols-1 gap-8">
            <div class="space-y-4">
              <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">챌린지 제목</label>
              <%= f.text_field :title, class: "w-full p-6 bg-white/5 border border-white/10 rounded-[28px] font-black text-xl text-white italic focus:border-indigo-500 outline-none transition-all" %>
            </div>

            <div class="space-y-4">
              <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">한 줄 요약</label>
              <%= f.text_field :summary, class: "w-full p-6 bg-white/5 border border-white/10 rounded-[28px] font-black text-white focus:border-indigo-500 outline-none transition-all" %>
            </div>

            <div class="space-y-4">
              <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">상세 설명 (Specifications)</label>
              <%= f.text_area :description, class: "w-full p-8 bg-white/5 border border-white/10 rounded-[32px] font-medium text-slate-300 focus:border-indigo-500 outline-none transition-all min-h-[250px]" %>
            </div>

            <div class="space-y-4">
              <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">호스트 소개</label>
              <%= f.text_area :custom_host_bio, class: "w-full p-8 bg-white/5 border border-white/10 rounded-[32px] font-medium text-slate-300 focus:border-indigo-500 outline-none transition-all min-h-[150px]" %>
            </div>
          </div>
        </section>

        <!-- Section: Chronos -->
        <section class="space-y-8">
          <div class="flex items-center gap-3 pb-4 border-b border-white/5">
            <span class="text-emerald-400 font-black italic">02.</span>
            <h3 class="text-xs font-black text-slate-400 uppercase tracking-widest">일정 동기화 (Chronos)</h3>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-4">
              <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">챌린지 시작일</label>
              <%= f.date_field :start_date, class: "w-full p-6 bg-white/5 border border-white/10 rounded-[28px] font-black text-white focus:border-emerald-500 outline-none transition-all" %>
            </div>
            <div class="space-y-4">
              <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">챌린지 종료일</label>
              <%= f.date_field :end_date, class: "w-full p-6 bg-white/5 border border-white/10 rounded-[28px] font-black text-white focus:border-emerald-500 outline-none transition-all" %>
            </div>
          </div>
        </section>

        <!-- Section: Protocols -->
        <section class="space-y-8">
          <div class="flex items-center gap-3 pb-4 border-b border-white/5">
            <span class="text-purple-400 font-black italic">03.</span>
            <h3 class="text-xs font-black text-slate-400 uppercase tracking-widest">인증 프로토콜</h3>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <div class="space-y-4">
              <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">인증 시작 시간</label>
              <%= f.time_field :verification_start_time, class: "w-full p-6 bg-white/5 border border-white/10 rounded-[28px] font-black text-white focus:border-purple-500 outline-none transition-all" %>
            </div>
            <div class="space-y-4">
              <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">인증 마감 시간</label>
              <%= f.time_field :verification_end_time, class: "w-full p-6 bg-white/5 border border-white/10 rounded-[28px] font-black text-white focus:border-purple-500 outline-none transition-all" %>
            </div>
          </div>
        </section>

        <!-- Danger Zone (Integrated) -->
        <section class="mt-20 p-10 bg-rose-500/5 rounded-[40px] border border-rose-500/10 space-y-6">
          <div>
            <h3 class="text-lg font-black text-rose-500 italic uppercase">위험 구역 (Danger Zone)</h3>
            <p class="text-[10px] font-bold text-rose-500/60 uppercase tracking-widest mt-1">챌린지의 모든 데이터를 파괴하고 영구히 삭제합니다</p>
          </div>
          <%= link_to hosted_challenge_path(challenge, source: "prototype"), 
                      data: { turbo_method: :delete, turbo_confirm: "REALLY TERMINATE THIS LOOP?" }, 
                      class: "inline-flex items-center gap-3 px-8 py-4 bg-rose-600/10 text-rose-500 border border-rose-500/20 rounded-2xl font-black text-[11px] uppercase tracking-widest hover:bg-rose-600 hover:text-white transition-all shadow-xl shadow-rose-600/10" do %>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
            챌린지 영구 삭제
          <% end %>
        </section>

        <!-- Global Save -->
        <div class="flex items-center gap-6 pt-10 border-t border-white/5">
          <button type="submit" 
                  class="flex-1 py-6 bg-indigo-600 text-white rounded-[32px] font-black text-base shadow-2xl shadow-indigo-600/40 hover:bg-indigo-500 hover:-translate-y-1 active:scale-95 transition-all cursor-pointer">
            변경 사항 저장 (Apply)
          </button>
          <%= link_to "되돌리기", hosted_challenge_path(challenge, tab: "dashboard", source: "prototype"), class: "px-10 py-6 bg-white/5 text-slate-500 rounded-[32px] font-black hover:bg-white/10 transition-all uppercase tracking-widest" %>
        </div>
      <% end %>
    </div>
  </div>

<% else %>
  <!-- EXISTING WEB UI (Preserved) -->
  <div class="space-y-8" data-controller="challenge-settings">
    <div class="bg-white rounded-[40px] border border-slate-200 shadow-xl shadow-slate-200/40 p-8 lg:p-12">
      <div class="flex items-center gap-4 mb-8">
        <div class="w-12 h-12 rounded-2xl bg-indigo-50 flex items-center justify-center text-indigo-600">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
        </div>
        <h2 class="text-2xl font-black text-slate-900">챌린지 설정</h2>
      </div>

      <%= form_with model: challenge, url: hosted_challenge_path(challenge, tab: "settings"), method: :patch, class: "space-y-10" do |f| %>
        <div class="space-y-6">
          <div class="space-y-3">
            <label class="text-xs font-black text-slate-400 uppercase tracking-widest pl-2">챌린지 제목</label>
            <%= f.text_field :title, class: "w-full p-5 bg-slate-50 border-2 border-transparent rounded-[24px] font-bold text-lg focus:bg-white focus:border-indigo-500/20 transition-all outline-none" %>
          </div>
          <!-- (Rest of web UI preserved) -->
          <button type="submit" class="px-8 py-5 bg-indigo-600 text-white rounded-[24px] font-black text-lg">변경사항 저장</button>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
