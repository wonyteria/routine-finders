<!-- 모달 백그라운드 -->
<div id="auth_modal" 
     data-modal-target="container"
     data-action="click->modal#closeOnBackground"
     class="fixed inset-0 z-50 bg-gray-900/50 backdrop-blur-sm flex items-center justify-center p-4">
  <!-- 모달 컨텐츠 -->
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-md overflow-hidden"
       data-controller="auth-tabs"
       data-auth-tabs-active-class="border-indigo-500 text-indigo-600"
       data-auth-tabs-inactive-class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300">
    
    <!-- 헤더 -->
    <div class="flex justify-between items-center px-6 pt-6">
      <h2 class="text-xl font-bold text-gray-900">루틴파인더스</h2>
      <button data-action="modal#close" 
              class="text-gray-400 hover:text-gray-600 transition-colors">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- 탭 -->
    <div class="flex border-b border-gray-200 px-6 mt-4">
      <button data-auth-tabs-target="loginTab"
              data-action="click->auth-tabs#showLogin"
              class="flex-1 py-3 text-sm font-medium border-b-2 transition-colors">
        로그인
      </button>
      <button data-auth-tabs-target="registerTab"
              data-action="click->auth-tabs#showRegister"
              class="flex-1 py-3 text-sm font-medium border-b-2 transition-colors border-indigo-500 text-indigo-600">
        회원가입
      </button>
    </div>

    <!-- 로그인 패널 (숨김) -->
    <div data-auth-tabs-target="loginPanel" class="p-6 hidden">
      <%= render "shared/login_form" %>
    </div>

    <!-- 회원가입 패널 (에러 표시) -->
    <div data-auth-tabs-target="registerPanel" class="p-6">
      <%= form_with model: user, url: registration_path, method: :post, id: "registration_form", class: "space-y-4", data: { turbo_frame: "_top" } do |f| %>
        <% if user.errors.any? %>
          <div class="bg-red-50 border border-red-200 rounded-lg p-4">
            <ul class="text-sm text-red-600 space-y-1">
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div>
          <label for="user_nickname" class="block text-sm font-medium text-gray-700 mb-1">닉네임</label>
          <%= f.text_field :nickname,
                           required: true,
                           class: "w-full px-4 py-3 rounded-lg border #{user.errors[:nickname].any? ? 'border-red-300' : 'border-gray-300'} focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                           placeholder: "닉네임을 입력하세요" %>
        </div>

        <div>
          <label for="user_email" class="block text-sm font-medium text-gray-700 mb-1">이메일</label>
          <%= f.email_field :email,
                            required: true,
                            autocomplete: "email",
                            class: "w-full px-4 py-3 rounded-lg border #{user.errors[:email].any? ? 'border-red-300' : 'border-gray-300'} focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                            placeholder: "example@email.com" %>
        </div>

        <div>
          <label for="user_password" class="block text-sm font-medium text-gray-700 mb-1">비밀번호</label>
          <%= f.password_field :password,
                               required: true,
                               autocomplete: "new-password",
                               class: "w-full px-4 py-3 rounded-lg border #{user.errors[:password].any? ? 'border-red-300' : 'border-gray-300'} focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                               placeholder: "8자 이상 입력하세요" %>
        </div>

        <div>
          <label for="user_password_confirmation" class="block text-sm font-medium text-gray-700 mb-1">비밀번호 확인</label>
          <%= f.password_field :password_confirmation,
                               required: true,
                               autocomplete: "new-password",
                               class: "w-full px-4 py-3 rounded-lg border #{user.errors[:password_confirmation].any? ? 'border-red-300' : 'border-gray-300'} focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 transition-colors",
                               placeholder: "비밀번호를 다시 입력하세요" %>
        </div>

        <button type="submit" 
                class="w-full bg-indigo-600 text-white py-3 px-4 rounded-lg font-medium hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
          회원가입
        </button>
      <% end %>

      <div class="mt-4 text-center">
        <p class="text-sm text-gray-600">
          이미 계정이 있으신가요?
          <button data-action="click->auth-tabs#showLogin" 
                  class="text-indigo-600 hover:text-indigo-500 font-medium">
            로그인
          </button>
        </p>
      </div>
    </div>
  </div>
</div>
