              if (saveBtn) saveBtn.querySelector('.pass-status').innerText = '<%= @my_membership&.remaining_save_passes || 0 %>개';
            } else {
              label.innerText = '오늘 기준';
              label.className = 'text-[9px] font-bold text-slate-500';
              if (saveBtn) saveBtn.style.opacity = '1';
              if (saveBtn) saveBtn.querySelector('.pass-status').innerText = '<%= @my_membership&.remaining_save_passes || 0 %>개';
            }
          }

          function validatePassUse(formId, type) {
            const selectedDate = document.getElementById('global-date-picker').value;
            const today = new Date().toISOString().split('T')[0];
            
            if (type === 'save' && selectedDate > today) {
              alert('세이브권은 이미 발생한 결석을 구제하는 아이템입니다. 오늘 이후의 날짜에는 사용할 수 없습니다.');
              return;
            }
            
            if (type === 'relax') {
              requestItemUse(formId, '휴식권을 사용하시겠습니까?', '오늘 루틴이 모두 완료 처리되어 주간 달성률(70%)을 지켜줍니다. (단, 점수는 쌓이지 않아요! ☕)', '🎟️');
            } else {
              requestItemUse(formId, '세이브권을 사용하시겠습니까?', '결석한 날의 루틴들을 모두 완료 상태로 되살려 제명을 막아줍니다. (단, 포인트는 지급되지 않아요! 🛡️)', '🛡️');
            }
          }
        </script>

        <!-- Reward Selection -->
        <div class="space-y-4">
          <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1 italic">Step 2. 아이템 선택</label>
          <div class="grid grid-cols-1 gap-4">
            <!-- Relax Pass Card -->
            <%= form_with url: use_pass_routine_club_path(@official_club, pass_type: 'relax', source: 'prototype'), method: :post, id: "global-relax-form", class: "contents" do |f| %>
              <%= f.hidden_field :date, value: Date.current, class: "global-pass-date" %>
              <button type="button" id="relax-pass-btn"
                      <% if @my_membership&.remaining_relax_passes.to_i <= 0 %>disabled<% end %>
                      onclick="validatePassUse('global-relax-form', 'relax')"
                      class="w-full p-5 rounded-[28px] bg-white/[0.03] border border-white/5 hover:border-indigo-500/40 hover:bg-indigo-500/5 transition-all text-left flex gap-4 items-center group disabled:opacity-30">
                <div class="w-14 h-14 rounded-2xl bg-indigo-500/10 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform">🎟️</div>
                <div>
                  <div class="flex items-center gap-2 mb-0.5">
                    <span class="text-sm font-black text-white">휴식권</span>
                    <span class="px-1.5 py-0.5 bg-indigo-500/20 rounded text-[8px] font-black text-indigo-400"><%= @my_membership&.remaining_relax_passes || 0 %>개</span>
                  </div>
                  <p class="text-[10px] font-bold text-slate-500 leading-tight">출석 도장 꾹! 오늘 루틴은 모두 완료 처리됩니다. (단, 포인트는 제외 ☕)</p>
                </div>
              </button>
            <% end %>

            <!-- Save Pass Card -->
            <%= form_with url: use_pass_routine_club_path(@official_club, pass_type: 'save', source: 'prototype'), method: :post, id: "global-save-form", class: "contents" do |f| %>
              <%= f.hidden_field :date, value: Date.current, class: "global-pass-date" %>
              <button type="button" id="save-pass-btn"
                      <% if @my_membership&.remaining_save_passes.to_i <= 0 %>disabled<% end %>
                      onclick="validatePassUse('global-save-form', 'save')"
                      class="w-full p-5 rounded-[28px] bg-white/[0.03] border border-white/5 hover:border-emerald-500/40 hover:bg-emerald-500/5 transition-all text-left flex gap-4 items-center group disabled:opacity-30">
                <div class="w-14 h-14 rounded-2xl bg-emerald-500/10 flex items-center justify-center text-2xl group-hover:scale-110 transition-transform">🛡️</div>
                <div>
                  <div class="flex items-center gap-2 mb-0.5">
                    <span class="text-sm font-black text-white">세이브권</span>
                    <span class="pass-status px-1.5 py-0.5 bg-emerald-500/20 rounded text-[8px] font-black text-emerald-400"><%= @my_membership&.remaining_save_passes || 0 %>개</span>
                  </div>
                  <p class="text-[10px] font-bold text-slate-500 leading-tight">깜빡한 결석 부활! 놓친 루틴들이 모두 완료 처리됩니다. (단, 포인트는 제외 🛡️)</p>
                </div>
              </button>
            <% end %>
          </div>
        </div>

        <button onclick="this.closest('#global-pass-modal').classList.add('hidden'); document.body.classList.remove('overflow-hidden')" class="w-full py-2 text-slate-500 font-bold text-xs">닫기</button>
      </div>
    </div>
  <% end %>
<% end %>

