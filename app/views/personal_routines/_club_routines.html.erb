<div class="space-y-12">
  
  <!-- Hero Section: 루파 클럽 (Official) -->
  <section class="relative overflow-hidden bg-slate-900 rounded-[48px] p-12 text-white shadow-2xl group">
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-600/40 via-purple-600/40 to-pink-600/40 opacity-50 z-0"></div>
    <div class="absolute -right-20 -top-20 w-80 h-80 bg-indigo-500/20 rounded-full blur-[100px] group-hover:scale-110 transition-transform duration-1000"></div>
    
    <div class="relative z-10 max-w-4xl">
      <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-md px-4 py-2 rounded-full mb-8 border border-white/10">
        <span class="w-2 h-2 bg-amber-400 rounded-full animate-pulse shadow-[0_0_10px_rgba(251,191,36,0.5)]"></span>
        <span class="text-[10px] font-black uppercase tracking-[0.2em] text-indigo-100">Routine Finders Official</span>
      </div>
      
      <h2 class="text-4xl md:text-6xl font-black mb-6 leading-[1.1] tracking-tight">
        루파 클럽:<br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-yellow-400 to-orange-400">꾸준함이 최고의 자산</span>
      </h2>
      
      <p class="text-lg md:text-xl text-slate-300 font-medium mb-10 leading-relaxed max-w-2xl">
        '루틴 파인더스'가 직접 운영하는 프리미엄 루틴 엔진입니다.<br/>
        서로의 성장을 지켜주며 정체된 한계를 함께 돌파합니다.
      </p>
      
      <div class="flex flex-wrap gap-4 items-center">
        <%= link_to "#available-clubs", class: "px-8 py-4 bg-white text-slate-900 rounded-2xl font-black text-sm hover:bg-amber-300 transition-all shadow-xl shadow-indigo-900/40" do %>
          참여 가능한 클럽 보기
        <% end %>
        <div class="px-6 py-4 bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl">
          <p class="text-[10px] font-black text-indigo-200 uppercase tracking-widest mb-1">Exclusive Benefit</p>
          <p class="text-sm font-bold text-white">월 1회 오프라인 모임 참석권 전용 제공 🤝</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Rufa Management Dashboard (New) -->
  <% if current_user.is_rufa_club_member? %>
    <section class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Member Status Card -->
      <div class="lg:col-span-7 bg-white rounded-[40px] p-8 border border-slate-100 shadow-sm space-y-8">
        <div class="flex items-center justify-between">
          <h3 class="text-xl font-black text-slate-900 tracking-tight">이번 달 멤버 유지 현황</h3>
          <span class="px-3 py-1 bg-emerald-50 text-emerald-600 rounded-full text-[10px] font-black">기준 미달 시 다음 달 이용 제한</span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- Write Rate -->
          <div class="space-y-4">
            <div class="flex justify-between items-end">
              <div>
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">① 루틴 기록률</p>
                <div class="flex items-baseline gap-1">
                  <span class="text-3xl font-black <%= @current_log_rate >= 70 ? 'text-indigo-600' : 'text-slate-900' %>"><%= @current_log_rate %></span>
                  <span class="text-xs font-bold text-slate-400">%</span>
                </div>
              </div>
              <p class="text-[10px] font-black text-slate-400">목표 70%</p>
            </div>
            <div class="w-full h-3 bg-slate-50 rounded-full overflow-hidden border border-slate-100 p-0.5">
              <div class="h-full bg-indigo-500 rounded-full transition-all duration-1000" style="width: <%= @current_log_rate %>%"></div>
            </div>
            <p class="text-[11px] font-medium text-slate-500">
              <%= @current_log_rate >= 70 ? "✅ 유지 기준을 충족했습니다." : "🚩 기준까지 #{70 - @current_log_rate}% 더 기록이 필요해요." %>
            </p>
          </div>

          <!-- Achievement Rate -->
          <div class="space-y-4">
            <div class="flex justify-between items-end">
              <div>
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">② 루틴 달성률</p>
                <div class="flex items-baseline gap-1">
                  <span class="text-3xl font-black <%= @current_achievement_rate >= 70 ? 'text-emerald-500' : 'text-slate-900' %>"><%= @current_achievement_rate %></span>
                  <span class="text-xs font-bold text-slate-400">%</span>
                </div>
              </div>
              <p class="text-[10px] font-black text-slate-400">목표 70%</p>
            </div>
            <div class="w-full h-3 bg-slate-50 rounded-full overflow-hidden border border-slate-100 p-0.5">
              <div class="h-full bg-emerald-500 rounded-full transition-all duration-1000" style="width: <%= @current_achievement_rate %>%"></div>
            </div>
            <p class="text-[11px] font-medium text-slate-500">
              <%= @current_achievement_rate >= 70 ? "✅ 실천 기준을 충족했습니다." : "🚩 기준까지 #{70 - @current_achievement_rate}% 더 실천이 필요해요." %>
            </p>
          </div>
        </div>
      </div>

      <!-- Rufa Ranking Card -->
      <div class="lg:col-span-5 bg-white rounded-[40px] p-8 border border-slate-100 shadow-sm flex flex-col">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-xl font-black text-slate-900 tracking-tight">루파 클럽 랭킹</h3>
          <span class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Top 10</span>
        </div>
        
        <div class="space-y-4 flex-1 overflow-y-auto max-h-[300px] no-scrollbar">
          <% @rufa_rankings.each_with_index do |rank, index| %>
            <div class="flex items-center justify-between p-3 rounded-2xl hover:bg-slate-50 transition-colors">
              <div class="flex items-center gap-3">
                <span class="w-6 text-sm font-black <%= index < 3 ? 'text-indigo-600' : 'text-slate-300' %> text-center">
                  <%= index + 1 %>
                </span>
                <img src="<%= rank[:user].profile_image %>" class="w-8 h-8 rounded-full border border-slate-100" />
                <span class="text-sm font-bold text-slate-700 <%= 'text-indigo-600' if rank[:user] == current_user %>">
                  <%= rank[:user].nickname %>
                </span>
              </div>
              <div class="text-[11px] font-black text-slate-400">
                <%= rank[:score].to_i %> PTS
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  <% end %>

  <!-- Available Clubs (Discovery Grid) -->
  <section id="available-clubs" class="space-y-8">
    <div class="flex flex-col md:flex-row md:items-end justify-between gap-6 px-2">
      <div class="space-y-2">
         <h4 class="text-sm font-black text-indigo-500 uppercase tracking-[0.2em]">Discovery</h4>
         <h2 class="text-3xl font-black text-slate-900 tracking-tight">현재 모집 중인 루파 클럽</h2>
      </div>
      <%= link_to routine_clubs_path, class: "group flex items-center gap-3 px-6 py-3 bg-slate-900 text-white rounded-2xl font-black text-xs hover:bg-indigo-600 transition-all shadow-lg" do %>
        전체 리스트
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
      <% end %>
    </div>

    <% if @routine_clubs.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @routine_clubs.each do |club| %>
          <%= link_to routine_club_path(club), class: "group" do %>
            <div class="bg-white rounded-[40px] overflow-hidden border border-slate-100 shadow-sm hover:shadow-2xl hover:border-indigo-100 transition-all flex flex-col h-full ring-1 ring-slate-100/50">
              <div class="aspect-[16/10] bg-slate-900 relative overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-indigo-500 to-purple-600 opacity-80"></div>
                <div class="absolute inset-0 flex items-center justify-center">
                   <span class="text-6xl transform group-hover:scale-125 transition-transform duration-700">🎯</span>
                </div>
                <div class="absolute top-5 left-5">
                   <span class="px-4 py-1.5 bg-white/20 backdrop-blur-md rounded-full text-[10px] font-black text-white uppercase tracking-widest border border-white/20">
                     <%= club.category %>
                   </span>
                </div>
              </div>
              
              <div class="p-8 space-y-6 flex-1 flex flex-col">
                <div class="space-y-3 flex-1">
                  <h3 class="text-xl font-black text-slate-900 group-hover:text-indigo-600 transition-colors leading-snug">
                    <%= club.title %>
                  </h3>
                  <p class="text-sm text-slate-500 font-medium line-clamp-2 leading-relaxed">
                    <%= club.description %>
                  </p>
                </div>
                <div class="pt-6 border-t border-slate-50 flex items-center justify-between">
                  <div class="space-y-1">
                    <p class="text-[9px] font-black text-slate-300 uppercase tracking-widest leading-none">Subscription</p>
                    <p class="text-lg font-black text-slate-900">
                      <%= number_to_currency(club.monthly_fee, unit: "₩", precision: 0) %><span class="text-xs font-bold text-slate-400 ml-1">/ mo</span>
                    </p>
                  </div>
                  <div class="px-4 py-2 bg-indigo-50 text-indigo-600 rounded-xl font-black text-[10px] opacity-0 group-hover:opacity-100 transition-opacity">
                    Join Now
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </section>

  <!-- My Memberships Section -->
  <% if @my_club_memberships.any? %>
    <section class="space-y-6">
      <div class="flex items-center justify-between px-2">
        <h3 class="text-sm font-black text-slate-400 uppercase tracking-[0.2em]">My Active Clubs</h3>
        <div class="h-px flex-1 bg-slate-100 ml-4"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <% @my_club_memberships.each do |membership| %>
          <% club = membership.routine_club %>
          <%= link_to routine_club_path(club), class: "group bg-white rounded-[40px] p-8 border border-slate-100 shadow-sm hover:shadow-xl transition-all relative overflow-hidden flex flex-col justify-between" do %>
            <div class="relative z-10 space-y-4">
              <div class="flex justify-between items-start">
                <div class="space-y-1">
                  <span class="px-3 py-1 bg-indigo-50 text-indigo-600 rounded-full text-[9px] font-black uppercase tracking-wider"><%= club.category %></span>
                  <h4 class="text-2xl font-black text-slate-900 group-hover:text-indigo-600 transition-colors tracking-tight"><%= club.title %></h4>
                </div>
                <div class="w-12 h-12 bg-slate-50 rounded-2xl flex items-center justify-center text-2xl">🏆</div>
              </div>
              <div class="flex items-center gap-4 text-xs font-bold text-slate-400">
                <span>멤버 <%= club.current_members %>명</span>
                <span>•</span>
                <span>가입일 <%= membership.joined_at.strftime("%Y.%m.%d") %></span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </section>
  <% end %>

</div>
