<div class="pb-32">
  <!-- Hero Banner -->
  <section class="mb-12 relative overflow-hidden rounded-[40px] bg-gradient-to-br from-orange-600 via-orange-700 to-red-700 text-white shadow-2xl shadow-orange-200">
    <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
    <div class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-orange-500/30 rounded-full blur-3xl translate-y-1/2 -translate-x-1/2"></div>

    <div class="relative z-10 p-10 md:p-16 flex flex-col md:flex-row items-center justify-between gap-8">
      <div class="space-y-6 max-w-2xl text-center md:text-left">
        <div class="space-y-4">
          <span class="inline-block px-4 py-1.5 rounded-full bg-white/10 backdrop-blur-md text-[11px] font-black uppercase tracking-widest border border-white/20">Gatherings</span>
          <h1 class="text-4xl md:text-6xl font-black leading-tight tracking-tight">함께 모여<br><span class="text-transparent bg-clip-text bg-gradient-to-r from-orange-200 to-white">더 큰 시너지를</span></h1>
          <p class="text-lg md:text-xl font-medium text-orange-100/80 leading-relaxed">온라인부터 오프라인까지,<br>같은 관심사를 가진 사람들과 함께하세요.</p>
        </div>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <%= link_to new_gathering_path, class: "group inline-flex px-8 py-4 bg-white text-orange-700 rounded-[24px] font-black text-lg hover:bg-orange-50 transition-all shadow-xl active:scale-95 items-center justify-center gap-2" do %>
            <span>모임 만들기</span>
            <svg class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          <% end %>
        </div>
      </div>
      <div class="hidden lg:block relative shrink-0">
        <div class="w-80 h-80 relative">
          <div class="absolute inset-0 bg-gradient-to-tr from-orange-400 to-red-400 rounded-full opacity-20 blur-2xl animate-pulse"></div>
          <div class="relative z-10 w-full h-full bg-white/10 backdrop-blur-md rounded-[48px] border border-white/20 shadow-2xl flex items-center justify-center transform rotate-6 hover:rotate-0 transition-all duration-700">
            <div class="text-center space-y-4 p-8">
              <div class="w-20 h-20 bg-white/20 rounded-2xl mx-auto flex items-center justify-center text-4xl">🤝</div>
              <div>
                <p class="font-black text-2xl">Connect</p>
                <p class="text-sm font-bold text-orange-100">새로운 인연을 만나요!</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Filters -->
  <div class="sticky top-4 z-40 bg-white/80 backdrop-blur-xl p-4 rounded-[32px] border border-white/50 shadow-lg shadow-slate-200/50 mb-12 transition-all flex flex-col md:flex-row items-center justify-between gap-4">
    <div class="flex flex-wrap items-center justify-center gap-2">
      <% 
        current_location = params[:location_type].to_s
        location_options = [['전체', ''], ['온라인', 'online'], ['오프라인', 'offline']]
      %>
      <% location_options.each do |label, value| %>
        <%= link_to label, gatherings_path(request.query_parameters.merge(location_type: value)), class: "px-4 py-2.5 rounded-xl text-xs font-black transition-all border #{current_location == value ? 'bg-orange-600 text-white border-orange-600 shadow-md shadow-orange-600/20' : 'bg-white text-slate-500 border-slate-200 hover:border-orange-200 hover:text-orange-600'}" %>
      <% end %>
      
      <div class="w-px h-4 bg-slate-300 mx-2"></div>
      
      <% 
        current_status = params[:status].to_s
        status_options = [['전체', ''], ['모집중', 'recruiting'], ['예정', 'upcoming'], ['종료', 'ended']]
      %>
      <% status_options.each do |label, value| %>
        <%= link_to label, gatherings_path(request.query_parameters.merge(status: value)), class: "px-4 py-2.5 rounded-xl text-xs font-black transition-all border #{current_status == value ? 'bg-slate-900 text-white border-slate-900 shadow-md' : 'bg-white text-slate-500 border-slate-200 hover:border-slate-300 hover:bg-slate-50'}" %>
      <% end %>
      
      <div class="w-px h-4 bg-slate-300 mx-2"></div>
      
      <% current_category = params[:category] %>
      <% %w[건강·운동 학습·자기계발 재테크·부업 취미·라이프 네트워킹].each do |cat| %>
        <% target_cat = (current_category == cat ? nil : cat) %>
        <%= link_to cat, gatherings_path(request.query_parameters.merge(category: target_cat)), class: "px-4 py-2.5 rounded-xl text-xs font-black transition-all border #{current_category == cat ? 'bg-orange-600 text-white border-orange-600 shadow-md shadow-orange-600/20' : 'bg-white text-slate-500 border-slate-200 hover:border-orange-200 hover:text-orange-600'}" %>
      <% end %>
    </div>

    <div class="flex items-center gap-2 shrink-0">
      <%= link_to new_gathering_path, class: "px-6 py-2.5 bg-orange-600 text-white rounded-xl font-black text-xs hover:bg-orange-700 transition-all shadow-md shadow-orange-200 flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4v16m8-8H4"/></svg>
        모임 만들기
      <% end %>
    </div>
  </div>

  <!-- Gatherings Grid -->
  <div class="space-y-8">
    <div class="flex items-end justify-between px-2">
      <div class="space-y-2">
        <h2 class="text-3xl font-black text-slate-900 flex items-center gap-3">
          <span class="w-10 h-10 rounded-2xl bg-orange-50 flex items-center justify-center text-xl">🎯</span>
          <%= @title %>
        </h2>
        <p class="text-sm font-bold text-slate-400 ml-14"><%= @description %></p>
      </div>
    </div>

    <% if @gatherings.empty? %>
      <div class="py-20 text-center space-y-4 bg-slate-50 rounded-[40px] border border-dashed border-slate-200">
        <div class="w-16 h-16 bg-slate-100 rounded-full flex items-center justify-center mx-auto text-3xl">🔍</div>
        <div class="space-y-1">
          <p class="text-xl font-black text-slate-900">조건에 맞는 모임이 없습니다.</p>
          <p class="text-sm font-bold text-slate-400">필터를 변경하거나 새로운 모임을 만들어보세요!</p>
        </div>
        <div class="pt-4">
          <%= link_to new_gathering_path, class: "inline-block px-6 py-3 bg-orange-600 text-white rounded-xl font-black text-sm hover:bg-orange-700 transition-all shadow-lg shadow-orange-200" do %>
            첫 모임 만들기
          <% end %>
        </div>
      </div>
    <% else %>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4 md:gap-6">
        <% @gatherings.each do |gathering| %>
          <% sl = gathering.status_label %>
          <% is_joined = @joined_gathering_ids.include?(gathering.id) %>
          <% is_host = current_user && gathering.host_id == current_user.id %>
          <% theme_border = "border-orange-400" %>

          <%= link_to challenge_path(gathering), class: "bg-white rounded-[24px] overflow-hidden border-2 #{theme_border} shadow-sm hover:shadow-xl transition-all cursor-pointer group flex flex-col h-full hover:-translate-y-1 duration-300" do %>
            <div class="relative aspect-square overflow-hidden shrink-0">
              <img src="<%= gathering.thumbnail_url %>" class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-700" alt="">
              <div class="absolute top-3 left-3 flex flex-wrap gap-1.5">
                <span class="px-2 py-1 rounded-lg text-[9px] font-black uppercase <%= sl[:class].gsub('shadow-lg', '').gsub(/shadow-\w+-\d+\/\d+/, '') %>"><%= sl[:text] %></span>
                <% if is_host %>
                  <span class="bg-indigo-600 text-white px-2 py-1 rounded-lg text-[9px] font-black border border-white/20 shadow-md">HOST</span>
                <% elsif is_joined %>
                  <span class="bg-emerald-500 text-white px-2 py-1 rounded-lg text-[9px] font-black border border-white/20 shadow-md">JOINED</span>
                <% end %>
                <% if gathering.online_meeting_link.present? %>
                  <span class="bg-blue-600 text-white px-2 py-1 rounded-lg text-[9px] font-black uppercase shadow-sm">온라인</span>
                <% elsif gathering.meeting_info.present? %>
                  <span class="bg-orange-600 text-white px-2 py-1 rounded-lg text-[9px] font-black uppercase shadow-sm">오프라인</span>
                <% end %>
              </div>
            </div>
            <div class="p-4 space-y-2 flex flex-col flex-1">
              <div class="space-y-1 flex-1">
                <h4 class="font-black text-slate-900 text-sm md:text-base leading-tight line-clamp-2 group-hover:text-orange-600 transition-colors"><%= gathering.title %></h4>
                <p class="text-[10px] text-slate-500 line-clamp-1" title="<%= gathering.summary %>"><%= gathering.summary %></p>
              </div>
              <div class="space-y-2 mt-auto">
                <% if gathering.meeting_info.present? %>
                  <div class="flex items-center gap-1 text-[10px] text-slate-400">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                    <span class="truncate"><%= gathering.meeting_info.place_name %></span>
                  </div>
                <% end %>
                <div class="flex items-center justify-between">
                  <span class="text-[10px] font-black text-orange-600"><%= gathering.cost_display_text %></span>
                  <% if gathering.recruitment_d_day.present? %>
                    <span class="text-[9px] font-black text-rose-500">D-<%= gathering.recruitment_d_day %></span>
                  <% end %>
                </div>
                <div class="flex items-center justify-between text-[9px] font-bold text-slate-400 border-t border-slate-50 pt-2">
                  <span class="flex items-center gap-1">
                    <%= gathering.current_participants %>명 참여
                  </span>
                  <% if gathering.start_date.present? %>
                    <span><%= gathering.start_date.strftime('%m/%d') %></span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
