<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-indigo-50/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Header -->
    <header class="mb-12">
      <div class="flex items-center justify-between">
        <div>
          <%= link_to routine_club_path(@routine_club), class: "inline-flex items-center gap-2 text-slate-600 hover:text-slate-900 font-bold transition-colors mb-4" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            클럽으로 돌아가기
          <% end %>
          <h1 class="text-4xl font-black text-slate-900">클럽 관리</h1>
          <p class="text-lg text-slate-600 font-medium mt-2"><%= @routine_club.title %></p>
        </div>
        
        <div class="flex gap-3">
          <%= link_to "클럽 수정", edit_routine_club_path(@routine_club), class: "px-6 py-3 bg-slate-100 text-slate-700 rounded-2xl font-black hover:bg-slate-200 transition-colors" %>
        </div>
      </div>
    </header>

    <!-- Stats Overview -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-12">
      <div class="bg-white border border-slate-200 rounded-3xl p-6">
        <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">총 멤버</p>
        <p class="text-4xl font-black text-indigo-600"><%= @routine_club.current_members %></p>
        <p class="text-sm text-slate-500 font-medium mt-1">/ <%= @routine_club.max_members %>명</p>
      </div>
      
      <div class="bg-white border border-slate-200 rounded-3xl p-6">
        <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">입금 대기</p>
        <p class="text-4xl font-black text-amber-600"><%= @pending_payments.count %></p>
        <p class="text-sm text-slate-500 font-medium mt-1">확인 필요</p>
      </div>
      
      <div class="bg-white border border-slate-200 rounded-3xl p-6">
        <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">평균 출석률</p>
        <p class="text-4xl font-black text-emerald-600">
          <%= @routine_club.average_attendance_rate.to_i %>%
        </p>
      </div>
      
      <div class="bg-white border border-slate-200 rounded-3xl p-6">
        <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">경고 발생</p>
        <p class="text-4xl font-black text-orange-600"><%= @routine_club.total_penalties %></p>
        <p class="text-sm text-slate-500 font-medium mt-1">총 경고 횟수</p>
      </div>
    </div>

    <!-- Tabs -->
    <div class="mb-8 overflow-x-auto pb-2">
      <div class="bg-white border border-slate-200 rounded-3xl p-2 inline-flex gap-2 min-w-max">
        <button onclick="switchManageTab('monthly')" 
                id="manage-tab-monthly"
                class="manage-tab-btn px-4 md:px-6 py-2 md:py-3 rounded-2xl font-black text-xs md:text-sm transition-all bg-indigo-600 text-white whitespace-nowrap">
          월간 관리
        </button>
        <button onclick="switchManageTab('members')" 
                id="manage-tab-members"
                class="manage-tab-btn px-4 md:px-6 py-2 md:py-3 rounded-2xl font-black text-xs md:text-sm transition-all text-slate-400 hover:text-slate-600 whitespace-nowrap">
          멤버 관리
        </button>
        <button onclick="switchManageTab('penalties')" 
                id="manage-tab-penalties"
                class="manage-tab-btn px-4 md:px-6 py-2 md:py-3 rounded-2xl font-black text-xs md:text-sm transition-all text-slate-400 hover:text-slate-600 whitespace-nowrap">
          패널티 관리
        </button>
        <button onclick="switchManageTab('pending')" 
                id="manage-tab-pending"
                class="manage-tab-btn px-4 md:px-6 py-2 md:py-3 rounded-2xl font-black text-xs md:text-sm transition-all text-slate-400 hover:text-slate-600 whitespace-nowrap">
          입금 대기 <% if @pending_payments.any? %><span class="ml-1 bg-white/20 px-1.5 md:px-2 py-0.5 rounded-full text-xs"><%= @pending_payments.count %></span><% end %>
        </button>
        <button onclick="switchManageTab('expiring')" 
                id="manage-tab-expiring"
                class="manage-tab-btn px-4 md:px-6 py-2 md:py-3 rounded-2xl font-black text-xs md:text-sm transition-all text-slate-400 hover:text-slate-600 relative whitespace-nowrap">
          마감 임박
          <% expiring_count = @members.select { |m| (m.membership_end_date - Date.current).to_i.between?(0, 14) }.count %>
          <% if expiring_count > 0 %>
            <span class="absolute -top-1 -right-1 w-5 h-5 bg-orange-500 text-white rounded-full text-[10px] flex items-center justify-center border-2 border-white"><%= expiring_count %></span>
          <% end %>
        </button>
        <button onclick="switchManageTab('settings')" 
                id="manage-tab-settings"
                class="manage-tab-btn px-4 md:px-6 py-2 md:py-3 rounded-2xl font-black text-xs md:text-sm transition-all text-slate-400 hover:text-slate-600 whitespace-nowrap">
          설정 관리
        </button>
        <button onclick="switchManageTab('community')" 
                id="manage-tab-community"
                class="manage-tab-btn px-4 md:px-6 py-2 md:py-3 rounded-2xl font-black text-xs md:text-sm transition-all text-slate-400 hover:text-slate-600 whitespace-nowrap">
          커뮤니티 관리
        </button>
      </div>
    </div>

    <!-- Pending Payments Tab -->
    <div id="manage-content-pending" class="manage-tab-content hidden">
      <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-black text-slate-900 mb-6">입금 확인 대기</h2>
        
        <% if @pending_payments.any? %>
          <div class="space-y-4">
            <% @pending_payments.each do |membership| %>
              <div class="bg-amber-50 border-2 border-amber-200 rounded-3xl p-4 md:p-6">
                <div class="flex flex-col lg:flex-row items-start gap-4 lg:gap-6">
                  <div class="flex items-start gap-3 md:gap-4 flex-1 w-full">
                    <div class="w-12 h-12 md:w-16 md:h-16 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center text-white text-xl md:text-2xl font-black flex-shrink-0">
                      <%= membership.user.nickname[0].upcase %>
                    </div>
                    
                    <div class="flex-1 min-w-0">
                      <h3 class="text-lg md:text-xl font-black text-slate-900 mb-3">
                        <%= membership.user.nickname %>
                      </h3>
                      
                      <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 md:gap-4 mb-4">
                        <div>
                          <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-1">입금자명</p>
                          <p class="text-sm font-bold text-slate-700 truncate"><%= membership.depositor_name %></p>
                        </div>
                        <div>
                          <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-1">입금액</p>
                          <p class="text-sm font-bold text-slate-700">
                            <%= number_to_currency(membership.paid_amount, unit: "₩", precision: 0) %>
                          </p>
                        </div>
                        <div>
                          <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-1">신청일</p>
                          <p class="text-sm font-bold text-slate-700">
                            <%= membership.created_at.strftime("%Y-%m-%d %H:%M") %>
                          </p>
                        </div>
                        <div>
                          <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-1">이메일</p>
                          <p class="text-sm font-bold text-slate-700 truncate" title="<%= membership.user.email %>"><%= membership.user.email %></p>
                        </div>
                        <div class="sm:col-span-2">
                          <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-1">연락처</p>
                          <p class="text-sm font-black text-emerald-600"><%= membership.contact_info.presence || "미입력" %></p>
                        </div>
                      </div>
                      
                      <div class="bg-white border border-amber-200 rounded-2xl p-3 md:p-4">
                        <p class="text-xs font-black text-amber-900 mb-2">입금 계좌 정보</p>
                        <p class="text-xs md:text-sm text-amber-700 font-medium break-all">
                          <%= @routine_club.bank_name %> <%= @routine_club.account_number %> (예금주: <%= @routine_club.account_holder %>)
                        </p>
                      </div>
                    </div>
                  </div>
                  
                  <div class="flex flex-row lg:flex-col gap-2 w-full lg:w-auto">
                    <%= button_to "승인", confirm_payment_routine_club_path(@routine_club, member_id: membership.id), method: :post, class: "flex-1 lg:flex-none px-4 md:px-6 py-3 bg-emerald-600 text-white rounded-2xl font-black text-sm hover:bg-emerald-700 transition-colors whitespace-nowrap", data: { confirm: "#{membership.user.nickname}님의 입금을 승인하시겠습니까?" } %>
                    
                    <%= button_to "거부", reject_payment_routine_club_path(@routine_club, member_id: membership.id), method: :post, class: "flex-1 lg:flex-none px-4 md:px-6 py-3 bg-slate-100 text-slate-600 rounded-2xl font-black text-sm hover:bg-slate-200 transition-colors whitespace-nowrap", data: { confirm: "#{membership.user.nickname}님의 입금을 거부하시겠습니까?" } %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-slate-50 rounded-3xl p-20 text-center">
            <div class="text-6xl mb-4 opacity-20">✅</div>
            <p class="text-slate-400 font-bold">입금 확인 대기 중인 멤버가 없습니다</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Performance Management Tab -->
    <div id="manage-content-monthly" class="manage-tab-content space-y-6">
      <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm" data-controller="performance-toggle">
        <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 mb-10">
          <div class="flex items-center gap-4">
            <div class="w-14 h-14 rounded-2xl bg-indigo-600 flex items-center justify-center text-3xl shadow-lg shadow-indigo-100">📊</div>
            <div>
              <h2 class="text-2xl font-black text-slate-900">퍼포먼스 리포트</h2>
              <p class="text-sm text-slate-400 font-bold uppercase tracking-widest mt-1">멤버별 활동 및 성장 데이터</p>
            </div>
          </div>
          
          <!-- Mode Toggle -->
          <div class="inline-flex bg-slate-100 p-1.5 rounded-2xl border border-slate-200">
            <button onclick="switchPerfMode('monthly')" id="perf-btn-monthly" class="perf-mode-btn px-6 py-2.5 rounded-xl font-black text-sm transition-all bg-white text-indigo-600 shadow-sm">
              <%= Time.current.month %>월 현황
            </button>
            <button onclick="switchPerfMode('cumulative')" id="perf-btn-cumulative" class="perf-mode-btn px-6 py-2.5 rounded-xl font-black text-sm transition-all text-slate-400 hover:text-slate-600">
              전체 누적
            </button>
          </div>
        </div>

        <!-- Monthly List -->
        <div id="perf-list-monthly" class="perf-list-container over overflow-x-auto">
          <table class="w-full text-left border-collapse min-w-[800px]">
            <thead>
              <tr class="bg-slate-50/50 border-b border-slate-100">
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest">순위</th>
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest">멤버</th>
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest text-center">월간 성공률</th>
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest text-center">결석/경고</th>
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest text-right">관리</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-50">
              <% if @monthly_sorted.any? %>
                <% @monthly_sorted.each_with_index do |stats, index| %>
                  <% 
                    is_top = stats[:monthly_rate] >= 90
                    is_warning = stats[:monthly_rate] < 60 || stats[:membership].penalty_count > 0
                    row_bg = is_top ? 'bg-emerald-50/20' : (is_warning ? 'bg-orange-50/20' : 'bg-white')
                  %>
                  <tr class="<%= row_bg %> hover:bg-slate-50/80 transition-colors">
                    <td class="px-8 py-6">
                      <span class="text-lg font-black <%= index < 3 ? 'text-indigo-600' : 'text-slate-400' %>">#<%= index + 1 %></span>
                    </td>
                    <td class="px-8 py-6">
                      <div class="flex items-center gap-4">
                        <div class="w-10 h-10 rounded-xl bg-slate-100 flex items-center justify-center font-black text-slate-500 text-xs border border-slate-200">
                          <%= stats[:membership].user.nickname[0].upcase %>
                        </div>
                        <div>
                          <p class="font-black text-slate-900"><%= stats[:membership].user.nickname %></p>
                          <p class="text-[10px] font-bold text-slate-400"><%= stats[:membership].user.email %></p>
                        </div>
                      </div>
                    </td>
                    <td class="px-8 py-6 text-center">
                      <div class="inline-flex flex-col items-center">
                        <span class="text-xl font-black <%= is_top ? 'text-emerald-600' : (is_warning ? 'text-orange-600' : 'text-slate-900') %>">
                          <%= stats[:monthly_rate].to_i %>%
                        </span>
                        <div class="w-16 h-1 mt-1.5 bg-slate-100 rounded-full overflow-hidden">
                          <div class="h-full <%= is_top ? 'bg-emerald-500' : (is_warning ? 'bg-orange-500' : 'bg-slate-400') %>" style="width: <%= stats[:monthly_rate] %>%"></div>
                        </div>
                      </div>
                    </td>
                    <td class="px-8 py-6 text-center">
                      <div class="flex flex-col gap-1">
                        <span class="text-xs font-bold text-slate-600">결석 <%= stats[:monthly_absence] %>일</span>
                        <span class="text-[10px] font-black <%= stats[:membership].penalty_count > 0 ? 'text-orange-600' : 'text-slate-300' %>">경고 <%= stats[:membership].penalty_count %>회</span>
                      </div>
                    </td>
                    <td class="px-8 py-6 text-right">
                      <div class="flex items-center justify-end gap-2">
                        <% if stats[:membership].contact_info.present? %>
                          <%= link_to "https://wa.me/#{stats[:membership].contact_info.to_s.gsub(/[^0-9]/, '')}", class: "p-2 bg-indigo-50 text-indigo-600 rounded-lg hover:bg-indigo-100 transition-all", target: "_blank", title: "개인 메시지" do %>
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
                          <% end %>
                        <% end %>
                        <button class="p-2 bg-slate-50 text-slate-400 rounded-lg hover:bg-orange-50 hover:text-orange-600 transition-all" title="경고 부여">
                          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
                        </button>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr><td colspan="5" class="px-8 py-20 text-center text-slate-400 font-bold">데이터가 없습니다.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div>

        <!-- Cumulative List -->
        <div id="perf-list-cumulative" class="perf-list-container hidden overflow-x-auto">
          <table class="w-full text-left border-collapse min-w-[800px]">
            <thead>
              <tr class="bg-slate-50/50 border-b border-slate-100">
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest">성장 순위</th>
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest">멤버</th>
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest text-center">그로스 포인트</th>
                <th class="px-8 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest text-center">전체 성공률</th>
                <th class="px-10 py-5 text-[10px] font-black text-slate-400 uppercase tracking-widest text-right">관리</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-slate-50">
              <% if @cumulative_sorted.any? %>
                <% @cumulative_sorted.each_with_index do |stats, index| %>
                  <tr class="hover:bg-indigo-50/30 transition-colors">
                    <td class="px-8 py-6">
                      <div class="flex items-center gap-2">
                        <% if index == 0 %><span class="text-xl">🏆</span><% end %>
                        <span class="text-lg font-black <%= index < 3 ? 'text-indigo-600' : 'text-slate-400' %>">#<%= index + 1 %></span>
                      </div>
                    </td>
                    <td class="px-8 py-6 text-indigo-600">
                       <div class="flex items-center gap-4">
                        <div class="w-10 h-10 rounded-xl bg-indigo-50 flex items-center justify-center font-black text-indigo-500 text-xs border border-indigo-100">
                          <%= stats[:membership].user.nickname[0].upcase %>
                        </div>
                        <p class="font-black text-slate-900"><%= stats[:membership].user.nickname %></p>
                      </div>
                    </td>
                    <td class="px-8 py-6 text-center">
                      <span class="px-4 py-1.5 bg-indigo-600 text-white rounded-full text-sm font-black shadow-lg shadow-indigo-100">
                        <%= number_with_delimiter(stats[:cumulative_points]) %> P
                      </span>
                    </td>
                    <td class="px-8 py-6 text-center">
                      <span class="text-lg font-black text-slate-700"><%= stats[:cumulative_rate].to_i %>%</span>
                      <p class="text-[10px] font-bold text-slate-400">전체 <%= stats[:membership].attendance_count %>일 성공</p>
                    </td>
                    <td class="px-8 py-6 text-right">
                       <button class="px-4 py-2 bg-slate-900 text-white rounded-xl font-black text-xs hover:bg-slate-800 transition-all">상세보기</button>
                    </td>
                  </tr>
                <% end %>
              <% else %>
                <tr><td colspan="5" class="px-8 py-20 text-center text-slate-400 font-bold">데이터가 없습니다.</td></tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Expiring Tab -->
    <div id="manage-content-expiring" class="manage-tab-content hidden">
      <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-black text-slate-900 mb-6">마감 임박 유저 (14일 이내)</h2>
        
        <% expiring_members = @members.select { |m| (m.membership_end_date - Date.current).to_i.between?(0, 14) }.sort_by(&:membership_end_date) %>
        <% if expiring_members.any? %>
          <div class="space-y-4">
            <% expiring_members.each do |membership| %>
              <div class="bg-orange-50 border border-orange-200 rounded-3xl p-6">
                 <div class="flex items-center justify-between">
                    <div class="flex items-center gap-4">
                       <div class="w-12 h-12 rounded-2xl bg-white flex items-center justify-center font-black text-slate-900 shadow-sm">
                          <%= membership.user.nickname[0].upcase %>
                       </div>
                       <div>
                          <p class="font-black text-slate-900"><%= membership.user.nickname %></p>
                          <p class="text-xs font-bold text-orange-600">마감일까지 <%= (membership.membership_end_date - Date.current).to_i %>일 남음</p>
                       </div>
                    </div>
                    <div class="text-right">
                       <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">만료 예정일</p>
                       <p class="text-sm font-black text-slate-700"><%= membership.membership_end_date.strftime("%Y년 %m월 %d일") %></p>
                    </div>
                 </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="bg-slate-50 rounded-3xl p-20 text-center">
            <p class="text-slate-400 font-bold">마감이 임박한 유저가 없습니다.</p>
          </div>
        <% end %>
      </div>
    </div>
    <div id="manage-content-penalties" class="manage-tab-content hidden">
      <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
        <h2 class="text-2xl font-black text-slate-900 mb-6">패널티 관리</h2>
        
        <div class="bg-slate-50 rounded-3xl p-20 text-center">
          <div class="text-6xl mb-4 opacity-20">⚠️</div>
          <p class="text-slate-400 font-bold">패널티 기능은 곧 추가될 예정입니다</p>
        </div>
      </div>
    </div>

    <!-- Community Management Tab -->
    <div id="manage-content-community" class="manage-tab-content hidden space-y-8">
      
      <!-- Announcements Section -->
      <section class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
        <div class="flex items-center justify-between mb-8">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-amber-100 rounded-2xl flex items-center justify-center text-2xl">📢</div>
            <div>
              <h2 class="text-2xl font-black text-slate-900">공지사항 관리</h2>
              <p class="text-sm text-slate-500 font-medium">전체 멤버에게 중요 소식을 전달하세요</p>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Create Form -->
          <div class="lg:col-span-1">
            <div class="bg-slate-50 rounded-3xl p-6 border border-slate-100">
              <h3 class="text-lg font-black text-slate-900 mb-4">새 공지 등록</h3>
              <%= form_with model: [@routine_club, Announcement.new], url: routine_club_announcements_path(@routine_club), local: true, class: "space-y-4" do |f| %>
                <div>
                  <%= f.label :title, "제목", class: "block text-xs font-black text-slate-500 mb-1" %>
                  <%= f.text_field :title, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-indigo-500 focus:border-indigo-500", placeholder: "공지 제목을 입력하세요" %>
                </div>
                <div>
                  <%= f.label :content, "내용", class: "block text-xs font-black text-slate-500 mb-1" %>
                  <%= f.text_area :content, rows: 4, class: "w-full rounded-xl border-slate-200 text-sm font-medium focus:ring-indigo-500 focus:border-indigo-500", placeholder: "상세 내용을 입력하세요" %>
                </div>
                <%= f.submit "등록하기", class: "w-full py-3 bg-indigo-600 text-white rounded-xl font-black hover:bg-indigo-700 transition-colors cursor-pointer" %>
              <% end %>
            </div>
          </div>

          <!-- List -->
          <div class="lg:col-span-2 space-y-4">
            <% if @announcements.any? %>
              <% @announcements.each do |announcement| %>
                <div class="bg-white border border-slate-100 rounded-2xl p-5 flex items-start justify-between group hover:border-slate-300 transition-colors">
                  <div>
                    <div class="flex items-center gap-2 mb-1">
                      <span class="px-2 py-0.5 bg-slate-100 text-slate-500 text-[10px] font-black rounded-lg"><%= announcement.created_at.strftime("%y.%m.%d") %></span>
                      <h4 class="font-black text-slate-900"><%= announcement.title %></h4>
                    </div>
                    <p class="text-sm text-slate-500 line-clamp-2"><%= announcement.content %></p>
                  </div>
                  <%= button_to routine_club_announcement_path(@routine_club, announcement), method: :delete, data: { confirm: "정말 삭제하시겠습니까?" }, class: "p-2 text-slate-300 hover:text-red-500 transition-colors" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-12 bg-slate-50 rounded-3xl border border-dashed border-slate-200">
                <p class="text-slate-400 font-bold">등록된 공지사항이 없습니다.</p>
              </div>
            <% end %>
          </div>
        </div>
      </section>

      <!-- Gatherings Section -->
      <section class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
        <div class="flex items-center justify-between mb-8">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-emerald-100 rounded-2xl flex items-center justify-center text-2xl">🎉</div>
            <div>
              <h2 class="text-2xl font-black text-slate-900">온/오프라인 모임</h2>
              <p class="text-sm text-slate-500 font-medium">멤버들과의 교류를 위한 모임을 만드세요</p>
            </div>
          </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <!-- Create Form -->
          <div class="lg:col-span-1">
            <div class="bg-slate-50 rounded-3xl p-6 border border-slate-100">
              <h3 class="text-lg font-black text-slate-900 mb-4">새 모임 개설</h3>
              <%= form_with model: [@routine_club, RoutineClubGathering.new], url: routine_club_gatherings_path(@routine_club), local: true, class: "space-y-4" do |f| %>
                <div>
                  <%= f.label :title, "모임명", class: "block text-xs font-black text-slate-500 mb-1" %>
                  <%= f.text_field :title, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-emerald-500 focus:border-emerald-500", placeholder: "모임 이름을 입력하세요" %>
                </div>
                <div class="grid grid-cols-2 gap-2">
                  <div>
                    <%= f.label :gathering_type, "유형", class: "block text-xs font-black text-slate-500 mb-1" %>
                    <%= f.select :gathering_type, RoutineClubGathering.gathering_types.keys.map { |k| [k == 'online' ? '온라인' : '오프라인', k] }, {}, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-emerald-500 focus:border-emerald-500" %>
                  </div>
                  <div>
                    <%= f.label :max_attendees, "정원", class: "block text-xs font-black text-slate-500 mb-1" %>
                    <%= f.number_field :max_attendees, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-emerald-500 focus:border-emerald-500", placeholder: "무제한: 비워둠" %>
                  </div>
                </div>
                <div>
                  <%= f.label :gathering_at, "일시", class: "block text-xs font-black text-slate-500 mb-1" %>
                  <%= f.datetime_field :gathering_at, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-emerald-500 focus:border-emerald-500" %>
                </div>
                <div>
                  <%= f.label :location, "장소/링크", class: "block text-xs font-black text-slate-500 mb-1" %>
                  <%= f.text_field :location, class: "w-full rounded-xl border-slate-200 text-sm font-bold focus:ring-emerald-500 focus:border-emerald-500", placeholder: "주소 또는 줌 링크 등" %>
                </div>
                <div>
                  <%= f.label :description, "상세 안내", class: "block text-xs font-black text-slate-500 mb-1" %>
                  <%= f.text_area :description, rows: 3, class: "w-full rounded-xl border-slate-200 text-sm font-medium focus:ring-emerald-500 focus:border-emerald-500", placeholder: "모임에 대한 설명을 입력하세요" %>
                </div>
                <%= f.submit "개설하기", class: "w-full py-3 bg-emerald-600 text-white rounded-xl font-black hover:bg-emerald-700 transition-colors cursor-pointer" %>
              <% end %>
            </div>
          </div>

          <!-- List -->
          <div class="lg:col-span-2 space-y-4">
            <% if @gatherings.any? %>
              <% @gatherings.each do |gathering| %>
                <div class="bg-white border border-slate-100 rounded-2xl p-5 flex items-start justify-between group hover:border-emerald-200 transition-colors">
                  <div class="flex-1">
                    <div class="flex items-center gap-2 mb-2">
                      <span class="px-2 py-0.5 <%= gathering.online? ? 'bg-sky-100 text-sky-600' : 'bg-orange-100 text-orange-600' %> text-[10px] font-black rounded-lg uppercase"><%= gathering.gathering_type %></span>
                      <span class="px-2 py-0.5 bg-slate-100 text-slate-500 text-[10px] font-black rounded-lg"><%= gathering.gathering_at.strftime("%m/%d %H:%M") %></span>
                    </div>
                    <h4 class="font-black text-slate-900 text-lg mb-1"><%= gathering.title %></h4>
                    <p class="text-sm text-slate-500 mb-2"><%= gathering.location %></p>
                    <p class="text-xs text-slate-400 font-medium line-clamp-1"><%= gathering.description %></p>
                  </div>
                  <%= button_to routine_club_gathering_path(@routine_club, gathering), method: :delete, data: { confirm: "정말 삭제하시겠습니까?" }, class: "p-2 text-slate-300 hover:text-red-500 transition-colors" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-12 bg-slate-50 rounded-3xl border border-dashed border-slate-200">
                <p class="text-slate-400 font-bold">예정된 모임이 없습니다.</p>
              </div>
            <% end %>
          </div>
        </div>
      </section>
    </div>

    <!-- Settings Tab -->
    <div id="manage-content-settings" class="manage-tab-content hidden">
      <div class="space-y-6">
        <!-- General Settings -->
        <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
          <h2 class="text-2xl font-black text-slate-900 mb-6">클럽 프로필 설정</h2>
          <%= form_with model: @routine_club, url: routine_club_path(@routine_club), method: :patch, class: "space-y-6" do |f| %>
            <div class="flex items-center gap-8">
              <div class="w-24 h-24 rounded-3xl bg-slate-100 flex items-center justify-center overflow-hidden border-2 border-slate-200">
                <% if @routine_club.thumbnail.attached? %>
                  <%= image_tag @routine_club.thumbnail, class: "w-full h-full object-cover" %>
                <% else %>
                  <span class="text-4xl">💎</span>
                <% end %>
              </div>
              <div class="flex-1">
                <%= f.label :thumbnail, "클럽 섬네일 이미지", class: "block text-xs font-black text-slate-400 uppercase tracking-widest mb-2" %>
                <%= f.file_field :thumbnail, class: "block w-full text-sm text-slate-500 file:mr-4 file:py-2 file:px-4 file:rounded-xl file:border-0 file:text-xs file:font-black file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100 transition-all" %>
                <p class="text-[10px] text-slate-400 mt-2">추천 사이즈: 21:9 비율의 고해상도 이미지</p>
              </div>
            </div>
            <%= f.submit "프로필 저장", class: "px-8 py-3 bg-indigo-600 text-white rounded-2xl font-black text-sm hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-100" %>
          <% end %>
        </div>

        <!-- Account Settings -->
        <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
          <h2 class="text-2xl font-black text-slate-900 mb-6">입금 계좌 설정</h2>
          <%= form_with model: @routine_club, url: routine_club_path(@routine_club), method: :patch, class: "space-y-4" do |f| %>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
              <div>
                <%= f.label :bank_name, "은행명", class: "block text-xs font-black text-slate-400 uppercase tracking-widest mb-2" %>
                <%= f.text_field :bank_name, class: "w-full px-5 py-3 bg-slate-50 border-slate-200 rounded-2xl font-bold focus:ring-2 ring-indigo-500" %>
              </div>
              <div>
                <%= f.label :account_number, "계좌번호", class: "block text-xs font-black text-slate-400 uppercase tracking-widest mb-2" %>
                <%= f.text_field :account_number, class: "w-full px-5 py-3 bg-slate-50 border-slate-200 rounded-2xl font-bold focus:ring-2 ring-indigo-500" %>
              </div>
              <div>
                <%= f.label :account_holder, "예금주", class: "block text-xs font-black text-slate-400 uppercase tracking-widest mb-2" %>
                <%= f.text_field :account_holder, class: "w-full px-5 py-3 bg-slate-50 border-slate-200 rounded-2xl font-bold focus:ring-2 ring-indigo-500" %>
              </div>
            </div>
            <%= f.submit "계좌 정보 저장", class: "px-8 py-3 bg-slate-900 text-white rounded-2xl font-black text-sm hover:bg-slate-800 transition-colors" %>
          <% end %>
        </div>

        <!-- Reward Settings -->
        <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
          <h2 class="text-2xl font-black text-slate-900 mb-6">리워드 문구 설정</h2>
          <%= form_with model: @routine_club, url: routine_club_path(@routine_club), method: :patch, class: "space-y-6" do |f| %>
            <div>
              <%= f.label :weekly_reward_info, "위클리 보상 (명예)", class: "block text-xs font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.text_field :weekly_reward_info, placeholder: "예: 프로필 골든 오라 부여", class: "w-full px-5 py-3 bg-slate-50 border-slate-200 rounded-2xl font-bold" %>
            </div>
            <div>
              <%= f.label :monthly_reward_info, "먼슬리 보상 (쿠폰)", class: "block text-xs font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.text_field :monthly_reward_info, placeholder: "예: 스타벅스 아메리카노 기프티콘", class: "w-full px-5 py-3 bg-slate-50 border-slate-200 rounded-2xl font-bold" %>
            </div>
            <div>
              <%= f.label :season_reward_info, "시즌 최종 보상 (무료권)", class: "block text-xs font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.text_field :season_reward_info, placeholder: "예: 차기 시즌 3/2/1개월 무료 이용권", class: "w-full px-5 py-3 bg-slate-50 border-slate-200 rounded-2xl font-bold" %>
            </div>
            <%= f.submit "리워드 설정 저장", class: "px-8 py-3 bg-indigo-600 text-white rounded-2xl font-black text-sm hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-100" %>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>


<script>
  function switchManageTab(tab) {
    // Update buttons
    document.querySelectorAll('.manage-tab-btn').forEach(btn => {
      btn.classList.remove('bg-indigo-600', 'text-white');
      btn.classList.add('text-slate-400', 'hover:text-slate-600');
    });
    
    const activeBtn = document.getElementById('manage-tab-' + tab);
    activeBtn.classList.remove('text-slate-400', 'hover:text-slate-600');
    activeBtn.classList.add('bg-indigo-600', 'text-white');
    
    // Update content
    document.querySelectorAll('.manage-tab-content').forEach(content => {
      content.classList.add('hidden');
    });
    document.getElementById('manage-content-' + tab).classList.remove('hidden');
  }

  function switchPerfMode(mode) {
    // Update buttons
    document.querySelectorAll('.perf-mode-btn').forEach(btn => {
      btn.classList.remove('bg-white', 'text-indigo-600', 'shadow-sm');
      btn.classList.add('text-slate-400', 'hover:text-slate-600');
    });
    
    const activeBtn = document.getElementById('perf-btn-' + mode);
    activeBtn.classList.remove('text-slate-400', 'hover:text-slate-600');
    activeBtn.classList.add('bg-white', 'text-indigo-600', 'shadow-sm');
    
    // Update content
    document.querySelectorAll('.perf-list-container').forEach(content => {
      content.classList.add('hidden');
    });
    document.getElementById('perf-list-' + mode).classList.remove('hidden');
  }
</script>
