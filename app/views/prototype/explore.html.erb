<div class="space-y-10 pt-8">
  <!-- 1. Search Bar -->
  <div class="sticky top-0 z-10 pt-2 pb-4 bg-[#0C0B12]/80 backdrop-blur-md">
    <div class="app-glass-card flex items-center px-5 py-3.5 gap-4 border-white/5">
      <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
      <input type="text" placeholder="어떤 성장을 찾으시나요?" class="bg-transparent border-none p-0 text-sm font-bold text-white placeholder-slate-600 focus:ring-0 w-full">
    </div>
  </div>

  <!-- 2. Featured: RUFA Club Generation -->
  <% if @featured_club %>
    <section class="space-y-4">
      <div class="flex justify-between items-center px-2">
        <h3 class="text-xs font-black text-indigo-400 uppercase tracking-widest">Premium Club</h3>
        <span class="app-pill app-pill-live">모집 중</span>
      </div>
      
      <%= link_to routine_club_path(@featured_club), class: "block group relative h-56 rounded-[40px] overflow-hidden shadow-2xl active:scale-95 transition-all" do %>
        <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/20 to-transparent z-10"></div>
        <img src="https://images.unsplash.com/photo-1499750310107-5fef28a66643?q=80&w=870&auto=format&fit=crop" class="absolute inset-0 w-full h-full object-cover transition-transform duration-1000 group-hover:scale-110">
        
        <div class="absolute inset-0 z-20 p-8 flex flex-col justify-end">
          <p class="text-[10px] font-black tracking-[0.2em] text-white/60 mb-2 uppercase">Together, Always</p>
          <h3 class="text-2xl font-black text-white leading-tight">루파 클럽 <%= @featured_club.generation_number %>기<br/><span class="text-indigo-400">성장 메이트 모집</span></h3>
          <div class="mt-4 flex items-center gap-2">
            <span class="px-3 py-1 bg-white/20 backdrop-blur-md rounded-full text-[10px] font-bold text-white border border-white/10">#미라클모닝</span>
            <span class="px-3 py-1 bg-white/20 backdrop-blur-md rounded-full text-[10px] font-bold text-white border border-white/10">#인텐시브</span>
          </div>
        </div>
      <% end %>
    </section>
  <% end %>

  <!-- 3. Category Chips -->
  <section class="flex gap-2 overflow-x-auto hide-scrollbar -mx-4 px-4">
    <% ['#전체', '#미라클모닝', '#오운완', '#독서기록', '#명상', '#갓생'].each_with_index do |tag, i| %>
      <button class="shrink-0 px-6 py-3 rounded-2xl font-bold text-xs <%= i == 0 ? 'bg-indigo-500 text-white shadow-lg shadow-indigo-500/30' : 'app-glass-card text-slate-500 border-white/5' %> active:scale-95 transition-all">
        <%= tag %>
      </button>
    <% end %>
  </section>

  <!-- 4. Active Challenges Grid -->
  <section class="space-y-5">
    <div class="flex justify-between items-end px-1">
      <div class="space-y-1">
        <h3 class="text-lg font-black text-white">성장을 돕는 챌린지</h3>
        <p class="text-[10px] font-bold text-slate-600 uppercase tracking-widest">Active Challenges</p>
      </div>
      <%= link_to "더보기", challenges_path, class: "text-[11px] font-bold text-indigo-400 p-2" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <% @active_challenges.each do |challenge| %>
        <%= link_to challenge_path(challenge, source: 'prototype'), class: "group relative app-glass-card border-white/5 bg-white/[0.02] overflow-hidden active:scale-95 transition-all block" do %>
          <div class="aspect-[4/3] relative overflow-hidden">
            <img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110">
            <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"></div>
            <div class="absolute top-2 left-2 flex gap-1">
              <span class="px-2 py-0.5 bg-indigo-500/80 backdrop-blur-md rounded-lg text-[8px] font-black text-white uppercase tracking-tighter">ONLINE</span>
            </div>
            <div class="absolute bottom-2 left-2 right-2 flex justify-between items-end">
               <div class="flex items-center gap-1">
                 <div class="w-1 h-1 rounded-full bg-emerald-500"></div>
                 <span class="text-[9px] font-bold text-white/80"><%= challenge.current_participants %>명 참여 중</span>
               </div>
            </div>
          </div>
          <div class="p-4 space-y-2">
            <h4 class="text-sm font-black text-white line-clamp-1 group-hover:text-indigo-400 transition-colors"><%= challenge.title %></h4>
            <div class="flex items-center justify-between gap-2">
              <p class="text-[10px] font-bold text-slate-500 line-clamp-1"><%= challenge.summary %></p>
              <span class="text-[10px] font-black text-indigo-400 whitespace-nowrap shrink-0"><%= number_with_delimiter(challenge.amount) %>원</span>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </section>

  <!-- 5. Gatherings (Online & Offline Mix) -->
  <section class="space-y-5 pb-10">
    <div class="flex justify-between items-end px-1">
      <div class="space-y-1">
        <h3 class="text-lg font-black text-white">다양한 모임 & 이벤트</h3>
        <p class="text-[10px] font-bold text-slate-600 uppercase tracking-widest">Gatherings & Live</p>
      </div>
    </div>

    <div class="flex gap-4 overflow-x-auto hide-scrollbar -mx-4 px-4">
      <% @gatherings.each do |gathering| %>
        <%= link_to challenge_path(gathering, source: 'prototype'), class: "shrink-0 w-72 h-44 app-glass-card border-none bg-gradient-to-br from-slate-800 to-slate-900 overflow-hidden relative group active:scale-95 transition-all block" do %>
          <!-- Pattern Overlay -->
          <div class="absolute inset-0 opacity-10 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')]"></div>
          
          <div class="absolute inset-0 p-6 flex flex-col justify-between z-10">
            <div class="flex justify-between items-start">
              <div class="w-10 h-10 rounded-2xl bg-white/10 flex items-center justify-center text-xl">
                <%= gathering.mode_offline? ? '📍' : '📽️' %>
              </div>
              <span class="px-3 py-1 bg-white/10 rounded-full text-[9px] font-black text-white/60 border border-white/5 uppercase tracking-widest">
                <%= gathering.mode_offline? ? 'Offline' : 'Online' %>
              </span>
            </div>
            
            <div class="space-y-2">
              <h4 class="text-base font-black text-white group-hover:text-amber-400 transition-colors line-clamp-1"><%= gathering.title %></h4>
              <div class="flex items-center justify-between gap-3">
                <p class="text-[10px] font-bold text-slate-400 truncate"><%= gathering.start_date.strftime("%m월 %d일") %> • <%= gathering.meeting_info&.place_name || "어디서나 참여" %></p>
                <div class="flex items-center gap-2 whitespace-nowrap shrink-0">
                  <span class="text-[10px] font-black text-amber-500"><%= gathering.amount > 0 ? "#{number_with_delimiter(gathering.amount)}원" : "무료" %></span>
                  <span class="w-1 h-1 rounded-full bg-white/20"></span>
                  <span class="text-[9px] font-bold text-slate-500">모집 중</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Background Glow -->
          <div class="absolute -right-10 -bottom-10 w-32 h-32 <%= gathering.mode_offline? ? 'bg-amber-500/10' : 'bg-indigo-500/10' %> blur-3xl rounded-full group-hover:scale-150 transition-transform duration-1000"></div>
        <% end %>
      <% end %>

      <!-- Discovery more card -->
      <div class="shrink-0 w-44 h-44 app-glass-card flex flex-col items-center justify-center gap-3 border-dashed border-white/10 opacity-60">
        <div class="w-12 h-12 rounded-full bg-white/5 flex items-center justify-center">
          <svg class="w-6 h-6 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
        </div>
        <p class="text-[11px] font-bold text-slate-500">모두 보기</p>
      </div>
    </div>
  </section>
</div>
