<div class="max-w-7xl mx-auto">
  <header class="flex flex-col md:flex-row justify-between items-start md:items-end gap-6 mb-12">
    <div>
      <div class="flex items-center gap-3 mb-2">
        <a href="/admin" class="p-2 bg-white/5 hover:bg-white/10 rounded-lg text-slate-400 hover:text-white transition-all">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/></svg>
        </a>
        <h1 class="text-4xl font-black tracking-tight">User Management</h1>
      </div>
      <p class="text-slate-400 font-medium">총 <%= @total_count %>명의 사용자가 이용 중입니다.</p>
    </div>

    <div class="flex flex-wrap items-center gap-3">
      <%= form_with url: admin_users_path, method: :get, class: "flex gap-2" do |f| %>
        <div class="relative">
          <svg class="w-4 h-4 absolute left-4 top-1/2 -translate-y-1/2 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
          <%= f.text_field :query, value: params[:query], placeholder: "닉네임 또는 이메일 검색", 
              class: "pl-11 pr-4 py-3 bg-white/5 border border-white/10 rounded-2xl text-sm focus:border-indigo-500 focus:ring-0 transition-all w-64 text-white" %>
        </div>
        <%= f.select :role, [["전체 역할", ""], ["일반 유저", "user"], ["클럽 관리자", "club_admin"], ["총괄 관리자", "super_admin"]], { selected: params[:role] }, 
            class: "px-4 py-3 bg-white/5 border border-white/10 rounded-2xl text-sm focus:border-indigo-500 focus:ring-0 text-white" %>
        <%= f.submit "Filter", class: "px-6 py-3 bg-indigo-600 hover:bg-indigo-500 rounded-2xl text-sm font-black transition-all shadow-lg shadow-indigo-600/20 cursor-pointer" %>
      <% end %>
    </div>
  </header>

  <!-- User Table Card -->
  <div class="admin-glass rounded-[32px] overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full text-left border-collapse">
        <thead>
          <tr class="text-[10px] uppercase tracking-[0.2em] text-slate-500 border-b border-white/5">
            <th class="px-8 py-6 font-black">User Profile</th>
            <th class="px-8 py-6 font-black text-center">Role</th>
            <th class="px-8 py-6 font-black text-center">Level</th>
            <th class="px-8 py-6 font-black text-center">Wallet</th>
            <th class="px-8 py-6 font-black">Status</th>
            <th class="px-8 py-6 font-black text-right">Actions</th>
          </tr>
        </thead>
        <tbody class="divide-y divide-white/5">
          <% @users.each do |user| %>
            <tr class="group hover:bg-white/[0.02] transition-colors <%= 'opacity-50' if user.deleted_at.present? %>">
              <td class="px-8 py-6">
                <div class="flex items-center gap-4">
                  <div class="w-12 h-12 rounded-2xl bg-gradient-to-br from-slate-800 to-slate-900 border border-white/5 flex items-center justify-center font-black text-indigo-400 text-lg shadow-inner group-hover:scale-110 transition-transform duration-500">
                    <%= user.nickname.first %>
                  </div>
                  <div>
                    <p class="text-[15px] font-black group-hover:text-indigo-400 transition-colors"><%= user.nickname %></p>
                    <p class="text-xs text-slate-500 font-medium"><%= user.email %></p>
                  </div>
                </div>
              </td>
              <td class="px-8 py-6 text-center">
                <span class="px-3 py-1.5 rounded-xl text-[10px] font-black uppercase tracking-wider 
                  <%= case user.role
                      when 'super_admin' then 'bg-indigo-500/20 text-indigo-400 border border-indigo-500/30'
                      when 'club_admin' then 'bg-emerald-500/20 text-emerald-400 border border-emerald-500/30'
                      else 'bg-slate-500/10 text-slate-400 border border-white/10'
                      end %>">
                  <%= user.role %>
                </span>
              </td>
              <td class="px-8 py-6 text-center">
                <div class="inline-flex flex-col items-center">
                  <span class="text-sm font-black text-white">Lv.<%= user.level %></span>
                  <div class="w-12 h-1 bg-white/10 rounded-full mt-1 overflow-hidden">
                    <div class="h-full bg-indigo-500" style="width: 45%"></div>
                  </div>
                </div>
              </td>
              <td class="px-8 py-6 text-center">
                <span class="text-sm font-bold text-slate-300">₩<%= number_with_delimiter user.wallet_balance %></span>
              </td>
              <td class="px-8 py-6">
                <% if user.deleted_at.nil? %>
                  <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-emerald-500/10 border border-emerald-500/20 text-emerald-400">
                    <div class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></div>
                    <span class="text-[10px] font-black uppercase tracking-widest">Active</span>
                  </div>
                <% else %>
                  <div class="inline-flex items-center gap-2 px-3 py-1.5 rounded-full bg-red-500/10 border border-red-500/20 text-red-400">
                    <span class="text-[10px] font-black uppercase tracking-widest">Suspended</span>
                  </div>
                <% end %>
              </td>
              <td class="px-8 py-6 text-right">
                <div class="flex justify-end gap-2">
                  <%= link_to admin_user_path(user), class: "p-2.5 bg-white/5 hover:bg-white/10 rounded-xl text-slate-400 hover:text-white transition-all shadow-sm" do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/></svg>
                  <% end %>
                  <%= button_to toggle_status_admin_user_path(user), method: :patch, 
                      class: "p-2.5 bg-white/5 hover:bg-red-500/20 rounded-xl text-slate-400 hover:text-red-400 transition-all shadow-sm",
                      data: { turbo_confirm: "#{user.nickname}님의 상태를 변경하시겠습니까?" } do %>
                    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728L5.636 5.636"/></svg>
                  <% end %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Placeholder -->
    <div class="p-8 border-t border-white/5 flex justify-between items-center text-slate-500">
      <p class="text-xs font-medium">Showing <%= @users.count %> users of <%= @total_count %></p>
      <div class="flex gap-2">
        <button class="px-4 py-2 bg-white/5 rounded-xl text-xs font-bold disabled:opacity-30" disabled>Previous</button>
        <button class="px-4 py-2 bg-white/5 rounded-xl text-xs font-bold hover:bg-white/10 transition-all">Next</button>
      </div>
    </div>
  </div>
</div>
