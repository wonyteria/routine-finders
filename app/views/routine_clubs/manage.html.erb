<script>
  function switchManageTab(tab) {
    // Update buttons
    document.querySelectorAll('.manage-tab-btn').forEach(btn => {
      btn.classList.remove('bg-indigo-600', 'text-white');
      btn.classList.add('text-slate-400', 'hover:text-slate-600');
    });
    
    const activeBtn = document.getElementById('manage-tab-' + tab);
    activeBtn.classList.remove('text-slate-400', 'hover:text-slate-600');
    activeBtn.classList.add('bg-indigo-600', 'text-white');
    
    // Update content
    document.querySelectorAll('.manage-tab-content').forEach(content => {
      content.classList.add('hidden');
    });
    document.getElementById('manage-content-' + tab).classList.remove('hidden');

    // Update URL
    const url = new URL(window.location);
    url.searchParams.set('tab', tab);
    window.history.replaceState({}, '', url);
  }

  function switchPerfMode(mode) {
    // Update buttons
    document.querySelectorAll('.perf-mode-btn').forEach(btn => {
      btn.classList.remove('bg-white', 'text-indigo-600', 'shadow-sm');
      btn.classList.add('text-slate-400', 'hover:text-slate-600');
    });
    
    const activeBtn = document.getElementById('perf-btn-' + mode);
    activeBtn.classList.remove('text-slate-400', 'hover:text-slate-600');
    activeBtn.classList.add('bg-white', 'text-indigo-600', 'shadow-sm');
    
    // Update content
    document.querySelectorAll('.perf-list-container').forEach(content => {
      content.classList.add('hidden');
    });
    document.getElementById('perf-list-' + mode).classList.remove('hidden');
  }

  function switchCommunityMode(mode) {
    // Update buttons
    document.querySelectorAll('.community-mode-btn').forEach(btn => {
      btn.classList.remove('bg-white', 'text-slate-900', 'shadow-sm');
      btn.classList.add('text-slate-500');
    });
    document.getElementById(`community-btn-${mode}`).classList.remove('text-slate-500');
    document.getElementById(`community-btn-${mode}`).classList.add('bg-white', 'text-slate-900', 'shadow-sm');

    // Update content
    document.querySelectorAll('.community-section').forEach(section => section.classList.add('hidden'));
    document.getElementById(`community-section-${mode}`).classList.remove('hidden');
  }

  // Message Modal Functions
  function openMessageModal(userId, userName) {
    document.getElementById('message-modal').classList.remove('hidden');
    document.getElementById('recipient-id').value = userId;
    document.getElementById('recipient-name').textContent = userName;
    document.getElementById('message-content').value = '';
    document.getElementById('message-content').focus();
  }

  function closeMessageModal() {
    document.getElementById('message-modal').classList.add('hidden');
  }

  // User List Modal Functions
  function openUserListModal(type) {
    const modal = document.getElementById('user-list-modal');
    const title = document.getElementById('user-list-title');
    const content = document.getElementById('user-list-content');
    
    let titleText = '';
    let users = [];
    
    if (type === 'pending') {
      titleText = 'ÏûÖÍ∏à ÎåÄÍ∏∞ Ï§ëÏù∏ Î©§Î≤Ñ';
      users = <%= raw @pending_payments.map { |m| { name: m.user.nickname, email: m.user.email, info: "#{m.depositor_name} / #{number_to_currency(m.paid_amount, unit: '‚Ç©', precision: 0)}" } }.to_json %>;
    } else if (type === 'warnings') {
      titleText = 'Í≤ΩÍ≥†Î•º Î∞õÏùÄ Î©§Î≤Ñ';
      users = <%= raw @members.select { |m| m.penalty_count > 0 }.map { |m| { name: m.user.nickname, email: m.user.email, info: "Í≤ΩÍ≥† #{m.penalty_count}Ìöå" } }.to_json %>;
    } else if (type === 'low-performers') {
      titleText = 'Ï†ÄÏ°∞Ìïú Î©§Î≤Ñ (Ï∂úÏÑùÎ•† 60% ÎØ∏Îßå)';
      users = <%= raw @members.select { |m| m.attendance_rate < 60 }.map { |m| { name: m.user.nickname, email: m.user.email, info: "Ï∂úÏÑùÎ•† #{m.attendance_rate.to_i}%" } }.to_json %>;
    }
    
    title.textContent = titleText;
    
    if (users.length === 0) {
      content.innerHTML = '<div class="text-center py-12"><p class="text-slate-400 font-bold">Ìï¥ÎãπÌïòÎäî Î©§Î≤ÑÍ∞Ä ÏóÜÏäµÎãàÎã§.</p></div>';
    } else {
      content.innerHTML = users.map(user => `
        <div class="flex items-center justify-between p-3 bg-slate-50 rounded-xl hover:bg-slate-100 transition-colors">
          <div class="flex-1 min-w-0">
            <p class="font-black text-slate-900 text-sm truncate">${user.name}</p>
            <p class="text-xs text-slate-500 truncate">${user.email}</p>
          </div>
          <div class="ml-3 shrink-0">
            <span class="px-3 py-1 bg-white border border-slate-200 rounded-lg text-xs font-bold text-slate-700">${user.info}</span>
          </div>
        </div>
      `).join('');
    }
    
    modal.classList.remove('hidden');
  }

  function closeUserListModal() {
    document.getElementById('user-list-modal').classList.add('hidden');
  }

  // Handle tabs from URL query params
  document.addEventListener("turbo:load", function() {
    const urlParams = new URLSearchParams(window.location.search);
    const tab = urlParams.get('tab');
    if (tab) {
      switchManageTab(tab);
    }
  });

  // Close modal when clicking outside
  document.addEventListener('click', function(event) {
    const messageModal = document.getElementById('message-modal');
    const userListModal = document.getElementById('user-list-modal');
    
    if (event.target === messageModal) {
      closeMessageModal();
    }
    if (event.target === userListModal) {
      closeUserListModal();
    }
  });
</script>

