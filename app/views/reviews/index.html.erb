<div class="max-w-3xl mx-auto space-y-8 pb-32">
  <!-- Header -->
  <div class="flex items-center gap-4">
    <%= link_to challenge_path(@challenge), class: "w-12 h-12 rounded-2xl bg-slate-100 flex items-center justify-center text-slate-500 hover:bg-slate-200 transition-all" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
    <% end %>
    <div class="flex-1">
      <h1 class="text-2xl font-black text-slate-900">리뷰</h1>
      <p class="text-sm text-slate-400 mt-1"><%= @challenge.title %></p>
    </div>
    <% if logged_in? && @challenge.participants.exists?(user: current_user) && !@challenge.reviews.exists?(user: current_user) %>
      <%= link_to new_challenge_review_path(@challenge), class: "px-6 py-3 bg-indigo-600 text-white rounded-2xl font-bold hover:bg-indigo-700 transition-all" do %>
        리뷰 작성
      <% end %>
    <% end %>
  </div>

  <!-- Average Rating -->
  <div class="bg-white rounded-[40px] border border-slate-200 shadow-sm p-8 text-center">
    <div class="flex items-center justify-center gap-1 mb-2">
      <% (1..5).each do |star| %>
        <svg class="w-8 h-8 <%= @challenge.average_rating.to_f >= star ? 'text-amber-400' : 'text-slate-200' %>" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      <% end %>
    </div>
    <p class="text-4xl font-black text-slate-900"><%= @challenge.average_rating&.round(1) || 0 %></p>
    <p class="text-sm text-slate-400 mt-1"><%= @reviews.count %>개의 리뷰</p>
  </div>

  <!-- Reviews List -->
  <div class="space-y-4">
    <% if @reviews.any? %>
      <% @reviews.each do |review| %>
        <div class="bg-white rounded-[32px] border border-slate-200 shadow-sm p-6">
          <div class="flex items-start gap-4">
            <%= link_to user_path(review.user), class: "shrink-0" do %>
              <img src="<%= review.user.profile_image %>" class="w-12 h-12 rounded-2xl object-cover" alt="">
            <% end %>
            <div class="flex-1">
              <div class="flex items-center justify-between">
                <div>
                  <%= link_to review.user.nickname, user_path(review.user), class: "font-bold text-slate-900 hover:text-indigo-600 transition-colors" %>
                  <div class="flex items-center gap-1 mt-1">
                    <% (1..5).each do |star| %>
                      <svg class="w-4 h-4 <%= review.rating >= star ? 'text-amber-400' : 'text-slate-200' %>" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    <% end %>
                    <span class="text-xs text-slate-400 ml-2"><%= review.created_at.in_time_zone('Asia/Seoul').strftime('%Y.%m.%d') %></span>
                  </div>
                </div>
                <% if logged_in? && (review.user == current_user || current_user.admin?) %>
                  <div class="flex items-center gap-2">
                    <%= link_to edit_challenge_review_path(@challenge, review), class: "w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center text-slate-400 hover:bg-slate-200 hover:text-slate-600 transition-all" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
                    <% end %>
                    <%= button_to challenge_review_path(@challenge, review), method: :delete, data: { turbo_confirm: "정말 삭제하시겠습니까?" }, class: "w-8 h-8 rounded-lg bg-slate-100 flex items-center justify-center text-slate-400 hover:bg-red-100 hover:text-red-600 transition-all" do %>
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/></svg>
                    <% end %>
                  </div>
                <% end %>
              </div>
              <% if review.content.present? %>
                <p class="mt-4 text-slate-600 leading-relaxed"><%= review.content %></p>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    <% else %>
      <div class="bg-white rounded-[40px] border border-slate-200 shadow-sm p-16 text-center">
        <div class="w-16 h-16 rounded-2xl bg-slate-100 flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"/></svg>
        </div>
        <p class="text-slate-500 font-bold">아직 리뷰가 없습니다</p>
        <p class="text-sm text-slate-400 mt-1">첫 번째 리뷰를 작성해보세요!</p>
      </div>
    <% end %>
  </div>
</div>
