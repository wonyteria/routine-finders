<div class="min-h-screen bg-gradient-to-br from-purple-50 via-white to-indigo-50/30">
  <div class="max-w-4xl mx-auto px-3 sm:px-4 md:px-6 lg:px-8 py-4 md:py-12">
    
    <!-- Header -->
    <header class="mb-6 md:mb-12">
      <%= link_to manage_routine_club_path(@routine_club), class: "inline-flex items-center gap-1.5 md:gap-2 text-slate-600 hover:text-slate-900 font-bold transition-colors mb-2 md:mb-4 text-xs md:text-base" do %>
        <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        관리 페이지로 돌아가기
      <% end %>
      <h1 class="text-2xl md:text-4xl font-black text-slate-900">클럽 수정</h1>
      <p class="text-sm md:text-lg text-slate-600 font-medium mt-1 md:mt-2"><%= @routine_club.title %></p>
    </header>

    <!-- Edit Form -->
    <div class="bg-white rounded-2xl md:rounded-[40px] p-4 md:p-8 border border-slate-200 shadow-sm">
      <%= form_with model: @routine_club, url: routine_club_path(@routine_club), method: :patch, class: "space-y-6 md:space-y-8" do |f| %>
        
        <!-- Basic Info -->
        <div class="space-y-4 md:space-y-6">
          <h2 class="text-lg md:text-2xl font-black text-slate-900 pb-3 md:pb-4 border-b border-slate-100">기본 정보</h2>
          
          <div>
            <%= f.label :title, "클럽명", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
            <%= f.text_field :title, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :description, "클럽 설명", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
            <%= f.text_area :description, rows: 4, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-medium text-sm md:text-base focus:ring-2 ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :category, "카테고리", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
            <%= f.select :category, 
                ["건강·운동", "학습·자기계발", "재테크·부업", "취미·여가", "생활습관"], 
                {}, 
                class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :thumbnail, "클럽 섬네일 이미지", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
            <% if @routine_club.thumbnail.attached? %>
              <div class="mb-3 md:mb-4">
                <%= image_tag @routine_club.thumbnail, class: "w-full max-w-md h-32 md:h-48 object-cover rounded-xl md:rounded-2xl border border-slate-200" %>
              </div>
            <% end %>
            <%= f.file_field :thumbnail, class: "block w-full text-xs md:text-sm text-slate-500 file:mr-3 md:file:mr-4 file:py-2 file:px-3 md:file:px-4 file:rounded-xl file:border-0 file:text-xs file:font-black file:bg-indigo-50 file:text-indigo-600 hover:file:bg-indigo-100 transition-all" %>
            <p class="text-[10px] md:text-xs text-slate-400 mt-2">추천 사이즈: 21:9 비율의 고해상도 이미지</p>
          </div>
        </div>

        <!-- Membership Settings -->
        <div class="space-y-4 md:space-y-6">
          <h2 class="text-lg md:text-2xl font-black text-slate-900 pb-3 md:pb-4 border-b border-slate-100">멤버십 설정</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :monthly_fee, "월 회비 (원)", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.number_field :monthly_fee, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
            </div>

            <div>
              <%= f.label :max_members, "최대 인원", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.number_field :max_members, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <%= f.label :start_date, "시작일", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.date_field :start_date, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
            </div>

            <div>
              <%= f.label :end_date, "종료일", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.date_field :end_date, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
            </div>
          </div>
        </div>

        <!-- Bank Account -->
        <div class="space-y-4 md:space-y-6">
          <h2 class="text-lg md:text-2xl font-black text-slate-900 pb-3 md:pb-4 border-b border-slate-100">입금 계좌 정보</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div>
              <%= f.label :bank_name, "은행명", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.text_field :bank_name, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
            </div>

            <div>
              <%= f.label :account_number, "계좌번호", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.text_field :account_number, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
            </div>

            <div>
              <%= f.label :account_holder, "예금주", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
              <%= f.text_field :account_holder, class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
            </div>
          </div>
        </div>

        <!-- Rewards -->
        <div class="space-y-4 md:space-y-6">
          <h2 class="text-lg md:text-2xl font-black text-slate-900 pb-3 md:pb-4 border-b border-slate-100">리워드 설정</h2>
          
          <div>
            <%= f.label :weekly_reward_info, "위클리 보상 (명예)", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
            <%= f.text_field :weekly_reward_info, placeholder: "예: 프로필 골든 오라 부여", class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :monthly_reward_info, "먼슬리 보상 (쿠폰)", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
            <%= f.text_field :monthly_reward_info, placeholder: "예: 스타벅스 아메리카노 기프티콘", class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
          </div>

          <div>
            <%= f.label :season_reward_info, "시즌 최종 보상 (무료권)", class: "block text-xs md:text-sm font-black text-slate-400 uppercase tracking-widest mb-2" %>
            <%= f.text_field :season_reward_info, placeholder: "예: 차기 시즌 3/2/1개월 무료 이용권", class: "w-full px-4 md:px-5 py-3 bg-slate-50 border-slate-200 rounded-xl md:rounded-2xl font-bold text-sm md:text-base focus:ring-2 ring-indigo-500" %>
          </div>
        </div>

        <!-- Submit Button -->
        <div class="flex flex-col sm:flex-row gap-3 pt-4 md:pt-6">
          <%= f.submit "변경사항 저장", class: "flex-1 px-6 md:px-8 py-3 md:py-4 bg-indigo-600 text-white rounded-xl md:rounded-2xl font-black text-sm md:text-base hover:bg-indigo-700 transition-colors shadow-lg shadow-indigo-100 cursor-pointer" %>
          <%= link_to "취소", manage_routine_club_path(@routine_club), class: "flex-1 px-6 md:px-8 py-3 md:py-4 bg-slate-100 text-slate-700 rounded-xl md:rounded-2xl font-black text-sm md:text-base hover:bg-slate-200 transition-colors text-center" %>
        </div>
      <% end %>
    </div>

  </div>
</div>
