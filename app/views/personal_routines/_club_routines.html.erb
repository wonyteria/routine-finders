<script>
  function toggleMemberRoutines(userId) {
    const content = document.getElementById(`routines-${userId}`);
    const arrow = document.getElementById(`arrow-${userId}`);
    
    if (content.classList.contains('hidden')) {
      content.classList.remove('hidden');
      arrow.style.transform = 'rotate(180deg)';
    } else {
      content.classList.add('hidden');
      arrow.style.transform = 'rotate(0deg)';
    }
  }

  function switchRufaTab(id) {
    // Hide all tabs
    document.querySelectorAll('.rufa-content-tab').forEach(tab => tab.classList.add('hidden'));
    // Show selected tab
    document.getElementById('tab-' + id).classList.remove('hidden');
    
    // Update navigation styles to match ternary logic in ERB
    document.querySelectorAll('.rufa-nav-btn').forEach(btn => {
      // Reset to inactive state
      btn.classList.remove('bg-indigo-600', 'text-white', 'shadow-lg');
      btn.classList.add('bg-slate-50', 'text-slate-500', 'border-transparent');
      btn.classList.remove('border-slate-100');
    });

    const activeBtn = document.getElementById('nav-' + id);
    // Apply active state if button exists
    if (activeBtn) {
      activeBtn.classList.remove('bg-slate-50', 'text-slate-500', 'border-transparent');
      activeBtn.classList.add('bg-indigo-600', 'text-white', 'shadow-lg');
    }

    // Scroll to top of content area on mobile
    if (window.innerWidth < 1024) {
      const board = document.getElementById('rufa-premium-board');
      if (board) {
        window.scrollTo({ top: board.offsetTop - 20, behavior: 'smooth' });
      }
    }
  }

  function switchRankingMode(mode) {
    const monthlyContainer = document.getElementById('monthly-ranking-container');
    const lifetimeContainer = document.getElementById('lifetime-ranking-container');
    const monthlyStats = document.getElementById('monthly-stats-summary');
    const lifetimeStats = document.getElementById('lifetime-stats-summary');
    const periodBadge = document.getElementById('ranking-period-badge');
    const description = document.getElementById('ranking-description');
    
    // Update button states
    document.querySelectorAll('.ranking-mode-btn').forEach(btn => {
      btn.classList.remove('bg-white', 'text-indigo-600', 'text-emerald-600', 'shadow-sm');
      btn.classList.add('text-slate-400');
    });
    
    if (mode === 'monthly') {
      document.getElementById('btn-monthly-rank').classList.remove('text-slate-400');
      document.getElementById('btn-monthly-rank').classList.add('bg-white', 'text-indigo-600', 'shadow-sm');
      
      monthlyContainer.classList.remove('hidden');
      lifetimeContainer.classList.add('hidden');
      monthlyStats.classList.remove('hidden');
      lifetimeStats.classList.add('hidden');
      
      periodBadge.textContent = '<%= Date.current.strftime("%B %Y") %> 기준';
      periodBadge.className = 'px-4 py-2 bg-indigo-100 text-indigo-600 rounded-full text-xs font-black uppercase tracking-wider';
      description.textContent = '성실함으로 증명하는 진짜 성장자들 · 매월 1일 초기화';
    } else {
      document.getElementById('btn-lifetime-rank').classList.remove('text-slate-400');
      document.getElementById('btn-lifetime-rank').classList.add('bg-white', 'text-emerald-600', 'shadow-sm');
      
      monthlyContainer.classList.add('hidden');
      lifetimeContainer.classList.remove('hidden');
      monthlyStats.classList.add('hidden');
      lifetimeStats.classList.remove('hidden');
      
      periodBadge.textContent = 'ALL-TIME 누적';
      periodBadge.className = 'px-4 py-2 bg-emerald-100 text-emerald-600 rounded-full text-xs font-black uppercase tracking-wider';
      description.textContent = '루파 클럽 가입 이후 모든 활동의 누적 기록';
    }
  }

  function toggleVipCard() {
    const modal = document.getElementById('vip-card-modal');
    const content = document.getElementById('vip-card-content');
    
    if (modal.classList.contains('hidden')) {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      setTimeout(() => {
        content.classList.remove('scale-90', 'opacity-0');
        content.classList.add('scale-100', 'opacity-100');
      }, 50);
    } else {
      content.classList.remove('scale-100', 'opacity-100');
      content.classList.add('scale-90', 'opacity-0');
      setTimeout(() => {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }, 600);
    }
  }
</script>
