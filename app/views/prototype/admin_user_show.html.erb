<div class="space-y-8 animate-in fade-in zoom-in-95 duration-300">
  <!-- 1. Profile Header -->
  <div class="flex items-start gap-6">
    <div class="relative shrink-0">
      <div class="w-24 h-24 rounded-[32px] border-4 border-indigo-500 overflow-hidden shadow-2xl relative z-10">
        <img src="<%= @target_user.profile_image %>" class="w-full h-full object-cover">
      </div>
      <div class="absolute -bottom-2 -right-2 bg-indigo-500 text-white w-8 h-8 rounded-full flex items-center justify-center text-sm font-black border-4 border-[#0C0B12] z-20">Lv.<%= @target_user.level %></div>
    </div>
    
    <div class="space-y-2 pt-2">
      <div>
        <h2 class="text-2xl font-black text-white flex items-center gap-2">
          <%= @target_user.nickname %>
          <% if @club_membership %>
            <span class="px-2 py-0.5 rounded-lg bg-yellow-500/20 border border-yellow-500/40 text-[10px] text-yellow-500 uppercase tracking-widest">
              RUFA CLUB <%= @club_membership.routine_club.generation_number %>기
            </span>
          <% end %>
        </h2>
        <p class="text-sm font-bold text-slate-500"><%= @target_user.email %></p>
      </div>
      
      <div class="flex gap-2">
        <% if @target_user.instagram.present? %>
          <a href="<%= @target_user.instagram %>" target="_blank" class="px-3 py-1.5 rounded-lg bg-white/5 border border-white/10 text-[10px] text-slate-400 hover:text-white hover:bg-white/10 transition-all flex items-center gap-1">
            <span>📷</span> Instagram
          </a>
        <% end %>
        <span class="px-3 py-1.5 rounded-lg bg-white/5 border border-white/10 text-[10px] text-slate-500">
          가입일: <%= @target_user.created_at.strftime('%Y.%m.%d') %>
        </span>
      </div>
    </div>
  </div>

  <!-- 2. Quick Stats -->
  <div class="grid grid-cols-3 gap-4">
    <div class="p-4 rounded-2xl bg-white/5 border border-white/5 text-center group hover:bg-white/10 transition-all">
      <p class="text-2xl font-black text-white group-hover:scale-110 transition-transform"><%= @routines.count %></p>
      <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mt-1">진행 중 루틴</p>
    </div>
    <div class="p-4 rounded-2xl bg-white/5 border border-white/5 text-center group hover:bg-white/10 transition-all">
      <p class="text-2xl font-black text-white group-hover:scale-110 transition-transform"><%= @joined_challenges.count %></p>
      <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mt-1">참여 챌린지</p>
    </div>
    <div class="p-4 rounded-2xl bg-white/5 border border-white/5 text-center group hover:bg-white/10 transition-all">
      <p class="text-2xl font-black text-white group-hover:scale-110 transition-transform"><%= @hosted_challenges.count %></p>
      <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mt-1">개설 콘텐츠</p>
    </div>
  </div>

  <!-- 3. Detailed Lists -->
  <div class="space-y-6" data-controller="tabs" data-tabs-active-class="bg-indigo-600 text-white shadow-lg shadow-indigo-600/20" data-tabs-inactive-class="text-slate-500 hover:text-slate-300">
    <!-- Tabs -->
    <div class="flex gap-1 p-1 bg-black/40 rounded-xl border border-white/5">
      <button data-action="tabs#change" data-tabs-target="tab" data-id="routines" class="flex-1 py-2.5 rounded-lg text-[10px] font-black transition-all bg-indigo-600 text-white shadow-lg shadow-indigo-600/20">루틴 목록</button>
      <button data-action="tabs#change" data-tabs-target="tab" data-id="challenges" class="flex-1 py-2.5 rounded-lg text-[10px] font-black transition-all text-slate-500 hover:text-slate-300">챌린지 활동</button>
    </div>

    <!-- Panel: Routines -->
    <div data-tabs-target="panel" data-id="routines" class="space-y-3 animate-in slide-in-from-bottom-2 duration-300">
      <% if @routines.any? %>
        <% @routines.each do |routine| %>
          <div class="p-4 rounded-2xl bg-white/[0.02] border border-white/5 flex items-center justify-between">
            <div class="flex items-center gap-4">
              <div class="w-10 h-10 rounded-xl bg-indigo-500/10 flex items-center justify-center text-xl">
                <%= routine.icon %>
              </div>
              <div>
                <h4 class="text-sm font-bold text-white"><%= routine.title %></h4>
                <p class="text-[10px] text-slate-500"><%= routine.category_label %> • <%= routine.days_label %></p>
              </div>
            </div>
            <% if routine.completed_today? %>
               <span class="px-2 py-1 rounded-lg bg-emerald-500/10 text-emerald-500 text-[9px] font-black uppercase border border-emerald-500/20">오늘 완료</span>
            <% end %>
          </div>
        <% end %>
      <% else %>
        <div class="py-12 text-center border border-dashed border-white/10 rounded-2xl">
          <p class="text-slate-500 text-[11px]">등록된 루틴이 없습니다.</p>
        </div>
      <% end %>
    </div>

    <!-- Panel: Challenges -->
    <div data-tabs-target="panel" data-id="challenges" class="hidden space-y-6 animate-in slide-in-from-bottom-2 duration-300">
      <!-- Hosted -->
      <div class="space-y-3">
        <h4 class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">개설한 챌린지/모임</h4>
        <% if @hosted_challenges.any? %>
          <% @hosted_challenges.each do |c| %>
            <div class="p-3 rounded-2xl bg-white/[0.02] border border-white/5 flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-white/5 overflow-hidden shrink-0">
                <img src="<%= c.thumbnail %>" class="w-full h-full object-cover">
              </div>
              <div>
                <h5 class="text-xs font-bold text-white line-clamp-1"><%= c.title %></h5>
                <p class="text-[9px] text-slate-500">참여자 <%= c.current_participants %>명 • <%= c.status_label %></p>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-[10px] text-slate-600 pl-1">개설한 내역이 없습니다.</p>
        <% end %>
      </div>

      <!-- Joined -->
      <div class="space-y-3">
        <h4 class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1">참여 중인 챌린지</h4>
        <% if @joined_challenges.any? %>
          <% @joined_challenges.each do |p| %>
            <div class="p-3 rounded-2xl bg-white/[0.02] border border-white/5 flex items-center gap-3">
              <div class="w-10 h-10 rounded-lg bg-white/5 overflow-hidden shrink-0">
                <img src="<%= p.challenge.thumbnail %>" class="w-full h-full object-cover">
              </div>
              <div>
                <h5 class="text-xs font-bold text-white line-clamp-1"><%= p.challenge.title %></h5>
                <p class="text-[9px] text-slate-500">인증율 <%= p.verification_rate %>% • <%= p.challenge.status_label %></p>
              </div>
            </div>
          <% end %>
        <% else %>
          <p class="text-[10px] text-slate-600 pl-1">참여 중인 내역이 없습니다.</p>
        <% end %>
      </div>
    </div>
  </div>
</div>
