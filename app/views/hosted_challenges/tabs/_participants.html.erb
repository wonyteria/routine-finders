<div class="space-y-6 md:space-y-10">
  <!-- Search & Filter Area -->
  <div class="flex flex-col md:flex-row gap-4">
    <div class="flex-1 relative">
      <input type="text" id="participant-search" placeholder="참가자 닉네임 검색..." 
             class="w-full pl-12 pr-4 py-4 bg-white/5 border border-white/10 rounded-2xl text-xs md:text-sm text-white focus:border-indigo-500 outline-none transition-all"
             oninput="filterParticipants(this.value)">
      <svg class="absolute left-4 top-1/2 -translate-y-1/2 w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/></svg>
    </div>
  </div>

  <!-- Filter & Sort Controls (Prototype) - Ultra Compact for Mobile -->
  <div class="app-glass-card p-4 md:p-5">
    <div class="grid grid-cols-2 gap-3">
      <!-- Status Filter Dropdown -->
      <div class="relative">
        <select onchange="window.location.href = this.value" 
                class="w-full bg-white/5 border border-white/10 rounded-xl text-[9px] md:text-[10px] font-black py-3 px-4 pr-9 hover:bg-white/10 focus:bg-white/10 focus:border-indigo-500/30 transition-all outline-none cursor-pointer appearance-none text-center <%= params[:status].present? ? 'text-white bg-indigo-600/15 border-indigo-500/30' : 'text-slate-400' %>">
          <option value="<%= hosted_challenge_path(@challenge, tab: 'participants', sort: params[:sort], source: 'prototype') %>" <%= 'selected' if params[:status].blank? %>>전체</option>
          <option value="<%= hosted_challenge_path(@challenge, tab: 'participants', status: 'achieving', sort: params[:sort], source: 'prototype') %>" <%= 'selected' if params[:status] == 'achieving' %>>달성 중</option>
          <option value="<%= hosted_challenge_path(@challenge, tab: 'participants', status: 'lagging', sort: params[:sort], source: 'prototype') %>" <%= 'selected' if params[:status] == 'lagging' %>>관리 대상</option>
          <option value="<%= hosted_challenge_path(@challenge, tab: 'participants', status: 'inactive', sort: params[:sort], source: 'prototype') %>" <%= 'selected' if params[:status] == 'inactive' %>>미참여</option>
          <option value="<%= hosted_challenge_path(@challenge, tab: 'participants', status: 'failed', sort: params[:sort], source: 'prototype') %>" <%= 'selected' if params[:status] == 'failed' %>>최종 탈락</option>
        </select>
        <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-3.5 h-3.5 text-slate-500 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7"/>
        </svg>
      </div>

      <!-- Sort Dropdown -->
      <div class="relative">
        <select onchange="window.location.href = this.value" 
                class="w-full bg-white/5 border border-white/10 rounded-xl text-[9px] md:text-[10px] font-black py-3 px-4 pr-9 hover:bg-white/10 focus:bg-white/10 focus:border-indigo-500/30 transition-all outline-none cursor-pointer appearance-none text-center <%= params[:sort].present? ? 'text-white bg-indigo-600/15 border-indigo-500/30' : 'text-slate-400' %>">
          <option value="<%= hosted_challenge_path(@challenge, tab: 'participants', status: params[:status], source: 'prototype') %>" <%= 'selected' if params[:sort].blank? %>>최신 가입순</option>
          <option value="<%= hosted_challenge_path(@challenge, tab: 'participants', status: params[:status], sort: 'achievement_low', source: 'prototype') %>" <%= 'selected' if params[:sort] == 'achievement_low' %>>달성률 낮은 순</option>
          <option value="<%= hosted_challenge_path(@challenge, tab: 'participants', status: params[:status], sort: 'missed_recent', source: 'prototype') %>" <%= 'selected' if params[:sort] == 'missed_recent' %>>최근 미인증 순</option>
        </select>
        <svg class="absolute right-3 top-1/2 -translate-y-1/2 w-3.5 h-3.5 text-slate-500 pointer-events-none" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M19 9l-7 7-7-7"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Participants Table (Prototype) -->
  <div class="app-glass-card overflow-hidden">
    <div class="p-4 md:p-6 border-b border-white/5 flex items-center justify-between">
      <div>
        <h2 class="text-base md:text-lg font-black text-white italic">참가자 목록</h2>
        <p class="text-[8px] md:text-[9px] font-black text-slate-500 uppercase tracking-widest mt-0.5">총 <%= participants.count %>명의 루퍼가 활동 중입니다</p>
      </div>
      <%= link_to new_challenge_announcement_path(@challenge, source: "prototype"), 
                  data: { turbo_frame: "_top" },
                  class: "glass-btn px-4 py-2 text-[9px] font-black text-indigo-400 hover:text-white uppercase tracking-widest flex items-center gap-2" do %>
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>
        단체 공지 발송
      <% end %>
    </div>

    <% if participants.any? %>
      <!-- Participants List View (Refactored for Layout Stability) -->
      <div class="flex flex-col gap-3 p-4 md:p-5" id="participants-list">
        <% participants.each do |participant| %>
          <div class="participant-item app-glass-card p-4 rounded-2xl group/p hover:bg-white/[0.05] transition-all" data-nickname="<%= participant.user.nickname.downcase %>">
            <div class="flex flex-col sm:flex-row items-start sm:items-center gap-4 sm:gap-6">
              
              <!-- 1. Profile Section -->
              <div class="flex items-center gap-3 w-full sm:w-auto sm:flex-1 min-w-0">
                <div class="relative shrink-0">
                  <img src="<%= participant.user.profile_image %>" class="w-12 h-12 rounded-xl object-cover border border-white/10 shadow-lg bg-slate-800">
                  <% if participant.today_verified %>
                    <div class="absolute -bottom-1 -right-1 w-5 h-5 bg-emerald-500 rounded-full border-2 border-[#1a1b1e] flex items-center justify-center shadow-sm">
                      <svg class="w-3 h-3 text-[#1a1b1e]" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="4" d="M5 13l4 4L19 7"/></svg>
                    </div>
                  <% end %>
                </div>
                
                <div class="min-w-0 flex-1 flex flex-col gap-1">
                  <div class="flex flex-wrap items-center gap-2">
                    <h3 class="font-black text-white text-sm truncate max-w-[120px] sm:max-w-none"><%= participant.user.nickname %></h3>
                    <% badge = participant.status_badge_info %>
                    <span class="px-2 py-0.5 rounded-md text-[9px] font-black uppercase tracking-widest border shrink-0 whitespace-nowrap <%= badge[:class].gsub('bg-', 'bg-').gsub('text-', 'text-') %>">
                      <%= badge[:label] %>
                    </span>
                  </div>
                  <p class="text-[10px] text-slate-500 font-bold uppercase tracking-wide truncate">
                    가입: <span class="text-slate-400"><%= participant.joined_at&.strftime("%y.%m.%d") %></span>
                  </p>
                </div>
              </div>

              <!-- 2. Stats Section (Grid on Mobile, Flex on Desktop) -->
              <div class="grid grid-cols-3 sm:flex items-stretch gap-2 w-full sm:w-auto shrink-0">
                <!-- Today Verification -->
                <div class="flex flex-col items-center justify-center p-2 bg-black/20 rounded-lg border border-white/5 min-w-[70px]">
                  <span class="text-[8px] font-black text-slate-500 uppercase tracking-widest mb-0.5">인증</span>
                  <% if participant.today_verified %>
                    <span class="text-[10px] font-black text-emerald-500">완료</span>
                  <% else %>
                    <span class="text-[10px] font-bold text-slate-600">미완료</span>
                  <% end %>
                </div>

                <!-- Completion Rate -->
                <div class="flex flex-col items-center justify-center p-2 bg-black/20 rounded-lg border border-white/5 min-w-[70px]">
                  <span class="text-[8px] font-black text-slate-500 uppercase tracking-widest mb-0.5">달성</span>
                  <span class="text-xs font-black text-white italic"><%= participant.completion_rate.to_i %>%</span>
                </div>

                <!-- Streak -->
                <div class="flex flex-col items-center justify-center p-2 bg-black/20 rounded-lg border border-white/5 min-w-[70px]">
                  <span class="text-[8px] font-black text-slate-500 uppercase tracking-widest mb-0.5">연속</span>
                  <span class="text-xs font-black text-orange-500">🔥 <%= participant.current_streak %></span>
                </div>
              </div>

              <!-- 3. Actions (Buttons) -->
              <div class="grid grid-cols-2 sm:flex sm:flex-col gap-2 w-full sm:w-auto shrink-0">
                <button class="py-2.5 px-3 bg-white/5 hover:bg-white/10 rounded-lg text-[10px] font-black text-slate-400 hover:text-white uppercase tracking-widest transition-colors border border-white/5 flex items-center justify-center gap-1.5 whitespace-nowrap">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>
                  알림
                </button>
                <button class="py-2.5 px-3 bg-white/5 hover:bg-white/10 rounded-lg text-[10px] font-black text-slate-400 hover:text-white uppercase tracking-widest transition-colors border border-white/5 flex items-center justify-center gap-1.5 whitespace-nowrap">
                  <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 10h.01M12 10h.01M16 10h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/></svg>
                  채팅
                </button>
              </div>

            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-32">
        <p class="text-[11px] font-black text-slate-700 uppercase tracking-[0.3em]">필터와 일치하는 참가자가 없습니다</p>
      </div>
    <% end %>
  </div>
</div>

<script>
  function filterParticipants(query) {
    const q = query.toLowerCase();
    document.querySelectorAll('.participant-card').forEach(card => {
      const nickname = card.getAttribute('data-nickname');
      if (nickname.includes(q)) {
        card.classList.remove('hidden');
      } else {
        card.classList.add('hidden');
      }
    });
  }
</script>
