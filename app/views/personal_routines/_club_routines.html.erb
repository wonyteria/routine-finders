<div class="space-y-12">
  
  <!-- Hero Section: 루파 클럽 (Unified Official) -->
  <section class="relative overflow-hidden bg-slate-900 rounded-[48px] p-12 text-white shadow-2xl group">
    <div class="absolute inset-0 bg-gradient-to-br from-indigo-600/40 via-purple-600/40 to-pink-600/40 opacity-50 z-0"></div>
    <div class="absolute -right-20 -top-20 w-80 h-80 bg-indigo-500/20 rounded-full blur-[100px] group-hover:scale-110 transition-transform duration-1000"></div>
    
    <div class="relative z-10 max-w-4xl">
      <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-md px-4 py-2 rounded-full mb-8 border border-white/10">
        <span class="w-2 h-2 bg-amber-400 rounded-full animate-pulse shadow-[0_0_10px_rgba(251,191,36,0.5)]"></span>
        <span class="text-[10px] font-black uppercase tracking-[0.2em] text-indigo-100">Routine Finders Official</span>
      </div>
      
      <h2 class="text-4xl md:text-6xl font-black mb-6 leading-[1.1] tracking-tight">
        루파 클럽:<br/>
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-yellow-400 to-orange-400">당신의 성장을 설계하다</span>
      </h2>
      
      <p class="text-lg md:text-xl text-slate-300 font-medium mb-10 leading-relaxed max-w-2xl">
        '루틴 파인더스'가 운영하는 단 하나의 프리미엄 클럽입니다.<br/>
        단기, 중기, 장기 목표를 설정하고 요일별 루틴으로 성취를 관리하세요.
      </p>
      
      <% unless current_user.is_rufa_club_member? %>
        <div class="flex flex-wrap gap-4 items-center">
          <% if @official_club %>
            <%= link_to routine_club_path(@official_club), class: "px-8 py-4 bg-white text-slate-900 rounded-2xl font-black text-sm hover:bg-amber-300 transition-all shadow-xl shadow-indigo-900/40" do %>
              루파 클럽 참여하기 (월 5,000원)
            <% end %>
          <% end %>
          <div class="px-6 py-4 bg-white/5 backdrop-blur-sm border border-white/10 rounded-2xl">
            <p class="text-[10px] font-black text-indigo-200 uppercase tracking-widest mb-1">Exclusive Benefit</p>
            <p class="text-sm font-bold text-white">월 1회 오프라인 모임 참석권 포함 🤝</p>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <% if current_user.is_rufa_club_member? %>
    <!-- My Goals & System Section -->
    <section class="grid grid-cols-1 lg:grid-cols-12 gap-8">
      <!-- Goal Setting Bento -->
      <div class="lg:col-span-8 space-y-8">
        <div class="bg-white rounded-[40px] p-10 border border-slate-100 shadow-sm space-y-10">
          <div class="flex items-center justify-between">
            <h3 class="text-2xl font-black text-slate-900 tracking-tight">나의 목표 설계</h3>
            <span class="text-[10px] font-black text-indigo-500 uppercase tracking-[0.2em]">Goal Architecture</span>
          </div>

          <%= form_with url: update_goals_personal_routines_path, method: :post, class: "space-y-8" do %>
            <div class="grid grid-cols-1 gap-6">
              <div class="group">
                <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-3 pl-1">Long Term (1년~)</label>
                <div class="relative">
                   <div class="absolute left-6 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full bg-purple-500"></div>
                   <input type="text" name="long_term" value="<%= @long_term_goal %>" placeholder="최종적으로 이루고 싶은 원대한 목표를 적어주세요" class="w-full pl-14 pr-6 py-5 bg-slate-50 border-none rounded-3xl font-bold text-slate-700 placeholder-slate-300 focus:ring-4 ring-purple-100 transition-all">
                </div>
              </div>

              <div class="group">
                <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-3 pl-1">Mid Term (3~6개월)</label>
                <div class="relative">
                   <div class="absolute left-6 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full bg-indigo-500"></div>
                   <input type="text" name="mid_term" value="<%= @mid_term_goal %>" placeholder="중간 기착지가 될 핵심 목표" class="w-full pl-14 pr-6 py-5 bg-slate-50 border-none rounded-3xl font-bold text-slate-700 placeholder-slate-300 focus:ring-4 ring-indigo-100 transition-all">
                </div>
              </div>

              <div class="group">
                <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-3 pl-1">Short Term (1개월)</label>
                <div class="relative">
                   <div class="absolute left-6 top-1/2 -translate-y-1/2 w-3 h-3 rounded-full bg-emerald-500"></div>
                   <input type="text" name="short_term" value="<%= @short_term_goal %>" placeholder="당장 이번 달에 집중할 작은 성공" class="w-full pl-14 pr-6 py-5 bg-slate-50 border-none rounded-3xl font-bold text-slate-700 placeholder-slate-300 focus:ring-4 ring-emerald-100 transition-all">
                </div>
              </div>
            </div>
            <div class="flex justify-end">
              <button type="submit" class="px-8 py-4 bg-slate-900 text-white rounded-2xl font-black text-sm hover:bg-indigo-600 transition-all shadow-lg">목표 업데이트</button>
            </div>
          <% end %>
        </div>

        <!-- Official Announcements -->
        <div class="bg-indigo-50/50 rounded-[40px] p-8 border border-indigo-100/50 space-y-6">
           <div class="flex items-center justify-between">
             <h3 class="text-lg font-black text-slate-900 flex items-center gap-2">
               <span class="w-2 h-2 bg-indigo-600 rounded-full"></span>
               루파 클럽 공식 공지
             </h3>
             <span class="text-[10px] font-black text-indigo-400 uppercase">Updates</span>
           </div>
           
           <div class="space-y-3">
             <% if @rufa_announcements.any? %>
               <% @rufa_announcements.each do |ann| %>
                 <div class="bg-white p-5 rounded-3xl flex items-center justify-between group cursor-pointer hover:border-indigo-300 border border-transparent transition-all">
                    <div class="flex items-center gap-4">
                      <span class="text-xs font-bold text-slate-300"><%= ann.created_at.strftime("%m.%d") %></span>
                      <p class="text-sm font-bold text-slate-700 group-hover:text-indigo-600 transition-colors"><%= ann.title %></p>
                    </div>
                    <svg class="w-4 h-4 text-slate-300 group-hover:text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
                 </div>
               <% end %>
             <% end %>
           </div>
        </div>

        <!-- Today's Routine Check-in (Member Mode) -->
        <div class="bg-white rounded-[40px] p-10 border border-slate-100 shadow-sm space-y-8">
           <div class="flex items-center justify-between">
             <h3 class="text-2xl font-black text-slate-900 tracking-tight">오늘의 루틴 체크인</h3>
             <span class="px-3 py-1 bg-indigo-50 text-indigo-600 rounded-full text-[10px] font-black uppercase"><%= Date.current.strftime("%A") %></span>
           </div>

           <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
             <% todays_routines = @personal_routines.select { |r| (r.days || []).include?(Date.current.wday.to_s) } %>
             <% if todays_routines.any? %>
               <% todays_routines.each do |routine| %>
                 <%= button_to toggle_personal_routine_path(routine), method: :post, class: "flex items-center justify-between p-5 rounded-3xl border-2 transition-all hover:scale-[1.02] #{routine.completed_today? ? 'bg-indigo-50 border-indigo-200 ring-4 ring-indigo-50' : 'bg-slate-50 border-transparent hover:border-indigo-100'}" do %>
                    <div class="flex items-center gap-4">
                      <span class="text-2xl"><%= routine.icon %></span>
                      <div class="text-left">
                        <p class="text-sm font-black text-slate-900 <%= 'line-through text-slate-400' if routine.completed_today? %>"><%= routine.title %></p>
                        <p class="text-[10px] font-bold text-slate-400"><%= routine.category %></p>
                      </div>
                    </div>
                    <% if routine.completed_today? %>
                      <div class="w-8 h-8 bg-indigo-600 rounded-xl flex items-center justify-center text-white">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
                      </div>
                    <% else %>
                      <div class="w-8 h-8 bg-white rounded-xl flex items-center justify-center text-slate-200 border border-slate-100">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
                      </div>
                    <% end %>
                 <% end %>
               <% end %>
             <% else %>
               <div class="col-span-2 py-12 text-center bg-slate-50 rounded-3xl border border-dashed border-slate-200">
                  <p class="text-sm font-bold text-slate-400 mb-4">오늘 설정된 전용 루틴이 없습니다.</p>
                  <%= link_to "루틴 설정하러 가기", personal_routines_path(tab: "free"), class: "text-xs font-black text-indigo-600 hover:underline" %>
               </div>
             <% end %>
           </div>
        </div>
      </div>

      <!-- Rufa Ranking & Status Sidebar -->
      <div class="lg:col-span-4 space-y-8">
        <!-- Membership Maintenance Stats -->
        <div class="bg-white rounded-[40px] p-8 border border-slate-100 shadow-sm space-y-6">
          <h3 class="text-lg font-black text-slate-900">유지 기준 현황</h3>
          <div class="space-y-6">
            <div class="space-y-2">
              <div class="flex justify-between text-[10px] font-black uppercase">
                <span class="text-slate-400">기록률</span>
                <span class="<%= @current_log_rate >= 70 ? 'text-emerald-500' : 'text-slate-400' %>"><%= @current_log_rate %>% / 70%</span>
              </div>
              <div class="h-1.5 bg-slate-50 rounded-full overflow-hidden">
                <div class="h-full bg-indigo-500" style="width: <%= @current_log_rate %>%"></div>
              </div>
            </div>
            <div class="space-y-2">
              <div class="flex justify-between text-[10px] font-black uppercase">
                <span class="text-slate-400">달성률</span>
                <span class="<%= @current_achievement_rate >= 70 ? 'text-emerald-500' : 'text-slate-400' %>"><%= @current_achievement_rate %>% / 70%</span>
              </div>
              <div class="h-1.5 bg-slate-50 rounded-full overflow-hidden">
                <div class="h-full bg-emerald-500" style="width: <%= @current_achievement_rate %>%"></div>
              </div>
            </div>
          </div>
        </div>

        <!-- Mini Leaderboard -->
        <div class="bg-white rounded-[40px] p-8 border border-slate-100 shadow-sm flex flex-col">
          <h3 class="text-lg font-black text-slate-900 mb-6">루파 랭킹 Top 10</h3>
          <div class="space-y-3 flex-1 overflow-y-auto max-h-[400px] no-scrollbar">
            <% @rufa_rankings.each_with_index do |rank, index| %>
              <div class="flex items-center justify-between p-2 rounded-2xl hover:bg-slate-50 transition-colors">
                <div class="flex items-center gap-3">
                  <span class="w-5 text-xs font-black <%= index < 3 ? 'text-amber-500' : 'text-slate-300' %>"><%= index + 1 %></span>
                  <img src="<%= rank[:user].profile_image %>" class="w-7 h-7 rounded-full" />
                  <span class="text-[13px] font-bold text-slate-700"><%= rank[:user].nickname %></span>
                </div>
                <span class="text-[10px] font-black text-slate-400"><%= rank[:score].to_i %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </section>
  <% end %>

</div>
