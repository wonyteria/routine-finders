<div class="min-h-screen bg-gradient-to-br from-orange-50 via-white to-pink-50/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Back Button -->
    <div class="mb-8">
      <%= link_to routine_clubs_path, class: "inline-flex items-center gap-2 text-slate-600 hover:text-slate-900 font-bold transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        클럽 목록으로
      <% end %>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Main Content -->
      <div class="lg:col-span-2 space-y-8">
        
        <!-- Hero Section -->
        <div class="bg-white rounded-[48px] overflow-hidden shadow-xl border-2 border-orange-200">
          <!-- Thumbnail -->
          <div class="aspect-[21/9] bg-gradient-to-br from-orange-400 via-pink-500 to-purple-500 relative">
            <div class="absolute inset-0 flex items-center justify-center">
              <div class="text-9xl opacity-40">🎯</div>
            </div>
            
            <!-- Category Badge -->
            <div class="absolute top-6 left-6">
              <span class="bg-white/90 backdrop-blur-sm px-4 py-2 rounded-full text-sm font-black text-orange-600">
                <%= @routine_club.category %>
              </span>
            </div>
            
            <!-- Status Badge -->
            <div class="absolute top-6 right-6">
              <% if @routine_club.is_full? %>
                <span class="bg-red-500 px-4 py-2 rounded-full text-sm font-black text-white">
                  마감
                </span>
              <% elsif @routine_club.status_recruiting? %>
                <span class="bg-emerald-500 px-4 py-2 rounded-full text-sm font-black text-white animate-pulse">
                  모집 중
                </span>
              <% end %>
            </div>
          </div>
          
          <!-- Content -->
          <div class="p-8 space-y-6">
            <!-- Host Info -->
            <div class="flex items-center gap-4">
              <div class="w-16 h-16 rounded-full bg-gradient-to-br from-orange-400 to-pink-500 flex items-center justify-center text-white text-2xl font-black">
                <%= @routine_club.host.nickname[0].upcase %>
              </div>
              <div>
                <p class="text-xs font-black text-slate-400 uppercase tracking-widest">Host</p>
                <p class="text-xl font-black text-slate-900"><%= @routine_club.host.nickname %></p>
              </div>
            </div>
            
            <!-- Title & Description -->
            <div>
              <h1 class="text-4xl font-black text-slate-900 mb-4">
                <%= @routine_club.title %>
              </h1>
              <p class="text-lg text-slate-600 font-medium leading-relaxed">
                <%= @routine_club.description %>
              </p>
            </div>
            
            <!-- Stats Grid -->
            <div class="grid grid-cols-4 gap-4 pt-6 border-t border-slate-100">
              <div>
                <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">기간</p>
                <p class="text-2xl font-black text-slate-900">
                  <%= @routine_club.duration_in_months %>개월
                </p>
              </div>
              <div>
                <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">월 요금</p>
                <p class="text-2xl font-black text-orange-500">
                  <%= number_to_currency(@routine_club.monthly_fee, unit: "₩", precision: 0, format: "%n%u") %>
                </p>
              </div>
              <div>
                <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">멤버</p>
                <p class="text-2xl font-black text-indigo-500">
                  <%= @routine_club.current_members %> / <%= @routine_club.max_members %>
                </p>
              </div>
              <div>
                <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-2">시작일</p>
                <p class="text-2xl font-black text-purple-500">
                  <%= @routine_club.start_date.strftime("%m/%d") %>
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Rules Section -->
        <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-orange-100 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h2 class="text-2xl font-black text-slate-900">클럽 규칙</h2>
          </div>
          
          <% if @rules.any? %>
            <div class="space-y-4">
              <% @rules.each_with_index do |rule, index| %>
                <div class="bg-slate-50 rounded-3xl p-6 border border-slate-100">
                  <div class="flex items-start gap-4">
                    <div class="w-8 h-8 bg-orange-500 text-white rounded-full flex items-center justify-center font-black flex-shrink-0">
                      <%= index + 1 %>
                    </div>
                    <div class="flex-1">
                      <h3 class="text-lg font-black text-slate-900 mb-2">
                        <%= rule.title %>
                      </h3>
                      <% if rule.description.present? %>
                        <p class="text-slate-600 font-medium mb-3">
                          <%= rule.description %>
                        </p>
                      <% end %>
                      
                      <% if rule.has_penalty %>
                        <div class="bg-red-50 border border-red-100 rounded-2xl p-4 mt-3">
                          <div class="flex items-start gap-2">
                            <svg class="w-5 h-5 text-red-500 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                            </svg>
                            <div>
                              <p class="text-sm font-black text-red-700 mb-1">패널티</p>
                              <p class="text-sm text-red-600 font-medium">
                                <%= rule.penalty_description %>
                                <% if rule.penalty_points > 0 %>
                                  (경고 <%= rule.penalty_points %>회)
                                <% end %>
                              </p>
                              <% if rule.auto_kick_enabled && rule.auto_kick_threshold %>
                                <p class="text-xs text-red-500 font-bold mt-2">
                                  ⚠️ <%= rule.auto_kick_threshold %>회 위반 시 자동 강퇴
                                </p>
                              <% end %>
                            </div>
                          </div>
                        </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="bg-slate-50 rounded-3xl p-12 text-center">
              <div class="text-4xl mb-3 opacity-30">📋</div>
              <p class="text-slate-400 font-bold">아직 등록된 규칙이 없습니다</p>
            </div>
          <% end %>
        </div>

        <!-- Members Section -->
        <div class="bg-white rounded-[40px] p-8 border border-slate-200 shadow-sm">
          <div class="flex items-center gap-3 mb-6">
            <div class="w-12 h-12 bg-indigo-100 rounded-2xl flex items-center justify-center">
              <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
              </svg>
            </div>
            <div class="flex-1">
              <h2 class="text-2xl font-black text-slate-900">멤버</h2>
              <p class="text-sm text-slate-500 font-medium">현재 <%= @members.count %>명 참여 중</p>
            </div>
          </div>
          
          <% if @members.any? %>
            <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
              <% @members.each do |member| %>
                <div class="bg-slate-50 rounded-2xl p-4 flex items-center gap-3">
                  <div class="w-12 h-12 rounded-full bg-gradient-to-br from-indigo-400 to-purple-500 flex items-center justify-center text-white font-black">
                    <%= member.user.nickname[0].upcase %>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-black text-slate-900 truncate">
                      <%= member.user.nickname %>
                    </p>
                    <p class="text-xs text-slate-500 font-medium">
                      출석 <%= member.attendance_rate.to_i %>%
                    </p>
                  </div>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="bg-slate-50 rounded-3xl p-12 text-center">
              <div class="text-4xl mb-3 opacity-30">👥</div>
              <p class="text-slate-400 font-bold">아직 참여한 멤버가 없습니다</p>
            </div>
          <% end %>
        </div>

      </div>

      <!-- Sidebar -->
      <div class="lg:col-span-1 space-y-6">
        
        <!-- Join Card -->
        <% if @is_member %>
          <!-- Already Member -->
          <div class="bg-emerald-50 border-2 border-emerald-200 rounded-[32px] p-8 text-center">
            <div class="text-5xl mb-4">✅</div>
            <h3 class="text-xl font-black text-emerald-900 mb-2">참여 중</h3>
            <p class="text-emerald-700 font-medium mb-6">
              이 클럽의 멤버입니다
            </p>
            <%= link_to "대시보드 가기", routine_club_path(@routine_club, tab: 'dashboard'), class: "block w-full py-3 bg-emerald-600 text-white rounded-2xl font-black hover:bg-emerald-700 transition-colors" %>
          </div>
        <% elsif @routine_club.is_full? %>
          <!-- Full -->
          <div class="bg-red-50 border-2 border-red-200 rounded-[32px] p-8 text-center">
            <div class="text-5xl mb-4">🚫</div>
            <h3 class="text-xl font-black text-red-900 mb-2">마감되었습니다</h3>
            <p class="text-red-700 font-medium">
              정원이 모두 찼습니다
            </p>
          </div>
        <% else %>
          <!-- Join Form -->
          <div class="bg-gradient-to-br from-orange-500 to-pink-500 rounded-[32px] p-8 text-white shadow-2xl">
            <h3 class="text-2xl font-black mb-6">참여 신청</h3>
            
            <!-- Price Calculation -->
            <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-6 mb-6">
              <p class="text-sm font-bold text-white/80 mb-3">참여 비용 계산</p>
              <% 
                join_date = Date.current
                prorated_fee = @routine_club.calculate_prorated_fee(join_date)
                total_fee = @routine_club.monthly_fee * @routine_club.min_duration_months
              %>
              
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-white/80">기본 요금 (3개월)</span>
                  <span class="font-black"><%= number_to_currency(total_fee, unit: "₩", precision: 0) %></span>
                </div>
                <% if join_date > @routine_club.start_date %>
                  <div class="flex justify-between text-emerald-300">
                    <span>중간 참여 할인</span>
                    <span class="font-black">-<%= number_to_currency(total_fee - prorated_fee, unit: "₩", precision: 0) %></span>
                  </div>
                <% end %>
                <div class="pt-3 border-t border-white/20 flex justify-between text-lg">
                  <span class="font-black">총 금액</span>
                  <span class="font-black text-yellow-300"><%= number_to_currency(prorated_fee, unit: "₩", precision: 0) %></span>
                </div>
              </div>
            </div>
            
            <%= form_with url: join_routine_club_path(@routine_club), method: :post, class: "space-y-4" do |f| %>
              <%= text_field_tag :depositor_name, nil, placeholder: "입금자명", required: true, class: "w-full px-5 py-3 bg-white/10 border-white/20 rounded-2xl text-white placeholder-white/60 font-bold focus:ring-2 ring-white/50 border-none" %>
              
              <div class="bg-white/10 rounded-2xl p-4 text-sm space-y-2">
                <p class="font-black text-white/90">입금 정보</p>
                <p class="text-white/80"><%= @routine_club.bank_name %></p>
                <p class="text-white/80"><%= @routine_club.account_number %></p>
                <p class="text-white/80">예금주: <%= @routine_club.account_holder %></p>
              </div>
              
              <button type="submit" class="w-full py-4 bg-white text-orange-600 rounded-2xl font-black text-lg hover:bg-yellow-300 hover:text-orange-700 transition-all shadow-2xl">
                참여 신청하기
              </button>
            <% end %>
            
            <p class="text-xs text-white/70 text-center mt-4 font-medium">
              입금 후 호스트 확인 시 참여가 승인됩니다
            </p>
          </div>
        <% end %>

        <!-- Info Cards -->
        <div class="bg-white rounded-3xl p-6 border border-slate-200 shadow-sm space-y-4">
          <h3 class="text-lg font-black text-slate-900 mb-4">클럽 정보</h3>
          
          <div class="space-y-3">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                </svg>
              </div>
              <div>
                <p class="text-xs font-black text-slate-400 uppercase tracking-widest">기간</p>
                <p class="text-sm font-black text-slate-900">
                  <%= @routine_club.start_date.strftime("%Y.%m.%d") %> ~ <%= @routine_club.end_date.strftime("%Y.%m.%d") %>
                </p>
              </div>
            </div>
            
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <div>
                <p class="text-xs font-black text-slate-400 uppercase tracking-widest">최소 참여</p>
                <p class="text-sm font-black text-slate-900">
                  <%= @routine_club.min_duration_months %>개월
                </p>
              </div>
            </div>
            
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 bg-indigo-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                </svg>
              </div>
              <div>
                <p class="text-xs font-black text-slate-400 uppercase tracking-widest">정원</p>
                <p class="text-sm font-black text-slate-900">
                  최대 <%= @routine_club.max_members %>명
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Warning -->
        <div class="bg-amber-50 border border-amber-200 rounded-3xl p-6">
          <div class="flex items-start gap-3">
            <svg class="w-6 h-6 text-amber-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
            </svg>
            <div>
              <p class="text-sm font-black text-amber-900 mb-2">참여 전 확인사항</p>
              <ul class="text-xs text-amber-700 font-medium space-y-1">
                <li>• 최소 3개월 참여가 원칙입니다</li>
                <li>• 규칙 위반 시 패널티가 부과됩니다</li>
                <li>• 중도 탈퇴 시 환불이 불가합니다</li>
              </ul>
            </div>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>
