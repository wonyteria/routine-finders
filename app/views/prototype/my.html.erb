<div class="space-y-10 pt-8 pb-10">
  <!-- 1. Profile Summary -->
  <section class="text-center space-y-4">
    <div class="relative inline-block">
      <div class="w-24 h-24 rounded-[32px] border-4 border-indigo-500 overflow-hidden shadow-2xl relative z-10">
        <img src="<%= current_user&.profile_image %>" class="w-full h-full object-cover">
      </div>
      <div class="absolute -bottom-2 -right-2 bg-indigo-500 text-white w-8 h-8 rounded-full flex items-center justify-center text-sm font-black border-4 border-[#0C0B12] z-20">Lv.<%= current_user&.level || 1 %></div>
    </div>
    <div class="space-y-1">
      <h2 class="text-xl font-black text-white"><%= current_user&.nickname %></h2>
      <p class="text-[11px] font-bold text-indigo-400 uppercase tracking-widest">Steady Runner Since 2024</p>
    </div>

    <!-- Quick Stats -->
    <div class="flex justify-center gap-8 pt-4">
      <div class="text-center">
        <p class="text-lg font-black text-white tabular-nums"><%= @total_activities %></p>
        <p class="text-[9px] font-bold text-slate-600 uppercase tracking-widest">Activities</p>
      </div>
      <div class="w-px h-8 bg-white/10"></div>
      <div class="text-center">
        <p class="text-lg font-black text-white tabular-nums"><%= @current_streak %>일</p>
        <p class="text-[9px] font-bold text-slate-600 uppercase tracking-widest">Streaks</p>
      </div>
      <div class="w-px h-8 bg-white/10"></div>
      <div class="text-center">
        <p class="text-lg font-black text-white tabular-nums"><%= @current_month_points %><%= current_user&.is_rufa_club_member? ? 'P' : '' %></p>
        <p class="text-[9px] font-bold text-slate-600 uppercase tracking-widest"><%= current_user&.is_rufa_club_member? ? 'Monthly' : 'This Month' %></p>
      </div>
    </div>
  </section>

  <!-- 2. Growth Report (Graph Placeholder) -->
  <section class="space-y-4">
    <div class="flex justify-between items-center px-2">
      <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">Growth Intel</h3>
      <button data-action="click->proto-ui#openModal" data-modal-id="growth-detail" class="text-[10px] font-bold text-indigo-400 hover:text-indigo-300 transition-colors">자세히 보기</button>
    </div>

    <div class="app-glass-card p-6 aspect-video bg-gradient-to-br from-indigo-500/5 to-transparent flex flex-col justify-between">
      <div class="flex justify-between items-start">
        <div class="space-y-1">
          <p class="text-[10px] font-bold text-slate-500">이번 주 달성률</p>
          <h4 class="text-2xl font-black text-white">82% <span class="text-xs text-emerald-500 font-bold ml-1">↑ 12%</span></h4>
        </div>
        <div class="w-10 h-10 bg-white/5 rounded-xl flex items-center justify-center text-xl">📈</div>
      </div>
      
      <!-- Dummy Graph -->
      <div class="flex items-end justify-between h-20 gap-2">
         <% [30, 45, 80, 60, 95, 70, 85].each_with_index do |h, i| %>
           <div class="flex-1 rounded-t-lg transition-all duration-1000 <%= i == 6 ? 'bg-indigo-500 shadow-[0_0_15px_rgba(124,77,255,0.5)]' : 'bg-white/10' %>" style="height: <%= h %>%"></div>
         <% end %>
      </div>
    </div>
  </section>

  <!-- 3. Achievement Wallet -->
  <section class="space-y-4">
    <div class="flex justify-between items-center px-2">
      <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">Identity Wallet</h3>
    </div>

    <div class="flex gap-3 overflow-x-auto hide-scrollbar -mx-4 px-4 pb-4">
      <% [
          {title: '새벽의 지배자', emoji: '🌅', desc: '새벽 6시 이전 루틴 30회 달성'},
          {title: '불굴의 노력가', emoji: '🏋️', desc: '운동 루틴 14일 연속 성공'},
          {title: '성실함의 상징', emoji: '💎', desc: '전체 달성률 100% 지속'},
          {title: '박수 요정', emoji: '👏', desc: '메이트 응원 100회 돌파'}
         ].each_with_index do |badge, i| %>
        <button data-action="click->proto-ui#openModal" 
                data-modal-id="badge-detail-<%= i %>"
                class="shrink-0 w-20 h-20 app-glass-card p-2.5 flex flex-col justify-between border-transparent overflow-hidden relative group text-left active:scale-95 transition-all">
          <span class="text-lg relative z-10"><%= badge[:emoji] %></span>
          <p class="text-[9px] font-black text-white leading-tight relative z-10 line-clamp-2"><%= badge[:title] %></p>
        </button>

        <!-- Badge Detail Modal (Inside Loop for simplicity in prototype) -->
        <div id="badge-detail-<%= i %>" class="hidden fixed inset-0 z-[300]">
          <div data-action="click->proto-ui#closeModal" class="absolute inset-0 bg-black/90 backdrop-blur-xl"></div>
          <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-80 aspect-[3/4.5] app-glass-card border-white/20 p-8 flex flex-col items-center justify-between text-center overflow-hidden">
             <!-- Shimmer Effect -->
             <div class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/10 to-transparent -translate-x-full animate-shimmer"></div>
             
             <div class="space-y-6 relative z-10">
               <div class="w-24 h-24 rounded-[32px] bg-white/5 border border-white/10 flex items-center justify-center text-5xl mx-auto shadow-2xl shadow-indigo-500/20">
                 <%= badge[:emoji] %>
               </div>
               <div class="space-y-2">
                 <h4 class="text-2xl font-black text-white"><%= badge[:title] %></h4>
                 <p class="text-xs font-bold text-indigo-400 uppercase tracking-widest">Growth Identity Card</p>
               </div>
               <p class="text-sm font-bold text-slate-400 leading-relaxed"><%= badge[:desc] %></p>
             </div>

             <div class="w-full space-y-4 relative z-10">
                <div class="h-px w-full bg-white/10"></div>
                <div class="flex justify-around">
                   <div class="text-center">
                     <p class="text-xs font-black text-white">2024.12.24</p>
                     <p class="text-[8px] font-bold text-slate-600 uppercase tracking-widest">Acquired</p>
                   </div>
                   <div class="text-center">
                     <p class="text-xs font-black text-white">Top 2%</p>
                     <p class="text-[8px] font-bold text-slate-600 uppercase tracking-widest">Global</p>
                   </div>
                </div>
                <button class="w-full py-4 rounded-2xl bg-white text-black font-black text-sm flex items-center justify-center gap-2">
                  <span class="text-lg">📤</span> 공유하기
                </button>
             </div>
          </div>
        </div>
      <% end %>
    </div>
  </section>

  <!-- 4. Host Management -->
  <section class="space-y-4">
    <button data-action="click->proto-ui#openModal" data-modal-id="host-center" class="w-full">
      <div class="app-glass-card p-6 flex items-center justify-between border-amber-500/10 bg-amber-500/5 group app-tap-active">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-amber-500/20 rounded-2xl flex items-center justify-center text-2xl">⚡</div>
          <div class="text-left">
            <h4 class="text-sm font-black text-white leading-none">호스트 센터</h4>
            <p class="text-[11px] font-bold text-amber-500/60 mt-2">내가 개설한 챌린지 관리하기</p>
          </div>
        </div>
        <svg class="w-5 h-5 text-amber-500/60 group-hover:text-amber-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
      </div>
    </button>
  </section>

  <!-- 5. Settings List -->
  <section class="app-glass-card divide-y divide-white/5 overflow-hidden">
    <button data-action="click->proto-ui#openModal" data-modal-id="edit-profile" class="w-full flex items-center justify-between p-5 hover:bg-white/[0.02] active:bg-white/5 transition-colors">
      <div class="flex items-center gap-4">
        <span class="text-slate-500"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/></svg></span>
        <span class="text-sm font-bold text-slate-300">프로필 정보 수정</span>
      </div>
      <svg class="w-4 h-4 text-slate-700" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
    </button>
    
    <div data-controller="notification-toggle" class="flex items-center justify-between p-5 hover:bg-white/[0.02] active:bg-white/5 transition-colors cursor-pointer">
      <div class="flex items-center gap-4">
        <span class="text-slate-500"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0 1 18 14.158V11a6.002 6.002 0 0 0-4-5.659V5a2 2 0 1 0-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 1 1-6 0v-1m6 0H9"/></svg></span>
        <span class="text-sm font-bold text-slate-300">푸시 알림 설정</span>
      </div>
      <button data-action="click->notification-toggle#switch" data-notification-toggle-target="button" class="w-10 h-5 bg-slate-800 rounded-full relative p-0.5 flex items-center justify-end px-1 transition-all">
         <div data-notification-toggle-target="indicator" class="w-4 h-4 bg-slate-600 rounded-full transition-all"></div>
      </button>
    </div>

    <%= button_to logout_path, method: :delete, class: "w-full flex items-center justify-between p-5 hover:bg-red-500/5 active:bg-red-500/10 transition-colors border-none bg-transparent cursor-pointer" do %>
      <div class="flex items-center gap-4">
        <span class="text-red-500/50"><svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg></span>
        <span class="text-sm font-bold text-red-500/80">로그아웃</span>
      </div>
    <% end %>
  </section>
</div>

<!-- Growth Detail Modal -->
<div id="growth-detail" class="hidden fixed inset-0 z-[300]">
  <div data-action="click->proto-ui#closeModal" class="absolute inset-0 bg-black/90 backdrop-blur-xl"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[90%] max-w-md app-glass-card border-white/20 p-8 space-y-6 max-h-[80vh] overflow-y-auto">
    <div class="flex justify-between items-center">
      <h3 class="text-xl font-black text-white">성장 인텔리전스</h3>
      <button data-action="click->proto-ui#closeModal" class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center text-slate-400 hover:text-white transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    
    <div class="space-y-4">
      <div class="grid grid-cols-2 gap-4">
        <div class="app-glass-card p-4 bg-white/[0.02]">
          <p class="text-[10px] font-bold text-slate-500 mb-2">주간 달성률</p>
          <p class="text-2xl font-black text-white">82%</p>
          <p class="text-xs font-bold text-emerald-500 mt-1">↑ 12%</p>
        </div>
        <div class="app-glass-card p-4 bg-white/[0.02]">
          <p class="text-[10px] font-bold text-slate-500 mb-2">연속 기록</p>
          <p class="text-2xl font-black text-white">7일</p>
          <p class="text-xs font-bold text-indigo-400 mt-1">🔥 진행중</p>
        </div>
      </div>
      
      <div class="app-glass-card p-5 bg-white/[0.02] space-y-3">
        <p class="text-xs font-black text-white">이번 주 활동</p>
        <% ['월', '화', '수', '목', '금', '토', '일'].each_with_index do |day, i| %>
          <div class="flex items-center justify-between">
            <span class="text-sm font-bold text-slate-400"><%= day %></span>
            <div class="flex-1 mx-4 h-2 bg-white/5 rounded-full overflow-hidden">
              <div class="h-full bg-indigo-500 rounded-full" style="width: <%= [30, 45, 80, 60, 95, 70, 85][i] %>%"></div>
            </div>
            <span class="text-xs font-black text-white tabular-nums"><%= [30, 45, 80, 60, 95, 70, 85][i] %>%</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Host Center Modal -->
<div id="host-center" class="hidden fixed inset-0 z-[300]">
  <div data-action="click->proto-ui#closeModal" class="absolute inset-0 bg-black/90 backdrop-blur-xl"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[90%] max-w-md app-glass-card border-white/20 p-8 space-y-6">
    <div class="flex justify-between items-center">
      <div>
        <h3 class="text-xl font-black text-white">호스트 센터</h3>
        <p class="text-xs font-bold text-amber-400 mt-1">내가 개설한 챌린지 관리</p>
      </div>
      <button data-action="click->proto-ui#closeModal" class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center text-slate-400 hover:text-white transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    
    <div class="space-y-3">
      <div class="app-glass-card p-5 bg-amber-500/5 border border-amber-500/20">
        <div class="flex items-center justify-between mb-3">
          <p class="text-sm font-black text-white">진행 중인 챌린지</p>
          <span class="px-2 py-1 bg-emerald-500/20 text-emerald-400 text-[10px] font-black rounded-full">ACTIVE</span>
        </div>
        <p class="text-xs font-bold text-slate-400">현재 호스팅 중인 챌린지가 없습니다</p>
      </div>
      
      <%= link_to prototype_challenge_builder_path, class: "block w-full p-4 rounded-2xl bg-gradient-to-r from-amber-500 to-orange-500 text-white font-black text-sm flex items-center justify-center gap-2 active:scale-95 transition-all" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
        새 챌린지 만들기
      <% end %>
      
      <p class="text-[10px] font-bold text-slate-500 text-center leading-relaxed">
        챌린지를 개설하면 이곳에서<br/>참여자 관리와 인증 확인을 할 수 있습니다
      </p>
    </div>
  </div>
</div>

<!-- Edit Profile Modal -->
<div id="edit-profile" class="hidden fixed inset-0 z-[300]">
  <div data-action="click->proto-ui#closeModal" class="absolute inset-0 bg-black/90 backdrop-blur-xl"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[90%] max-w-md app-glass-card border-white/20 p-8 space-y-6 max-h-[80vh] overflow-y-auto">
    <div class="flex justify-between items-center">
      <h3 class="text-xl font-black text-white">프로필 수정</h3>
      <button data-action="click->proto-ui#closeModal" class="w-8 h-8 rounded-full bg-white/5 flex items-center justify-center text-slate-400 hover:text-white transition-colors">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    
    <div class="space-y-5">
      <div class="flex justify-center">
        <div class="relative">
          <div class="w-24 h-24 rounded-[32px] border-4 border-indigo-500 overflow-hidden">
            <img src="<%= current_user&.profile_image %>" class="w-full h-full object-cover">
          </div>
          <button class="absolute -bottom-2 -right-2 w-10 h-10 rounded-full bg-indigo-500 text-white flex items-center justify-center shadow-lg active:scale-90 transition-transform">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 9a2 2 0 012-2h.93a2 2 0 001.664-.89l.812-1.22A2 2 0 0110.07 4h3.86a2 2 0 011.664.89l.812 1.22A2 2 0 0018.07 7H19a2 2 0 012 2v9a2 2 0 01-2 2H5a2 2 0 01-2-2V9z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 13a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
          </button>
        </div>
      </div>
      
      <div class="space-y-3">
        <div>
          <label class="text-[10px] font-black text-slate-500 uppercase tracking-wider pl-4 mb-2 block">닉네임</label>
          <input type="text" value="<%= current_user&.nickname %>" class="w-full bg-black/40 border border-white/5 rounded-2xl p-4 text-white text-sm font-bold focus:border-indigo-500/50 outline-none transition-all" />
        </div>
        
        <div>
          <label class="text-[10px] font-black text-slate-500 uppercase tracking-wider pl-4 mb-2 block">자기소개</label>
          <textarea rows="3" placeholder="나를 표현하는 한 줄" class="w-full bg-black/40 border border-white/5 rounded-2xl p-4 text-white text-sm font-bold focus:border-indigo-500/50 outline-none transition-all resize-none"></textarea>
        </div>
        
        <!-- SNS Links Section -->
        <div data-controller="sns-links">
          <div class="flex justify-between items-center mb-3">
            <label class="text-[10px] font-black text-slate-500 uppercase tracking-wider pl-4">SNS 링크</label>
            <button type="button" data-action="click->sns-links#addLink" class="text-xs font-black text-indigo-400 hover:text-indigo-300 flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/></svg>
              추가
            </button>
          </div>
          
          <div data-sns-links-target="container" class="space-y-2">
            <!-- SNS Link Template (hidden) -->
            <template data-sns-links-target="template">
              <div class="flex items-center gap-2 group">
                <div class="w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center shrink-0" data-sns-links-target="icon">
                  <svg class="w-5 h-5 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
                </div>
                <input type="url" 
                       placeholder="SNS 링크 URL 입력" 
                       data-action="input->sns-links#detectPlatform"
                       data-sns-links-target="input"
                       class="flex-1 bg-black/40 border border-white/5 rounded-xl p-3 text-white text-sm font-bold focus:border-indigo-500/50 outline-none transition-all" />
                <button type="button" data-action="click->sns-links#removeLink" class="w-8 h-8 rounded-lg bg-red-500/10 text-red-400 hover:bg-red-500/20 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
                </button>
              </div>
            </template>
            
            <!-- Initial empty state -->
            <p class="text-xs font-bold text-slate-600 text-center py-4" data-sns-links-target="emptyState">
              SNS 링크를 추가해보세요
            </p>
          </div>
        </div>
      </div>
      
      <button class="w-full py-4 rounded-2xl bg-indigo-500 text-white font-black text-sm active:scale-95 transition-all">
        저장하기
      </button>
    </div>
  </div>
</div>
