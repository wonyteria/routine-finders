<div class="min-h-screen bg-[#0C0B12] pb-32">
  <!-- Header -->
  <header class="sticky top-0 z-50 bg-[#0C0B12]/80 backdrop-blur-md border-b border-white/5 px-6 py-4 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <%= link_to prototype_admin_clubs_path, class: "w-10 h-10 rounded-xl bg-white/5 flex items-center justify-center text-slate-400 hover:text-white transition-colors" do %>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
      <% end %>
      <div>
        <h1 class="text-lg font-black text-white">멤버 성취 리포트</h1>
        <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest"><%= @report_type.capitalize %> Performance Feed</p>
      </div>
    </div>
    <div class="flex gap-1.5">
      <%= link_to prototype_batch_reports_path(type: "weekly"), class: "px-3 py-1.5 rounded-lg text-[10px] font-black transition-all #{@report_type == 'weekly' ? 'bg-indigo-500 text-white shadow-lg shadow-indigo-500/20' : 'bg-white/5 text-slate-500 hover:text-slate-300'}" do %>
        주간
      <% end %>
      <%= link_to prototype_batch_reports_path(type: "monthly"), class: "px-3 py-1.5 rounded-lg text-[10px] font-black transition-all #{@report_type == 'monthly' ? 'bg-indigo-500 text-white shadow-lg shadow-indigo-500/20' : 'bg-white/5 text-slate-500 hover:text-slate-300'}" do %>
        월간
      <% end %>
    </div>
  </header>

  <main class="px-6 py-8 space-y-8">
    <!-- Period Info -->
    <div class="p-6 rounded-3xl bg-indigo-500/5 border border-indigo-500/20 flex items-center justify-between">
      <div>
        <p class="text-[10px] font-black text-indigo-400 uppercase tracking-widest mb-1 italic">Evaluation Period</p>
        <h2 class="text-sm font-black text-white">
          <%= @target_start.strftime("%Y.%m.%d") %> - <%= @target_end.strftime("%Y.%m.%d") %>
        </h2>
      </div>
      <div class="text-right">
        <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-1 italic">Total Members</p>
        <p class="text-sm font-black text-white"><%= @reports.count %>명</p>
      </div>
    </div>

    <!-- Actions -->
    <div class="flex items-center justify-between">
      <h3 class="text-xs font-black text-slate-400 uppercase tracking-[0.2em] flex items-center gap-2">
        <span class="w-1 h-1 rounded-full bg-indigo-500 shadow-[0_0_8px_rgba(99,102,241,0.8)]"></span>
        Ranking & Status
      </h3>
      <div class="flex gap-2">
         <button class="w-8 h-8 rounded-lg bg-white/5 flex items-center justify-center text-slate-500 hover:text-white transition-colors">
           <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12"/></svg>
         </button>
      </div>
    </div>

    <div class="space-y-3" id="reports-container">
      <% if @reports.any? %>
        <% @reports.each_with_index do |report, index| %>
          <div class="app-glass-card p-5 border-white/5 bg-white/[0.02] flex items-center justify-between">
            <div class="flex items-center gap-4">
               <span class="text-xs font-black <%= index < 3 ? 'text-amber-500' : 'text-slate-600' %> w-4">#<%= index + 1 %></span>
               <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-indigo-500/20 to-purple-500/20 flex items-center justify-center text-white font-black text-xs border border-white/5">
                 <%= report.user.nickname[0].upcase %>
               </div>
               <div>
                 <h4 class="text-sm font-black text-white"><%= report.user.nickname %></h4>
                 <div class="flex items-center gap-2 mt-0.5">
                   <p class="text-[9px] font-bold text-slate-500"><%= report.identity_title %></p>
                   <div class="flex items-center gap-1 opacity-60">
                     <% if report.relax_pass_count.to_i > 0 %>
                       <span class="text-[8px] font-bold px-1 rounded bg-indigo-500/20 text-indigo-400 border border-indigo-500/20">R:<%= report.relax_pass_count %></span>
                     <% end %>
                     <% if report.save_pass_count.to_i > 0 %>
                       <span class="text-[8px] font-bold px-1 rounded bg-emerald-500/20 text-emerald-400 border border-emerald-500/20">S:<%= report.save_pass_count %></span>
                     <% end %>
                   </div>
                 </div>
               </div>
            </div>

            <div class="text-right">
              <p class="text-lg font-black <%= report.achievement_rate >= 80 ? 'text-emerald-400' : (report.achievement_rate < 70 ? 'text-rose-500' : 'text-white') %> tabular-nums">
                <%= report.achievement_rate.to_i %><small class="text-xs font-bold opacity-50 ml-0.5">%</small>
              </p>
              
              <% if report.has_low_rate %>
                <div class="mt-1">
                  <% if report.is_eligible %>
                    <span class="px-1.5 py-0.5 rounded bg-rose-500/20 text-[8px] font-black text-rose-500 uppercase tracking-tighter border border-rose-500/30">경고 부여됨</span>
                  <% else %>
                    <% if !report.is_eligible_date %>
                      <span class="px-1.5 py-0.5 rounded bg-slate-500/20 text-[8px] font-black text-slate-400 uppercase tracking-tighter border border-white/5">신규 유예 기간</span>
                    <% elsif report.user.routine_club_members.find_by(routine_club_id: report.routine_club_id)&.is_moderator %>
                      <span class="px-1.5 py-0.5 rounded bg-amber-500/20 text-[8px] font-black text-amber-500 uppercase tracking-tighter border border-amber-500/30">운영진 면제</span>
                    <% else %>
                      <span class="px-1.5 py-0.5 rounded bg-slate-500/10 text-[8px] font-black text-slate-500 uppercase tracking-tighter border border-white/5">평가 제외 대상</span>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="py-20 text-center border border-dashed border-white/10 rounded-3xl">
          <p class="text-slate-500 font-bold">리포트가 존재하지 않습니다.</p>
        </div>
      <% end %>
    </div>
  </main>
</div>
