<!-- 모달 백그라운드 -->
<div id="auth_modal" 
     data-modal-target="container"
     data-action="click->modal#closeOnBackground"
     class="hidden fixed inset-0 z-[100] bg-slate-900/60 backdrop-blur-md flex items-end sm:items-center justify-center p-0 sm:p-4 transition-all duration-300">
  
  <!-- 모달 컨텐츠 (Bottom Sheet on Mobile) -->
  <div class="bg-white rounded-t-[32px] sm:rounded-threads-lg shadow-2xl w-full max-w-sm overflow-hidden border-t sm:border border-threads-border animate-slide-up sm:animate-in sm:zoom-in sm:fade-in duration-300">
    
    <!-- Grab Handle for Mobile -->
    <div class="sm:hidden flex justify-center pt-4">
      <div class="w-12 h-1.5 bg-slate-200 rounded-full"></div>
    </div>
    
    <!-- 헤더 -->
    <div class="flex flex-col items-center px-6 pt-10 pb-4">
      <div class="w-20 h-20 bg-white rounded-[24px] flex items-center justify-center mb-6 shadow-xl shadow-slate-200 border border-slate-100 overflow-hidden">
        <%= image_tag "rf_official_logo.png", class: "w-full h-full object-contain p-2" %>
      </div>
      <h2 class="text-2xl font-black text-threads-black tracking-tight">Routine Finders</h2>
      <p class="text-slate-500 text-sm mt-1 font-medium">건강한 습관의 시작</p>
    </div>

    <div class="px-8 pb-10 space-y-6">
      <!-- 소셜 로그인 섹션 -->
      <div class="space-y-3">
        <!-- 카카오 로그인 -->
        <form action="/auth/kakao" method="post" data-turbo="false" class="w-full">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <button type="submit" class="w-full flex items-center justify-center gap-3 bg-[#FEE500] text-[#191919] py-3.5 px-4 rounded-xl font-bold hover:opacity-90 transition-all shadow-sm">
            <svg class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 3C6.477 3 2 6.48 2 10.75c0 2.52 1.63 4.72 4.12 5.95l-1.04 3.81 4.27-2.61c.84.14 1.72.19 2.65.19 5.523 0 10-3.477 10-7.75C22 6.48 17.523 3 12 3z"/>
            </svg>
            카카오로 시작하기
          </button>
        </form>

        <!-- Google 로그인 -->
        <form action="/auth/google_oauth2" method="post" data-turbo="false" class="w-full">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <button type="submit" class="w-full flex items-center justify-center gap-3 bg-white text-slate-700 py-3.5 px-4 rounded-xl font-bold hover:bg-slate-50 transition-all shadow-sm border border-slate-200">
            <svg class="w-5 h-5" viewBox="0 0 24 24">
              <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
            Google로 시작하기
          </button>
        </form>

        <% if Rails.env.development? %>
          <!-- 개발자 로그인 (테스트용) -->
          <form action="/dev_login" method="post" data-turbo="false" class="w-full">
            <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
            <button type="submit" class="w-full flex items-center justify-center gap-3 bg-slate-700 text-white py-3.5 px-4 rounded-xl font-bold hover:bg-slate-600 transition-all shadow-sm">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
              </svg>
              개발자 로그인 (테스트)
            </button>
          </form>
        <% end %>
      </div>

      <p class="text-[10px] text-slate-400 text-center leading-relaxed px-4">
        로그인 시 Routine Finders의 <a href="#" onclick="event.preventDefault(); openTermsModal();" class="underline hover:text-slate-600">이용약관</a> 및 <a href="#" onclick="event.preventDefault(); openPrivacyModal();" class="underline hover:text-slate-600">개인정보처리방침</a>에 동의하게 됩니다.
      </p>
    </div>
  </div>
</div>

<!-- 이용약관 및 개인정보처리방침 모달 -->
<%= render 'shared/terms_modal' %>
<%= render 'shared/privacy_modal' %>
