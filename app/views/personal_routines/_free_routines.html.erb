<div class="space-y-12">
  <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-start">
  <!-- LEFT COLUMN: Routine List & Add Form (Takes 8/12 on LG) -->
  <div class="lg:col-span-8 space-y-8">
    <% 
      current_date = @selected_date || Date.current
      start_of_week = current_date.beginning_of_week
      week_dates = (0..6).map { |i| start_of_week + i.days }
      
      prev_week = current_date - 1.week
      next_week = current_date + 1.week
    %>

    <!-- 1. Header & Quick Switch -->
    <div class="flex flex-col gap-4 lg:gap-6">
      <div class="flex items-center justify-between px-1 border-b border-slate-100 pb-3 md:pb-4">
        <div class="space-y-0.5">
          <div class="flex items-center gap-2">
            <h2 class="text-xl md:text-2xl font-black text-threads-black tracking-tight"><%= current_date.strftime("%Y.%m") %></h2>
            <div class="flex gap-1">
              <%= link_to personal_routines_path(date: prev_week), class: "p-1 hover:bg-slate-100 rounded-lg transition-colors text-slate-400", "aria-label": "지난 주 보기" do %>
                <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/></svg>
              <% end %>
              <%= link_to personal_routines_path(date: next_week), class: "p-1 hover:bg-slate-100 rounded-lg transition-colors text-slate-400", "aria-label": "다음 주 보기" do %>
                <svg class="w-4 h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/></svg>
              <% end %>
            </div>
          </div>
          <p class="text-[10px] md:text-xs font-bold text-slate-400">
            <% if current_date == Date.current %>
              오늘의 정상 도전기
            <% else %>
              <%= current_date.strftime("%m월 %d일") %>의 기록
            <% end %>
          </p>
        </div>
        <div class="flex items-center gap-2">
           <% if current_date != Date.current %>
             <%= link_to personal_routines_path(date: Date.current), class: "px-3 py-1.5 bg-indigo-50 text-indigo-600 rounded-full text-[10px] font-black hover:bg-indigo-100 transition-all flex items-center gap-1 shadow-sm border border-indigo-100" do %>
               <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M12 6v6m0 0v6m0-6h6m-6 0H6"/></svg>
               오늘로 바로가기
             <% end %>
           <% end %>
           <% 
             # Count only routines scheduled for the selected day
             scheduled_count = @personal_routines.select { |r| (r.days || []).include?(current_date.wday.to_s) }.count 
           %>
           <span class="px-2.5 py-1 bg-slate-900 text-white rounded-full text-[9px] font-black uppercase tracking-wider" title="선택된 날짜에 수행해야 할 루틴의 총 개수입니다."><%= scheduled_count %> Active</span>
        </div>
      </div>
      
        <!-- Week View -->
      <div class="relative group/filter">
        <div class="flex bg-white/80 backdrop-blur-md p-1 rounded-xl lg:rounded-2xl gap-1 overflow-x-auto border border-slate-200/50 shadow-sm pb-1.5 no-scrollbar">
          <% week_dates.each do |date| %>
            <% 
               is_selected = date == current_date
               wday_str = ["일", "월", "화", "수", "목", "금", "토"][date.wday]
               btn_class = is_selected ? "bg-indigo-600 text-white shadow-md scale-102" : "text-slate-400 hover:text-slate-600 hover:bg-slate-50"
            %>
             <%= link_to personal_routines_path(date: date), 
                         class: "routine-filter-btn flex-1 min-w-[50px] py-2.5 rounded-lg lg:rounded-[14px] flex flex-col items-center justify-center gap-0.5 transition-all duration-300 relative #{btn_class}",
                         onclick: "filterRoutines('#{date.wday}')" do %>
                <span class="text-[8px] font-black opacity-60"><%= wday_str %></span>
                <span class="text-xs md:text-sm font-black"><%= date.day %></span>
                <% if date == Date.current %>
                  <span class="absolute -top-1 -right-1 w-2 h-2 bg-rose-500 rounded-full ring-2 ring-white z-20"></span>
                  <span class="text-[7px] font-black uppercase mt-0.5 <%= is_selected ? 'text-white' : 'text-rose-600' %>">Today</span>
                <% end %>
             <% end %>
          <% end %>
        </div>
      </div>
      
      <!-- Monthly Expandable -->
      <details class="group/calendar">
        <summary class="list-none cursor-pointer flex justify-center py-2 -mt-2 focus:outline-none">
           <div class="px-4 py-1.5 bg-white border border-slate-200 rounded-full shadow-sm text-[10px] font-black text-slate-500 flex items-center gap-1 hover:text-indigo-600 hover:border-indigo-200 transition-all">
             <span class="group-open/calendar:hidden">🗓️ 월간 캘린더 펼치기</span>
             <span class="hidden group-open/calendar:inline">▲ 캘린더 접기</span>
           </div>
        </summary>
        <div class="mt-4 bg-white p-6 rounded-[32px] border border-slate-200 shadow-xl animate-in slide-in-from-top-4 fade-in duration-300 overflow-hidden">
           <% 
             month_start = current_date.beginning_of_month
             month_end = current_date.end_of_month
             start_offset = month_start.wday
           %>
           <div class="grid grid-cols-7 gap-x-2 gap-y-4 text-center">
             <% ["일", "월", "화", "수", "목", "금", "토"].each do |day| %>
               <div class="text-[10px] font-black text-slate-300 uppercase"><%= day %></div>
             <% end %>
             <% start_offset.times do %> <div></div> <% end %>
             <% (month_start..month_end).each do |date| %>
               <% 
                  count = @activity_data[date] || 0
                  bg_class = if date == current_date
                                "bg-indigo-600 text-white ring-4 ring-indigo-100 scale-110 shadow-lg z-10"
                              elsif count > 0
                                "bg-indigo-100 text-indigo-600 hover:bg-indigo-200"
                              else
                                "bg-slate-50 text-slate-400 hover:bg-slate-100"
                              end
               %>
                <%= link_to personal_routines_path(date: date), class: "aspect-square rounded-2xl flex flex-col items-center justify-center gap-0.5 transition-all relative #{bg_class}" do %>
                  <span class="text-xs font-black text-[12px]"><%= date.day %></span>
                  <% if date == Date.current %>
                    <div class="absolute inset-0 border-2 border-rose-400 rounded-2xl pointer-events-none"></div>
                    <span class="absolute top-1 right-1 w-2 h-2 bg-rose-500 rounded-full ring-2 ring-white"></span>
                    <span class="absolute -top-2 left-1/2 -translate-x-1/2 px-1 bg-rose-500 text-white text-[6px] font-black rounded-sm">TODAY</span>
                  <% end %>
                  <% if count > 0 %>
                    <div class="flex gap-0.5">
                      <% [count, 3].min.times do %>
                        <div class="w-1 h-1 rounded-full <%= date == current_date ? 'bg-white/50' : 'bg-indigo-400' %>"></div>
                      <% end %>
                    </div>
                  <% end %>
                <% end %>
             <% end %>
           </div>
        </div>
      </details>
    </div>

    <!-- 2. Routine List Container: Slim -->
    <div class="bg-indigo-600 rounded-[28px] md:rounded-[40px] p-4 md:p-8 shadow-xl shadow-indigo-100 flex flex-col gap-5 relative overflow-hidden">
      <div class="absolute top-0 right-0 w-64 h-64 bg-white/5 rounded-full -mr-32 -mt-32 blur-3xl"></div>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-3.5 md:gap-4 relative z-10" id="routine-container">
        <% if @personal_routines.any? %>
          <% @personal_routines.each do |routine| %>
            <%= render 'routine_card', routine: routine %>
          <% end %>
        <% else %>
          <div class="col-span-full py-20 text-center space-y-4">
            <div class="text-4xl text-white/20">✨</div>
            <p class="text-white/50 font-bold">아직 생성된 루틴이 없습니다.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- 3. Add New Routine Form (LEFT SIDE) -->
    <section class="bg-indigo-600 rounded-[40px] p-6 md:p-10 text-white space-y-6 shadow-xl shadow-indigo-100 relative overflow-hidden group">
      <div class="absolute -right-20 -bottom-20 w-64 h-64 bg-white/5 rounded-full blur-3xl group-hover:scale-110 transition-transform"></div>
      <div class="relative z-10 space-y-1">
        <h3 class="text-2xl font-black tracking-tight">새 루틴 추가</h3>
        <p class="text-indigo-100/70 text-sm font-bold">오늘부터 시작할 작은 보물 같은 습관</p>
      </div>
      <%= render 'form', routine: PersonalRoutine.new %>
    </section>
  </div> <!-- END LEFT COLUMN -->

  <!-- RIGHT COLUMN: Sidebar (Takes 4/12 on LG) -->
  <aside class="lg:col-span-4 space-y-8 sticky top-12">
    <!-- Stats Cards: Slim -->
    <div class="grid grid-cols-2 gap-3 md:gap-4">
        <% 
          # Use current_date for stats calculation
          target_routines = @personal_routines.select { |r| (r.days || []).include?(current_date.wday.to_s) }
          total_completed = @monthly_completions&.count || 0
          avg_rate = @personal_routines.any? ? (total_completed.to_f / (@personal_routines.count * [Date.current.day, 1].max) * 100).clamp(0, 100).round : 0
          max_streak = @personal_routines.map(&:current_streak).max || 0
          
          # Category mapping for better display
          category_map = { "HEALTH" => "건강·운동", "LIFE" => "생활습관", "MIND" => "마음챙김", "HOBBY" => "취미·교양", "STUDY" => "학습·성장", "MONEY" => "자산·경제" }
          
          # Focus derived from routines scheduled FOR TODAY (target_routines) for consistency with "ACTIVE" count
          raw_category = target_routines.group_by(&:category).max_by { |_, v| v.count }&.first
          top_category = category_map[raw_category] || raw_category || "없음"
        %>
      
      <div class="bg-white p-4 md:p-6 rounded-[24px] md:rounded-[32px] border border-slate-100 shadow-sm flex flex-col justify-center">
        <p class="text-[8px] md:text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Monthly Done</p>
        <h4 class="text-xl md:text-3xl font-black text-slate-900 tabular-nums"><%= total_completed %><span class="text-[10px] md:text-sm ml-1 text-slate-400">회</span></h4>
      </div>

      <div class="bg-white p-4 md:p-6 rounded-[24px] md:rounded-[32px] border border-slate-100 shadow-sm flex flex-col justify-center">
        <p class="text-[8px] md:text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Avg. Success</p>
        <h4 class="text-xl md:text-3xl font-black text-emerald-600 tabular-nums"><%= avg_rate %><span class="text-[10px] md:text-sm ml-1 text-emerald-300">%</span></h4>
      </div>

      <div class="bg-white p-4 md:p-6 rounded-[24px] md:rounded-[32px] border border-slate-100 shadow-sm flex flex-col justify-center">
        <p class="text-[8px] md:text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Max Streak</p>
        <h4 class="text-xl md:text-3xl font-black text-orange-500 tabular-nums"><%= max_streak %><span class="text-[10px] md:text-sm ml-1 text-orange-300">일</span></h4>
      </div>

      <div class="bg-white p-4 md:p-6 rounded-[24px] md:rounded-[32px] border border-slate-100 shadow-sm flex flex-col justify-center">
        <p class="text-[8px] md:text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1" title="가장 많은 루틴이 등록된 카테고리입니다.">Main Focus</p>
        <h4 class="text-xs md:text-sm font-black text-purple-600 truncate"><%= top_category %></h4>
      </div>
    </div>

    <!-- Achievement Matrix -->
    <%= render "shared/achievement_matrix", compact: true %>
  </div> <!-- END ROW GRID -->

  <!-- BOTTOM: Recommended SECTION -->
  <div class="lg:col-span-12 mt-12 pt-12 border-t border-slate-100">
    <section class="space-y-8">
      <div class="flex items-center justify-between px-1">
        <div class="space-y-1">
          <h3 class="text-2xl font-black text-slate-900 tracking-tight">인기 루틴 추천</h3>
          <p class="text-base font-bold text-slate-400">다른 사용자들이 가장 많이 실천하는 습관들입니다.</p>
        </div>
      </div>
      
      <div id="recommended-routines-section" class="flex gap-4 lg:gap-6 overflow-x-auto pb-6 -mx-1 px-1 no-scrollbar text-left">
        <%= render "recommended_routines" %>
      </div>
    </section>
  </div> <!-- END RECOMMENDED SECTION -->
</div> <!-- END ROOT CONTAINER -->

<script>
  function filterRoutines(day) {
    document.querySelectorAll('.routine-card').forEach(card => {
      if (day === 'all' || (card.dataset.days && card.dataset.days.split(',').includes(day))) {
        card.style.display = 'flex';
      } else {
        card.style.display = 'none';
      }
    });
  }
  
  function toggleDropdown(id) {
    document.querySelectorAll('[id^="dropdown-"]').forEach(dropdown => {
      if (dropdown.id !== `dropdown-${id}`) dropdown.classList.add('hidden');
    });
    const dropdown = document.getElementById(`dropdown-${id}`);
    if (dropdown) dropdown.classList.toggle('hidden');
  }
  
  document.addEventListener('click', (e) => {
    if (!e.target.closest('[onclick^="toggleDropdown"]') && !e.target.closest('[id^="dropdown-"]')) {
      document.querySelectorAll('[id^="dropdown-"]').forEach(d => d.classList.add('hidden'));
    }
  });
  
  document.addEventListener('turbo:load', () => {
    <% current_date_wday = (@selected_date || Date.current).wday.to_s %>
    filterRoutines('<%= current_date_wday %>');
  });
</script>
