<div class="min-h-screen bg-slate-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    
    <!-- Header -->
    <header class="mb-12">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-6">
        <div>
          <h1 class="text-4xl md:text-5xl font-black text-slate-900 tracking-tight">
            루틴 관리
          </h1>
          <p class="text-slate-500 font-bold mt-2">매일의 기록이 모여 당신의 가능성을 증명합니다</p>
        </div>
        
        <div class="flex gap-4">
          <div class="bg-white border border-slate-100 p-6 rounded-3xl shadow-sm">
            <p class="text-xs font-black text-slate-400 uppercase tracking-widest mb-1">Today</p>
            <% current_wday = Date.current.wday.to_s %>
            <% total_routines_today = @personal_routines.select { |r| (r.days || []).include?(current_wday) }.count %>
            <% completed_routines_today = @personal_routines.select { |r| r.completed_today? && (r.days || []).include?(current_wday) }.count %>
            <div class="flex items-baseline gap-2">
              <p class="text-3xl font-black text-emerald-500"><%= completed_routines_today %></p>
              <p class="text-lg font-black text-slate-300">/ <%= total_routines_today %></p>
            </div>
          </div>
          
          <div class="bg-gradient-to-br from-indigo-500 to-purple-600 p-6 rounded-3xl shadow-lg shadow-indigo-200">
            <p class="text-xs font-black text-indigo-100 uppercase tracking-widest mb-1">Streak</p>
            <p class="text-3xl font-black text-white">
              <%= @personal_routines.map(&:current_streak).max || 0 %>🔥
            </p>
          </div>
        </div>
      </div>
    </header>

    <!-- Simple Tabs (No Stimulus initially for stability) -->
    <div class="mb-8" data-controller="tabs" data-tabs-default-tab-value="<%= params[:tab] || 'free' %>" data-tabs-active-class="bg-indigo-600 text-white shadow-lg" data-tabs-inactive-class="text-slate-400 hover:text-slate-600">
      <div class="bg-white border border-slate-200 rounded-3xl p-2 inline-flex gap-2 shadow-sm">
        <button type="button"
                data-action="tabs#change"
                data-tabs-target="tab"
                data-id="free"
                class="px-8 py-3 rounded-2xl font-black text-sm transition-all <%= (params[:tab].blank? || params[:tab] == 'free') ? 'bg-indigo-600 text-white shadow-lg' : 'text-slate-400 hover:text-slate-600' %>">
          무료 루틴
        </button>
        <button type="button"
                data-action="tabs#change"
                data-tabs-target="tab"
                data-id="club"
                class="px-8 py-3 rounded-2xl font-black text-sm transition-all <%= params[:tab] == 'club' ? 'bg-indigo-600 text-white shadow-lg' : 'text-slate-400 hover:text-slate-600' %>">
          루파 클럽
        </button>
      </div>

      <div class="mt-8">
        <div data-tabs-target="panel" data-id="free" class="<%= (params[:tab].blank? || params[:tab] == 'free') ? '' : 'hidden' %>">
          <%= render 'free_routines' %>
        </div>
        <div data-tabs-target="panel" data-id="club" class="<%= params[:tab] == 'club' ? '' : 'hidden' %>">
          <%= render 'club_routines' %>
        </div>
      </div>
    </div>

  </div>
</div>
