<div class="grid grid-cols-1 lg:grid-cols-3 gap-10" data-controller="modal">
  <!-- Left Column: Primary Monitoring -->
  <div class="lg:col-span-2 space-y-10">
    
    <!-- Classification Standards Card -->
    <div class="app-glass-card p-10 relative overflow-hidden group">
      <div class="absolute -right-20 -top-20 w-64 h-64 bg-indigo-500/10 rounded-full blur-3xl group-hover:bg-indigo-500/20 transition-all duration-700"></div>
      
      <div class="flex items-center justify-between mb-10 relative z-10">
        <div>
          <h2 class="text-xl font-black text-white">참가자 상태 관리 기준</h2>
          <p class="text-slate-500 text-xs font-bold mt-1">챌린지의 성격에 맞춰 자동 관리 기준을 커스텀하세요.</p>
        </div>
        <button data-action="click->modal#open" class="glass-btn px-6 py-2.5 text-[10px] font-black text-indigo-400 hover:text-white uppercase tracking-widest">
          Update Logic
        </button>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4 relative z-10">
        <div class="bg-white/5 rounded-3xl p-5 border border-white/5">
          <p class="text-[9px] font-black text-emerald-400 uppercase tracking-widest mb-4 flex items-center gap-1.5">
            <span class="w-1.5 h-1.5 rounded-full bg-emerald-400"></span> ACTIVE
          </p>
          <div class="space-y-2">
            <p class="text-[10px] font-bold text-slate-400">• Streak 0 Fail</p>
            <p class="text-[10px] font-bold text-slate-400">• Ratio ≥ <%= challenge.active_rate_threshold %>%</p>
          </div>
        </div>
        <div class="bg-white/5 rounded-3xl p-5 border border-white/5">
          <p class="text-[9px] font-black text-amber-400 uppercase tracking-widest mb-4 flex items-center gap-1.5">
            <span class="w-1.5 h-1.5 rounded-full bg-amber-400"></span> SLUGGISH
          </p>
          <div class="space-y-2">
            <p class="text-[10px] font-bold text-slate-400">• Fail 1~<%= (challenge.non_participating_failures_threshold || 1) - 1 %>x</p>
            <p class="text-[10px] font-bold text-slate-400">• Ratio <%= challenge.sluggish_rate_threshold || 0 %>~<%= (challenge.active_rate_threshold || 0) - 1 %>%</p>
          </div>
        </div>
        <div class="bg-white/5 rounded-3xl p-5 border border-white/5">
          <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest mb-4 flex items-center gap-1.5">
            <span class="w-1.5 h-1.5 rounded-full bg-slate-400"></span> INACTIVE
          </p>
          <div class="space-y-2">
            <p class="text-[10px] font-bold text-slate-400">• Fail ≥ <%= challenge.non_participating_failures_threshold || 1 %>x</p>
            <p class="text-[10px] font-bold text-slate-400">• Ratio < <%= challenge.sluggish_rate_threshold || 0 %>%</p>
          </div>
        </div>
        <div class="bg-rose-500/10 rounded-3xl p-5 border border-rose-500/20">
          <p class="text-[9px] font-black text-rose-500 uppercase tracking-widest mb-4 flex items-center gap-1.5">
            <span class="w-1.5 h-1.5 rounded-full bg-rose-500 animate-pulse"></span> TERMINATED
          </p>
          <div class="space-y-2">
            <p class="text-[10px] font-bold text-slate-400">• Max Fails Reached</p>
            <p class="text-[10px] font-bold text-slate-400">(Limit <%= challenge.failure_tolerance %>x)</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Verification Pending Section -->
    <% if pending_verifications.any? %>
      <div class="app-glass-card p-10 border-amber-500/10 bg-amber-500/[0.02]">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-xl font-black text-white flex items-center gap-3">
            <span class="w-10 h-10 rounded-2xl bg-amber-500/10 flex items-center justify-center text-amber-500">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
            </span>
            인증 승인 대기 (<%= pending_verifications.count %>)
          </h2>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <% pending_verifications.each do |log| %>
            <div class="bg-white/[0.03] rounded-[32px] p-6 border border-white/10 group/log overflow-hidden">
              <div class="flex items-center gap-4 mb-5">
                <img src="<%= log.participant.user.profile_image %>" class="w-11 h-11 rounded-2xl object-cover shadow-2xl">
                <div>
                  <p class="font-black text-white text-sm"><%= log.participant.user.nickname %></p>
                  <p class="text-[10px] font-black text-slate-500 uppercase tracking-tighter"><%= log.created_at.in_time_zone('Asia/Seoul').strftime('%m.%d %H:%M') %></p>
                </div>
              </div>
              
              <% if log.image_url.present? %>
                <div class="relative aspect-video rounded-2xl overflow-hidden mb-5">
                  <img src="<%= log.image_url %>" class="w-full h-full object-cover transition-transform duration-700 group-hover/log:scale-110">
                  <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent opacity-0 group-hover/log:opacity-100 transition-opacity"></div>
                </div>
              <% end %>

              <div class="flex items-center gap-2">
                <%= button_to approve_challenge_verification_log_path(challenge, log), method: :post, class: "flex-1 py-3.5 bg-indigo-600 hover:bg-indigo-500 text-white rounded-2xl font-black text-[11px] transition-all shadow-xl shadow-indigo-600/20" do %>
                   APPROVE
                <% end %>
                <button type="button" onclick="document.getElementById('reject-form-<%= log.id %>').classList.remove('hidden'); this.parentElement.classList.add('hidden');" class="flex-1 py-3.5 bg-white/5 hover:bg-white/10 text-slate-400 rounded-2xl font-black text-[11px] transition-all">
                   REJECT
                </button>
              </div>

              <div id="reject-form-<%= log.id %>" class="hidden mt-4 space-y-3">
                <%= form_with url: reject_challenge_verification_log_path(challenge, log), method: :post, local: true do |f| %>
                  <%= f.text_field :reject_reason, placeholder: "거절 사유 입력", class: "w-full text-xs p-4 bg-black/40 border border-white/10 rounded-2xl text-white focus:outline-none focus:border-rose-500/50", required: true %>
                  <div class="flex gap-2 mt-2">
                    <%= f.submit "CONFIRM REJECT", class: "flex-1 py-2 bg-rose-600 text-white text-[9px] font-black rounded-xl hover:bg-rose-700" %>
                    <button type="button" onclick="document.getElementById('reject-form-<%= log.id %>').classList.add('hidden'); this.closest('.group\\/log').querySelector('.flex').classList.remove('hidden');" class="px-4 py-2 bg-white/5 text-slate-500 text-[9px] font-black rounded-xl border border-white/5 hover:bg-white/10">
                      CANCEL
                    </button>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Activity Log Content -->
    <div class="app-glass-card p-10">
      <div class="flex items-center justify-between mb-10">
        <h2 class="text-xl font-black text-white">최근 활동 로그</h2>
        <span class="px-4 py-1.5 bg-white/5 rounded-full text-[9px] font-black text-slate-500 tracking-widest uppercase">Last 20 Events</span>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% if recent_verifications.any? %>
          <% recent_verifications.each do |log| %>
            <div class="flex items-center gap-4 p-5 rounded-[24px] bg-white/[0.02] border border-white/5 hover:bg-white/[0.04] transition-all group/item">
              <img src="<%= log.participant.user.profile_image %>" class="w-10 h-10 rounded-xl object-cover shadow-lg transition-transform group-hover/item:scale-110">
              <div class="flex-1">
                <div class="flex items-center justify-between mb-1">
                  <span class="font-black text-white text-sm"><%= log.participant.user.nickname %></span>
                  <% status_style = { pending: 'text-amber-500', approved: 'text-emerald-500', rejected: 'text-rose-500' }[log.status.to_sym] %>
                  <span class="text-[9px] font-black uppercase tracking-widest <%= status_style %>">
                    <%= log.status.upcase %>
                  </span>
                </div>
                <p class="text-[10px] font-black text-slate-500 mt-0.5"><%= log.created_at.in_time_zone('Asia/Seoul').strftime('%m.%d %H:%M') %></p>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-span-full py-20 text-center">
            <p class="text-sm font-black text-slate-500 uppercase tracking-widest opacity-30">No Records Found</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Right Column: Contextual Info & Quick Ops -->
  <div class="space-y-10">
    <!-- Active Members Summary -->
    <div class="app-glass-card p-8">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-lg font-black text-white">전체 참가자</h2>
          <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Growth Loop Population</p>
        </div>
        <%= link_to hosted_challenge_path(challenge, tab: "participants"), class: "glass-btn w-9 h-9 flex items-center justify-center text-slate-400 group" do %>
          <svg class="w-4 h-4 group-hover:translate-x-0.5 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
        <% end %>
      </div>

      <div class="space-y-3">
        <% if participants.any? %>
          <% participants.limit(8).each do |participant| %>
            <div class="flex items-center justify-between p-3.5 rounded-2xl bg-white/[0.02] hover:bg-white/[0.05] transition-all">
              <div class="flex items-center gap-3">
                <img src="<%= participant.user.profile_image %>" class="w-8 h-8 rounded-lg object-cover">
                <div>
                  <p class="font-black text-white text-xs"><%= participant.user.nickname %></p>
                  <p class="text-[9px] font-black text-slate-500 italic"><%= participant.completion_rate.to_i %>% Success Pulse</p>
                </div>
              </div>
              <% badge = participant.status_badge_info %>
              <span class="px-2.5 py-1 rounded-lg text-[8px] font-black uppercase tracking-tighter <%= badge[:class].gsub('bg-', 'bg-').gsub('text-', 'text-') %>">
                <%= badge[:label] %>
              </span>
            </div>
          <% end %>
        <% else %>
          <div class="py-10 text-center text-slate-600 italic text-xs">Waiting for loopers...</div>
        <% end %>
      </div>
    </div>

    <!-- Quick Operations Card -->
    <div class="bg-indigo-600 rounded-[40px] p-8 text-white shadow-2xl shadow-indigo-600/30 relative overflow-hidden group">
      <div class="absolute -right-10 -top-10 w-40 h-40 bg-white/10 rounded-full blur-3xl"></div>
      <h2 class="text-lg font-black mb-8 relative z-10">운영 퀵 액션</h2>
      <div class="space-y-4 relative z-10">
        <button class="w-full flex items-center justify-between p-5 bg-white/10 hover:bg-white/20 rounded-3xl transition-all group/btn">
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 bg-white/20 rounded-2xl flex items-center justify-center group-hover/btn:scale-110 transition-transform">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/></svg>
            </div>
            <span class="text-xs font-black uppercase tracking-widest">Bulk Reminder</span>
          </div>
          <svg class="w-4 h-4 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
        </button>
        <button class="w-full flex items-center justify-between p-5 bg-white/10 hover:bg-white/20 rounded-3xl transition-all group/btn">
          <div class="flex items-center gap-4">
            <div class="w-10 h-10 bg-white/20 rounded-2xl flex items-center justify-center group-hover/btn:scale-110 transition-transform">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z"/></svg>
            </div>
            <span class="text-xs font-black uppercase tracking-widest">New Broadcast</span>
          </div>
          <svg class="w-4 h-4 opacity-30" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Modal: Logic Adjustment -->
  <div data-modal-target="container" 
       data-action="click->modal#closeOnBackground" 
       class="fixed inset-0 z-[100] hidden bg-black/80 backdrop-blur-xl flex items-center justify-center p-6">
    <div class="app-glass-card w-full max-w-lg bg-[#1B1A24] border-white/10 overflow-hidden animate-slide-up">
      <div class="p-8 border-b border-white/5 flex items-center justify-between bg-white/[0.02]">
        <div>
          <h2 class="text-xl font-black text-white">자동 분류 기준 커스텀</h2>
          <p class="text-xs font-bold text-slate-500 mt-1">참가자들을 효율적으로 필터링하는 파라미터입니다.</p>
        </div>
        <button data-action="click->modal#close" class="p-2 hover:bg-white/10 rounded-xl transition-all">
          <svg class="w-6 h-6 text-slate-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
        </button>
      </div>
      
      <%= form_with model: challenge, url: hosted_challenge_path(challenge), method: :patch, class: "p-8 space-y-6" do |f| %>
        <%= hidden_field_tag :tab, "dashboard" %>
        <%= hidden_field_tag :source, "prototype" %>
        
        <div class="space-y-5">
          <div class="flex items-center justify-between gap-6">
            <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest shrink-0">Active Rate (%)</label>
            <div class="flex-1 relative">
              <%= f.number_field :active_rate_threshold, class: "w-full p-4 bg-white/5 border border-white/10 rounded-2xl font-black text-white focus:border-indigo-500 outline-none transition-all", min: 0, max: 100 %>
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-[10px] font-black text-slate-500">PEAK %</span>
            </div>
          </div>

          <div class="flex items-center justify-between gap-6">
            <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest shrink-0">Inactive Fails (x)</label>
            <div class="flex-1 relative">
              <%= f.number_field :non_participating_failures_threshold, class: "w-full p-4 bg-white/5 border border-white/10 rounded-2xl font-black text-white focus:border-indigo-500 outline-none transition-all", min: 1 %>
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-[10px] font-black text-slate-500">STREAK</span>
            </div>
          </div>

          <div class="flex items-center justify-between gap-6">
            <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest shrink-0">Sluggish Floor (%)</label>
            <div class="flex-1 relative">
              <%= f.number_field :sluggish_rate_threshold, class: "w-full p-4 bg-white/5 border border-white/10 rounded-2xl font-black text-white focus:border-indigo-500 outline-none transition-all", min: 0, max: 100 %>
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-[10px] font-black text-slate-500">MIN %</span>
            </div>
          </div>

          <div class="flex items-center justify-between gap-6">
             <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest shrink-0">Failure Cap (x)</label>
             <div class="flex-1 relative">
               <%= f.number_field :failure_tolerance, class: "w-full p-4 bg-white/5 border border-white/10 rounded-2xl font-black text-white focus:border-indigo-500 outline-none transition-all", min: 1 %>
               <span class="absolute right-4 top-1/2 -translate-y-1/2 text-[10px] font-black text-slate-500">LIMIT</span>
             </div>
          </div>
        </div>

        <div class="pt-4">
          <%= f.submit "SAVE OPTIMIZATIONS", class: "w-full py-4.5 bg-indigo-600 text-white rounded-[24px] font-black text-xs hover:bg-indigo-500 transition-all shadow-xl shadow-indigo-600/30" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
