<div class="space-y-8">
  <div class="flex items-center justify-between px-2">
    <div>
      <h3 class="text-xs font-black text-indigo-400 uppercase tracking-widest leading-none mb-2">Elite Collective</h3>
      <h2 class="text-2xl font-black text-white">ÌÅ¥ÎüΩ Ï†ÑÏö© Îû≠ÌÇπ</h2>
    </div>
    <div class="flex items-center gap-1.5 px-3 py-1.5 bg-amber-500/10 rounded-xl border border-amber-500/20">
      <span class="text-lg">üèÜ</span>
      <span class="text-[10px] font-black text-amber-500 uppercase tracking-widest">Hall of Fame</span>
    </div>
  </div>

  <!-- Top 3 Podium (Mobile Friendly) -->
  <div class="grid grid-cols-3 gap-3 md:gap-6 items-end pt-10 pb-6 px-2">
    <% if @rufa_rankings.size >= 2 %>
      <!-- 2nd Place -->
      <div class="flex flex-col items-center space-y-3">
        <div class="relative">
          <img src="<%= @rufa_rankings[1][:user].profile_image %>" class="w-16 md:w-20 h-16 md:h-20 rounded-3xl object-cover border-2 border-slate-400/50 shadow-2xl">
          <div class="absolute -bottom-2 -right-2 w-8 h-8 md:w-10 md:h-10 bg-slate-400 rounded-2xl flex items-center justify-center text-white font-black text-sm border-2 border-slate-900 shadow-lg">2</div>
        </div>
        <p class="text-[10px] md:text-sm font-black text-white text-center truncate w-full"><%= @rufa_rankings[1][:user].nickname %></p>
      </div>
    <% end %>

    <% if @rufa_rankings.size >= 1 %>
      <!-- 1st Place -->
      <div class="flex flex-col items-center space-y-4">
        <div class="relative">
          <div class="absolute -top-6 left-1/2 -translate-x-1/2 text-3xl animate-bounce">üëë</div>
          <img src="<%= @rufa_rankings[0][:user].profile_image %>" class="w-20 md:w-28 h-20 md:h-28 rounded-[32px] md:rounded-[40px] object-cover border-4 border-amber-400 shadow-[0_0_50px_rgba(251,191,36,0.4)]">
          <div class="absolute -bottom-2 -right-2 w-10 h-10 md:w-12 md:h-12 bg-amber-400 rounded-3xl flex items-center justify-center text-black font-black text-lg border-4 border-slate-900 shadow-xl">1</div>
        </div>
        <div class="text-center">
          <p class="text-xs md:text-base font-black text-white truncate"><%= @rufa_rankings[0][:user].nickname %></p>
          <p class="text-[9px] md:text-[11px] font-bold text-amber-400 uppercase tracking-widest"><%= @rufa_rankings[0][:score].to_i %> Points</p>
        </div>
      </div>
    <% end %>

    <% if @rufa_rankings.size >= 3 %>
      <!-- 3rd Place -->
      <div class="flex flex-col items-center space-y-3">
        <div class="relative">
          <img src="<%= @rufa_rankings[2][:user].profile_image %>" class="w-16 md:w-20 h-16 md:h-20 rounded-3xl object-cover border-2 border-orange-700/50 shadow-2xl">
          <div class="absolute -bottom-2 -right-2 w-8 h-8 md:w-10 md:h-10 bg-orange-700 rounded-2xl flex items-center justify-center text-white font-black text-sm border-2 border-slate-900 shadow-lg">3</div>
        </div>
        <p class="text-[10px] md:text-sm font-black text-white text-center truncate w-full"><%= @rufa_rankings[2][:user].nickname %></p>
      </div>
    <% end %>
  </div>

  <!-- Leaderboard Table -->
  <div class="bg-slate-900 rounded-[40px] border border-white/5 overflow-hidden">
     <div class="p-6 border-b border-white/5 bg-white/5 flex items-center justify-between">
       <span class="text-[10px] font-black text-slate-500 uppercase tracking-widest">Active Members Ranking</span>
       <span class="text-[10px] font-bold text-slate-600">Updated every 15m</span>
     </div>
     <div class="divide-y divide-white/5">
        <% @rufa_rankings.each_with_index do |data, idx| %>
          <div class="p-5 flex items-center gap-4 hover:bg-white/[0.03] transition-all group">
            <span class="w-6 text-center text-xs font-black <%= idx < 3 ? 'text-indigo-400' : 'text-slate-600' %> tabular-nums">
              <%= idx + 1 %>
            </span>
            <img src="<%= data[:user].profile_image %>" class="w-10 h-10 rounded-xl object-cover border border-white/10">
            <div class="flex-1 min-w-0">
               <p class="text-sm font-black text-white truncate"><%= data[:user].nickname %></p>
               <p class="text-[9px] font-bold text-slate-500 uppercase tracking-tighter"><%= data[:user].routine_club_members.active.first&.identity_title || "Î£®Ìåå" %></p>
            </div>
            <div class="text-right">
              <p class="text-sm font-black text-indigo-400 tabular-nums"><%= data[:score].to_i %> <span class="text-[9px] text-slate-600">pts</span></p>
              <div class="flex items-center gap-1 justify-end mt-0.5">
                 <% 5.times do |i| %>
                   <div class="w-1 h-3 rounded-full <%= i < (data[:score].to_i / 20) ? 'bg-indigo-500' : 'bg-white/10' %>"></div>
                 <% end %>
              </div>
            </div>
          </div>
        <% end %>
     </div>
  </div>
</div>
