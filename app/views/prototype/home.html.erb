<div class="space-y-8 pt-8">
  <!-- 1. Header: Logo | Profile | Notification -->
  <header class="flex items-center justify-between">
    <!-- Left: Logo -->
    <%= link_to prototype_home_path, class: "app-tap-active py-1 flex items-center" do %>
      <div class="w-10 h-10 rounded-2xl bg-white flex items-center justify-center p-1.5 shadow-lg shadow-indigo-500/10 border border-white/10 group-hover:scale-105 transition-transform">
        <%= image_tag "rf_symbol_v9.png", class: "w-full h-full object-contain" %>
      </div>
    <% end %>
    
    <!-- Center: Profile -->
    <!-- Center: Profile or Login -->
    <% if current_user %>
      <%= link_to prototype_my_path, class: "absolute left-1/2 -translate-x-1/2 flex items-center gap-3 app-tap-active" do %>
        <div class="w-10 h-10 rounded-2xl bg-indigo-500 overflow-hidden shadow-lg shadow-indigo-500/20 border border-white/10">
          <img src="<%= current_user.profile_image %>" class="w-full h-full object-cover">
        </div>
        <div>
          <h2 class="text-sm font-black text-white"><%= current_user&.nickname || "User" %></h2>
          <div class="flex items-center gap-1.5 mt-0.5">
            <span class="w-1.5 h-1.5 rounded-full bg-emerald-500 animate-pulse"></span>
            <p class="text-[10px] font-bold text-slate-500">현재 활동 중</p>
          </div>
        </div>
      <% end %>
    <% else %>
      <%= link_to prototype_login_path, 
                  class: "absolute left-1/2 -translate-x-1/2 px-5 py-2.5 bg-indigo-600 rounded-full font-black text-white text-sm shadow-lg shadow-indigo-600/30 active:scale-95 transition-all w-fit flex items-center justify-center whitespace-nowrap cursor-pointer z-[110]" do %>
        로그인 / 회원가입
      <% end %>
    <% end %>
    
    <!-- Right: Notification -->
    <%= link_to prototype_notifications_path, 
                data: { action: "click->proto-ui#checkLogin" },
                class: "relative app-glass-card w-10 h-10 flex items-center justify-center app-tap-active" do %>
      <svg class="w-5 h-5 text-slate-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
      </svg>
      <% if current_user&.notifications&.unread&.any? %>
        <span class="absolute -top-1 -right-1 w-5 h-5 bg-red-500 rounded-full flex items-center justify-center text-[9px] font-black text-white border-2 border-[#0C0B12]">
          <%= [current_user.notifications.unread.count, 9].min %>
        </span>
      <% end %>
    <% end %>
  </header>

  <!-- 2. Commitment Input & Live Feed -->
  <div class="space-y-3">
    <%= form_with url: prototype_record_path, method: :post, 
                  data: { action: "submit->proto-ui#checkLogin" },
                  class: "app-glass-card flex items-center px-5 py-3.5 gap-4 border-white/5 hover:bg-white/[0.03] transition-colors group" do |f| %>
      <%= f.hidden_field :activity_type, value: "reflection" %>
      <span class="text-xl group-hover:scale-110 transition-transform shrink-0">💪</span>
      <%= f.text_field :body, 
                       placeholder: "오늘의 다짐을 적어보세요...", 
                       class: "w-full bg-transparent border-none p-0 text-[13px] font-bold text-white placeholder:text-slate-500 focus:ring-0",
                       onkeydown: "if(event.key === 'Enter') { event.preventDefault(); this.form.submit(); }" %>
      <button type="submit" class="ml-auto shrink-0 app-tap-active">
        <svg class="w-5 h-5 text-indigo-500 opacity-80" fill="currentColor" viewBox="0 0 24 24"><path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"/></svg>
      </button>
    <% end %>

    <!-- Live Feed with LIVE indicator -->
    <div class="overflow-hidden h-6 relative mx-2">
      <div class="flex items-center gap-1.5 absolute left-0 top-1/2 -translate-y-1/2 z-10">
        <span class="relative flex h-1.5 w-1.5">
          <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-red-400 opacity-75"></span>
          <span class="relative inline-flex rounded-full h-1.5 w-1.5 bg-red-500"></span>
        </span>
        <span class="text-[9px] font-black uppercase tracking-widest leading-none text-transparent bg-clip-text bg-gradient-to-r from-rose-500 via-purple-500 to-indigo-500">LIVE</span>
      </div>
      <div class="flex flex-col animate-vertical-slide pl-16">
        <% 
          # Combine different activity types
          activities = []
          
          # Recent reflections (루틴 기록 & 다짐)
          if @recent_reflections.present?
            @recent_reflections.each do |activity|
              if activity.activity_type == "reflection"
                text = "#{activity.user.nickname}님 다짐: '#{activity.body.truncate(20) rescue '공백'}' ✨"
              else
                text = "#{activity.user.nickname}님 루틴 완료: '#{activity.body.truncate(20) rescue '공백'}' ✅"
              end
              
              activities << {
                type: :reflection,
                user: activity.user,
                text: text
              }
            end
          end
          
          # Recent participations (챌린지 & 모임 참여)
          if defined?(@recent_joins) && @recent_joins.present?
            @recent_joins.each do |participant|
              type_text = participant.challenge.meeting_type.present? ? "모임" : "챌린지"
              activities << {
                type: :join,
                user: participant.user,
                text: "#{participant.user.nickname}님이 '#{participant.challenge.title}' #{type_text}에 참여했어요 ✨"
              }
            end
          end
          
          # Shuffle and limit
          activities = activities.shuffle.take(5)
          activities << activities.first if activities.any? # Loop
        %>
        
        <% if activities.any? %>
          <% activities.each do |activity| %>
            <div class="h-6 flex items-center gap-2 opacity-60">
              <img src="<%= activity[:user].profile_image %>" class="w-4 h-4 rounded-full border border-white/10">
              <p class="text-[10px] font-bold text-slate-400 truncate">
                <%= activity[:text] %>
              </p>
            </div>
          <% end %>
        <% else %>
          <div class="h-6 flex items-center gap-2 opacity-40">
            <span class="text-[10px] font-bold text-slate-500">지금 첫 번째 활동을 시작해보세요!</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <style>
    @keyframes vertical-slide {
      0% { transform: translateY(0); }
      15% { transform: translateY(0); }
      20% { transform: translateY(-1.5rem); }
      35% { transform: translateY(-1.5rem); }
      40% { transform: translateY(-3rem); }
      55% { transform: translateY(-3rem); }
      60% { transform: translateY(-4.5rem); }
      75% { transform: translateY(-4.5rem); }
      80% { transform: translateY(-6rem); }
      95% { transform: translateY(-6rem); }
      100% { transform: translateY(-7.5rem); }
    }
    .animate-vertical-slide {
      animation: vertical-slide 15s infinite;
    }
  </style>

  <!-- 3. Visual Focus: The Digital Garden (Premium Redesign) -->
  <section id="garden-root-container" class="relative px-2">
    <%= render partial: "prototype/garden", locals: { 
          progress: @progress, 
          completed_count: @completed_count, 
          total_task_count: @total_task_count,
          orbit_users: @orbit_users,
          todays_routines: @todays_routines,
          aura_tasks: @aura_tasks,
          global_average_progress: @global_average_progress
        } %>
  </section>

  <!-- 3.5. Weekly Goal Card -->
  <% if current_user %>
    <% goal_empty = current_user.weekly_goal.blank? %>
    <div class="app-glass-card p-6 bg-[#1B1A24] border-white/5">
      <% if goal_empty %>
        <%= link_to prototype_my_path, class: "flex items-center justify-between p-5 bg-indigo-500/10 border border-dashed border-indigo-500/40 rounded-2xl group hover:bg-indigo-500/20 transition-all w-full" do %>
          <div class="flex flex-col gap-1">
            <p class="text-[10px] font-black text-indigo-400 uppercase tracking-tighter">Weekly Goal</p>
            <p class="text-base font-bold text-indigo-300">목표를 설정해 보세요.</p>
          </div>
          <span class="text-[10px] font-black text-indigo-400 shrink-0">작성하러 가기 →</span>
        <% end %>
      <% else %>
        <div class="flex items-center justify-between">
          <div class="space-y-1">
            <p class="text-[10px] font-black text-indigo-400 uppercase tracking-[0.2em]">Weekly Goal</p>
            <p class="text-base font-black text-white leading-relaxed"><%= current_user.weekly_goal %></p>
          </div>
          <div class="text-xl opacity-50">🎯</div>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- 4. Routine List -->
  <section class="space-y-4">
    <div class="flex justify-between items-center px-2">
      <div class="flex items-center gap-2">
        <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em] leading-none">오늘의 루틴</h3>
        <span class="text-[10px] font-bold text-slate-600 bg-white/5 px-2 py-0.5 rounded-full"><%= Date.current.strftime("%m월 %d일") %></span>
      </div>
      <%= link_to "관리", prototype_routines_path, class: "text-[10px] font-black text-indigo-400 hover:text-white transition-colors" %>
      
      <%# 아이템 관리 버튼 (항상 노출하도록 수정) %>
      <div class="flex items-center gap-1.5">
        <script>
          window.showPremiumNudge = function(type) {
            const modal = document.getElementById('premium-item-nudge');
            const title = modal.querySelector('.nudge-title');
            const desc = modal.querySelector('.nudge-desc');
            const icon = modal.querySelector('.nudge-icon');

            if (type === 'relax') {
              title.innerText = "휴식권";
              desc.innerHTML = "루틴을 쉬고 싶을 때 사용하면 공식 휴가로 인정되어 출석률을 지켜주는 특별한 기능입니다. 루파 클럽 멤버가 되어 여유 있는 성장을 경험하세요.";
              icon.innerText = "🎟️";
            } else {
              title.innerText = "세이브권";
              desc.innerHTML = "깜빡하고 놓친 인증이나 지나간 결석을 출석으로 복구해주는 스트릭 방어 기능입니다. 루파 클럽 멤버가 되어 당신의 성실한 기록을 끝까지 지킬 수 있습니다.";
              icon.innerText = "🛡️";
            }
            
            modal.classList.remove('hidden');
            document.body.classList.add('overflow-hidden');
          }
        </script>
        <!-- 휴식권 버튼 -->
