<%= form_with model: [@challenge, @review], class: "space-y-6" do |f| %>
  <% if @review.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-[24px] p-6">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 rounded-xl bg-red-100 flex items-center justify-center text-red-500 shrink-0">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        </div>
        <div>
          <h3 class="font-bold text-red-800">오류가 발생했습니다</h3>
          <ul class="mt-2 text-sm text-red-600 space-y-1">
            <% @review.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Rating -->
  <div>
    <label class="block text-sm font-bold text-slate-700 mb-3">평점</label>
    <div class="flex gap-2" data-controller="rating">
      <% (1..5).each do |star| %>
        <label class="cursor-pointer">
          <%= f.radio_button :rating, star, class: "hidden", data: { rating_target: "input", action: "change->rating#update" } %>
          <svg class="w-10 h-10 transition-colors" data-rating-target="star" data-value="<%= star %>" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" class="<%= @review.rating.to_i >= star ? 'text-amber-400' : 'text-slate-200' %>"/>
          </svg>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Content -->
  <div>
    <label class="block text-sm font-bold text-slate-700 mb-3">리뷰 내용</label>
    <%= f.text_area :content,
      rows: 5,
      placeholder: "챌린지에 대한 솔직한 리뷰를 작성해주세요. 다른 참가자들에게 도움이 됩니다!",
      class: "w-full px-6 py-4 bg-slate-50 border border-slate-200 rounded-[20px] text-slate-900 placeholder:text-slate-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent transition-all resize-none" %>
  </div>

  <!-- Submit -->
  <div class="flex gap-4">
    <%= link_to challenge_path(@challenge), class: "flex-1 py-4 bg-slate-100 text-slate-700 rounded-3xl font-black text-center hover:bg-slate-200 transition-all" do %>
      취소
    <% end %>
    <%= f.submit (@review.persisted? ? "수정하기" : "리뷰 등록"), class: "flex-1 py-4 bg-indigo-600 text-white rounded-3xl font-black cursor-pointer hover:bg-indigo-700 transition-all" %>
  </div>
<% end %>
