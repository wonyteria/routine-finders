<div class="space-y-8">
  <div class="flex items-center justify-between px-2">
    <div>
      <h3 class="text-xs font-black text-indigo-400 uppercase tracking-widest leading-none mb-2">Growth Partners</h3>
      <h2 class="text-2xl font-black text-white">동료들의 집중</h2>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
    <% @club_members.each do |member| %>
      <div class="bg-slate-900 border border-white/5 rounded-[32px] p-6 hover:border-indigo-500/30 transition-all group flex flex-col gap-5">
        <div class="flex items-start justify-between">
          <div class="flex items-center gap-4">
            <div class="relative">
              <img src="<%= member.user.profile_image %>" class="w-14 h-14 rounded-2xl object-cover border border-white/10 group-hover:scale-105 transition-transform">
              <% if User.joins(:rufa_activities).where(id: member.user_id, rufa_activities: { created_at: 30.minutes.ago..Time.current }).exists? %>
                <div class="absolute -top-1 -right-1 w-4 h-4 bg-emerald-500 rounded-full border-2 border-slate-900 animate-pulse"></div>
              <% end %>
            </div>
            <div>
              <p class="text-[10px] font-black text-indigo-400 uppercase tracking-widest leading-none mb-1"><%= member.identity_title || "루파" %></p>
              <h4 class="text-base font-black text-white"><%= member.user.nickname %></h4>
              <p class="text-[10px] font-bold text-slate-500 mt-1"><%= member.joined_at&.strftime("%Y.%m.%d") %> 가입</p>
            </div>
          </div>
          <button class="w-10 h-10 bg-white/5 rounded-2xl flex items-center justify-center text-white/40 hover:bg-indigo-500 hover:text-white transition-all">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z"/></svg>
          </button>
        </div>

        <!-- Mini Stats or Routine Tags -->
        <div class="flex flex-wrap gap-2">
           <% member.user.personal_routines.limit(3).each do |r| %>
             <span class="px-3 py-1 bg-white/5 rounded-full text-[9px] font-bold text-slate-400 border border-white/5"><%= r.icon %> <%= r.title.truncate(10) %></span>
           <% end %>
        </div>

        <div class="pt-2 border-t border-white/5 flex items-center justify-between">
           <div class="flex items-center gap-1.5 text-[10px] font-bold text-slate-500">
             <span>성취률</span>
             <span class="text-indigo-400 font-black"><%= rand(70..100) %>%</span>
           </div>
           <button class="text-[10px] font-black text-indigo-400 uppercase tracking-widest hover:text-white transition-colors">프로필 보기 →</button>
        </div>
      </div>
    <% end %>
  </div>
</div>
