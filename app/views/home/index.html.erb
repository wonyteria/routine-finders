        <div class="relative z-10 flex flex-wrap justify-center gap-10">
          <% if @current_user.badges.any? %>
            <% @current_user.badges.order(level: :desc).take(8).each do |badge| %>
              <div class="flex flex-col items-center gap-4 transition-all hover:scale-110 group/badge">
                <div class="w-20 h-20 rounded-threads bg-white/10 backdrop-blur-xl border border-white/20 p-4 shadow-2xl flex items-center justify-center transform group-hover/badge:rotate-12 transition-all cursor-help" title="<%= badge.description %>">
                   <span class="text-4xl filter drop-shadow-lg"><%= badge.icon_path || "🏅" %></span>
                </div>
                <div class="text-center">
                  <p class="text-[10px] font-black text-white/90 tracking-tight"><%= badge.name %></p>
                  <div class="mt-1 flex gap-0.5 justify-center">
                    <% (Badge.levels[badge.level] || 0).times do %>
                      <div class="w-1.5 h-1.5 rounded-full bg-amber-400 shadow-[0_0_8px_rgba(251,191,36,0.5)]"></div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="py-10 text-center">
              <p class="text-white/40 font-bold">아직 획득한 메달이 없습니다.<br/>첫 번째 챌린지를 완수해보세요!</p>
            </div>
          <% end %>
        </div>
      </div>
    </section>

    <!-- Ad Banners -->
    <% if @ad_banners.any? %>
      <section class="grid grid-cols-1 md:grid-cols-2 gap-8 px-4">
        <% @ad_banners.each do |banner| %>
          <%= link_to banner.link_url || "#", class: "group relative h-48 rounded-[32px] overflow-hidden shadow-xl hover:shadow-2xl transition-all" do %>
            <div class="absolute inset-0 bg-slate-900/40 z-10 group-hover:bg-slate-900/20 transition-colors"></div>
            <% if banner.image.attached? %>
              <%= image_tag banner.image, class: "absolute inset-0 w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" %>
            <% end %>
            <div class="relative z-20 h-full flex flex-col justify-center px-10 text-white">
              <% if banner.badge_text.present? %>
                <span class="w-fit px-3 py-1 bg-white/20 backdrop-blur-md rounded-full text-[10px] font-black tracking-widest uppercase mb-2"><%= banner.badge_text %></span>
              <% end %>
              <h3 class="text-xl font-black mb-1"><%= banner.title %></h3>
              <p class="text-xs text-white/70 font-medium"><%= banner.subtitle %></p>
            </div>
          <% end %>
        <% end %>
      </section>
    <% end %>
  </div>
