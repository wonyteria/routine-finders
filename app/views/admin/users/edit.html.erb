<% content_for :page_title, "사용자 수정" %>

<div class="space-y-6">
  <!-- Back Button -->
  <div>
    <%= link_to admin_user_path(@user), class: "inline-flex items-center gap-2 text-slate-600 hover:text-slate-900" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
      </svg>
      <span>상세로 돌아가기</span>
    <% end %>
  </div>

  <!-- Edit Form -->
  <div class="bg-white rounded-2xl shadow-sm border border-slate-200 p-6">
    <div class="flex items-center gap-4 mb-6">
      <img src="<%= @user.profile_image %>" alt="" class="w-16 h-16 rounded-xl object-cover">
      <div>
        <h2 class="text-xl font-bold text-slate-900"><%= @user.nickname %></h2>
        <p class="text-slate-500"><%= @user.email %></p>
      </div>
    </div>

    <%= form_with model: [:admin, @user], class: "space-y-6" do |f| %>
      <% if @user.errors.any? %>
        <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4">
          <ul class="list-disc list-inside">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="grid grid-cols-2 gap-6">
        <div>
          <%= f.label :nickname, "닉네임", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.text_field :nickname, class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.label :email, "이메일", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.email_field :email, class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.label :level, "레벨", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.number_field :level, min: 1, class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.label :total_exp, "총 경험치", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.number_field :total_exp, min: 0, class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>

        <div>
          <%= f.label :wallet_balance, "지갑 잔액", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <%= f.number_field :wallet_balance, min: 0, class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        <div class="col-span-2 md:col-span-1">
          <%= f.label :role, "사용자 권한", class: "block text-sm font-medium text-slate-700 mb-2" %>
          <% if @user != current_user %>
            <%= f.select :role, User.roles.keys.map { |r| [r.titleize, r] }, {}, class: "w-full px-4 py-2 border border-slate-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
          <% else %>
            <div class="w-full px-4 py-2 bg-slate-100 border border-slate-300 rounded-lg text-slate-500">
              <%= @user.role.titleize %> (본인 권한 변경 불가)
            </div>
          <% end %>
        </div>

        <div class="col-span-2 space-y-4">
          <label class="flex items-center gap-3 cursor-pointer group">
            <div class="relative">
              <%= f.check_box :is_featured_host, class: "sr-only peer" %>
              <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-indigo-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-slate-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-indigo-600"></div>
            </div>
            <span class="text-sm font-bold text-slate-900 group-hover:text-indigo-600 transition-colors">✨ 지금 주목해야 할 주최자로 선정</span>
          </label>
          <p class="text-xs text-slate-500 ml-14">선정 시 홈 화면 최상단 및 주최자 랭킹 상단에 고정 노출됩니다.</p>
        </div>
      </div>

      <div class="flex items-center justify-end gap-4 pt-6 border-t border-slate-200">
        <%= link_to "취소", admin_user_path(@user), class: "px-6 py-2 text-slate-600 hover:text-slate-900" %>
        <%= f.submit "저장", class: "px-6 py-2 bg-indigo-600 text-white rounded-lg font-medium hover:bg-indigo-700 transition-colors cursor-pointer" %>
      </div>
    <% end %>
  </div>
</div>
