<% if params[:source] == 'prototype' %>
  <div class="space-y-10">
    <!-- Pending Applications -->
    <% if pending_applications.any? %>
      <div class="app-glass-card p-10 border-amber-500/10 bg-amber-500/[0.02]">
        <div class="flex items-center justify-between mb-8">
          <h2 class="text-xl font-black text-white flex items-center gap-3">
            <span class="w-10 h-10 rounded-2xl bg-amber-500/10 flex items-center justify-center text-amber-500">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"/></svg>
            </span>
            대기 중인 참가 신청 (<%= pending_applications.count %>)
          </h2>
        </div>
        
        <div class="grid grid-cols-1 gap-6">
          <% pending_applications.each do |app| %>
            <div class="bg-white/[0.03] rounded-[32px] p-8 border border-white/10 group/app transition-all hover:bg-white/[0.05]">
              <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-8">
                <div class="flex items-center gap-6">
                  <img src="<%= app.user.profile_image %>" class="w-16 h-16 rounded-[24px] object-cover ring-4 ring-white/5">
                  <div>
                    <p class="text-lg font-black text-white mb-0.5"><%= app.user.nickname %></p>
                    <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest flex items-center gap-2">
                       <span class="w-1.5 h-1.5 rounded-full bg-slate-500"></span> Applied <%= time_ago_in_words(app.applied_at) %> ago
                    </p>
                  </div>
                </div>

                <div class="flex items-center gap-3">
                  <button type="button" onclick="document.getElementById('action-form-<%= app.id %>').classList.toggle('hidden'); document.getElementById('action-type-<%= app.id %>').value = 'approve'; document.getElementById('submit-btn-<%= app.id %>').innerText = '승인하기'; document.getElementById('submit-btn-<%= app.id %>').className = 'w-full py-4 bg-indigo-600 text-white rounded-2xl font-black text-xs hover:bg-indigo-500 transition-all shadow-xl shadow-indigo-600/20';" 
                          class="px-8 py-3.5 bg-indigo-600 hover:bg-indigo-500 text-white rounded-2xl font-black text-xs transition-all shadow-xl shadow-indigo-600/20">
                    ACCEPT
                  </button>
                  <button type="button" onclick="document.getElementById('action-form-<%= app.id %>').classList.toggle('hidden'); document.getElementById('action-type-<%= app.id %>').value = 'reject'; document.getElementById('submit-btn-<%= app.id %>').innerText = '거절하기'; document.getElementById('submit-btn-<%= app.id %>').className = 'w-full py-4 bg-rose-600 text-white rounded-2xl font-black text-xs hover:bg-rose-500 transition-all shadow-xl shadow-rose-600/20';"
                          class="px-8 py-3.5 bg-white/5 hover:bg-white/10 text-slate-400 rounded-2xl font-black text-xs transition-all">
                    DECLINE
                  </button>
                </div>
              </div>

              <% if app.message.present? %>
                <div class="mt-8 p-6 bg-black/20 rounded-[28px] border border-white/5 relative overflow-hidden">
                  <div class="absolute right-0 top-0 w-32 h-32 bg-indigo-500/5 blur-3xl rounded-full"></div>
                  <p class="text-[10px] font-black text-slate-500 uppercase tracking-tighter mb-3">Applicant's Message</p>
                  <p class="text-sm font-medium text-slate-300 leading-relaxed"><%= app.message %></p>
                </div>
              <% end %>

              <div id="action-form-<%= app.id %>" class="hidden mt-8 pt-8 border-t border-white/5 space-y-4 animate-slide-up">
                <%= form_with url: "#", method: :post, id: "form-#{app.id}", class: "space-y-4" do |f| %>
                  <%= hidden_field_tag :source, "prototype" %>
                  <%= hidden_field_tag :action_type, "approve", id: "action-type-#{app.id}" %>
                  <div>
                    <label class="text-[10px] font-black text-slate-500 uppercase tracking-widest pl-1 mb-2 block">Personal Notification Message (Optional)</label>
                    <%= text_area_tag :message, nil, placeholder: "참가자에게 전달할 개인 메시지를 입력하세요 (예: 환영합니다! 공지방 링크 확인해 주세요.)", class: "w-full p-5 bg-white/5 border border-white/10 rounded-3xl text-sm font-medium text-white placeholder:text-slate-600 focus:border-indigo-500 focus:bg-white/[0.07] outline-none transition-all", rows: 3 %>
                  </div>
                  <button type="submit" id="submit-btn-<%= app.id %>" onclick="this.form.action = document.getElementById('action-type-<%= app.id %>').value === 'approve' ? '<%= approve_challenge_application_path(challenge, app) %>' : '<%= reject_challenge_application_path(challenge, app) %>';" class="w-full py-4 bg-indigo-600 text-white rounded-2xl font-black text-xs hover:bg-indigo-500 transition-all">
                    SUBMIT ACTION
                  </button>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Processed Applications -->
    <div class="app-glass-card p-10">
      <div class="flex items-center justify-between mb-8">
        <div>
          <h2 class="text-xl font-black text-white">신청 처리 내역</h2>
          <p class="text-[10px] font-black text-slate-500 uppercase tracking-widest mt-1">Application History Stream</p>
        </div>
      </div>
      
      <div class="space-y-4">
        <% if processed_applications.any? %>
          <% processed_applications.each do |app| %>
            <div class="flex items-center justify-between p-6 rounded-[28px] bg-white/[0.02] border border-white/5 hover:bg-white/[0.04] transition-all group/item">
              <div class="flex items-center gap-5">
                <img src="<%= app.user.profile_image %>" class="w-12 h-12 rounded-2xl object-cover ring-2 ring-white/5">
                <div>
                  <p class="font-black text-white text-sm"><%= app.user.nickname %></p>
                  <p class="text-[10px] font-black text-slate-500 uppercase tracking-tighter mt-0.5"><%= app.applied_at.strftime("%Y.%m.%d %H:%M") %></p>
                </div>
              </div>
              <div class="flex items-center gap-4">
                <% if app.approved? %>
                  <span class="px-5 py-2 bg-emerald-500/10 text-emerald-400 rounded-xl text-[10px] font-black tracking-widest uppercase">Approved</span>
                <% else %>
                  <span class="px-5 py-2 bg-rose-500/10 text-rose-400 rounded-xl text-[10px] font-black tracking-widest uppercase">Rejected</span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="py-20 text-center">
            <p class="text-sm font-black text-slate-600 uppercase tracking-widest italic">No processed requests</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>

<% else %>
  <div class="space-y-8">
    <!-- Existing Web Styling (Preserved) -->
    <% if pending_applications.any? %>
      <div class="bg-amber-50 rounded-[32px] border border-amber-200 p-8">
        <h2 class="text-xl font-black text-amber-900 mb-6 flex items-center gap-2">
          <span class="w-3 h-3 bg-amber-500 rounded-full animate-pulse"></span>
          대기 중인 신청 (<%= pending_applications.count %>건)
        </h2>
        
        <div class="space-y-4">
          <% pending_applications.each do |application| %>
            <div class="bg-white rounded-2xl p-6 border border-amber-100">
              <div class="flex items-start justify-between gap-4">
                <div class="flex items-center gap-4">
                  <img src="<%= application.user.profile_image %>" class="w-14 h-14 rounded-2xl object-cover">
                  <div>
                    <p class="text-lg font-black text-slate-900"><%= application.user.nickname %></p>
                    <p class="text-xs font-medium text-slate-400"><%= time_ago_in_words(application.applied_at) %> 전 신청</p>
                  </div>
                </div>
                <div class="flex items-center gap-2">
                  <%= button_to approve_challenge_application_path(challenge, application), method: :post, class: "px-6 py-3 bg-indigo-600 text-white rounded-2xl font-black text-sm hover:bg-indigo-700 transition-all" do %>승인<% end %>
                  <%= button_to reject_challenge_application_path(challenge, application), method: :post, form: { data: { turbo_confirm: "정말 거절하시겠습니까?" } }, class: "px-6 py-3 bg-slate-100 text-slate-600 rounded-2xl font-black text-sm hover:bg-slate-200 transition-all" do %>거절<% end %>
                </div>
              </div>
              <% if application.message.present? %>
                <div class="mt-4 p-4 bg-slate-50 rounded-2xl"><p class="text-sm text-slate-700"><%= application.message %></p></div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
    <!-- ... Rest of existing web UI ... -->
    <div class="bg-white rounded-[32px] border border-slate-200 shadow-sm p-8">
      <h2 class="text-xl font-black text-slate-900 mb-6">처리된 신청</h2>
      <% if processed_applications.any? %>
        <div class="space-y-3">
          <% processed_applications.each do |application| %>
            <div class="flex items-center justify-between p-4 rounded-2xl hover:bg-slate-50 transition-colors">
              <div class="flex items-center gap-3">
                <img src="<%= application.user.profile_image %>" class="w-10 h-10 rounded-xl object-cover">
                <div><p class="font-bold text-slate-900"><%= application.user.nickname %></p><p class="text-xs font-medium text-slate-400"><%= application.applied_at.strftime("%Y.%m.%d") %></p></div>
              </div>
              <div><% if application.approved? %><span class="px-4 py-2 bg-green-100 text-green-700 rounded-full text-xs font-black">승인됨</span><% else %><span class="px-4 py-2 bg-slate-100 text-slate-500 rounded-full text-xs font-black">거절됨</span><% end %></div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-slate-400 text-center py-8">처리된 신청이 없습니다</p>
      <% end %>
    </div>
  </div>
<% end %>
