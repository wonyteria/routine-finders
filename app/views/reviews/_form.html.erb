<% 
  is_proto = params[:source] == "prototype"
  label_class = is_proto ? "text-slate-400" : "text-slate-700"
  input_class = is_proto ? "bg-white/[0.02] border-white/10 text-white placeholder:text-slate-600 focus:border-indigo-500/50" : "bg-slate-50 border-slate-200 text-slate-900 placeholder:text-slate-400 focus:border-indigo-500"
  cancel_btn = is_proto ? "bg-white/5 text-slate-400 hover:bg-white/10" : "bg-slate-100 text-slate-700 hover:bg-slate-200"
%>

<%= form_with model: [@challenge, @review], class: "space-y-8" do |f| %>
  <%= hidden_field_tag :source, params[:source] %>
  
  <% if @review.errors.any? %>
    <div class="<%= is_proto ? 'bg-rose-500/10 border-rose-500/20' : 'bg-red-50 border-red-200' %> border rounded-[24px] p-6">
      <div class="flex items-start gap-4">
        <div class="w-10 h-10 rounded-xl <%= is_proto ? 'bg-rose-500/20 text-rose-400' : 'bg-red-100 text-red-500' %> flex items-center justify-center shrink-0">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
        </div>
        <div>
          <h3 class="font-bold <%= is_proto ? 'text-rose-400' : 'text-red-800' %>">오류가 발생했습니다</h3>
          <ul class="mt-2 text-sm <%= is_proto ? 'text-rose-400/80' : 'text-red-600' %> space-y-1">
            <% @review.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Rating -->
  <div>
    <label class="block text-[11px] font-black uppercase tracking-widest <%= label_class %> mb-4">평점</label>
    <div class="flex gap-2" data-controller="rating">
      <% (1..5).each do |star| %>
        <label class="cursor-pointer">
          <%= f.radio_button :rating, star, class: "hidden", data: { rating_target: "input", action: "change->rating#update" } %>
          <svg class="w-12 h-12 transition-all duration-300 transform active:scale-90" data-rating-target="star" data-value="<%= star %>" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" class="<%= @review.rating.to_i >= star ? 'text-amber-400' : (is_proto ? 'text-white/10' : 'text-slate-200') %>"/>
          </svg>
        </label>
      <% end %>
    </div>
  </div>

  <!-- Content / Feedback -->
  <div class="space-y-6">
    <div>
      <label class="block text-[11px] font-black uppercase tracking-widest <%= label_class %> mb-4">리뷰 내용</label>
      <%= f.text_area :content,
        rows: 5,
        placeholder: @challenge.offline? ? "모임의 분위기는 어땠나요? 호스트와 멤버들에게 메시지를 남겨보세요." : "챌린지에 대한 솔직한 리뷰를 작성해주세요. 다른 참가자들에게 도움이 됩니다!",
        class: "w-full px-6 py-5 border rounded-[28px] text-sm focus:outline-none focus:ring-4 focus:ring-indigo-500/10 transition-all resize-none shadow-inner #{input_class}" %>
    </div>

    <div>
      <label class="block text-[11px] font-black uppercase tracking-widest <%= label_class %> mb-4 flex items-center gap-2">
        주최자에게 한마디
        <span class="px-2 py-0.5 bg-indigo-500/10 text-indigo-400 rounded-lg normal-case tracking-normal">Host Only</span>
      </label>
      <%= f.text_area :message_to_host,
        rows: 3,
        placeholder: "모임 운영에 대한 제안이나 주최자에게 고마운 점을 남겨주세요. 이 내용은 다른 참가자들에게 노출되지 않고 주최자만 볼 수 있습니다.",
        class: "w-full px-6 py-5 border rounded-[28px] text-sm focus:outline-none focus:ring-4 focus:ring-indigo-500/10 transition-all resize-none shadow-inner #{input_class}" %>
    </div>
  </div>

  <!-- Submit / Action Bar -->
  <div class="flex gap-4 pt-4">
    <%= link_to challenge_path(@challenge, source: params[:source]), class: "flex-1 py-4.5 rounded-3xl font-black text-sm text-center transition-all active:scale-95 #{cancel_btn}" do %>
      취소
    <% end %>
    <%= f.submit (@review.persisted? ? "수정 완료" : "리뷰 게시하기"), class: "flex-1 py-4.5 bg-indigo-600 text-white rounded-3xl font-black text-sm cursor-pointer hover:bg-indigo-700 shadow-lg shadow-indigo-500/20 active:scale-95 transition-all" %>
  </div>
<% end %>
