<% unless @current_user %>
  <!-- Landing Page for non-logged-in users (Threads Aesthetic) -->
  <div class="flex flex-col items-center justify-center min-h-[85vh] text-center space-y-12 p-6 overflow-hidden relative">
    <!-- Abstract Background Element -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] bg-gradient-radial from-slate-100 to-transparent -z-10 opacity-50"></div>
    
    <div class="relative">
      <div class="w-24 h-24 bg-threads-black rounded-threads-lg flex items-center justify-center shadow-2xl animate-in zoom-in duration-700">
        <svg class="text-white w-12 h-12" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"/>
        </svg>
      </div>
      <div class="absolute -top-2 -right-2 w-6 h-6 bg-emerald-500 rounded-full border-4 border-white animate-pulse"></div>
    </div>

    <div class="space-y-6 max-w-2xl px-4 animate-in fade-in slide-in-from-bottom-4 duration-1000">
      <h1 class="text-5xl lg:text-7xl font-black text-threads-black leading-[1.1] tracking-tighter">
        Threads에서 발견하는<br/><span class="text-slate-400">당신의 새로운 루틴.</span>
      </h1>
      <p class="text-lg lg:text-xl text-slate-500 font-bold max-w-lg mx-auto leading-relaxed">
        Threads 친구들과 함께 기록하고 성장하는<br/>가장 트렌디한 루틴 커뮤니티, 루틴 파인더스.
      </p>
    </div>

    <div class="flex flex-col gap-4 w-full max-w-sm animate-in fade-in slide-in-from-bottom-8 duration-1000 delay-300">
      <%= button_to auth_at_provider_path(provider: :threads), 
                    data: { turbo: false },
                    class: "w-full py-5 bg-threads-black text-white rounded-threads-lg font-black text-xl hover:scale-[1.03] transition-all shadow-xl flex items-center justify-center gap-3 active:scale-95" do %>
        <svg class="w-7 h-7" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 2C6.477 2 2 6.477 2 12s4.477 10 10 10 10-4.477 10-10S17.523 2 12 2zm0 18c-4.411 0-8-3.589-8-8s3.589-8 8-8 8 3.589 8 8-3.589 8-8 8z"/>
        </svg>
        Threads로 1초 시작하기
      <% end %>
      
      <p class="text-slate-400 text-xs font-bold uppercase tracking-widest pt-2">Powered by Threads API</p>
    </div>

    <!-- Floating badges demo -->
    <div class="absolute bottom-10 left-0 right-0 overflow-hidden pointer-events-none opacity-20 hidden lg:block">
      <div class="flex gap-10 animate-infinite-scroll">
        <% 10.times do %>
          <div class="flex items-center gap-3 bg-white border border-threads-border p-4 rounded-threads-lg min-w-max shadow-sm">
            <div class="w-10 h-10 bg-slate-100 rounded-threads"></div>
            <div class="w-24 h-3 bg-slate-100 rounded-full"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% else %>
  <div class="space-y-16 pb-40">
    <%
      activity_data = Hash.new(0)
      (@verification_logs || []).each { |log| activity_data[log.created_at.to_date] += 1 }
      (@personal_routine_completions || []).each { |c| activity_data[c.completed_on] += 1 }
      (@club_attendances || []).each { |a| activity_data[a.attendance_date] += 1 }

      total_activities = activity_data.values.sum
      max_streak = 0
      current_streak = 0
      sorted_dates = activity_data.keys.sort.reverse
      if sorted_dates.any?
        # Simple streak calculation based on activity dates
        check_date = Date.current
        if activity_data[check_date] > 0 || activity_data[check_date - 1.day] > 0
          curr = activity_data[check_date] > 0 ? check_date : check_date - 1.day
          while activity_data[curr] > 0
            current_streak += 1
            curr -= 1.day
          end
        end
      end

      end_date = Date.current
      start_date = end_date - 1.year + 1.day
      grid_start_date = start_date - start_date.wday
      weeks = []
      iter_date = grid_start_date
      while iter_date <= end_date || weeks.size < 53
        week = []
        7.times { week << iter_date; iter_date += 1.day }
        weeks << week
        break if iter_date > end_date && weeks.size >= 53
      end
    %>
    <!-- Hero Banner -->
    <section class="relative h-[420px] lg:h-[440px] rounded-threads-xl overflow-hidden shadow-2xl shadow-indigo-100/50">
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-600 via-indigo-600 to-violet-700 opacity-90 z-10"></div>
      <img src="https://images.unsplash.com/photo-1517836357463-d25dfeac3438?auto=format&fit=crop&q=80&w=800" class="absolute inset-0 w-full h-full object-cover mix-blend-overlay" alt="">
      <div class="relative z-20 h-full flex flex-col justify-center px-12 lg:px-20 space-y-6 text-white">
        <div class="space-y-2">
          <span class="inline-block px-4 py-1.5 bg-white/20 backdrop-blur-md rounded-full text-xs font-black tracking-widest uppercase">Start your growth</span>
          <h1 class="text-4xl lg:text-6xl font-black leading-tight tracking-tight">함께해서 더 강력한<br/>습관의 힘</h1>
        </div>
        <p class="text-base lg:text-lg text-white/80 font-medium max-w-lg leading-relaxed">평균 달성률 92%의 보증금 시스템으로<br/>진정한 변화를 경험하세요.</p>
        <%= link_to challenges_path, class: "w-fit px-8 py-4 bg-white text-indigo-600 rounded-2xl font-black text-base hover:shadow-2xl hover:-translate-y-1 transition-all" do %>
          챌린지 둘러보기
        <% end %>
      </div>
    </section>

    <!-- My Achievements Section -->
    <section class="bg-white rounded-threads-xl border border-slate-200 shadow-sm p-8 lg:p-12 space-y-10">
      <div class="flex flex-col md:flex-row md:items-center justify-between gap-6 px-2">
        <div class="space-y-1">
          <h2 class="text-3xl font-black text-slate-900 flex items-center gap-3">
            나의 성취 지도
            <span class="text-orange-500">🔥</span>
          </h2>
          <p class="text-slate-400 font-bold text-base">매일의 노력이 기록으로 남습니다.</p>
        </div>
        <div class="flex items-center gap-4">
          <div class="flex items-center gap-6 px-8 py-4 bg-slate-50/80 rounded-2xl border border-slate-100">
            <div class="text-center">
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest mb-0.5">Total</p>
              <p class="text-xl font-black text-slate-900"><%= total_activities %><span class="text-xs ml-0.5 text-slate-400">회</span></p>
            </div>
            <div class="w-px h-6 bg-slate-200"></div>
            <div class="text-center">
              <p class="text-[9px] font-black text-slate-400 uppercase tracking-widest mb-0.5">Streak</p>
              <p class="text-xl font-black text-orange-600"><%= current_streak %><span class="text-xs ml-0.5 text-slate-400">일</span></p>
            </div>
          </div>
          <%= link_to achievement_report_path, class: "w-14 h-14 bg-slate-900 rounded-2xl flex items-center justify-center shadow-lg hover:bg-indigo-600 transition-all group" do %>
            <svg class="w-6 h-6 text-white group-hover:scale-110 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
            </svg>
          <% end %>
        </div>
      </div>

<%# 통합 데이터 정합성 완료 %>
      <div class="bg-indigo-50/30 rounded-[32px] p-8 border border-indigo-100/50">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-sm font-black text-slate-900 uppercase tracking-wider">Activity Dashboard</h3>
          <div class="flex items-center gap-4 text-[10px] font-black text-slate-400 uppercase">
            <div class="flex items-center gap-2">
              <div class="w-2.5 h-2.5 rounded-sm bg-slate-100"></div> No Activity
            </div>
            <div class="flex items-center gap-2">
              <div class="w-2.5 h-2.5 rounded-sm bg-indigo-600"></div> High Activity
            </div>
          </div>
        </div>

        <div class="overflow-x-auto no-scrollbar">
          <div class="min-w-max flex gap-1">
            <div class="grid grid-rows-[20px_repeat(7,12px)] gap-1 text-[9px] font-black text-slate-300 pr-3 mt-[-1px]">
              <div class="h-[20px]"></div>
              <div class="h-[12px] flex items-center">SUN</div>
              <div class="h-[12px] flex items-center"></div>
              <div class="h-[12px] flex items-center">TUE</div>
              <div class="h-[12px] flex items-center"></div>
              <div class="h-[12px] flex items-center">THU</div>
              <div class="h-[12px] flex items-center"></div>
              <div class="h-[12px] flex items-center">SAT</div>
            </div>

            <div class="flex justify-between w-full gap-[3px]">
              <% weeks.each do |week| %>
                <div class="grid grid-rows-[20px_repeat(7,12px)] gap-1">
                  <div class="h-[20px] text-[9px] font-black text-slate-300 truncate">
                    <% if week.any? { |d| d.day == 1 } || week == weeks.first %>
                      <%= week.find { |d| d.day == 1 }&.strftime("%^b") || (week == weeks.first ? week.first.strftime("%^b") : "") %>
                    <% end %>
                  </div>
                  <% week.each do |date| %>
                    <% if date <= end_date %>
                      <% 
                        count = activity_data[date] || 0
                        color_class = case
                        when count == 0 then "bg-slate-100"
                        when count == 1 then "bg-indigo-200"
                        when count == 2 then "bg-indigo-400"
                        else "bg-indigo-600"
                        end
                      %>
                      <div class="w-[12px] h-[12px] rounded-[2px] <%= color_class %> transition-all hover:scale-125 cursor-help" 
                           title="<%= date.strftime("%Y-%m-%d") %>: <%= count %> verifications"></div>
                    <% else %>
                      <div class="w-[12px] h-[12px] rounded-[2px] bg-transparent"></div>
                    <% end %>
                  <% end %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="pt-8 border-t border-slate-100 space-y-10">
        <div class="flex flex-col md:flex-row items-center justify-between gap-8 px-2">
          <div class="flex items-center gap-8">
            <div class="space-y-1">
              <p class="text-[9px] font-black text-indigo-500 uppercase tracking-[0.2em]">Hall of Fame</p>
              <h3 class="text-lg font-black text-slate-900 leading-tight">가장 많은 배지를<br>획득한 파인더스</h3>
            </div>
            <div class="flex -space-x-3">
              <% @top_achievers.each_with_index do |user, index| %>
                <div class="relative group">
                  <div class="w-14 h-14 rounded-2xl bg-white p-1 shadow-md border-2 <%= index == 0 ? 'border-yellow-400' : (index == 1 ? 'border-slate-300' : 'border-amber-600') %> relative z-<%= 30 - index %> transition-all group-hover:-translate-y-1.5">
                    <img src="<%= user.profile_image || "https://api.dicebear.com/7.x/avataaars/svg?seed=#{user.nickname}" %>" class="w-full h-full object-cover rounded-xl" alt="<%= user.nickname %>">
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <%= link_to rankings_path(tab: 'badges'), class: "group flex items-center gap-3 px-8 py-4 bg-indigo-50 text-indigo-600 rounded-2xl font-black text-sm hover:bg-indigo-600 hover:text-white transition-all shadow-sm" do %>
            전체 랭킹 보기
            <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
          <% end %>
        </div>

        <!-- Integrated Routine Tracker -->
        <div class="bg-indigo-600 rounded-[32px] p-8 shadow-xl shadow-indigo-200/50 flex flex-col lg:flex-row items-center justify-between gap-8">
          <div class="flex items-center gap-5">
            <div class="w-14 h-14 bg-white/10 backdrop-blur-md rounded-2xl flex items-center justify-center text-2xl">
              📅
            </div>
            <div class="text-white">
              <h4 class="text-lg font-black">오늘의 루틴 체크인</h4>
              <p class="text-xs text-white/70 font-medium">당신의 성취 지도를 명확하게 그려보세요.</p>
            </div>
          </div>
          
          <div class="flex flex-wrap justify-center gap-2">
            <% if @personal_routines.any? %>
              <% @personal_routines.take(6).each do |routine| %>
                <%= button_to toggle_personal_routine_path(routine), method: :post, class: "flex items-center gap-2 px-4 py-2.5 rounded-xl border-2 transition-all #{routine.completed_today? ? 'bg-white border-white text-indigo-600 shadow-lg' : 'bg-transparent border-white/20 text-white hover:bg-white/10'}" do %>
                  <span class="text-lg"><%= routine.icon %></span>
                  <span class="text-xs font-bold leading-none"><%= routine.title.truncate(10) %></span>
                <% end %>
              <% end %>
            <% else %>
              <%= link_to personal_routines_path, class: "text-white/80 font-black text-sm hover:text-white underline" do %>
                첫 번째 루틴을 시작해보세요! →
              <% end %>
            <% end %>
          </div>

          <%= link_to personal_routines_path, class: "px-8 py-4 bg-white text-indigo-600 rounded-2xl font-black text-sm hover:scale-105 transition-all shadow-md shrink-0" do %>
            전체 관리
          <% end %>
        </div>
      </div>
    </section>

    <!-- My Active Growth (Challenge Progress) -->
    <section class="space-y-8">
      <div class="flex items-end justify-between px-4">
        <div class="space-y-1">
          <h2 class="text-3xl font-black text-slate-900 flex items-center gap-3">
            실행 중인 성장
            <span class="text-indigo-600 text-2xl">⚡</span>
          </h2>
          <p class="text-slate-400 font-bold text-base">진행 중인 챌린지의 달성 현황입니다.</p>
        </div>
        <%= link_to personal_routines_path, class: "text-slate-400 font-black text-xs hover:text-indigo-600 transition-colors" do %>
          내 루틴 전체보기
        <% end %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 px-4">
        <% if @participations.any? %>
          <% @participations.take(6).each do |participation| %>
            <% challenge = participation.challenge %>
            <div class="bg-white rounded-threads-lg border border-slate-100 p-6 shadow-sm hover:shadow-xl hover:-translate-y-1 transition-all group">
              <div class="flex items-start justify-between mb-6">
                <div class="flex items-center gap-4">
                  <div class="w-14 h-14 rounded-threads bg-slate-50 flex items-center justify-center overflow-hidden border border-slate-100">
                    <img src="<%= challenge.thumbnail %>" class="w-full h-full object-cover" alt="">
                  </div>
                  <div>
                    <h4 class="font-black text-slate-900 group-hover:text-indigo-600 transition-colors line-clamp-1"><%= challenge.title %></h4>
                    <p class="text-xs font-bold text-slate-400"><%= challenge.category %></p>
                  </div>
                </div>
                <span class="px-3 py-1.5 rounded-threads text-[10px] font-black <%= participation.status_badge_info[:class] %>">
                  <%= participation.status_badge_info[:label] %>
                </span>
              </div>
              
              <div class="space-y-3">
                <div class="flex justify-between items-end">
                  <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Progress</p>
                  <p class="text-lg font-black text-slate-900"><%= (participation.completion_rate * 100).to_i %>%</p>
                </div>
                <div class="w-full h-3 bg-slate-50 rounded-full overflow-hidden border border-slate-100">
                  <div class="h-full bg-indigo-600 rounded-full transition-all duration-1000 shadow-sm" style="width: <%= participation.completion_rate * 100 %>%"></div>
                </div>
                <div class="flex justify-between pt-2">
                  <p class="text-[10px] font-bold text-slate-400">Streak: <span class="text-indigo-600"><%= participation.current_streak %>일</span></p>
                  <p class="text-[10px] font-bold text-rose-500">D-<%= (challenge.end_date - Date.current).to_i %></p>
                </div>
              </div>

              <%= link_to challenge_path(challenge), class: "mt-6 block w-full py-3 bg-slate-50 text-slate-400 rounded-threads font-black text-xs text-center hover:bg-slate-900 hover:text-white transition-all shadow-sm group-hover:shadow-md" do %>
                대시보드 관리
              <% end %>
            </div>
          <% end %>
        <% else %>
          <div class="col-span-full py-20 text-center bg-slate-50 rounded-threads-xl border border-dashed border-slate-200">
             <p class="text-slate-400 font-bold">진행 중인 챌린지가 없습니다.</p>
             <%= link_to challenges_path, class: "mt-4 inline-block px-8 py-3 bg-indigo-600 text-white rounded-threads font-black text-sm shadow-lg hover:bg-slate-900 transition-all" do %>
               새로운 습관 찾기
             <% end %>
          </div>
        <% end %>
      </div>
    </section>

    <!-- My collection (Badge Showcase) -->
    <section class="space-y-8 px-4">
      <div class="flex items-end justify-between">
        <div class="space-y-1">
          <h2 class="text-3xl font-black text-slate-900 flex items-center gap-3">
            획득한 메달
            <span class="text-amber-500 text-2xl">🏅</span>
          </h2>
          <p class="text-slate-400 font-bold text-base">당신의 노력이 증명된 순간들입니다.</p>
        </div>
        <%= link_to badge_roadmap_path, class: "text-slate-400 font-black text-xs hover:text-indigo-600 transition-colors" do %>
          배지 로드맵 보기
        <% end %>
      </div>

      <div class="bg-threads-black rounded-threads-xl p-10 shadow-2xl relative overflow-hidden group">
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-500/10 to-transparent opacity-50"></div>
        <div class="relative z-10 flex flex-wrap justify-center gap-10">
          <% if @current_user.badges.any? %>
            <% @current_user.badges.order(level: :desc).take(8).each do |badge| %>
              <div class="flex flex-col items-center gap-4 transition-all hover:scale-110 group/badge">
                <div class="w-20 h-20 rounded-threads bg-white/10 backdrop-blur-xl border border-white/20 p-4 shadow-2xl flex items-center justify-center transform group-hover/badge:rotate-12 transition-all cursor-help" title="<%= badge.description %>">
                   <span class="text-4xl filter drop-shadow-lg"><%= badge.icon_path || "🏅" %></span>
                </div>
                <div class="text-center">
                  <p class="text-[10px] font-black text-white/90 tracking-tight"><%= badge.name %></p>
                  <div class="mt-1 flex gap-0.5 justify-center">
                    <% (Badge.levels[badge.level] || 0).times do %>
                      <div class="w-1.5 h-1.5 rounded-full bg-amber-400 shadow-[0_0_8px_rgba(251,191,36,0.5)]"></div>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="py-10 text-center">
              <p class="text-white/40 font-bold">아직 획득한 메달이 없습니다.<br/>첫 번째 챌린지를 완수해보세요!</p>
            </div>
          <% end %>
        </div>
      </div>
    </section>
  </div>
<% end %>
