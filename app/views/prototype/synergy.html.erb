<script>
async function toggleClap(button) {
  const activityId = button.dataset.activityId;
  const isClapped = button.dataset.clapped === 'true';
  const token = document.querySelector('meta[name="csrf-token"]')?.content;
  
  try {
    const response = await fetch(`/rufa_activities/${activityId}/claps`, {
      method: 'POST',
      headers: {
        'Content-Type': 'application/json',
        'X-CSRF-Token': token,
        'Accept': 'application/json'
      }
    });
    
    if (response.ok) {
      // Reload the page to update the clap count and state
      window.location.reload();
    } else {
      console.error('Failed to toggle clap');
    }
  } catch (error) {
    console.error('Error toggling clap:', error);
  }
}
