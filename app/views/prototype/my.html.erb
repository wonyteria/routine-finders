<div class="space-y-10 pt-2 pb-24 relative min-h-screen">
  <!-- Immersive Background Glows -->
  <div class="fixed top-0 left-1/2 -translate-x-1/2 w-full h-[500px] bg-gradient-to-b from-indigo-500/5 via-transparent to-transparent blur-[120px] pointer-events-none z-0"></div>
  <div class="fixed top-[40%] right-[-10%] w-[300px] h-[300px] bg-purple-500/5 blur-[100px] rounded-full pointer-events-none z-0"></div>
  <div class="fixed bottom-[10%] left-[-10%] w-[250px] h-[250px] bg-indigo-500/5 blur-[80px] rounded-full pointer-events-none z-0"></div>

  <div class="relative z-10 space-y-10">
  <!-- 1. Profile Summary -->
  <section class="text-center space-y-6 pt-4">
    <div class="relative inline-block">
      <!-- Animated Aura Ring -->
      <div class="absolute inset-[-8px] bg-gradient-to-tr from-indigo-500 via-purple-500 to-indigo-400 rounded-[40px] opacity-20 blur-md animate-pulse"></div>
      
      <div class="relative w-28 h-28 rounded-[36px] p-1 bg-gradient-to-tr from-indigo-500/50 to-purple-500/50 shadow-2xl">
        <div class="w-full h-full rounded-[32px] overflow-hidden bg-[#0C0B12]">
          <img src="<%= current_user&.profile_image %>" class="w-full h-full object-cover">
        </div>
      </div>
      
      <div class="absolute -bottom-2 -right-2 bg-gradient-to-br from-indigo-500 to-purple-600 text-white px-3 py-1 rounded-full flex items-center justify-center text-[10px] font-black border-4 border-[#07060A] z-20 shadow-xl shadow-indigo-500/20">
        Lv.<%= current_user&.level || 1 %>
      </div>
    </div>
    
    <div class="space-y-2 px-6">
      <div class="flex items-center justify-center gap-2">
        <h2 class="text-2xl font-black text-white italic tracking-tight"><%= current_user&.nickname %></h2>
        <% if current_user&.is_rufa_club_member? %>
          <span class="px-2 py-0.5 rounded-md bg-indigo-500 text-[8px] font-black text-white shadow-[0_0_10px_rgba(99,102,241,0.5)]">RUFA CLUB</span>
        <% end %>
      </div>
      <p class="text-xs font-bold text-slate-400 leading-relaxed max-w-[240px] mx-auto"><%= current_user&.bio.presence || "나를 표현하는 한 줄을 입력해보세요" %></p>
      
      <% if current_user&.sns_links.present? && current_user.sns_links.values.any?(&:present?) %>
        <div class="flex justify-center gap-2 pt-1">
          <% if current_user.instagram.present? %>
            <%= link_to current_user.instagram.start_with?('http') ? current_user.instagram : "https://instagram.com/#{current_user.instagram.delete_prefix('@')}", target: "_blank", class: "w-7 h-7 rounded-lg bg-white/5 flex items-center justify-center text-slate-400 hover:text-white hover:bg-white/10 transition-all border border-white/5" do %>
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            <% end %>
          <% end %>
          <% if current_user.threads.present? %>
            <%= link_to current_user.threads.start_with?('http') ? current_user.threads : "https://threads.net/@#{current_user.threads.delete_prefix('@')}", target: "_blank", class: "w-7 h-7 rounded-lg bg-white/5 flex items-center justify-center text-slate-400 hover:text-white hover:bg-white/10 transition-all border border-white/5" do %>
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.186 24h-.007c-3.581-.024-6.334-1.205-8.184-3.509C2.35 18.44 1.5 15.586 1.472 12.01v-.017c.03-3.579.879-6.43 2.525-8.482C5.845 1.205 8.6.024 12.18 0h.014c2.746.02 5.043.725 6.826 2.098 1.677 1.29 2.858 3.13 3.509 5.467l-2.04.569c-1.104-3.96-3.898-5.984-8.304-6.015-2.91.022-5.11.936-6.54 2.717C4.307 6.504 3.616 8.914 3.589 12c.027 3.086.718 5.496 2.057 7.164 1.43 1.783 3.631 2.698 6.54 2.717 2.623-.02 4.358-.631 5.8-2.045 1.647-1.613 1.618-3.593 1.09-4.798-.31-.71-.873-1.3-1.634-1.75-.192 1.352-.622 2.446-1.284 3.272-.886 1.102-2.14 1.704-3.73 1.79-1.202.065-2.361-.218-3.259-.801-1.063-.689-1.685-1.74-1.752-2.96-.065-1.17.408-2.253 1.332-3.05.857-.738 2.017-1.168 3.456-1.282.989-.078 1.998-.03 3.002.112v-.49c0-1.072-.249-1.896-.74-2.45-.51-.574-1.26-.867-2.232-.871h-.053c-.86.004-1.593.263-2.177.77a3.07 3.07 0 00-.942 1.323l-1.972-.532c.396-1.02 1.028-1.878 1.877-2.55 1.003-.793 2.227-1.196 3.64-1.196h.072c1.712.012 3.076.585 4.053 1.702.898 1.027 1.354 2.413 1.354 4.12v1.96c0 .104.002.21.005.318.012.432.025.876.025 1.322 0 .61-.027 1.178-.083 1.706a3.939 3.939 0 01-.234 1.004c.59.394 1.1.868 1.512 1.412.866 1.146 1.178 2.602.878 4.1-.401 2.004-1.61 3.666-3.404 4.678-1.446.816-3.21 1.229-5.25 1.229zm-.065-8.103c-.073 0-.145.002-.218.005-.94.05-1.666.326-2.158.82-.472.475-.69 1.073-.65 1.778.036.641.318 1.178.838 1.598.567.456 1.353.688 2.34.637 1.107-.06 1.965-.473 2.55-1.228.437-.564.728-1.305.866-2.205-.02-.01-.04-.018-.06-.027a7.966 7.966 0 00-3.508-.378z"/></svg>
            <% end %>
          <% end %>
          <% if current_user.blog.present? %>
            <%= link_to current_user.blog.start_with?('http') ? current_user.blog : "https://#{current_user.blog}", target: "_blank", class: "w-7 h-7 rounded-lg bg-white/5 flex items-center justify-center text-slate-400 hover:text-white hover:bg-white/10 transition-all border border-white/5" do %>
              <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10l4 4v10a2 2 0 01-2 2z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h4m-4 4h8"/></svg>
            <% end %>
          <% end %>
          <% if current_user.youtube.present? %>
            <%= link_to current_user.youtube.start_with?('http') ? current_user.youtube : "https://youtube.com/#{current_user.youtube.delete_prefix('@')}", target: "_blank", class: "w-7 h-7 rounded-lg bg-white/5 flex items-center justify-center text-slate-400 hover:text-white hover:bg-white/10 transition-all border border-white/5" do %>
              <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
            <% end %>
          <% end %>
          <% if current_user.twitter.present? %>
            <%= link_to current_user.twitter.start_with?('http') ? current_user.twitter : "https://x.com/#{current_user.twitter.delete_prefix('@')}", target: "_blank", class: "w-7 h-7 rounded-lg bg-white/5 flex items-center justify-center text-slate-400 hover:text-white hover:bg-white/10 transition-all border border-white/5" do %>
              <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 24 24"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Quick Stats Card -->
    <div class="mx-4 mt-6 p-6 app-glass-card bg-white/[0.03] border-white/10 grid grid-cols-3 divide-x divide-white/5 relative overflow-hidden group">
      <!-- Subtle Glow behind stats -->
      <div class="absolute inset-0 bg-gradient-to-r from-transparent via-indigo-500/[0.02] to-transparent group-hover:via-indigo-500/[0.05] transition-all duration-500"></div>
      
      <div class="text-center relative z-10">
        <p class="text-[10px] font-black text-slate-600 uppercase tracking-widest mb-1.5">Record</p>
        <p class="text-xl font-black text-white tabular-nums"><%= @total_activities %></p>
      </div>
      <div class="text-center relative z-10">
        <p class="text-[10px] font-black text-slate-600 uppercase tracking-widest mb-1.5">Streak</p>
        <p class="text-xl font-black text-indigo-400 tabular-nums"><%= @current_streak %><span class="text-[10px] ml-0.5 text-slate-500 font-bold uppercase">day</span></p>
      </div>
      <div class="text-center relative z-10">
        <p class="text-[10px] font-black text-slate-600 uppercase tracking-widest mb-1.5">Point</p>
        <p class="text-xl font-black text-white tabular-nums"><%= number_with_delimiter(@current_month_points) %></p>
      </div>
    </div>
  </section>

  <!-- 1.5. Pending Membership Notice -->
  <% if current_user&.routine_club_members&.where(payment_status: :pending)&.exists? %>
    <% pending_member = current_user.routine_club_members.where(payment_status: :pending).first %>
    <section class="px-2 animate-badge-pop">
      <div class="app-glass-card p-5 bg-amber-500/10 border-amber-500/30 flex items-center justify-between gap-4">
        <div class="flex items-center gap-4">
          <div class="w-12 h-12 bg-amber-500/20 rounded-2xl flex items-center justify-center text-2xl shadow-lg shadow-amber-500/10">⌛</div>
          <div>
            <div class="flex items-center gap-2">
              <h4 class="text-sm font-black text-amber-500">클럽 가입 확인 중</h4>
              <span class="px-1.5 py-0.5 bg-amber-500/20 rounded text-[8px] font-black text-amber-500">PENDING</span>
            </div>
            <p class="text-[10px] font-bold text-slate-400 mt-1 leading-tight">
              호스트가 입금을 확인하고 있습니다.<br/>
              승인이 완료되면 루파 전용 혜택을 이용할 수 있습니다.
            </p>
          </div>
        </div>
        <%= link_to guide_routine_clubs_path(source: 'prototype'), class: "shrink-0 w-8 h-8 rounded-full bg-white/5 flex items-center justify-center text-slate-400" do %>
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M9 5l7 7-7 7"/></svg>
        <% end %>
      </div>
    </section>
  <% end %>

  <!-- 2. Goals Section (Weekly/Monthly/Yearly) -->
  <section class="space-y-4">
    <div class="flex justify-between items-center px-2">
      <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">나의 목표</h3>
      <button data-action="click->proto-ui#openModal" 
              data-modal-id="edit-goals" 
              onclick="document.getElementById('edit-goals').classList.remove('hidden'); document.body.classList.add('overflow-hidden')"
              class="text-[10px] font-bold text-indigo-400 hover:text-indigo-300 transition-colors cursor-pointer">수정</button>
    </div>

    <div class="grid grid-cols-1 gap-3">
      <% 
        week_of_month = ((Date.current.day - 1) / 7) + 1
        week_start_day = (week_of_month - 1) * 7 + 1
        current_week_start = Date.new(Date.current.year, Date.current.month, week_start_day)
        
        weekly_needs_update = current_user.weekly_goal_updated_at.nil? || current_user.weekly_goal_updated_at < current_week_start
        monthly_needs_update = current_user.monthly_goal_updated_at.nil? || current_user.monthly_goal_updated_at < Date.current.beginning_of_month
        yearly_needs_update = current_user.yearly_goal_updated_at.nil? || current_user.yearly_goal_updated_at < Date.current.beginning_of_year
      %>
      
      <!-- Weekly Goal -->
      <div class="app-glass-card p-5 <%= weekly_needs_update ? 'border-amber-500/30 bg-amber-500/5' : 'border-indigo-500/20 bg-indigo-500/5' %>">
        <div class="flex items-start justify-between mb-3">
          <div class="flex items-center gap-2">
            <span class="text-xl">🎯</span>
            <div>
              <p class="text-xs font-black text-white">주간 목표</p>
              <p class="text-[9px] font-bold text-slate-500"><%= Date.current.strftime('%Y년 %m월') %> <%= week_of_month %>주차</p>
            </div>
          </div>
          <% if weekly_needs_update %>
            <span class="px-2 py-1 bg-amber-500/20 text-amber-400 text-[8px] font-black rounded-full">갱신 필요</span>
          <% end %>
        </div>
        <% if current_user.weekly_goal.present? %>
          <p class="text-sm font-medium text-slate-300 leading-relaxed"><%= current_user.weekly_goal %></p>
        <% else %>
          <p class="text-sm font-medium text-slate-500 italic">이번 주 목표를 설정해보세요</p>
        <% end %>
      </div>

      <!-- Monthly Goal -->
      <div class="app-glass-card p-5 <%= monthly_needs_update ? 'border-amber-500/30 bg-amber-500/5' : 'bg-white/[0.02]' %>">
        <div class="flex items-start justify-between mb-3">
          <div class="flex items-center gap-2">
            <span class="text-xl">🌙</span>
            <div>
              <p class="text-xs font-black text-white">월간 목표</p>
              <p class="text-[9px] font-bold text-slate-500"><%= Date.current.strftime('%Y년 %m월') %></p>
            </div>
          </div>
          <% if monthly_needs_update %>
            <span class="px-2 py-1 bg-amber-500/20 text-amber-400 text-[8px] font-black rounded-full">갱신 필요</span>
          <% end %>
        </div>
        <% if current_user.monthly_goal.present? %>
          <p class="text-sm font-medium text-slate-300 leading-relaxed"><%= current_user.monthly_goal %></p>
        <% else %>
          <p class="text-sm font-medium text-slate-500 italic">이번 달 목표를 설정해보세요</p>
        <% end %>
      </div>

      <!-- Yearly Goal -->
      <div class="app-glass-card p-5 <%= yearly_needs_update ? 'border-amber-500/30 bg-amber-500/5' : 'bg-white/[0.02]' %>">
        <div class="flex items-start justify-between mb-3">
          <div class="flex items-center gap-2">
            <span class="text-xl">⭐</span>
            <div>
              <p class="text-xs font-black text-white">연간 목표</p>
              <p class="text-[9px] font-bold text-slate-500"><%= Date.current.year %>년</p>
            </div>
          </div>
          <% if yearly_needs_update %>
            <span class="px-2 py-1 bg-amber-500/20 text-amber-400 text-[8px] font-black rounded-full">갱신 필요</span>
          <% end %>
        </div>
        <% if current_user.yearly_goal.present? %>
          <p class="text-sm font-medium text-slate-300 leading-relaxed"><%= current_user.yearly_goal %></p>
        <% else %>
          <p class="text-sm font-medium text-slate-500 italic">올해 목표를 설정해보세요</p>
        <% end %>
      </div>
    </div>
  </section>

  <!-- 2.1. Identity Wallet (Added based on user suggestion) -->
  <section class="space-y-4">
    <div class="flex justify-between items-center px-2">
      <h3 class="text-xs font-black text-slate-500 uppercase tracking-[0.2em]">나의 성장 아이덴티티</h3>
      <div class="text-[10px] font-bold text-indigo-400">누적 <%= @total_activities %>회 성취</div>
    </div>

    <div class="grid grid-cols-1 gap-4">
      <% if @top_categories.any? %>
        <% @top_categories.each_with_index do |(category, count), idx| %>
          <% 
            cat_config = {
              "HEALTH" => { icon: "🏋️", color: "#10B981", bg: "emerald" },
              "LIFE"   => { icon: "📝", color: "#F59E0B", bg: "amber" },
              "MIND"   => { icon: "🧘", color: "#8B5CF6", bg: "violet" },
              "STUDY"  => { icon: "📚", color: "#3B82F6", bg: "blue" },
              "HOBBY"  => { icon: "🎨", color: "#EC4899", bg: "pink" },
              "MONEY"  => { icon: "💰", color: "#059669", bg: "emerald-dark" }
            }[category] || { icon: "✨", color: "#818CF8", bg: "indigo" }
          %>
          <div class="app-glass-card p-6 relative overflow-hidden group cursor-pointer active:scale-[0.98] transition-all border-white/5 bg-white/[0.02]"
               onclick="document.getElementById('cat-history-<%= idx %>').classList.remove('hidden'); document.body.classList.add('overflow-hidden')">
            
            <!-- Category Specific Glow -->
            <div class="absolute -right-8 -top-8 w-32 h-32 opacity-10 blur-3xl rounded-full transition-all group-hover:opacity-20" style="background-color: <%= cat_config[:color] %>"></div>
            
            <div class="flex items-center justify-between relative z-10">
              <div class="flex items-center gap-5">
                <div class="w-14 h-14 rounded-2xl flex items-center justify-center text-3xl shadow-xl border border-white/10 bg-gradient-to-br from-white/10 to-transparent">
                  <span class="filter drop-shadow-[0_0_8px_rgba(255,255,255,0.2)]"><%= cat_config[:icon] %></span>
                </div>
                <div class="space-y-1">
                  <h4 class="text-base font-black text-white italic"><%= current_user.category_label(category) %></h4>
                  <div class="flex items-center gap-2">
                    <span class="w-1.5 h-1.5 rounded-full animate-pulse" style="background-color: <%= cat_config[:color] %>"></span>
                    <p class="text-[10px] font-black uppercase tracking-widest" style="color: <%= cat_config[:color] %>"><%= current_user.category_identity_title(category) %></p>
                  </div>
                </div>
              </div>
              <div class="text-right">
                <p class="text-2xl font-black text-white tabular-nums"><%= count %><span class="text-xs ml-1 text-slate-500 font-bold uppercase">exp</span></p>
                <div class="mt-2 h-1.5 w-24 bg-white/5 rounded-full overflow-hidden">
                  <div class="h-full rounded-full shadow-lg transition-all duration-1000" style="width: <%= [count * 2, 100].min %>%; background-color: <%= cat_config[:color] %>; box-shadow: 0 0 10px <%= cat_config[:color] %>80"></div>
                </div>
              </div>
            </div>
          </div>

          <!-- Category History Modal -->
          <div id="cat-history-<%= idx %>" class="hidden fixed inset-0 z-[11000]">
            <div onclick="this.closest('.fixed').classList.add('hidden'); document.body.classList.remove('overflow-hidden')"
                 class="absolute inset-0 bg-black/80 backdrop-blur-xl cursor-pointer"></div>
            <div class="absolute bottom-0 inset-x-0 bg-[#16151D]/95 backdrop-blur-3xl rounded-t-[40px] border-t border-white/10 px-4 pt-6 pb-40 space-y-8 animate-slide-up max-h-[85vh] overflow-y-auto no-scrollbar">
              <!-- Background Glow -->
              <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-32 bg-indigo-500/10 blur-[50px] pointer-events-none rounded-t-[40px]"></div>

              <header class="flex justify-between items-start relative z-10">
                <div class="space-y-2">
                  <div class="flex items-center gap-3">
                    <span class="text-3xl filter drop-shadow-[0_0_10px_rgba(255,255,255,0.2)]"><%= { "HEALTH" => "🏋️", "LIFE" => "📝", "MIND" => "🧘", "STUDY" => "📚", "HOBBY" => "🎨", "MONEY" => "💰" }[category] || "✨" %></span>
                    <h3 class="text-2xl font-black text-white italic tracking-tight"><%= current_user.category_label(category) %> 히스토리</h3>
                  </div>
                  <p class="text-sm font-black text-indigo-400"><%= current_user.category_identity_title(category) %></p>
                </div>
                <button onclick="this.closest('.fixed').classList.add('hidden'); document.body.classList.remove('overflow-hidden')" 
                        class="w-10 h-10 rounded-full bg-white/5 border border-white/5 flex items-center justify-center text-slate-400 hover:text-white hover:bg-white/10 transition-all active:scale-90">
