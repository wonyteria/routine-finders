    <script>
      function switchTab(tabId) {
        // Hide all panels
        document.getElementById('panel-free').classList.add('hidden');
        document.getElementById('panel-club').classList.add('hidden');

        // Show selected panel
        document.getElementById('panel-' + tabId).classList.remove('hidden');

        // Reset all buttons
        const btnClasses = ['bg-indigo-600', 'text-white', 'shadow-lg'];
        const inactiveClasses = ['text-slate-400', 'hover:text-slate-600'];

        ['free', 'club'].forEach(id => {
          const btn = document.getElementById('tab-btn-' + id);
          btn.classList.remove(...btnClasses);
          btn.classList.add(...inactiveClasses);
        });

        // Activate selected button
        const activeBtn = document.getElementById('tab-btn-' + tabId);
        activeBtn.classList.remove(...inactiveClasses);
        activeBtn.classList.add(...btnClasses);
        
        // Update URL without reloading (optional, helps with refreshing)
        const url = new URL(window.location);
        url.searchParams.set('tab', tabId);
        window.history.pushState({}, '', url);
      }
    </script>

