<div class="space-y-6 md:space-y-8">
  <!-- Review Summary Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="app-glass-card p-6 flex flex-col items-center justify-center text-center">
      <h3 class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-2">평균 평점</h3>
      <div class="flex items-end gap-1">
        <span class="text-4xl font-black text-white italic"><%= challenge.average_rating.to_f.round(1) %></span>
        <span class="text-sm font-black text-slate-500 pb-1.5">/ 5.0</span>
      </div>
      <div class="flex items-center gap-0.5 mt-2">
        <% 5.times do |i| %>
          <svg class="w-3 h-3 <%= i < challenge.average_rating.to_i ? 'text-amber-400' : 'text-slate-700' %>" fill="currentColor" viewBox="0 0 20 20"><path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/></svg>
        <% end %>
      </div>
    </div>
    
    <div class="col-span-1 md:col-span-3 app-glass-card p-6">
      <h3 class="text-[10px] font-black text-slate-500 uppercase tracking-widest mb-4">평점 분포</h3>
      <div class="space-y-2.5">
        <% (1..5).to_a.reverse.each do |r| %>
          <% 
            count = reviews.where(rating: r).count
            percent = reviews.any? ? (count.to_f / reviews.count * 100).round : 0
          %>
          <div class="flex items-center gap-4">
            <span class="text-[11px] font-black text-slate-400 w-4"><%= r %>점</span>
            <div class="flex-1 h-1.5 bg-white/5 rounded-full overflow-hidden">
              <div class="h-full bg-indigo-500" style="width: <%= percent %>%"></div>
            </div>
            <span class="text-[11px] font-black text-slate-500 w-8 text-right"><%= count %>명</span>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="app-glass-card p-4 md:p-6">
    <div class="flex items-center justify-between mb-6 md:mb-8">
      <div>
        <h2 class="text-base md:text-lg font-black text-white italic">전체 피드백 (<%= reviews.count %>)</h2>
        <p class="text-[8px] md:text-[9px] font-black text-slate-500 uppercase tracking-widest mt-0.5">참가자들이 남긴 소중한 의견들입니다</p>
      </div>
    </div>

    <% if reviews.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6">
        <% reviews.each do |review| %>
          <div class="p-6 rounded-[32px] bg-white/[0.02] border border-white/5 hover:bg-white/[0.04] transition-all group relative overflow-hidden">
            <div class="flex items-start gap-4 mb-6">
              <div class="relative shrink-0">
                <img src="<%= review.user.profile_image %>" class="w-12 h-12 rounded-2xl object-cover shadow-2xl">
                <div class="absolute -top-1 -right-1 w-5 h-5 bg-indigo-500 rounded-full border-2 border-[#0C0B12] flex items-center justify-center text-[10px] font-black text-white">
                  <%= review.rating %>
                </div>
              </div>
              <div class="flex-1">
                <div class="flex items-center gap-1.5">
                  <% if review.user.is_rufa_club_member? %>
                    <span class="shrink-0 w-3.5 h-3.5 rounded-full bg-indigo-500 flex items-center justify-center text-[8px] font-black text-white shadow-[0_0_8px_rgba(99,102,241,0.5)]" title="루파 클럽 정회원">R</span>
                  <% end %>
                  <p class="font-black text-white italic"><%= review.user.nickname %></p>
                </div>
                <p class="text-[9px] font-black text-slate-600 uppercase tracking-widest mt-0.5"><%= review.created_at.in_time_zone('Asia/Seoul').strftime('%Y.%m.%d %H:%M') %></p>
              </div>
            </div>

            <div class="space-y-4">
              <!-- Public Review -->
              <div class="p-5 bg-white/[0.02] rounded-2xl border border-white/5">
                <p class="text-sm font-medium text-slate-300 leading-relaxed italic">"<%= review.content %>"</p>
              </div>

              <!-- Private Message to Host -->
              <% if review.message_to_host.present? %>
                <div class="p-5 bg-indigo-500/10 rounded-2xl border border-indigo-500/20 relative">
                  <div class="absolute top-0 right-6 -translate-y-1/2 px-3 py-1 bg-indigo-600 rounded-full">
                    <span class="text-[9px] font-black text-white uppercase tracking-widest">Secret Message</span>
                  </div>
                  <p class="text-[11px] font-black text-indigo-400 uppercase tracking-widest mb-2 flex items-center gap-1.5">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"/></svg>
                    주최자에게만 전달된 메시지
                  </p>
                  <p class="text-sm font-bold text-indigo-100 leading-relaxed">
                    <%= review.message_to_host %>
                  </p>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-32 bg-white/[0.01] rounded-[40px] border border-dashed border-white/5">
        <p class="text-[11px] font-black text-slate-700 uppercase tracking-[0.3em]">수집된 피드백 데이터가 없습니다</p>
      </div>
    <% end %>
  </div>
</div>
