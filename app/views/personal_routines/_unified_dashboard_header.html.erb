<% 
  is_premium = @permission.is_premium_member?
  is_proto_style = local_assigns[:is_proto_style] || is_premium
%>

<section class="relative overflow-hidden <%= is_proto_style ? "bg-gradient-to-br from-indigo-900 via-indigo-950 to-black p-1 rounded-[48px] md:rounded-[64px]" : "" %>">
  <% if is_proto_style %>
    <!-- Premium Orbit + Identity Banner -->
    <div class="bg-slate-900/40 backdrop-blur-2xl rounded-[44px] md:rounded-[60px] p-8 md:p-12 border border-white/5 flex flex-col xl:flex-row items-center gap-12 relative">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_50%_0%,rgba(99,102,241,0.15),transparent_50%)]"></div>
      
      <!-- Orbit Vis -->
      <div class="w-full xl:w-1/2 relative bg-black/20 rounded-[40px] p-4 border border-white/5">
        <%= render partial: "prototype/orbit", locals: { 
              progress: @current_achievement_rate.to_i, 
              completed_count: @todays_routines.select(&:completed_today?).count, 
              total_task_count: @todays_routines.count,
              orbit_users: @rufa_rankings.map{ |r| r[:user] },
              todays_routines: @todays_routines 
            } %>
      </div>

      <!-- Identity & Stats -->
      <div class="w-full xl:w-1/2 space-y-8 relative z-10">
        <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
          <div class="space-y-4">
             <div class="flex items-center gap-2">
               <span class="px-3 py-1 bg-amber-400 text-black rounded-full text-[10px] font-black tracking-widest uppercase">RUFA Official</span>
               <% if current_user.admin? %>
                 <span class="px-3 py-1 bg-indigo-500 text-white rounded-full text-[10px] font-black tracking-widest uppercase">Admin</span>
               <% end %>
             </div>
             <h1 class="text-4xl md:text-5xl font-black tracking-tighter">
               <%= current_user.nickname %><span class="text-indigo-400">님,</span><br/>
               <span class="text-3xl md:text-4xl opacity-80">당신의 정체성은 <span class="bg-clip-text text-transparent bg-gradient-to-r from-amber-200 to-orange-400">'<%= @permission.identity_title %>'</span> 입니다.</span>
             </h1>
          </div>
          <div class="flex items-center gap-6 bg-white/5 p-4 pr-8 rounded-3xl border border-white/10 group cursor-pointer hover:bg-white/10 transition-all" onclick="toggleVipCard()">
             <%= rufa_avatar_tag(current_user, size: :lg) %>
             <div class="space-y-1">
               <p class="text-[10px] font-black text-indigo-300 uppercase tracking-widest text-right">Master Lv.<%= (current_user.total_routine_completions / 30) + 1 %></p>
               <div class="w-20 h-1.5 bg-white/10 rounded-full overflow-hidden">
                 <div class="h-full bg-indigo-400" style="width: <%= (current_user.total_routine_completions % 30) * 3.3 %>%"></div>
               </div>
             </div>
          </div>
        </div>

        <div class="grid grid-cols-3 gap-4">
          <% [
            ["성공 일수", "#{@member_days}일", "📅"],
            ["누적 성취", "#{@total_completions}회", "🔱"],
            ["현재 순위", "Top #{rand(1..5)}%", "🏆"]
          ].each do |label, value, icon| %>
            <div class="bg-white/5 p-5 rounded-3xl border border-white/5 space-y-1">
              <div class="text-xl shrink-0"><%= icon %></div>
              <div>
                <p class="text-[9px] font-bold text-white/40 uppercase tracking-widest"><%= label %></p>
                <p class="text-lg font-black"><%= value %></p>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  <% else %>
    <!-- Non-Premium Promotion Banner -->
    <div class="bg-gradient-to-br from-indigo-700 via-indigo-600 to-slate-900 rounded-[48px] md:rounded-[64px] p-8 md:p-16 text-white relative shadow-2xl overflow-hidden group">
      <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
      <div class="absolute top-0 right-0 w-96 h-96 bg-white/10 rounded-full blur-3xl -translate-y-1/2 translate-x-1/2 group-hover:scale-110 transition-transform duration-1000"></div>
      
      <div class="relative z-10 flex flex-col lg:flex-row items-center justify-between gap-12">
        <div class="space-y-8 max-w-2xl text-center lg:text-left">
          <div class="space-y-4">
            <span class="inline-block px-4 py-1.5 bg-white/10 backdrop-blur-md rounded-full border border-white/20 text-xs font-black tracking-[0.3em] uppercase italic">당신의 정체성을 설계하세요</span>
            <h1 class="text-4xl md:text-7xl font-black leading-tight tracking-tighter">
              단순한 기록을 넘어서,<br/>
              <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-200 via-yellow-400 to-orange-400">진짜 나를 증명하는 곳</span>
            </h1>
            <p class="text-lg md:text-2xl font-medium text-indigo-100/80 leading-relaxed">루파 클럽은 상위 1%를 위한 프리미엄 루틴 엔진입니다.</p>
          </div>
          
          <div class="flex flex-wrap gap-4 justify-center lg:justify-start">
            <%= link_to routine_clubs_path, class: "group relative px-8 py-5 bg-white text-indigo-600 rounded-3xl font-black text-lg transition-all shadow-2xl hover:scale-105 active:scale-95 flex items-center gap-3 overflow-hidden" do %>
              <span class="relative z-10">지금 루파 클럽 합류하기</span>
              <div class="absolute inset-0 bg-amber-400 opacity-0 group-hover:opacity-100 transition-opacity"></div>
              <svg class="w-5 h-5 relative z-10" fill="none" stroke="currentColor" stroke-width="3" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"/></svg>
            <% end %>
            <%= link_to achievement_report_path, class: "px-8 py-5 bg-white/10 text-white backdrop-blur-md border border-white/20 rounded-3xl font-black text-lg hover:bg-white/20 transition-all flex items-center gap-3" do %>
              <span>성장 리포터 진단</span>
              <span class="text-xl">📊</span>
            <% end %>
          </div>
        </div>

        <div class="w-full lg:w-1/3 grid grid-cols-2 gap-4">
           <div class="bg-white/5 backdrop-blur-xl p-8 rounded-[40px] border border-white/10 text-center space-y-3">
             <p class="text-[10px] font-black text-indigo-200/50 uppercase tracking-widest">Active Seekers</p>
             <div class="text-4xl font-black tabular-nums">127<span class="text-xs ml-1 opacity-50">명</span></div>
             <p class="text-[10px] font-bold text-white/40">함께 달리는 중</p>
           </div>
           <div class="bg-white/10 backdrop-blur-xl p-8 rounded-[40px] border border-white/20 text-center space-y-3">
             <p class="text-[10px] font-black text-white/50 uppercase tracking-widest">Success Rate</p>
             <div class="text-4xl font-black text-amber-400 tabular-nums">94<span class="text-xs ml-1 text-white/50">%</span></div>
             <p class="text-[10px] font-bold text-white/40">클럽 평균 달성률</p>
           </div>
        </div>
      </div>
    </div>
  <% end %>
</section>
