<!-- PROTOTYPE UI: Premium Dark Mode -->
<div class="space-y-6 md:space-y-8">
  <!-- Pending Applications -->
  <% if pending_applications.any? %>
    <div class="app-glass-card p-4 md:p-6 border-amber-500/10 bg-amber-500/[0.02]" data-controller="batch-application">
      <%= form_with url: batch_approve_applications_hosted_challenge_path(challenge), method: :post, id: "batch-application-form" do |f| %>
        <%= hidden_field_tag :source, 'prototype' %>
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-4 mb-6 md:mb-8">
          <div>
            <h2 class="text-base md:text-lg font-black text-white italic uppercase tracking-tight">참가 신청 대기명단 (<span id="selected-app-count">0</span> / <%= pending_applications.count %>)</h2>
            <p class="text-[8px] md:text-[9px] font-black text-slate-500 uppercase tracking-[0.2em] mt-1">카드를 클릭하여 일괄 처리 대상을 선택하세요</p>
          </div>
          
          <div class="hidden flex items-center gap-2 w-full sm:w-auto" id="batch-app-actions">
            <button type="submit" class="flex-1 sm:flex-none glass-btn px-5 py-2.5 text-[10px] font-black text-emerald-400 border-emerald-500/20 hover:bg-emerald-500/10 uppercase tracking-widest">일괄 승인</button>
            <button type="button" 
                    onclick="document.getElementById('batch-app-reject-modal').classList.remove('hidden')"
                    class="flex-1 sm:flex-none glass-btn px-5 py-2.5 text-[10px] font-black text-rose-500 border-rose-500/20 hover:bg-rose-500/10 uppercase tracking-widest">일괄 거절</button>
          </div>
        </div>
        
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 md:gap-5">
          <% pending_applications.each do |application| %>
            <div class="bg-white/[0.03] rounded-2xl md:rounded-[28px] p-4 md:p-6 border border-white/10 group/card hover:bg-white/[0.05] transition-all cursor-pointer relative"
                 onclick="const cb = this.querySelector('input[type=checkbox]'); cb.checked = !cb.checked; this.classList.toggle('ring-2'); this.classList.toggle('ring-indigo-500'); this.classList.toggle('bg-indigo-500/5'); updateAppBatchActions();">
              <input type="checkbox" name="application_ids[]" value="<%= application.id %>" class="hidden app-checkbox">
              
              <div class="flex items-start justify-between gap-3 md:gap-4 mb-4 md:mb-5">
                <div class="flex items-center gap-3">
                  <img src="<%= application.user.profile_image %>" class="w-10 h-10 md:w-12 md:h-12 rounded-xl md:rounded-2xl object-cover shadow-xl grayscale group-hover/card:grayscale-0 transition-all duration-700">
                  <div>
                    <h3 class="text-sm md:text-base font-black text-white italic"><%= application.user.nickname %></h3>
                    <p class="text-[8px] md:text-[9px] font-black text-slate-500 uppercase tracking-tighter mt-0.5"><%= time_ago_in_words(application.applied_at) %> 전</p>
                  </div>
                </div>
              </div>
              
              <% if application.message.present? %>
                <div class="p-3 md:p-4 bg-black/20 rounded-xl md:rounded-2xl border border-white/5 mb-4 md:mb-5">
                  <p class="text-xs md:text-sm font-medium text-slate-300 leading-relaxed italic">"<%= application.message %>"</p>
                </div>
              <% end %>

              <div class="grid grid-cols-2 gap-2 md:gap-3">
                <button type="button" 
                        onclick="event.stopPropagation(); document.getElementById('action-form-<%= application.id %>').classList.remove('hidden'); this.parentElement.classList.add('hidden'); document.getElementById('action-type-<%= application.id %>').value = 'approve'; document.getElementById('form-submit-<%= application.id %>').innerText = '승인 확정'; document.getElementById('form-submit-<%= application.id %>').className = 'w-full py-3 md:py-3.5 bg-indigo-600 text-white rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs hover:bg-indigo-500';"
                        class="px-4 md:px-5 py-3 md:py-3.5 bg-indigo-600 hover:bg-indigo-500 text-white rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs uppercase tracking-widest transition-all shadow-xl shadow-indigo-600/20">
                  승인하기
                </button>
                <button type="button" 
                        onclick="event.stopPropagation(); document.getElementById('action-form-<%= application.id %>').classList.remove('hidden'); this.parentElement.classList.add('hidden'); document.getElementById('action-type-<%= application.id %>').value = 'reject'; document.getElementById('form-submit-<%= application.id %>').innerText = '거절 확정'; document.getElementById('form-submit-<%= application.id %>').className = 'w-full py-3 md:py-3.5 bg-rose-600 text-white rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs hover:bg-rose-700';"
                        class="px-4 md:px-5 py-3 md:py-3.5 bg-white/5 hover:bg-white/10 text-slate-400 rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs uppercase tracking-widest transition-all">
                  거절하기
                </button>
              </div>

              <!-- Personal Message Form -->
              <div id="action-form-<%= application.id %>" class="hidden mt-3 md:mt-4 animate-slide-up" onclick="event.stopPropagation();">
                <%= form_with url: "#", method: :post, local: true, id: "form-#{application.id}" do |f| %>
                  <%= hidden_field_tag :source, "prototype" %>
                  <input type="hidden" name="_method" id="action-type-<%= application.id %>" value="post">
                  <div class="space-y-3">
                    <%= text_area_tag :message, nil, placeholder: "참가자에게 보낼 개인 메시지 (선택)", class: "w-full p-3 md:p-4 bg-black/40 border border-white/10 rounded-xl md:rounded-2xl text-xs md:text-sm text-white placeholder:text-slate-600 focus:border-indigo-500 outline-none transition-all", rows: 3 %>
                    <div class="flex gap-2">
                      <button type="submit" id="form-submit-<%= application.id %>" 
                              onclick="this.form.action = (document.getElementById('action-type-<%= application.id %>').value === 'approve') ? '<%= approve_challenge_application_path(challenge, application) %>' : '<%= reject_challenge_application_path(challenge, application) %>';"
                              class="flex-1 py-3 md:py-3.5 bg-indigo-600 text-white rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs hover:bg-indigo-500 transition-all shadow-xl shadow-indigo-600/20">
                        확정하기
                      </button>
                      <button type="button" onclick="this.closest('.animate-slide-up').classList.add('hidden'); this.closest('.group\\/card').querySelector('.grid').classList.remove('hidden');" 
                              class="px-4 md:px-5 py-3 md:py-3.5 bg-white/5 text-slate-500 rounded-xl md:rounded-2xl font-black text-[10px] md:text-xs hover:bg-white/10">
                        취소
                      </button>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Processed Applications -->
  <div class="app-glass-card p-4 md:p-6">
    <h2 class="text-base md:text-lg font-black text-white mb-4 md:mb-5 italic">신청 처리 내역</h2>
    <% if processed_applications.any? %>
      <div class="space-y-3">
        <% processed_applications.each do |application| %>
          <div class="flex items-center justify-between p-4 md:p-5 rounded-xl md:rounded-2xl bg-white/[0.02] border border-white/5 hover:bg-white/[0.04] transition-all group">
            <div class="flex items-center gap-3 md:gap-4">
              <img src="<%= application.user.profile_image %>" class="w-9 h-9 md:w-10 md:h-10 rounded-xl md:rounded-2xl object-cover grayscale opacity-50 group-hover:grayscale-0 group-hover:opacity-100 transition-all">
              <div>
                <p class="font-black text-slate-300 group-hover:text-white transition-colors text-xs md:text-sm italic"><%= application.user.nickname %></p>
                <p class="text-[8px] md:text-[9px] font-black text-slate-600 uppercase tracking-widest mt-0.5"><%= application.applied_at.strftime('%Y.%m.%d') %></p>
              </div>
            </div>
            <% if application.approved? %>
              <span class="px-3 md:px-4 py-1.5 md:py-2 bg-emerald-500/10 text-emerald-500 rounded-lg md:rounded-xl text-[8px] md:text-[9px] font-black uppercase tracking-widest border border-emerald-500/20">승인됨</span>
            <% else %>
              <span class="px-3 md:px-4 py-1.5 md:py-2 bg-white/5 text-slate-500 rounded-lg md:rounded-xl text-[8px] md:text-[9px] font-black uppercase tracking-widest border border-white/5">거절됨</span>
            <% end %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="py-12 md:py-16 text-center">
        <p class="text-[9px] md:text-[10px] font-bold text-slate-700 uppercase tracking-widest">처리된 신청 내역이 없습니다</p>
      </div>
    <% end %>
  </div>
</div>

<!-- Batch App Reject Modal -->
<div id="batch-app-reject-modal" class="fixed inset-0 z-[200] hidden bg-black/80 backdrop-blur-xl flex items-center justify-center p-6">
  <div class="app-glass-card p-8 max-w-sm w-full space-y-6 animate-slide-up border-rose-500/20">
    <div class="text-center">
      <div class="w-16 h-16 bg-rose-500/10 text-rose-500 rounded-2xl flex items-center justify-center mx-auto mb-4 border border-rose-500/20">
        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
      </div>
      <h3 class="text-lg font-black text-white italic">참가 신청 일괄 반려</h3>
      <p class="text-[10px] font-bold text-slate-500 uppercase tracking-widest mt-1">선택된 건을 모두 반려 처리합니다</p>
    </div>
    
    <%= form_with url: batch_reject_applications_hosted_challenge_path(challenge), method: :post do |f| %>
      <%= hidden_field_tag :source, 'prototype' %>
      <div id="batch-app-ids-container"></div>
      <div class="space-y-4">
        <%= text_area_tag :reject_reason, nil, placeholder: "공통 반려 사유를 입력해주세요 (선택)", class: "w-full p-4 bg-white/5 border border-white/10 rounded-2xl text-xs md:text-sm text-white focus:border-rose-500 outline-none h-24 resize-none" %>
        <div class="flex gap-3">
          <button type="button" onclick="document.getElementById('batch-app-reject-modal').classList.add('hidden')" class="flex-1 py-4 bg-white/5 text-slate-500 rounded-2xl font-black text-[10px] uppercase tracking-widest">취소</button>
          <%= f.submit "일괄 반려 확정", onclick: "populateAppBatchIds()", class: "flex-[2] py-4 bg-rose-600 text-white rounded-2xl font-black text-[10px] uppercase tracking-widest shadow-xl shadow-rose-600/20" %>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
  function updateAppBatchActions() {
    const checkedCount = document.querySelectorAll('.app-checkbox:checked').length;
    const actionsDiv = document.getElementById('batch-app-actions');
    const countSpan = document.getElementById('selected-app-count');
    
    if (checkedCount > 0) {
      actionsDiv.classList.remove('hidden');
      actionsDiv.classList.add('flex');
    } else {
      actionsDiv.classList.add('hidden');
      actionsDiv.classList.remove('flex');
    }
    countSpan.textContent = checkedCount;
  }

  function populateAppBatchIds() {
    const container = document.getElementById('batch-app-ids-container');
    container.innerHTML = '';
    document.querySelectorAll('.app-checkbox:checked').forEach(cb => {
      const input = document.createElement('input');
      input.type = 'hidden';
      input.name = 'application_ids[]';
      input.value = cb.value;
      container.appendChild(input);
    });
  }
</script>
