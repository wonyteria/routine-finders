                        <p class="text-sm font-black text-rose-400"><%= pending_app_count %></p>
                      </div>
                    <% end %>
                  </div>
                  <div class="glass-btn w-9 h-9 flex items-center justify-center text-slate-400 group-hover:text-indigo-400">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M9 5l7 7-7 7"/></svg>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
