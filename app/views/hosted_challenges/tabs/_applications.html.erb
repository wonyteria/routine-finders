<div class="space-y-8">
  <!-- Pending Applications -->
  <% if pending_applications.any? %>
    <div class="bg-amber-50 rounded-[32px] border border-amber-200 p-8">
      <h2 class="text-xl font-black text-amber-900 mb-6 flex items-center gap-2">
        <span class="w-3 h-3 bg-amber-500 rounded-full animate-pulse"></span>
        대기 중인 신청 (<%= pending_applications.count %>건)
      </h2>
      
      <div class="space-y-4">
        <% pending_applications.each do |application| %>
          <div class="bg-white rounded-2xl p-6 border border-amber-100">
            <div class="flex items-start justify-between gap-4">
              <div class="flex items-center gap-4">
                <img src="<%= application.user.profile_image %>" class="w-14 h-14 rounded-2xl object-cover" alt="<%= application.user.nickname %>">
                <div>
                  <p class="text-lg font-black text-slate-900"><%= application.user.nickname %></p>
                  <p class="text-xs font-medium text-slate-400"><%= time_ago_in_words(application.applied_at) %> 전 신청</p>
                </div>
              </div>
              <div class="flex items-center gap-2">
                <%= button_to approve_challenge_application_path(challenge, application), method: :post, class: "px-6 py-3 bg-indigo-600 text-white rounded-2xl font-black text-sm hover:bg-indigo-700 transition-all" do %>
                  승인
                <% end %>
                <%= button_to reject_challenge_application_path(challenge, application), method: :post, form: { data: { turbo_confirm: "정말 거절하시겠습니까?" } }, class: "px-6 py-3 bg-slate-100 text-slate-600 rounded-2xl font-black text-sm hover:bg-slate-200 transition-all" do %>
                  거절
                <% end %>
              </div>
            </div>
            
            <% if application.message.present? %>
              <div class="mt-4 p-4 bg-slate-50 rounded-2xl">
                <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2">신청 메시지</p>
                <p class="text-sm font-medium text-slate-700 whitespace-pre-wrap"><%= application.message %></p>
              </div>
            <% end %>
            
            <% if application.depositor_name.present? %>
              <div class="mt-4 flex items-center gap-2">
                <span class="px-3 py-1 bg-indigo-100 text-indigo-700 rounded-full text-xs font-bold">
                  입금자명: <%= application.depositor_name %>
                </span>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Processed Applications -->
  <div class="bg-white rounded-[32px] border border-slate-200 shadow-sm p-8">
    <h2 class="text-xl font-black text-slate-900 mb-6">처리된 신청</h2>
    
    <% if processed_applications.any? %>
      <div class="space-y-3">
        <% processed_applications.each do |application| %>
          <div class="flex items-center justify-between p-4 rounded-2xl hover:bg-slate-50 transition-colors">
            <div class="flex items-center gap-3">
              <img src="<%= application.user.profile_image %>" class="w-10 h-10 rounded-xl object-cover" alt="<%= application.user.nickname %>">
              <div>
                <p class="font-bold text-slate-900"><%= application.user.nickname %></p>
                <p class="text-xs font-medium text-slate-400"><%= application.applied_at.strftime("%Y.%m.%d") %></p>
              </div>
            </div>
            <div>
              <% if application.approved? %>
                <span class="px-4 py-2 bg-green-100 text-green-700 rounded-full text-xs font-black">승인됨</span>
              <% elsif application.rejected? %>
                <span class="px-4 py-2 bg-slate-100 text-slate-500 rounded-full text-xs font-black">거절됨</span>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <p class="text-slate-400 text-center py-8">처리된 신청이 없습니다</p>
    <% end %>
  </div>

  <!-- Empty State for All -->
  <% if pending_applications.empty? && processed_applications.empty? %>
    <div class="text-center py-20">
      <div class="w-20 h-20 bg-slate-100 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-slate-300" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
      </div>
      <p class="text-xl font-black text-slate-300">아직 신청이 없습니다</p>
    </div>
  <% end %>
</div>
