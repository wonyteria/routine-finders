        <h1 class="text-3xl font-black text-white italic tracking-tight">MANAGE SUITE</h1>
        <p class="text-slate-500 font-bold text-xs uppercase tracking-widest">Operating <%= @hosted_challenges.count %> Experiences</p>
      </div>
      <div class="flex gap-2">
        <%= link_to new_challenge_path(source: 'prototype'), class: "glass-btn w-11 h-11 flex items-center justify-center text-indigo-400" do %>
