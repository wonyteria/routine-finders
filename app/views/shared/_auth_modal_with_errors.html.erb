<!-- 모달 백그라운드 -->
<div id="auth_modal" 
     data-modal-target="container"
     data-action="click->modal#closeOnBackground"
     class="fixed inset-0 z-50 bg-gray-900/50 backdrop-blur-sm flex items-center justify-center p-4">
  <!-- 모달 컨텐츠 -->
  <div class="bg-white rounded-2xl shadow-xl w-full max-w-sm overflow-hidden">
    
    <!-- 헤더 -->
    <div class="flex flex-col items-center px-6 pt-10 pb-4">
      <div class="w-20 h-20 bg-white rounded-[24px] flex items-center justify-center mb-6 shadow-xl shadow-slate-200 border border-slate-100 overflow-hidden">
        <%= image_tag "rf_symbol_v9.png", class: "w-full h-full object-contain p-2" %>
      </div>
      <h2 class="text-2xl font-black text-threads-black tracking-tight">Routine Finders</h2>
      <p class="text-slate-500 text-sm mt-1 font-medium">건강한 습관의 시작</p>
    </div>

    <!-- 에러 메시지 (있는 경우) -->
    <% if defined?(user) && user.errors.any? %>
      <div class="px-8 pb-4">
        <div class="bg-red-50 border border-red-200 rounded-lg p-4">
          <ul class="text-sm text-red-600 space-y-1">
            <% user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="px-8 pb-10 space-y-6">
      <!-- 소셜 로그인 섹션 -->
      <div class="space-y-3">
        <!-- 카카오 로그인 -->
        <form action="/auth/kakao" method="post" data-turbo="false" class="w-full">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
          <button type="submit" class="w-full flex items-center justify-center gap-3 bg-[#FEE500] text-[#191919] py-3.5 px-4 rounded-xl font-bold hover:opacity-90 transition-all shadow-sm">
            <svg class="w-5 h-5 text-current" viewBox="0 0 24 24" fill="currentColor">
              <path d="M12 3c-4.97 0-9 3.134-9 7s4.03 7 9 7c.606 0 1.18-.046 1.73-.131L18.5 21l-.924-3.59c2.81-1.353 4.424-3.714 4.424-6.41C22 7.134 17.97 3 12 3z"/>
            </svg>
            카카오로 시작하기
          </button>
        </form>
      </div>

      <p class="text-[10px] text-slate-400 text-center leading-relaxed px-4">
        로그인 시 Routine Finders의 <a href="#" class="underline">이용약관</a> 및 <a href="#" class="underline">개인정보처리방침</a>에 동의하게 됩니다.
      </p>
    </div>
  </div>
</div>
