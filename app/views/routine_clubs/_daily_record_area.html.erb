<div class="bg-white rounded-[40px] p-8 lg:p-12 border border-slate-100 shadow-xl flex flex-col h-full relative overflow-hidden group">
  <div class="absolute -right-20 bottom-0 w-64 h-64 bg-slate-50 rounded-full blur-3xl opacity-50 group-hover:scale-110 transition-transform"></div>
  
  <div class="relative z-10 flex items-center justify-between mb-10">
    <div class="space-y-1">
      <h2 class="text-2xl lg:text-3xl font-black text-slate-900 tracking-tight">오늘의 기록</h2>
      <p class="text-sm text-slate-400 font-bold uppercase tracking-widest font-mono"><%= Date.current.strftime("%Y년 %m월 %d일") %></p>
    </div>
    
    <% 
      today_attendance = @my_membership.attendances.find_by(attendance_date: Date.current) 
      all_routines_done = current_user.all_routines_completed?(Date.current)
      today_achievement = current_user.daily_achievement_rate(Date.current)
    %>

    <% if today_attendance&.status_present? %>
      <div class="flex items-center gap-2 bg-emerald-50 text-emerald-600 px-4 py-2 rounded-2xl border border-emerald-100 font-black text-xs">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7"/></svg>
        기록 완료
      </div>
    <% end %>
  </div>
  
  <div class="relative z-10 flex-1 flex flex-col">
    <% if today_attendance&.status_present? %>
      <div class="bg-slate-50/50 rounded-[32px] p-8 flex-1 border border-slate-100 flex flex-col justify-center text-center">
        <div class="inline-flex items-center gap-2 mb-8 mx-auto">
          <span class="px-3 py-1 bg-indigo-600 text-white text-[11px] font-black rounded-full shadow-lg shadow-indigo-100">달성률 <%= today_attendance.achievement_rate.to_i %>%</span>
          <% if today_attendance.achievement_rate >= 100 %>
            <span class="px-3 py-1 bg-amber-400 text-slate-900 text-[11px] font-black rounded-full shadow-lg shadow-amber-100 animation-pulse">완수 완료 ✨</span>
          <% end %>
        </div>
        
        <% if today_attendance.proof_text.present? %>
          <p class="text-xl lg:text-2xl text-slate-800 font-black italic leading-normal mb-10 decoration-indigo-100 decoration-4">
            "<%= today_attendance.proof_text %>"
          </p>
        <% end %>
        
        <div class="flex items-center justify-center gap-4">
          <button class="flex items-center gap-2 px-8 py-4 bg-white border border-slate-200 rounded-2xl hover:border-orange-400 transition-all font-black text-slate-700 shadow-sm active:scale-95 group/btn">
            <svg class="w-6 h-6 text-orange-400 group-hover/btn:scale-125 transition-transform" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"/>
            </svg>
            <span>응원 <%= today_attendance.cheers_count %></span>
          </button>
        </div>
      </div>
    <% else %>
      <%= form_with url: record_routine_club_path(@routine_club), method: :post, class: "flex-1 flex flex-col" do |f| %>
        <div class="flex-1 mb-8 relative">
          <%= f.text_area :proof_text, 
                          placeholder: "나의 한 마디: 오늘 나에게 할 말을 간단하게 적어보세요.", 
                          class: "w-full min-h-[140px] p-8 bg-slate-50 border border-slate-100 rounded-[32px] font-bold text-slate-700 placeholder:text-slate-300 focus:ring-4 focus:ring-indigo-100 focus:border-indigo-200 focus:bg-white transition-all shadow-inner resize-none",
                          required: true %>
          <div class="absolute right-6 bottom-6 opacity-20 text-3xl select-none">✍️</div>
        </div>

        <div class="bg-indigo-50 border border-indigo-100 rounded-[32px] p-6 lg:p-8 flex flex-col sm:flex-row items-center justify-between gap-6">
          <div class="flex items-center gap-5">
            <div class="w-14 h-14 rounded-2xl bg-white border border-indigo-100 flex items-center justify-center text-3xl shadow-sm">
              <%= all_routines_done ? "💎" : "⏳" %>
            </div>
            <div class="space-y-0.5 text-center sm:text-left">
              <p class="text-[10px] font-black text-indigo-400 uppercase tracking-[0.2em] leading-none">현재 상태</p>
              <p class="text-lg font-black text-indigo-900 leading-tight">달성률: <%= today_achievement.to_i %>%</p>
            </div>
          </div>

          <% if all_routines_done %>
            <%= f.submit "오늘의 기록 저장하기", class: "w-full sm:w-auto px-10 py-5 bg-slate-900 text-white rounded-2xl font-black text-sm lg:text-base hover:bg-black shadow-xl hover:scale-105 active:scale-95 transition-all cursor-pointer whitespace-nowrap" %>
          <% else %>
            <div class="w-full sm:w-auto text-center sm:text-right">
              <button type="button" disabled class="px-8 py-5 bg-slate-200 text-slate-400 rounded-2xl font-black text-xs lg:text-sm cursor-not-allowed border border-slate-300/50 uppercase tracking-widest">
                잠금됨
              </button>
              <p class="mt-2 text-[10px] font-bold text-indigo-600/60 leading-none">완수 후 기록 가능</p>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
