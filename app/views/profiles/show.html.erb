<div class="space-y-12 pb-32" 
     data-controller="tabs"
     data-tabs-active-class="bg-indigo-600 text-white shadow-lg"
     data-tabs-inactive-class="text-slate-400 hover:text-indigo-600">
  <!-- Profile & Stats Hero -->
  <div class="bg-white rounded-[32px] lg:rounded-[48px] border border-slate-200 shadow-sm overflow-hidden flex flex-col lg:flex-row">
    <!-- Left: Profile Info -->
    <div class="lg:w-1/3 p-5 md:p-12 flex flex-col items-center justify-center text-center bg-gradient-to-br from-slate-50 to-white border-b lg:border-b-0 lg:border-r border-slate-100 relative">
      <div class="relative mb-4 lg:mb-8 group">
        <img src="<%= @user.profile_image %>" class="w-24 h-24 lg:w-40 lg:h-40 rounded-[28px] lg:rounded-[48px] border-4 lg:border-8 border-white shadow-xl lg:shadow-2xl object-cover transition-transform group-hover:scale-105" alt="">
        <% if @user.admin? %>
          <div class="absolute -top-2 -right-2 lg:-top-4 lg:-right-4 w-8 h-8 lg:w-12 lg:h-12 bg-indigo-600 rounded-2xl lg:rounded-3xl border-2 lg:border-4 border-white flex items-center justify-center text-white shadow-lg">
            <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/></svg>
          </div>
        <% end %>
      </div>
      
      <h2 class="text-2xl lg:text-3xl font-black text-slate-900 tracking-tight"><%= @user.nickname %></h2>
      <div class="mt-2 lg:mt-4 flex flex-col items-center gap-1 lg:gap-2">
        <span class="px-3 py-0.5 lg:px-4 lg:py-1 rounded-full text-[9px] lg:text-[10px] font-black uppercase tracking-widest <%= @user.admin? ? 'bg-indigo-600 text-white' : 'bg-slate-900 text-white' %>">
          <%= @user.role.upcase %>
        </span>
        <p class="text-[10px] lg:text-xs font-bold text-slate-400"><%= @user.email %></p>
      </div>

      <!-- [NEW] Profile Action Bar: Compact for mobile -->
      <div class="mt-5 lg:mt-8 flex flex-wrap justify-center items-center gap-1.5 lg:gap-2">
        <%= link_to edit_profile_path, class: "flex items-center gap-1.5 px-3 py-2 rounded-lg lg:rounded-xl bg-white border border-slate-200 text-[9px] lg:text-[10px] font-black uppercase text-slate-600 hover:text-indigo-600 hover:border-indigo-300 transition-all shadow-sm" do %>
          <svg class="w-3 h-3 lg:w-3.5 lg:h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"/></svg>
          프로필<span class="hidden sm:inline"> 수정</span>
        <% end %>
        <%= button_to logout_path, method: :delete, data: { turbo_confirm: "로그아웃 하시겠습니까?" }, class: "flex items-center gap-1.5 px-3 py-2 rounded-lg lg:rounded-xl bg-white border border-slate-200 text-[9px] lg:text-[10px] font-black uppercase text-slate-400 hover:text-red-500 hover:border-red-200 transition-all shadow-sm cursor-pointer" do %>
          <svg class="w-3 h-3 lg:w-3.5 lg:h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/></svg>
          로그아웃
        <% end %>
      </div>

      <% if @user.super_admin? || @user.club_admin? %>
          <div class="mt-4 flex flex-wrap justify-center gap-2">
            <% hosted_club = RoutineClub.find_by(host_id: @user.id) %>
            
            <% if hosted_club %>
              <%= link_to manage_routine_club_path(hosted_club), class: "px-4 py-2 bg-indigo-600 text-white rounded-xl text-[9px] lg:text-[10px] font-black uppercase tracking-widest hover:bg-indigo-700 transition-all flex items-center gap-1.5 shadow-lg shadow-indigo-100" do %>
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                루파 관리
              <% end %>
            <% end %>
            
            <% if @user.super_admin? %>
              <%= link_to admin_root_path, class: "px-4 py-2 bg-slate-900 text-white rounded-xl text-[9px] lg:text-[10px] font-black uppercase tracking-widest hover:bg-black transition-all flex items-center gap-1.5 shadow-xl" do %>
                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/></svg>
                전체 관리
              <% end %>
            <% end %>
          </div>
      <% end %>

      <% if @user.bio.present? %>
        <p class="mt-4 lg:mt-6 text-sm text-slate-600 leading-relaxed max-w-sm"><%= @user.bio %></p>
      <% end %>

      <!-- SNS Links -->
      <% if @user.sns_links.present? && @user.sns_links.values.any?(&:present?) %>
        <div class="mt-6 lg:mt-8 flex flex-wrap justify-center gap-3">
          <% if @user.instagram.present? %>
            <%= link_to "https://instagram.com/#{@user.instagram}", target: "_blank", class: "w-8 h-8 lg:w-10 lg:h-10 rounded-xl bg-gradient-to-br from-purple-500 via-pink-500 to-orange-400 flex items-center justify-center text-white hover:scale-110 transition-transform" do %>
              <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/></svg>
            <% end %>
          <% end %>
          <% if @user.threads.present? %>
            <%= link_to "https://threads.net/@#{@user.threads}", target: "_blank", class: "w-8 h-8 lg:w-10 lg:h-10 rounded-xl bg-slate-900 flex items-center justify-center text-white hover:scale-110 transition-transform" do %>
              <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M12.186 24h-.007c-3.581-.024-6.334-1.205-8.184-3.509C2.35 18.44 1.5 15.586 1.472 12.01v-.017c.03-3.579.879-6.43 2.525-8.482C5.845 1.205 8.6.024 12.18 0h.014c2.746.02 5.043.725 6.826 2.098 1.677 1.29 2.858 3.13 3.509 5.467l-2.04.569c-1.104-3.96-3.898-5.984-8.304-6.015-2.91.022-5.11.936-6.54 2.717C4.307 6.504 3.616 8.914 3.589 12c.027 3.086.718 5.496 2.057 7.164 1.43 1.783 3.631 2.698 6.54 2.717 2.623-.02 4.358-.631 5.8-2.045 1.647-1.613 1.618-3.593 1.09-4.798-.31-.71-.873-1.3-1.634-1.75-.192 1.352-.622 2.446-1.284 3.272-.886 1.102-2.14 1.704-3.73 1.79-1.202.065-2.361-.218-3.259-.801-1.063-.689-1.685-1.74-1.752-2.96-.065-1.17.408-2.253 1.332-3.05.857-.738 2.017-1.168 3.456-1.282.989-.078 1.998-.03 3.002.112v-.49c0-1.072-.249-1.896-.74-2.45-.51-.574-1.26-.867-2.232-.871h-.053c-.86.004-1.593.263-2.177.77a3.07 3.07 0 00-.942 1.323l-1.972-.532c.396-1.02 1.028-1.878 1.877-2.55 1.003-.793 2.227-1.196 3.64-1.196h.072c1.712.012 3.076.585 4.053 1.702.898 1.027 1.354 2.413 1.354 4.12v1.96c0 .104.002.21.005.318.012.432.025.876.025 1.322 0 .61-.027 1.178-.083 1.706a3.939 3.939 0 01-.234 1.004c.59.394 1.1.868 1.512 1.412.866 1.146 1.178 2.602.878 4.1-.401 2.004-1.61 3.666-3.404 4.678-1.446.816-3.21 1.229-5.25 1.229zm-.065-8.103c-.073 0-.145.002-.218.005-.94.05-1.666.326-2.158.82-.472.475-.69 1.073-.65 1.778.036.641.318 1.178.838 1.598.567.456 1.353.688 2.34.637 1.107-.06 1.965-.473 2.55-1.228.437-.564.728-1.305.866-2.205-.02-.01-.04-.018-.06-.027a7.966 7.966 0 00-3.508-.378z"/></svg>
            <% end %>
          <% end %>
          <% if @user.blog.present? %>
            <%= link_to @user.blog, target: "_blank", class: "w-8 h-8 lg:w-10 lg:h-10 rounded-xl bg-green-500 flex items-center justify-center text-white hover:scale-110 transition-transform" do %>
              <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 5c7.18 0 13 5.82 13 13M6 11a7 7 0 017 7m-6 0a1 1 0 11-2 0 1 1 0 012 0z"/></svg>
            <% end %>
          <% end %>
          <% if @user.youtube.present? %>
            <%= link_to @user.youtube, target: "_blank", class: "w-8 h-8 lg:w-10 lg:h-10 rounded-xl bg-red-500 flex items-center justify-center text-white hover:scale-110 transition-transform" do %>
              <svg class="w-4 h-4 lg:w-5 lg:h-5" fill="currentColor" viewBox="0 0 24 24"><path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/></svg>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>

    <!-- Right: Quick Stats & Wallet -->
    <div class="flex-1 p-5 lg:p-16 grid grid-cols-1 md:grid-cols-2 gap-4 lg:gap-8 content-center bg-slate-50/30 lg:bg-transparent">
      <!-- Participancy & Host Stats -->
      <div class="flex flex-col gap-4 lg:gap-8">
        <div class="space-y-2 lg:space-y-4">
          <p class="text-[8px] lg:text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">참가 정보</p>
          <div class="grid grid-cols-2 gap-2 lg:gap-4">
            <div class="bg-white p-3 lg:p-6 rounded-2xl lg:rounded-[24px] border border-slate-100 flex items-center gap-3 lg:gap-4 group transition-all">
              <div class="w-8 h-8 lg:w-10 lg:h-10 rounded-lg lg:rounded-xl bg-indigo-50 flex items-center justify-center text-sm lg:text-xl shrink-0">🎯</div>
              <div class="min-w-0">
                <p class="text-base lg:text-2xl font-black text-indigo-600 leading-none"><%= @participations.count %></p>
                <p class="text-[7px] lg:text-[9px] text-slate-400 font-black uppercase mt-0.5 tracking-tighter">참여</p>
              </div>
            </div>
            <div class="bg-white p-3 lg:p-6 rounded-2xl lg:rounded-[24px] border border-slate-100 flex items-center gap-3 lg:gap-4 group transition-all">
              <div class="w-8 h-8 lg:w-10 lg:h-10 rounded-lg lg:rounded-xl bg-indigo-50 flex items-center justify-center text-sm lg:text-xl shrink-0">⚡</div>
              <div class="min-w-0">
                <p class="text-base lg:text-2xl font-black text-indigo-600 leading-none">Lv.<%= @user.level %></p>
                <p class="text-[7px] lg:text-[9px] text-slate-400 font-black uppercase mt-0.5 tracking-tighter">레벨</p>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-2 lg:space-y-4">
          <p class="text-[8px] lg:text-[10px] font-black text-slate-400 uppercase tracking-widest ml-1">호스트 정보</p>
          <div class="grid grid-cols-2 gap-2 lg:gap-4">
            <div class="bg-white p-3 lg:p-6 rounded-2xl lg:rounded-[24px] border border-slate-100 flex items-center gap-3 lg:gap-4 group transition-all">
              <div class="w-8 h-8 lg:w-10 lg:h-10 rounded-lg lg:rounded-xl bg-emerald-50 flex items-center justify-center text-sm lg:text-xl shrink-0">⚒️</div>
              <div class="min-w-0">
                <p class="text-base lg:text-2xl font-black text-emerald-600 leading-none"><%= @host_stats[:total_challenges] %></p>
                <p class="text-[7px] lg:text-[9px] text-slate-400 font-black uppercase mt-0.5 tracking-tighter">개최</p>
              </div>
            </div>
            <div class="bg-white p-3 lg:p-6 rounded-2xl lg:rounded-[24px] border border-slate-100 flex items-center gap-3 lg:gap-4 group transition-all">
              <div class="w-8 h-8 lg:w-10 lg:h-10 rounded-lg lg:rounded-xl bg-emerald-50 flex items-center justify-center text-sm lg:text-xl shrink-0">👥</div>
              <div class="min-w-0">
                <p class="text-base lg:text-2xl font-black text-emerald-600 leading-none"><%= @host_stats[:total_participants] %></p>
                <p class="text-[7px] lg:text-[9px] text-slate-400 font-black uppercase mt-0.5 tracking-tighter">누적</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Growth Investment Summary -->
      <div class="flex flex-col justify-center mt-2 lg:mt-0">
        <div class="bg-slate-900 rounded-[28px] lg:rounded-[40px] p-5 lg:p-8 text-white relative overflow-hidden shadow-xl">
          <div class="absolute top-0 right-0 p-6 lg:p-8 opacity-5">
            <svg class="w-16 h-16 lg:w-24 lg:h-24" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm1.41 16.09V20h-2.67v-1.93c-1.71-.36-3.16-1.46-3.27-3.4h1.96c.1 1.05.82 1.87 2.65 1.87 1.96 0 2.4-.98 2.4-1.59 0-.83-.44-1.61-2.67-2.14-2.48-.6-4.18-1.62-4.18-3.67 0-1.72 1.39-2.84 3.11-3.21V4h2.67v1.89c1.53.28 2.39 1.15 2.62 2.3h-1.91c-.13-.67-.53-1.04-1.92-1.04-1.57 0-2.14.71-2.14 1.41 0 .91.82 1.39 2.82 1.9 2.59.61 4.04 1.76 4.04 3.55 0 1.94-1.43 3.51-3.52 4.08z"/></svg>
          </div>
          <p class="text-slate-500 font-black text-[9px] lg:text-[11px] uppercase tracking-widest mb-1">Growth Investment</p>
          <h3 class="text-2xl lg:text-4xl font-black mb-4 lg:mb-6"><%= number_to_currency(@growth_stats[:total_invested]) %></h3>
          
          <div class="grid grid-cols-2 gap-4 pt-4 border-t border-white/10">
            <div class="space-y-0.5">
              <span class="text-slate-500 font-bold text-[10px] block">예정</span>
              <span class="font-black text-indigo-400 text-sm lg:text-base"><%= number_to_currency(@growth_stats[:expected_refund]) %></span>
            </div>
            <div class="space-y-0.5">
              <span class="text-slate-500 font-bold text-[10px] block">누적</span>
              <span class="font-black text-emerald-400 text-sm lg:text-base"><%= number_to_currency(@growth_stats[:total_refunded]) %></span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Navigation Tabs: Horizontally Scrollable on Mobile -->
  <div class="flex justify-start lg:justify-center -mb-6 relative z-10 px-4 overflow-x-auto no-scrollbar pb-4 md:pb-0">
    <div class="bg-white p-1.5 lg:p-2 rounded-[24px] lg:rounded-[32px] shadow-xl border border-slate-100 flex lg:inline-flex gap-1 lg:gap-2 shrink-0">
      <% [
        { id: 'dashboard', label: '대시보드' },
        { id: 'rupin', label: '루틴' },
        { id: 'challenges', label: '챌린지' },
        { id: 'gatherings', label: '모임' },
        { id: 'achievements', label: '업적 & 배지' },
        { id: 'history', label: '활동 내역' }
      ].each_with_index do |tab, index| %>
        <% is_active = index == 0 %>
        <button type="button" data-tabs-target="tab" data-action="click->tabs#change" data-id="<%= tab[:id] %>"
                class="whitespace-nowrap px-6 lg:px-8 py-3 lg:py-4 rounded-[18px] lg:rounded-[24px] text-xs lg:text-sm font-black uppercase transition-all <%= is_active ? 'bg-indigo-600 text-white shadow-lg' : 'text-slate-400 hover:text-indigo-600' %>">
          <%= tab[:label] %>
        </button>
      <% end %>
    </div>
  </div>

  <!-- Tab Contents -->
  <div class="mt-12">
    <!-- Dashboard Tab -->
    <div data-tabs-target="panel" data-id="dashboard" class="space-y-8">
      <!-- Quick Summary Stats -->
      
      
      <!-- 루파 클럽 Nudge for non-members -->
      <%= render "shared/rufa_club_nudge" %>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      <!-- Left: Recent Activity Feed -->
      <div class="lg:col-span-2 space-y-8">
        <!-- Participations (Challenges) -->
        <section>
          <div class="flex items-center justify-between mb-6 px-4">
            <h3 class="text-xl font-black text-slate-900">최근 참여 현황</h3>
            <%= link_to "전체보기", "#", class: "text-xs font-bold text-indigo-600", data: { action: "click->tabs#change", id: "challenges" } %>
          </div>
          <div class="flex overflow-x-auto gap-4 pb-4 snap-x snap-mandatory hide-scrollbar md:grid md:grid-cols-2">
            <% @active_participations.first(2).each do |p| %>
              <div class="flex-shrink-0 w-[280px] md:w-auto bg-white p-6 rounded-[32px] border border-slate-100 shadow-sm hover:shadow-md transition-all snap-center">
                <div class="flex items-center gap-4 mb-4">
                  <img src="<%= p.challenge.thumbnail %>" class="w-12 h-12 rounded-2xl object-cover">
                  <div class="flex-1 min-w-0">
                    <h4 class="font-black text-slate-900 truncate"><%= p.challenge.title %></h4>
                    <p class="text-[10px] text-slate-400 font-bold uppercase tracking-widest"><%= p.challenge.category %></p>
                  </div>
                </div>
                <div class="flex items-center justify-between pt-4 border-t border-slate-50">
                   <div class="flex flex-col">
                      <span class="text-xs font-black text-slate-400">성취도</span>
                      <span class="text-sm font-black text-indigo-600"><%= p.completion_rate.to_i %>%</span>
                   </div>
                   <div class="flex flex-col items-end">
                      <span class="text-xs font-black text-slate-400">현재 스트릭</span>
                      <span class="text-sm font-black text-orange-500">🔥 <%= p.current_streak %>일</span>
                   </div>
                </div>
              </div>
            <% end %>
            <% if @active_participations.empty? %>
              <div class="w-full p-12 bg-slate-50 rounded-[40px] border border-dashed border-slate-200 text-center">
                <p class="text-slate-400 font-bold">진행 중인 챌린지가 없습니다.</p>
              </div>
            <% end %>
          </div>
        </section>

        <!-- Gatherings Summary -->
        <% if @gathering_participations.any? %>
          <section>
            <div class="flex items-center justify-between mb-6 px-4">
              <h3 class="text-xl font-black text-slate-900">다가오는 모임</h3>
              <%= link_to "전체보기", "#", class: "text-xs font-bold text-emerald-600", data: { action: "click->tabs#change", id: "gatherings" } %>
            </div>
