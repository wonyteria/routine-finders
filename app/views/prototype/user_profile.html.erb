<turbo-frame id="user-profile-modal-frame">
  <script>
    // 프레임 로드 시 표시 처리 (레이아웃에서 hidden으로 시작함)
    (function() {
      const frame = document.getElementById('user-profile-modal-frame');
      if (frame) frame.style.display = 'block';
    })();
  </script>
  <style>
    @keyframes slideInUp {
      from { transform: translateY(100%); }
      to { transform: translateY(0); }
    }
    @keyframes slideOutDown {
      from { transform: translateY(0); }
      to { transform: translateY(100%); }
    }
    .animate-modal-in {
      animation: slideInUp 0.3s ease-out forwards;
    }
    .animate-modal-out {
      animation: slideOutDown 0.3s ease-in forwards;
    }
  </style>
  <div id="user-profile-modal-container"
       class="fixed inset-0 bg-[#0C0B12]/90 backdrop-blur-xl animate-modal-in overflow-y-auto pt-10 pb-[160px]"
       style="z-index: 90000;">
    
    <!-- Backdrop Overlay (Dismiss) -->
    <div id="user-profile-modal-overlay"
         onclick="window.closeUserProfileModal && window.closeUserProfileModal()"
         class="fixed inset-0 cursor-pointer bg-black/20"
         style="z-index: 90001;"></div>
    
    <!-- Premium Profile Card Wrapper -->
    <div class="relative w-full max-w-sm mx-auto px-4" style="z-index: 90002;">
      <div class="relative w-full bg-[#1A1A24] border border-white/10 rounded-[32px] shadow-[0_32px_64px_-16px_rgba(0,0,0,0.8)] overflow-hidden animate-badge-pop" onclick="event.stopPropagation()">
      
      <!-- Top Decoration -->
      <div class="absolute -top-24 -right-24 w-48 h-48 bg-indigo-500/10 blur-[80px] rounded-full"></div>
      <div class="absolute -bottom-24 -left-24 w-48 h-48 bg-purple-500/10 blur-[80px] rounded-full"></div>

      <div class="relative z-10 p-8 space-y-8">
        <!-- Close button -->
        <button onclick="window.closeUserProfileModal && window.closeUserProfileModal()" 
                class="absolute top-6 right-6 p-2 rounded-full bg-white/5 text-slate-500 hover:text-white transition-all z-20">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2.5" d="M6 18L18 6M6 6l12 12"/></svg>
        </button>

        <!-- Profile Header -->
        <div class="flex flex-col items-center gap-4 pt-4">
          <div class="relative group">
            <div class="absolute -inset-1.5 bg-gradient-to-tr from-indigo-500 via-purple-500 to-pink-500 rounded-[36px] blur-sm opacity-40 group-hover:opacity-60 transition-opacity"></div>
            <div class="relative w-24 h-24 rounded-[32px] bg-[#16151D] border border-white/10 overflow-hidden">
               <img src="<%= @target_user.profile_image %>" class="w-full h-full object-cover">
            </div>
            <% if @is_club_member %>
              <div class="absolute -top-2 -right-2 w-8 h-8 rounded-full bg-[#0C0B12] border-2 border-indigo-500 flex items-center justify-center shadow-xl z-20 overflow-hidden">
                <span class="text-[10px] font-black text-white leading-none tracking-tighter" style="font-family: 'Outfit', sans-serif;">RF</span>
              </div>
            <% end %>
            <div class="absolute -bottom-2 -right-2 px-2.5 py-1 rounded-full bg-white text-[#0C0B12] text-[10px] font-black shadow-xl border-2 border-[#0C0B12] z-20">
              Lv.<%= @target_user.level %>
            </div>
          </div>

          <div class="text-center space-y-1">
            <h3 class="text-2xl font-black text-white tracking-tight"><%= @target_user.nickname %></h3>
            <p class="text-[11px] font-bold text-slate-400 max-w-[220px] mx-auto leading-relaxed">
              <%= @target_user.bio.presence || "아직 성장의 다짐을 작성하지 않았습니다." %>
            </p>
            
            <% 
              sns_links = @target_user.sns_links || {}
              primary_platform = ["threads", "instagram", "blog"].find { |p| sns_links[p].present? }
              sns_url = sns_links[primary_platform] if primary_platform
              
              if sns_url.present?
                final_url = sns_url
                unless final_url.start_with?('http')
                  final_url = case primary_platform
                              when "instagram" then "https://instagram.com/#{sns_url}"
                              when "threads" then "https://threads.net/@#{sns_url}"
                              else "https://#{sns_url}"
                              end
                end
            %>
              <a href="<%= final_url %>" target="_blank" class="inline-flex items-center gap-1.5 px-3 py-1 bg-white/5 border border-white/10 rounded-full text-[10px] font-black text-indigo-400 hover:bg-white/10 transition-all mt-1">
                <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.828 10.172a4 4 0 00-5.656 0l-4 4a4 4 0 105.656 5.656l1.102-1.101m-.758-4.899a4 4 0 005.656 0l4-4a4 4 0 00-5.656-5.656l-1.1 1.1"/></svg>
                <%= primary_platform.capitalize %>
              </a>
            <% end %>
          </div>
        </div>

        <!-- Badges Showcase -->
        <div class="space-y-4">
          <div class="flex items-center justify-between px-1">
            <p class="text-[9px] font-black text-indigo-400 uppercase tracking-widest italic font-outfit">성취 컬렉션</p>
            <p class="text-[9px] font-bold text-slate-500">총 <%= @total_badges_count %>개의 성취</p>
          </div>
          <div class="flex gap-2.5 overflow-x-auto hide-scrollbar pb-1">
            <% if @achievements.any? %>
              <% @achievements.each do |ua| %>
                <div class="w-11 h-11 shrink-0 bg-white/5 border border-white/10 rounded-xl flex items-center justify-center text-xl shadow-lg" title="<%= ua.badge.name %>">
                  <%= ua.badge.icon_path %>
                </div>
              <% end %>
            <% else %>
              <div class="w-full py-4 text-center border border-dashed border-white/5 rounded-2xl text-[10px] text-slate-600 italic">아직 획득한 배지가 없습니다</div>
            <% end %>
          </div>
        </div>

        <!-- Growth Stats Grid -->
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-white/5 border border-white/5 rounded-[24px] space-y-1">
            <p class="text-[8px] font-black text-slate-500 uppercase tracking-widest leading-none">주간 달성률</p>
            <div class="flex items-baseline gap-1">
              <span class="text-xl font-black text-emerald-400"><%= @weekly_completion %></span>
              <span class="text-[10px] font-bold text-emerald-500/50">%</span>
            </div>
            <%# Progress mini bar %>
            <div class="w-full h-1 bg-white/5 rounded-full overflow-hidden mt-2">
              <div class="h-full bg-emerald-500" style="width: <%= @weekly_completion %>%"></div>
            </div>
          </div>
          <div class="p-4 bg-white/5 border border-white/5 rounded-[24px] space-y-1">
            <p class="text-[8px] font-black text-slate-500 uppercase tracking-widest leading-none">도전 중인 루틴</p>
            <div class="flex items-baseline gap-1">
              <span class="text-xl font-black text-white"><%= @target_user.personal_routines.where(deleted_at: nil).count %></span>
              <span class="text-[10px] font-bold text-slate-500">개</span>
            </div>
          </div>
        </div>

        <!-- Points Grid -->
        <div class="grid grid-cols-2 gap-3">
           <div class="p-4 bg-white/5 border border-white/5 rounded-[24px] space-y-1">
             <p class="text-[8px] font-black text-slate-500 uppercase tracking-widest leading-none">Monthly Points</p>
             <div class="flex items-baseline gap-1">
               <span class="text-xl font-black text-indigo-400"><%= @target_user.monthly_platform_score %></span>
               <span class="text-[10px] font-bold text-indigo-500/50">P</span>
             </div>
           </div>
           <div class="p-4 bg-white/5 border border-white/5 rounded-[24px] space-y-1">
             <p class="text-[8px] font-black text-slate-500 uppercase tracking-widest leading-none">Total Points</p>
             <div class="flex items-baseline gap-1">
               <span class="text-xl font-black text-white"><%= @target_user.total_platform_score %></span>
               <span class="text-[10px] font-bold text-slate-500">P</span>
             </div>
           </div>
        </div>


        <!-- Routine List Summary -->
        <div class="space-y-3">
          <p class="text-[9px] font-black text-slate-500 uppercase tracking-widest pl-1 italic font-outfit">핵심 루틴 데크</p>
          <div class="space-y-2">
            <% if @routines.any? %>
              <% @routines.each do |routine| %>
                <div class="flex items-center gap-4 p-3.5 bg-white/[0.03] border border-white/5 rounded-2xl hover:bg-white/[0.06] transition-all group">
                   <div class="w-10 h-10 rounded-xl bg-indigo-500/10 flex items-center justify-center text-xl group-hover:scale-110 transition-transform">
                     <%= routine.icon %>
                   </div>
                   <div class="flex-1 min-w-0">
                     <p class="text-xs font-black text-white truncate"><%= routine.title %></p>
                     <p class="text-[9px] font-bold text-slate-500 uppercase tracking-tighter"><%= routine.category.presence || "개인" %> • 주 <%= routine.days&.count || 7 %>회</p>
                   </div>
                </div>
              <% end %>
            <% else %>
               <div class="py-10 text-center bg-white/[0.02] border border-dashed border-white/5 rounded-2xl">
                 <p class="text-[10px] font-bold text-slate-600">등록된 루틴 정보가 없습니다.</p>
               </div>
            <% end %>
          </div>
        </div>
      </div>
      </div>
    </div>
  </div>
</turbo-frame>
