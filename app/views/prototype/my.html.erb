<div id="timezone-selector-sheet" class="hidden fixed inset-0 z-[700]">
  <div onclick="this.closest('.fixed').classList.add('hidden'); document.body.classList.remove('overflow-hidden')"
       class="absolute inset-0 bg-black/80 backdrop-blur-sm shadow-2xl"></div>
  <div class="absolute bottom-0 left-0 right-0 bg-[#0f172a] rounded-t-[32px] border-t border-white/10 p-6 space-y-4 max-h-[85vh] flex flex-col">
    <!-- Handle for visual cue -->
    <div class="w-12 h-1.5 bg-white/10 rounded-full mx-auto mb-2 shrink-0"></div>
    
    <div class="flex justify-between items-center mb-2 shrink-0">
      <h4 class="text-lg font-black text-white px-2">타임존 선택</h4>
      <button type="button" 
              onclick="this.closest('#timezone-selector-sheet').classList.add('hidden'); document.body.classList.remove('overflow-hidden')"
              class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center text-slate-400 hover:text-white transition-colors cursor-pointer">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/></svg>
      </button>
    </div>
    
    <div class="flex-1 overflow-y-auto space-y-2 pr-1 custom-scrollbar pb-32">
      <% user_friendly_time_zones.each do |display, value, country| %>
        <button type="button"
                onclick="selectTimezone('<%= value %>', '<%= display %>', this)"
                class="w-full text-left p-4 rounded-2xl bg-white/5 border border-white/5 hover:border-indigo-500/50 transition-all flex items-center justify-between group active:scale-[0.98]">
          <span class="text-sm font-bold text-slate-300 group-hover:text-white"><%= display %></span>
          <div class="w-5 h-5 rounded-full border-2 border-slate-700 flex items-center justify-center group-hover:border-indigo-500">
            <div class="w-2.5 h-2.5 rounded-full bg-indigo-500 transition-opacity selection-indicator <%= (current_user&.time_zone || 'Seoul') == value ? 'opacity-100' : 'opacity-0' %>"></div>
          </div>
        </button>
      <% end %>
    </div>
  </div>
</div>

<script>
  // Track unsaved changes for timezone
  let timezoneChanged = false;
  let originalTimezone = '';

  // Auto-detect time zone if it matches default and browser has something else
  document.addEventListener('DOMContentLoaded', () => {
    const hiddenInput = document.getElementById('user_time_zone');
    const displaySpan = document.getElementById('selected-timezone-display');
    const sheetOptions = <%= user_friendly_time_zones.map { |d, v, c| [v, d] }.to_json.html_safe %>;

    // Store original timezone value
    if (hiddenInput) {
      originalTimezone = hiddenInput.value;
    }

    if (hiddenInput && hiddenInput.value === "Seoul") {
      const browserTz = Intl.DateTimeFormat().resolvedOptions().timeZone;
      // We need to check both IANA names and Rails names if possible, but our sheetOptions has Rails names.
      // Let's just a simple match for now.
      const match = sheetOptions.find(opt => opt[0] === browserTz);
      if (match && browserTz !== "Seoul") {
        hiddenInput.value = match[0];
        displaySpan.innerText = match[1];
        originalTimezone = match[0]; // Update original timezone after auto-detection
        console.log(`Auto-detected timezone: ${match[1]} (${match[0]})`);
      }
    }

    // Auto-open profile edit modal if edit_profile param is present
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.has('edit_profile')) {
      const modal = document.getElementById('edit-profile');
      if (modal) {
        modal.classList.remove('hidden');
        document.body.classList.add('overflow-hidden');
      }
    }

    // Add event listener to profile form submission to clear dirty flag
    const profileForm = document.querySelector('form[action*="update_profile"]');
    if (profileForm) {
      profileForm.addEventListener('submit', () => {
        timezoneChanged = false;
      });
    }
  });

  // Warn user before leaving page with unsaved timezone changes
  window.addEventListener('beforeunload', (e) => {
    if (timezoneChanged) {
      e.preventDefault();
      e.returnValue = ''; // Modern browsers require this
      return ''; // For older browsers
    }
  });

  // Function to handle timezone selection
  function selectTimezone(value, display, button) {
    const hiddenInput = document.getElementById('user_time_zone');
    const displaySpan = document.getElementById('selected-timezone-display');
    
    // Update hidden input and display
    hiddenInput.value = value;
    displaySpan.innerText = display;
    
    // Update selection indicators - remove all first
    document.querySelectorAll('.selection-indicator').forEach(el => el.classList.add('opacity-0'));
    
    // Add to the clicked button's indicator
    const indicator = button.querySelector('.selection-indicator');
    if (indicator) {
      indicator.classList.remove('opacity-0');
    }
    
    // Set dirty flag if value changed
    if (value !== originalTimezone) {
      timezoneChanged = true;
    } else {
      timezoneChanged = false;
    }
    
    // Close the sheet
    document.getElementById('timezone-selector-sheet').classList.add('hidden');
    document.body.classList.remove('overflow-hidden');
  }
</script>

