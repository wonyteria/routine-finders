<div class="max-w-[1200px] mx-auto pb-40 space-y-12 px-4 md:px-0">
  <!-- Header -->
  <div class="flex flex-col md:flex-row md:items-end justify-between gap-8 pt-12">
    <div class="space-y-4 text-center md:text-left">
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-indigo-50 text-indigo-600 rounded-full font-black text-xs uppercase tracking-widest">
        🏆 명예의 전당
      </div>
      <h2 class="text-4xl md:text-6xl font-[900] text-slate-900 tracking-tight leading-none italic uppercase">Honor hall</h2>
      <p class="text-slate-500 font-bold text-lg md:text-xl italic">당신의 꾸준함이 역사가 되는 곳, 파인더스 명예의 전당입니다.</p>
    </div>
  </div>

  <!-- Category Selection (Sub-Navigation) -->
  <div data-controller="tabs" data-tabs-default-value="<%= logged_in? ? 'my' : 'weekly' %>">
    <div class="w-full space-y-12">
      <!-- Scrollable Tab Container -->
      <div class="flex justify-start md:justify-center overflow-x-auto pb-4 -mx-4 px-4 md:mx-0 md:px-0 scrollbar-hide">
        <div class="bg-white p-1.5 rounded-[24px] inline-flex shadow-xl shadow-indigo-100 border border-slate-100 whitespace-nowrap">
          <% if logged_in? %>
            <button type="button" data-tabs-target="tab" data-action="click->tabs#change" data-id="my"
                    class="px-8 py-3.5 rounded-[20px] text-sm font-black uppercase tracking-widest transition-all data-[active]:bg-indigo-600 data-[active]:text-white data-[active]:shadow-lg text-slate-400 hover:text-slate-600">
              내 업적
            </button>
          <% end %>
          <button type="button" data-tabs-target="tab" data-action="click->tabs#change" data-id="weekly"
                  class="px-8 py-3.5 rounded-[20px] text-sm font-black uppercase tracking-widest transition-all data-[active]:bg-indigo-600 data-[active]:text-white data-[active]:shadow-lg text-slate-400 hover:text-slate-600">
            종합 랭킹
          </button>
          <button type="button" data-tabs-target="tab" data-action="click->tabs#change" data-id="challenge"
                  class="px-8 py-3.5 rounded-[20px] text-sm font-black uppercase tracking-widest transition-all data-[active]:bg-indigo-600 data-[active]:text-white data-[active]:shadow-lg text-slate-400 hover:text-slate-600">
            챌린지
          </button>
          <button type="button" data-tabs-target="tab" data-action="click->tabs#change" data-id="routine"
                  class="px-8 py-3.5 rounded-[20px] text-sm font-black uppercase tracking-widest transition-all data-[active]:bg-indigo-600 data-[active]:text-white data-[active]:shadow-lg text-slate-400 hover:text-slate-600">
            루틴
          </button>
          <button type="button" data-tabs-target="tab" data-action="click->tabs#change" data-id="gathering"
                  class="px-8 py-3.5 rounded-[20px] text-sm font-black uppercase tracking-widest transition-all data-[active]:bg-indigo-600 data-[active]:text-white data-[active]:shadow-lg text-slate-400 hover:text-slate-600">
            만남
          </button>
          <button type="button" data-tabs-target="tab" data-action="click->tabs#change" data-id="host"
                  class="px-8 py-3.5 rounded-[20px] text-sm font-black uppercase tracking-widest transition-all data-[active]:bg-indigo-600 data-[active]:text-white data-[active]:shadow-lg text-slate-400 hover:text-slate-600">
            호스트
          </button>
          <button type="button" data-tabs-target="tab" data-action="click->tabs#change" data-id="badges"
                  class="px-8 py-3.5 rounded-[20px] text-sm font-black uppercase tracking-widest transition-all data-[active]:bg-indigo-600 data-[active]:text-white data-[active]:shadow-lg text-slate-400 hover:text-slate-600">
            배지 마스터
          </button>
        </div>
      </div>

      <!-- Tab Content: My Achievements -->
      <% if logged_in? %>
        <div data-tabs-target="panel" data-id="my" class="<%= 'hidden' unless logged_in? %> space-y-16">
          <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
            <div class="bg-white rounded-[32px] p-6 border border-slate-100 shadow-xl shadow-indigo-50/50 flex flex-col items-center text-center">
              <span class="text-3xl mb-3">🏅</span>
              <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">전체 인증</p>
              <p class="text-2xl font-[900] text-slate-900"><%= @user_metrics[:all][:verification_count] %>회</p>
              <p class="text-[9px] text-slate-400 mt-1 font-bold">성공률 <%= number_to_percentage(@user_metrics[:all][:achievement_rate], precision: 1) %></p>
            </div>
            <div class="bg-white rounded-[32px] p-6 border border-slate-100 shadow-xl shadow-indigo-50/50 flex flex-col items-center text-center">
              <span class="text-3xl mb-3">🔥</span>
              <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">챌린지</p>
              <p class="text-2xl font-[900] text-slate-900"><%= @user_metrics[:challenge][:verification_count] %>회</p>
            </div>
            <div class="bg-white rounded-[32px] p-6 border border-slate-100 shadow-xl shadow-indigo-50/50 flex flex-col items-center text-center">
              <span class="text-3xl mb-3">🔄</span>
              <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">루틴 실천</p>
              <p class="text-2xl font-[900] text-slate-900"><%= @user_metrics[:routine][:verification_count] %>회</p>
            </div>
            <div class="bg-white rounded-[32px] p-6 border border-slate-100 shadow-xl shadow-indigo-50/50 flex flex-col items-center text-center">
              <span class="text-3xl mb-3">👑</span>
              <p class="text-[10px] font-black text-slate-400 uppercase tracking-widest">호스트 영향력</p>
              <p class="text-2xl font-[900] text-slate-900"><%= @user_metrics[:host][:host_participants] %>명</p>
              <p class="text-[9px] text-slate-400 mt-1 font-bold">주최 <%= @user_metrics[:host][:host_count] %>회</p>
            </div>
          </div>

          <div class="space-y-12">
            <div class="flex items-center justify-between">
              <h3 class="text-2xl font-black text-slate-900">배지 획득 로드맵</h3>
              <p class="text-indigo-600 font-bold px-4 py-1.5 bg-indigo-50 rounded-full text-xs">
                <%= @user_badge_ids.count %> / <%= Badge.count %> 획득 완료
              </p>
            </div>

            <div class="bg-white rounded-[40px] border border-slate-100 shadow-2xl p-8 md:p-12 space-y-16">
              <% %w[all challenge routine gathering host].each do |target| %>
                <% badges = @badges_by_type[target] %>
                <% next if badges.blank? %>
                <div class="space-y-8">
                  <div class="flex items-center gap-4">
                    <div class="w-12 h-12 bg-slate-50 border border-slate-100 rounded-2xl flex items-center justify-center text-xl">
                      <%= case target 
                          when 'challenge' then "🔥"
                          when 'routine' then "🔄"
                          when 'gathering' then "📍"
                          when 'host' then "👑"
                          else "✨" end %>
                    </div>
                    <h4 class="text-xl font-black text-slate-900 capitalize">
                      <%= case target 
                          when 'challenge' then "챌린지"
                          when 'routine' then "루틴"
                          when 'gathering' then "만남"
                          when 'host' then "호스트"
                          else "전체" end %> 배지
                    </h4>
                  </div>

                  <div class="grid grid-cols-2 md:grid-cols-5 gap-6">
                    <% badges.each do |badge| %>
                      <% is_earned = @user_badge_ids.include?(badge.id) %>
                      <div class="flex flex-col items-center gap-4 <%= is_earned ? "" : "opacity-40 grayscale" %>">
                        <div class="w-20 h-20 rounded-[28px] bg-white border-2 <%= is_earned ? "border-indigo-500 shadow-lg" : "border-slate-100" %> flex items-center justify-center text-3xl" title="<%= badge.name %>: <%= badge.description %>">
                          <%= is_earned ? badge.icon_path : "🔒" %>
                        </div>
                        <div class="text-center">
                          <p class="text-xs font-black text-slate-900 line-clamp-1"><%= badge.name %></p>
                          <p class="text-[10px] text-slate-400 font-bold"><%= badge.requirement_value %></p>
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Tab Content: 종합 랭킹 -->
      <div data-tabs-target="panel" data-id="weekly" class="<%= 'hidden' if logged_in? %> space-y-8">
        <%= render partial: 'ranking_podium', locals: { rankings: @weekly_rankings.to_a, title: "TOTAL MASTER", subtitle: "모든 활동을 아우르는 종합 랭킹" } %>
        <%= render partial: 'ranking_list', locals: { rankings: @weekly_rankings.to_a[3..] || [], metric_label: "인증" } %>
      </div>

      <!-- Tab Content: 챌린지 랭킹 -->
      <div data-tabs-target="panel" data-id="challenge" class="hidden space-y-8">
        <%= render partial: 'ranking_podium', locals: { rankings: @challenge_rankings.to_a, title: "CHALLENGE KING", subtitle: "공식 챌린지의 정점" } %>
        <%= render partial: 'ranking_list', locals: { rankings: @challenge_rankings.to_a[3..] || [], metric_label: "인증", metric_key: :activity_count } %>
      </div>

      <!-- Tab Content: 루틴 랭킹 -->
      <div data-tabs-target="panel" data-id="routine" class="hidden space-y-8">
        <%= render partial: 'ranking_podium', locals: { rankings: @routine_rankings.to_a, title: "ROUTINE GOD", subtitle: "꾸준함의 끝판왕" } %>
        <%= render partial: 'ranking_list', locals: { rankings: @routine_rankings.to_a[3..] || [], metric_label: "누적 완료", metric_key: :total_completions } %>
      </div>

      <!-- Tab Content: 만남 랭킹 -->
      <div data-tabs-target="panel" data-id="gathering" class="hidden space-y-8">
        <%= render partial: 'ranking_podium', locals: { rankings: @gathering_rankings.to_a, title: "MEETING STAR", subtitle: "함께해서 더 즐거운 오프라인 만남" } %>
        <%= render partial: 'ranking_list', locals: { rankings: @gathering_rankings.to_a[3..] || [], metric_label: "참여", metric_key: :activity_count } %>
      </div>

      <!-- Tab Content: 호스트 랭킹 -->
      <div data-tabs-target="panel" data-id="host" class="hidden space-y-8">
        <%= render partial: 'ranking_podium', locals: { rankings: @host_rankings.to_a, title: "TOP HOST", subtitle: "최고의 커뮤니티 리더" } %>
        <%= render partial: 'ranking_list', locals: { rankings: @host_rankings.to_a[3..] || [], metric_label: "참여 유도", metric_key: :total_hosted_participants } %>
      </div>

      <!-- Tab Content: 배지 마스터 -->
      <div data-tabs-target="panel" data-id="badges" class="hidden space-y-8">
        <%= render partial: 'ranking_podium', locals: { rankings: @badge_rankings.to_a, title: "BADGE COLLECTOR", subtitle: "가장 많은 업적을 달성한 배지 컬렉터" } %>
        <%= render partial: 'ranking_list', locals: { rankings: @badge_rankings.to_a[3..] || [], metric_label: "배지", metric_key: :badge_count } %>
      </div>
    </div>
  </div>
</div>
