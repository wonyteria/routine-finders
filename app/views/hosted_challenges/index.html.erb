                <div class="absolute bottom-4 left-4 sm:hidden">
                   <span class="px-2 py-1 bg-indigo-500 text-[8px] font-black text-white rounded-md uppercase"><%= challenge.mode %></span>
                </div>
              </div>

              <div class="flex-1 p-6 flex flex-col justify-between">
                <div>
                  <div class="hidden sm:flex items-center gap-2 mb-3">
                    <span class="px-2 py-0.5 rounded-lg text-[9px] font-black uppercase tracking-widest <%= challenge.offline? ? 'bg-orange-500/20 text-orange-400 border border-orange-500/20' : 'bg-indigo-500/20 text-indigo-400 border border-indigo-500/20' %>">
                      <%= challenge.offline? ? 'OFFLINE' : 'ONLINE' %>
                    </span>
                    <% if challenge.is_official %>
